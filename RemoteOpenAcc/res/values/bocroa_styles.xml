<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- 侧拉页面文字 -->
    <style name="comm_dark_text">
        <item name="android:textColor">@color/bocroa_blank</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:textSize">@dimen/bocroa_text_size_1</item>
    </style>
    <!-- 开卡item输入框 -->

    <style name="bocroa_style_step_item_edit">
        <item name="android:textSize">@dimen/bocroa_text_size_2</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/bocroa_blank</item>
        <item name="android:textColorHint">@color/bocroa_dbdee3</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>
    <!-- 开卡item背景 -->
    <style name="bocroa_style_step_item_bg">
        <item name="android:background">@color/bocroa_white</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    <!-- 开卡item标题 -->
    <style name="bocroa_style_step_title">
        <item name="android:textSize">@dimen/bocroa_text_size_1</item>
        <item name="android:textColor">@color/bocroa_blank</item>
        <item name="android:paddingLeft">25dp</item>
    </style>
    <!-- 下一步按钮 -->
    <style name="bocroa_style_next_step">
        <item name="android:textSize">@dimen/bocroa_text_size_middle</item>
        <item name="android:textColor">@color/bocroa_blue</item>
        <item name="android:background">@drawable/bocroa_btn_next_step</item>
    </style>
    <!-- 选择按钮 -->
    <style name="bocroa_style_select_btn">
        <item name="android:drawableRight">@drawable/bocroa_arraw</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 选择回显字体 -->
    <style name="bocroa_style_select_tv">
        <item name="android:textSize">@dimen/bocroa_text_size_1</item>
        <item name="android:textColor">@color/bocroa_8873ab</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/bocroa_8873ab</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>
    <!-- 提示语样式 -->
    <style name="bocroa_style_notice">
        <item name="android:textSize">@dimen/bocroa_text_size_2</item>
        <item name="android:textColor">@color/bocroa_white</item>
        <item name="android:background">@drawable/bocroa_bg_round_b3bbc2</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- dialog样式 -->
    <style name="bocroa_style_dialog_normal" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- activity变暗 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- 获取短信验证码按钮 -->
    <style name="bocroa_btn_gray">
        <item name="android:background">@drawable/bocroa_msg_code</item>
        <item name="android:layout_width">@dimen/common_red_btn_wid</item>
        <item name="android:layout_height">@dimen/common_red_btn_height</item>
        <item name="android:textSize">@dimen/common_text_size</item>
    </style>
    <!-- 字体32px颜色cccccc字体，lgw -->
    <style name="bocroa_style_32px_cccccc">
        <item name="android:textColor">@color/bocroa_cccccc</item>
        <item name="android:textSize">@dimen/bocroa_text_size_middle</item>
    </style>
    <!-- 带删除按钮的EditText,lgw -->
    <style name="base_edit_text_style">
        <item name="android:background">@drawable/bocroa_input_white_gray_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/bocroa_6988c6</item>
        <item name="android:textSize">@dimen/bocroa_text_size_middle</item>
        <item name="android:textColorHint">@color/bocroa_b5b5b6</item>
    </style>
    <!-- 标题字体 -->
    <style name="textStyle_title">
        <item name="android:textSize">@dimen/bocroa_text_size_big_super</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bocroa_text_color_white</item>
    </style>

    <style name="bocroa_style_28px_dbdee3">
        <item name="android:textSize">@dimen/bocroa_text_size_small_12dp</item>
        <item name="android:textColor">@color/bocroa_dbdee3</item>
    </style>

    <style name="bocroa_style_14px_333333">
        <item name="android:textSize">@dimen/bocroa_text_size_small</item>
        <item name="android:textColor">@color/bocroa_333333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>

</resources>