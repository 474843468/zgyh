<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/bocroa_bg_for_listview_item_write">

    <TextView
        android:id="@+id/tv_dialog_simple_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bocroa_main_title_height"
        android:gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" 
        >

        <TextView
            android:id="@+id/tv_dialog_error_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			style="@style/bocroa_style_14px_333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bocroa_dialog_divider_h"
             />

        <Button
            android:id="@+id/btn_dialog_error_enter"
            style="@style/bocroa_style_next_step"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:gravity="center"
            android:padding="1dip"
            android:text="@string/bocroa_confirm"/>
    </LinearLayout>

</LinearLayout>