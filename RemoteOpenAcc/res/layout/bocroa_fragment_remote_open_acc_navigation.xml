<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bocroa_background"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/nav_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bocroa_navigation_picture_height"
                android:background="@drawable/bocroa_banner" />

            <RelativeLayout
                android:id="@+id/nav_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nav_pic"
                android:layout_marginTop="@dimen/bocroa_indicator_right_padding"
                android:background="@color/bocroa_white"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:id="@+id/ecard_function_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/bocroa_indicator_right_padding"
                    android:paddingTop="@dimen/bocroa_indicator_right_padding" >

                    <ImageView
                        android:id="@+id/ecard_function_pic"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/bocroa_pull_refresh_icon_width"
                        android:layout_marginRight="@dimen/bocroa_pull_refresh_icon_width"
                        android:src="@drawable/bocroa_ecard_function" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/bocroa_navigation_text_margin"
                        android:text="@string/bocroa_electical_card_function"
                        android:textColor="@color/bocroa_b81c1e"
                        android:textSize="@dimen/bocroa_text_size_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ecard_function_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ecard_function_left"
                    android:orientation="vertical"
                    android:paddingRight="20dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/bocroa_navigation_text_margin"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="@string/bocroa_2_acc_function"
                        android:textColor="@color/bocroa_gray_b3bbc2"
                        android:textSize="@dimen/bocroa_text_size_2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="@string/bocroa_2_acc_function_detail"
                        android:textColor="@color/bocroa_333333"
                        android:textSize="@dimen/bocroa_text_size_2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/bocroa_navigation_text_margin"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="@string/bocroa_3_acc_function"
                        android:textColor="@color/bocroa_gray_b3bbc2"
                        android:textSize="@dimen/bocroa_text_size_2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="@string/bocroa_3_acc_function_detail"
                        android:textColor="@color/bocroa_333333"
                        android:textSize="@dimen/bocroa_text_size_2" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nav_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nav_introduce"
                android:layout_marginTop="1dp"
                android:background="@color/bocroa_white"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:id="@+id/apply_condition_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/bocroa_indicator_right_padding"
                    android:paddingTop="@dimen/bocroa_indicator_right_padding" >

                    <ImageView
                        android:id="@+id/apply_condition_pic"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/bocroa_pull_refresh_icon_width"
                        android:layout_marginRight="@dimen/bocroa_pull_refresh_icon_width"
                        android:src="@drawable/bocroa_applay_condition" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/bocroa_navigation_text_margin"
                        android:text="@string/bocroa_apply_condition_title"
                        android:textColor="@color/bocroa_b81c1e"
                        android:textSize="@dimen/bocroa_text_size_2" />
                </LinearLayout>

                <TextView
                    android:id="@+id/apply_condition_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:layout_toRightOf="@+id/apply_condition_left"
                    android:text="@string/bocroa_apply_condition_content"
                    android:textColor="@color/bocroa_333333"
                    android:textSize="@dimen/bocroa_text_size_2" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_navigation_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bocroa_bottom_button_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bocroa_btn_next_step"
        android:orientation="horizontal"
        android:padding="@dimen/bocroa_navigation_text_margin" >

        <Button
            android:id="@+id/btn_progress_inquery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="@dimen/bocroa_navigation_text_margin"
            android:text="@string/bocroa_progress_inquery"
            android:textColor="@color/bocroa_blue"
            android:textSize="@dimen/bocroa_text_size_middle" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="match_parent"
            android:background="@color/bocroa_e8ecec" />

        <Button
            android:id="@+id/btn_open_acc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="@dimen/bocroa_navigation_text_margin"
            android:text="@string/bocroa_acc_open"
            android:textColor="@color/bocroa_blue"
            android:textSize="@dimen/bocroa_text_size_middle" />
    </LinearLayout>

</RelativeLayout>