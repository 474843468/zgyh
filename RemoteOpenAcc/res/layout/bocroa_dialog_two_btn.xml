<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bocroa_bg_for_listview_item_write"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_simple_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bocroa_main_title_height"
        android:gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_dialog_error_content"
            style="@style/bocroa_style_14px_333333"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bocroa_dialog_divider_h" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <Button
                android:id="@+id/btn_dialog_cancel"
                style="@style/bocroa_style_next_step"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:padding="1dip"
                android:text="@string/bocroa_cancel" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/bocroa_divider" />

            <Button
                android:id="@+id/btn_dialog_enter"
                style="@style/bocroa_style_next_step"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:padding="1dip"
                android:text="@string/bocroa_confirm" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>