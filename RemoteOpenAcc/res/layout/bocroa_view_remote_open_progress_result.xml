<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bocroa_background" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_confirm"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/bocroa_indicator_right_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_result_top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="69dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_result_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bocroa_progress_success" />

                <TextView
                    android:id="@+id/tv_result_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="开户成功"
                    android:textColor="@color/bocroa_333333"
                    android:textSize="@dimen/bocroa_text_size_big_result" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_result_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="@dimen/bocroa_anthentication_text_padding_left"
                android:paddingRight="@dimen/bocroa_anthentication_text_padding_right"
                android:text="网银、易商服务开通有失败情况。"
                android:textColor="@color/bocroa_79797c"
                android:textSize="@dimen/bocroa_text_size_small"
                android:visibility="gone" />
            <!-- 第一个开户进度 -->

            <LinearLayout
                android:id="@+id/ll_electrical_card_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bocroa_anthentication_table_hight"
                    android:background="@color/bocroa_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/bocroa_anthentication_text_padding_left"
                    android:paddingRight="@dimen/bocroa_anthentication_text_padding_right" >

                    <TextView
                        android:id="@+id/tv_acc_type_one"
                        style="@style/bocroa_style_14px_333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中银E财账户" />

                    <TextView
                        android:id="@+id/tv_electrical_card_one"
                        style="@style/bocroa_style_14px_333333"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bocroa_indicator_right_padding"
                        android:gravity="right"
                        android:textStyle="normal" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_acc_one_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/bocroa_79797c"
                    android:textSize="@dimen/bocroa_text_size_small" />
            </LinearLayout>
            <!-- 第二个开户进度 -->

            <LinearLayout
                android:id="@+id/ll_electrical_card_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bocroa_anthentication_table_hight"
                    android:background="@color/bocroa_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/bocroa_anthentication_text_padding_left"
                    android:paddingRight="@dimen/bocroa_anthentication_text_padding_right" >

                    <TextView
                        android:id="@+id/tv_acc_type_two"
                        style="@style/bocroa_style_14px_333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中银E捷账户" />

                    <TextView
                        android:id="@+id/tv_electrical_card_two"
                        style="@style/bocroa_style_14px_333333"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bocroa_indicator_right_padding"
                        android:gravity="right"
                        android:textStyle="normal" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_acc_two_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/bocroa_79797c"
                    android:textSize="@dimen/bocroa_text_size_small" />
            </LinearLayout>
            <!-- 提示语 -->

            <LinearLayout
                android:id="@+id/ll_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <TextView
                    android:id="@+id/tv_result_bottom1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bocroa_79797c"
                    android:textSize="@dimen/bocroa_text_size_small" />

                <TextView
                    android:id="@+id/tv_result_bottom2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/bocroa_79797c"
                    android:textSize="@dimen/bocroa_text_size_small" />
            </LinearLayout>
