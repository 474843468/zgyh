<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom" >

    <RelativeLayout
        android:id="@+id/xlistview_header_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/xlistview_header_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/bocroa_text_size_middle"
            android:text="@string/bocroa_xlistview_header_hint_normal" />

        <ImageView
            android:id="@+id/xlistview_header_arrow"
            android:layout_width="@dimen/bocroa_pull_refresh_icon_width"
            android:layout_height="@dimen/bocroa_pull_refresh_icon_width"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/xlistview_header_hint_textview"
            android:layout_centerVertical="true"
            android:src="@drawable/bocroa_refresh_logo" />
    </RelativeLayout>

</LinearLayout>