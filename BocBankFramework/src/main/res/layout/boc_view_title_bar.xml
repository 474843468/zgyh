<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:background="#ca2b4f">


    <ImageView
        android:id="@+id/leftIconIv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@drawable/boc_back_white"/>


    <TextView
        android:id="@+id/titleValueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="17dp"
        android:textStyle="bold"
        tools:text="登录"
        tools:textColor="#ffffff"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/titleValueTv"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/rightButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rightIconIv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                tools:src="@drawable/boc_more_white"/>

            <TextView
                android:id="@+id/rightTextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:textSize="13dp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="北京"
                tools:textColor="#ffffff"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#d8d8e0"
        android:visibility="gone"/>

</RelativeLayout>