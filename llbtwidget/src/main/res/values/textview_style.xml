<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  TextView 默认样式，颜色：黑色    -->
    <style name="textview_default_b">
        <item name="android:gravity">left</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff343434</item>
    </style>

    <!-- common颜色的不同大小的字体样式 -->
    <style name="tv_common">
        <item name="android:textSize">@dimen/boc_text_size_common</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/boc_text_color_common_gray</item>
    </style>


    <style name="tv_small" parent="@style/tv_common">
        <item name="android:textSize">@dimen/boc_text_size_small</item>
    </style>


    <!-- common颜色的不同大小的字体样式 -->
    <style name="tv_new_editView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ffffffff</item>
        <item name="android:textSize">@dimen/boc_text_size_big</item>
        <item name="android:textColor">@color/boc_text_color_common_gray</item>
    </style>


    <style name="llbt_titleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
