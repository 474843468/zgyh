<?xml version="1.0" encoding="utf-8"?>
<resources>




    <!-- 按钮公共样式-->
    <style name="CommonButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dip</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- 红色按钮  -->
    <style name="RedButtonStyle" parent="CommonButtonStyle">
        <item name="android:background">@color/boc_text_color_red</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <!-- 灰色按钮  -->
    <style name="WhiteButtonStyle" parent="CommonButtonStyle">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/boc_text_color_red</item>
    </style>

</resources>