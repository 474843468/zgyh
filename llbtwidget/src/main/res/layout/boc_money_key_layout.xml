<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="195dp"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@color/boc_kbdltn_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pay_keyboard_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_card_account_height"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/boc_button_blue_selector"
            android:gravity="center"
            android:text="1"
            android:textColor="@drawable/boc_moneykey_text_color"
            android:textSize="@dimen/boc_text_size_supper_big" />

        <TextView
            android:id="@+id/pay_keyboard_two"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_card_account_height"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/boc_moneykey_num_bg"
            android:gravity="center"
            android:text="2"
            android:textColor="@drawable/boc_moneykey_text_color"
            android:textSize="@dimen/boc_text_size_supper_big" />

        <TextView
            android:id="@+id/pay_keyboard_three"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_card_account_height"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/boc_moneykey_num_bg"
            android:gravity="center"
            android:text="3"
            android:textColor="@drawable/boc_moneykey_text_color"
            android:textSize="@dimen/boc_text_size_supper_big" />
    </LinearLayout>
    <!-- 4.5,6 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pay_keyboard_four"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_card_account_height"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/boc_moneykey_num_bg"
            android:gravity="center"
            android:text="4"
            android:textColor="@drawable/boc_moneykey_text_color"
            android:textSize="@dimen/boc_text_size_supper_big" />

        <TextView
            android:id="@+id/pay_keyboard_five"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_card_account_height"
            android:layout_weight="1"
            android:background="@drawable/boc_moneykey_num_bg"
            android:gravity="center"
            android:text="5"
            android:textColor="@drawable/boc_moneykey_text_color"
            android:textSize="@dimen/boc_text_size_supper_big" />

        <TextView
            android:id="@+id/pay_keyboard_sex"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_card_account_height"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/boc_moneykey_num_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@drawable/boc_moneykey_text_color"
            android:textSize="@dimen/boc_text_size_supper_big" />
    </LinearLayout>
    <!-- 7,8,9 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pay_keyboard_seven"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_card_account_height"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/boc_moneykey_num_bg"
            android:gravity="center"
            android:text="7"
            android:textColor="@drawable/boc_moneykey_text_color"
            android:textSize="@dimen/boc_text_size_supper_big" />

        <TextView
            android:id="@+id/pay_keyboard_eight"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_card_account_height"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/boc_moneykey_num_bg"
            android:gravity="center"
            android:text="8"
            android:textColor="@drawable/boc_moneykey_text_color"
            android:textSize="@dimen/boc_text_size_supper_big" />

        <TextView
            android:id="@+id/pay_keyboard_nine"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_card_account_height"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/boc_moneykey_num_bg"
            android:gravity="center"
            android:text="９"
            android:textColor="@drawable/boc_moneykey_text_color"
            android:textSize="@dimen/boc_text_size_supper_big" />
    </LinearLayout>
    <!-- point，0，del -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pay_keyboard_point"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_card_account_height"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/boc_moneykey_num_bg"
            android:gravity="center"
            android:text="."
            android:textColor="@drawable/boc_moneykey_text_color"
            android:textSize="@dimen/boc_text_size_supper_big" />

        <TextView
            android:id="@+id/pay_keyboard_zero"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_card_account_height"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/boc_moneykey_num_bg"
            android:gravity="center"
            android:text="0"
            android:textColor="@drawable/boc_moneykey_text_color"
            android:textSize="@dimen/boc_text_size_supper_big" />

        <ImageView
            android:id="@+id/pay_keyboard_del"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_card_account_height"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/boc_kbdltn_bg_color"
            android:padding="18dp"
            android:scaleType="centerInside"
            android:src="@drawable/boc_moneykey_del_bg" />
    </LinearLayout>


</LinearLayout>