<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rltotal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eff5">

    <LinearLayout
        android:id="@+id/contentPanelBottom"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#f0eff5">

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_88px">

        <FrameLayout
            android:id="@+id/titlebackgroung_layout"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="44dp"
            />
        <FrameLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:background="#00000000"
            android:layout_height="44dp"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/ib_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/llbt_new_back_icon"
                android:textSize="@dimen/text_size_13sp"
                android:text=""
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:layout_gravity="left|center_vertical"

                />
            <LinearLayout
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/share_bt"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_17sp"
                    android:padding="10dp"
                    android:text=""
                    android:drawableRight="@drawable/llbt_btn_share_black"
                    />

                <TextView
                    android:id="@+id/ib_top_right_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_17sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text=""
                    android:drawableRight="@drawable/llbt_point_more"
                    />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/titleContentPanel"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    tools:text="标题"
                    android:textSize="@dimen/text_size_17sp"
                    style="@style/llbt_titleText"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/boc_text_color_dark_gray"/>
            </FrameLayout>

        </FrameLayout>
    </FrameLayout>
    <!-- 分隔线 -->
    <View
        android:id="@+id/line_divider"
        android:layout_below="@id/fl_title"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d8d8e0"/>

    <LinearLayout
        android:id="@+id/contentPanel"
        android:layout_below="@id/line_divider"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#f0eff5"
        >
    </LinearLayout>

</RelativeLayout>
