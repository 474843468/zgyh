<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="请选择起始日期"
            android:textColor="@color/boc_text_color_common_gray"
            android:textSize="@dimen/boc_text_size_small" />

        <View
            android:layout_width="7dp"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/boc_space_between_70px"
            android:layout_marginRight="@dimen/boc_space_between_70px"
            android:background="@color/boc_text_color_dark_gray" />

        <TextView
            android:id="@+id/txt_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="请选择截止日期"
            android:textColor="@color/boc_text_color_common_gray"
            android:textSize="@dimen/boc_text_size_small" />

    </LinearLayout>
    <include layout="@layout/horizontal_line"/>

</LinearLayout>
