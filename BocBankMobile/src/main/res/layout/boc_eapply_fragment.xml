<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleValueTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/boc_text_color_dark_gray"
        android:text="我能贷多少钱？"
        android:visibility="gone"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <com.boc.bocsoft.mobile.bocmobile.base.widget.waterwaveballview.WaterWaveBallView
            android:id="@+id/waveBllView"
            android:layout_gravity="center_horizontal"
            android:layout_width="226dp"
            android:layout_height="226dp" 
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/explainTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/boc_common_cell_color"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/sumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/boc_common_cell_color"
                android:textSize="28dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reachdateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/boc_common_cell_color"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/activatedTv"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/boc_common_cell_color"/>
        </LinearLayout>
    </FrameLayout>

    <TextView 
        android:id="@+id/exceptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/boc_text_color_light_gray"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:gravity="bottom"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/reminderHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/reminderTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="13dp"/>
    </LinearLayout>

</LinearLayout>
