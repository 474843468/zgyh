<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/boc_common_bg_color"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:background="@color/boc_common_cell_color"
        android:layout_height="@dimen/boc_space_between_90px">
        <ImageView
            android:id="@+id/ivDbarCodes"
            android:layout_width="@dimen/boc_space_between_72px"
            android:layout_height="@dimen/boc_space_between_72px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/boc_space_between_24px"
            android:src="@drawable/boc_image_dbarcodes_balck" />
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/boc_home_logo" />

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="@dimen/boc_space_between_72px"
            android:layout_height="@dimen/boc_space_between_72px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/boc_space_between_24px"
            android:src="@drawable/boc_image_search_black" />

    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="@dimen/boc_divider_1px"
        android:background="#eaedf0"
        />
    <com.boc.bocsoft.mobile.bocmobile.buss.system.home.ui.view.HomeScrollView
            android:id="@+id/nsScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/contentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.boc.bocsoft.mobile.bocmobile.base.widget.banner.ConvenientBanner
                    android:id="@+id/convenientBanner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:canLoop="true">

                </com.boc.bocsoft.mobile.bocmobile.base.widget.banner.ConvenientBanner>

                <View android:layout_width="match_parent"
                    android:layout_height="@dimen/boc_divider_1px"
                    android:background="#eaedf0"
                />
                <com.boc.bocsoft.mobile.bocmobile.base.widget.gridview.DragGridView
                    android:id="@+id/mainNav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:listSelector="@null"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:stretchMode="columnWidth"
                    android:horizontalSpacing="1dp"
                    android:verticalSpacing="1dp"
                    app:horizontalSpacingColor="#eaedf0"
                    app:verticalSpacingColor="#eaedf0"

                >

                </com.boc.bocsoft.mobile.bocmobile.base.widget.gridview.DragGridView>

                <com.boc.bocsoft.mobile.bocmobile.buss.system.common.view.SelectedInvestView
                    android:id="@+id/investContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                </com.boc.bocsoft.mobile.bocmobile.buss.system.common.view.SelectedInvestView>


            </LinearLayout>
        </com.boc.bocsoft.mobile.bocmobile.buss.system.home.ui.view.HomeScrollView>


    </LinearLayout>



