<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <View
        android:id="@+id/divider_top"
        style="@style/divider_horizontal"
        android:layout_alignParentTop="true" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/dtr_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fullLine="false"
        app:lineVisibility="true"
        app:textName="@string/boc_virtual_account_detail_update_number" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/dtr_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fullLine="false"
        app:lineVisibility="true"
        app:textName="@string/boc_virtual_account_detail_update_account" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/dtr_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fullLine="false"
        app:lineVisibility="true"
        app:textName="@string/boc_virtual_account_detail_update_account_name" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/dtr_valid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fullLine="false"
        app:lineVisibility="true"
        app:textName="@string/boc_virtual_account_detail_update_account_valid" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/dtr_single_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fullLine="false"
        app:lineVisibility="true"
        app:textName="@string/boc_virtual_account_apply_result_limit_single" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/dtr_total_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fullLine="false"
        app:lineVisibility="true"
        app:textName="@string/boc_virtual_account_apply_result_limit_total" />

    <Button
        android:id="@+id/btn_ok"
        style="@style/BocButton.BocPrimaryButton1"
        android:layout_width="match_parent"
        android:text="@string/boc_account_cancel" />

</LinearLayout>