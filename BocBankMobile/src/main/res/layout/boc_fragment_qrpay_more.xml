<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_qrpay_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_divider_1px"
            android:layout_marginTop="@dimen/boc_space_between_32px"
            android:background="@color/boc_common_view_line" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
            android:id="@+id/qrcode_pay_more_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:editChoiceName="@string/boc_qrpay_pay_pwd"
            app:editChoiceNameBold="true" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
            android:id="@+id/qrcode_pay_more_default_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:editChoiceName="@string/boc_qrpay_default_pay_account"
            app:editChoiceNameBold="true" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
            android:id="@+id/qrcode_pay_more_free_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:editChoiceName="@string/boc_qrpay_free_pwd"
            app:editChoiceNameBold="true" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
            android:id="@+id/qrcode_pay_more_pay_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:editChoiceName="@string/boc_qrpay_pay_record"
            app:editChoiceNameBold="true" />

    </LinearLayout>

</LinearLayout>