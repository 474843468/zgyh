<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_main_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:ellipsize="end"
            android:lines="1"
            android:padding="@dimen/boc_space_between_20px"
            android:text="[美元]中银智慧理财产品21期(873388)"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/boc_space_between_160px"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_40px"
                android:gravity="center_vertical"
                android:text="协议名称"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                android:id="@+id/product_name"
                style="@style/tv_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_50px"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="1,000.00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/boc_space_between_160px"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_40px"
                android:gravity="center_vertical"
                android:text="协议总期数"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                android:id="@+id/is_cancelable"
                style="@style/tv_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_50px"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="1000.00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fee_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/boc_space_between_160px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_40px"
                android:gravity="center_vertical"
                android:text="当前期数"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                android:id="@+id/operator_fee"
                style="@style/tv_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_50px"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="2000.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/boc_space_between_160px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_40px"
                android:gravity="center_vertical"
                android:text="协议投资周期"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                style="@style/tv_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_50px"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="2000.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/boc_space_between_160px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_40px"
                android:gravity="center_vertical"
                android:text="购买频率"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                style="@style/tv_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_50px"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="2000.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/boc_space_between_160px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_40px"
                android:gravity="center_vertical"
                android:text="下次购买日期"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                style="@style/tv_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_50px"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="2000.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/boc_space_between_160px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_40px"
                android:gravity="center_vertical"
                android:text="是否赎回"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                style="@style/tv_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_50px"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="2000.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/boc_space_between_160px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_40px"
                android:gravity="center_vertical"
                android:text="下次赎回日期"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                style="@style/tv_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_50px"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="2000.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/boc_space_between_160px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_40px"
                android:gravity="center_vertical"
                android:text="申购起点金额"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                style="@style/tv_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_50px"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="2000.00" />
        </LinearLayout>


        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
            android:id="@+id/cash_remit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_40px"
            app:editChoiceContent="美元/钞"
            app:editChoiceName="钞汇"
            app:editChoiceNameBold="true" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:editChoiceContent="12期"
            app:editChoiceName="投资金额模式"
            app:editChoiceNameBold="true" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditClearWidget
            android:id="@+id/invest_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:editChoiceContent="200"
            app:editChoiceNameBold="true"
            app:editClearName="单期投资金额" />


        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditClearWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:editChoiceContent="200"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            app:editChoiceNameBold="true"
            app:editClearName="投资期数" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_80px"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/accept_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/boc_text_mobile_color"
                android:button="@drawable/checkbox_style" />

            <TextView
                android:id="@+id/user_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/accept_rule"
                android:layout_marginLeft="@dimen/boc_space_between_26px"
                android:layout_toRightOf="@id/accept_rule"
                android:text="1，我已仔细阅读《中国银行股份有限公司理财产品总协议书》，同意协议中的有关条款，充分了解银行和自身的权利和义务；2，我已仔细阅知该产品的《产品说明书》，同意其中的所有条款，充分了解并清楚知晓本理财产品的投资风险，愿意承担相应风险。"
                android:textColor="@color/boc_text_mobile_color"
                android:textSize="@dimen/boc_text_size_small" />

        </RelativeLayout>

        <TextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_button_height_88px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_80px"
            android:background="@drawable/boc_button_bg_blue"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/boc_common_cell_color"
            android:textSize="@dimen/boc_text_size_common"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/boc_space_between_40px"
            android:layout_marginTop="@dimen/boc_space_between_40px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="理财交易账户"
                android:textColor="@color/boc_text_color_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                android:id="@+id/porfolio_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                android:text="132322323123123"
                android:textColor="@color/boc_text_color_gray"
                android:textSize="@dimen/boc_text_size_small" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
