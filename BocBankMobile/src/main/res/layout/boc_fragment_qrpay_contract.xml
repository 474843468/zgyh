<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contractWeb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_main_bg_color"
    android:orientation="vertical">

    <com.boc.bocsoft.mobile.bocmobile.base.widget.webView.ContractWebView
        android:id="@+id/web_qrpay_contract"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/boc_view_height_96px"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <include layout="@layout/boc_divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_qrpay_contract_disagree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/boc_common_cell_color"
                android:text="@string/boc_qrpay_contract_disagree"
                android:textColor="@color/boc_text_color_red"
                android:textSize="@dimen/boc_text_size_common" />

            <Button
                android:id="@+id/btn_qrpay_contract_agree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/boc_text_color_red"
                android:text="@string/boc_qrpay_contract_agree"
                android:textColor="@color/boc_common_cell_color"
                android:textSize="@dimen/boc_text_size_common" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
