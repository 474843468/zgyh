<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oversea_main_bg"
    >


   <com.boc.bocsoft.mobile.bocmobile.buss.specializedservice.overseaszone.ui.circlemenu.CircleMenuLayout
       android:id="@+id/circleMenuLayout"
       android:layout_marginLeft="-10dp"
       android:layout_marginTop="-40dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">


      <com.boc.bocsoft.mobile.bocmobile.buss.specializedservice.overseaszone.ui.circlemenu.CircleIMenuItemView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/overseas_travel"
          circle:titileName="@string/boc_overseas_travel_title"
          circle:content="@string/boc_overseas_travle_content"
          />

      <com.boc.bocsoft.mobile.bocmobile.buss.specializedservice.overseaszone.ui.circlemenu.CircleIMenuItemView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/overseas_study"
          circle:titileName="@string/boc_overseas_study_title"
          circle:content="@string/boc_overseas_study_content"/>

      <com.boc.bocsoft.mobile.bocmobile.buss.specializedservice.overseaszone.ui.circlemenu.CircleIMenuItemView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/overseas_people"
          circle:titileName="@string/boc_overseas_people_title"
          circle:content="@string/boc_overseas_people_content" />

      <com.boc.bocsoft.mobile.bocmobile.buss.specializedservice.overseaszone.ui.circlemenu.CircleIMenuItemView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/overseas_work"
          circle:titileName="@string/boc_overseas_work_title"
          circle:content="@string/boc_overseas_work_content"/>


      <com.boc.bocsoft.mobile.bocmobile.buss.specializedservice.overseaszone.ui.circlemenu.CircleIMenuItemView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/overseas_invest"
          circle:titileName="@string/boc_overseas_invest_title"
          circle:content="@string/boc_overseas_invest_content"/>


   </com.boc.bocsoft.mobile.bocmobile.buss.specializedservice.overseaszone.ui.circlemenu.CircleMenuLayout>

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="@dimen/boc_space_between_404px"
       android:layout_gravity="bottom"
       android:layout_alignParentBottom="true"
       >
      <TextView
          android:id="@+id/tv_overseas_menu_name"
          style="@style/overseas_tv_style"
          android:background="@drawable/oversea_name_bg"
          android:textSize="@dimen/bocroa_text_size_big"
          android:layout_gravity="right"
          android:singleLine="true"
          android:gravity="center"
          android:textColor="@color/boc_oversea_menuname"
          android:paddingLeft="@dimen/boc_space_between_20px"
          android:paddingRight="@dimen/boc_space_between_20px"
          android:textStyle="bold"
          />
      <TextView
          android:id="@+id/tv_overseas_menu_content"
          style="@style/overseas_tv_style"
          android:layout_marginTop="@dimen/boc_space_between_10px"
          android:layout_marginLeft="@dimen/boc_space_between_60px"
          android:textSize="@dimen/bocroa_text_size_small"
          android:textColor="@color/boc_oversea_menucontent"
          android:layout_width="match_parent"
          />

   </LinearLayout>

   <ImageView
       android:id="@+id/iv_back"
       android:layout_width="@dimen/boc_titlebar_height"
       android:layout_height="@dimen/boc_titlebar_height"
       android:alpha="0.7"
       android:padding="@dimen/boc_space_between_30px"
       android:src="@drawable/boc_back_white"/>


</RelativeLayout>
