<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvDateAndAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/boc_space_between_30px"
        android:paddingRight="@dimen/boc_space_between_30px"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:text="2015/10/30申请微型企业贷款"
        android:singleLine="true"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_common" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/boc_space_between_30px"
        android:paddingRight="@dimen/boc_space_between_30px"
        android:layout_marginTop="@dimen/boc_space_between_8px"
        android:layout_marginBottom="@dimen/boc_space_between_20px"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已成功处理"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/boc_text_color_green"
            android:textSize="@dimen/boc_text_size_super_small"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/tvMoneyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="人民币"
                android:textColor="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_text_size_small"/>

            <TextView
                android:id="@+id/tvMoneySum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_8px"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="100,000.00"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textStyle="bold"
                android:textSize="@dimen/boc_text_size_small"/>
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/boc_divide_line" />
</LinearLayout>
