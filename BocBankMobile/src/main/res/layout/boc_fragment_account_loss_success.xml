<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include layout="@layout/boc_divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/boc_space_between_62px"
            android:paddingTop="@dimen/boc_space_between_72px">

            <TextView
                android:id="@+id/txt_loss_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="@dimen/boc_space_between_32px"
                android:drawableTop="@drawable/boc_operator_succeed"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/boc_text_size_big"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_loss_warn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_32px"
                android:paddingLeft="@dimen/boc_space_between_44px"
                android:paddingRight="@dimen/boc_space_between_54px"
                android:textColor="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_text_size_small" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_back_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_96px"
        android:layout_alignParentBottom="true"
        android:background="@color/boc_common_cell_color"
        android:text="@string/boc_common_back_home"
        android:textColor="@color/boc_text_color_red"
        android:textSize="@dimen/boc_space_between_30px" />
</RelativeLayout>