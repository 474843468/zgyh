<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">
    <include layout="@layout/boc_divide_line" />

    <LinearLayout
        android:id="@+id/llyFailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_main_btn_bg_color"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvFailedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:layout_marginBottom="@dimen/boc_space_between_10px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:textColor="@color/boc_text_color_red"
            android:textStyle="bold"/>

        <include layout="@layout/boc_divide_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llySuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_main_btn_bg_color"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvSuccessTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:layout_marginBottom="@dimen/boc_space_between_10px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:textColor="@color/boc_text_color_green"
            android:textStyle="bold"/>

        <include layout="@layout/boc_divide_line" />
    </LinearLayout>
</LinearLayout>
