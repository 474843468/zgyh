<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_main_bg_color"
    android:scrollbars="none" >
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/boc_main_bg_color"
        android:orientation="vertical">
        <Button
            android:id="@+id/apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/boc_eloan_transfer_apply"
            android:layout_gravity="center"
            style="@style/BocButton.BocPrimaryButton" />
        <Button
            android:id="@+id/draw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/boc_eloan_transfer_draw"
            android:layout_gravity="center"
            style="@style/BocButton.BocPrimaryButton" />
        <Button
            android:id="@+id/changeRepaymentAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/boc_eloan_transfer_changeRepaymentAccount"
            android:layout_gravity="center"
            style="@style/BocButton.BocPrimaryButton" />
        <Button
            android:id="@+id/prepay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/boc_eloan_transfer_prepay"
            android:layout_gravity="center"
            style="@style/BocButton.BocPrimaryButton" />
        <Button
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/boc_eloan_transfer_first"
            android:layout_gravity="center"
            style="@style/BocButton.BocPrimaryButton" />

    </LinearLayout>
</ScrollView>
