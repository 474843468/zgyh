<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_space_between_110px"
                android:background="@color/boc_common_cell_color" >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_divider_1px"
        android:background="@color/boc_common_view_line"
        />
    <TextView
        android:id="@+id/qrcode_adapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:text="收款总计:"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_common"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/qrcode_adapter_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:text="20.00 元"
        android:textColor="@color/boc_text_color_common_gray"
        android:textSize="@dimen/boc_text_size_common"
        />

</RelativeLayout>