<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_card_account_height"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/boc_card_account_info_padding_bottom"
            android:paddingLeft="@dimen/boc_space_between_40px"
            android:paddingTop="@dimen/boc_card_account_info_padding_top">

            <TextView
                android:id="@+id/tv_type"
                style="@style/tv_common"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:textColor="@color/boc_text_color_dark_gray"
                tools:text=""/>

            <TextView
                android:id="@+id/tv_period_rate"
                style="@style/tv_small"
                android:layout_gravity="bottom"
                android:layout_weight="0.0"
                tools:text=""/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_amount"
            style="@style/tv_common"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.0"
            android:textColor="@color/boc_text_color_dark_gray"
            tools:text=""/>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/boc_space_between_30px"
            android:visibility="invisible"
            android:layout_weight="0.0"
            android:src="@drawable/boc_arrow_right"/>

    </LinearLayout>
    <include layout="@layout/boc_divide_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_divider_1px"
        android:layout_alignParentBottom="true" />
</RelativeLayout>

