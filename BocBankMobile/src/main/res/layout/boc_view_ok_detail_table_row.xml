<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    >

    <LinearLayout
        android:id="@+id/layout_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_30px"
            android:layout_marginLeft="@dimen/boc_space_between_26px"
            android:maxEms="6"
            android:singleLine="false"
            android:textSize="@dimen/boc_space_between_30px"
            android:textColor="@color/boc_text_color_dark_gray"
            />
        <TextView
            android:id="@+id/tv_value"
            android:layout_width="match_parent"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_26px"
            android:textSize="@dimen/boc_space_between_30px"
            android:textColor="@color/boc_text_color_common_gray"
            />
    </LinearLayout>
</LinearLayout>