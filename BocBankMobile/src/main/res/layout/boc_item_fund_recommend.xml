<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/boc_space_between_20px"
    android:paddingRight="@dimen/boc_space_between_20px"
    android:paddingTop="@dimen/boc_space_between_20px"
    android:paddingBottom="@dimen/boc_space_between_12px"
    android:orientation="vertical"
    android:background="@color/boc_common_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/boc_space_between_20px"
        android:paddingRight="@dimen/boc_space_between_20px"
        android:background="@drawable/boc_card_background">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:layout_marginBottom="@dimen/boc_space_between_20px">
            <TextView
                android:id="@+id/tvFundName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:text="产品名称产品名称产品名称"
                android:textColor="@color/boc_text_color_dark_gray"/>

            <TextView
                android:id="@+id/tvFundCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_6px"
                android:layout_toRightOf ="@+id/tvFundName"
                android:text="(000666)"
                android:textColor="@color/boc_text_color_light_blue"/>
        </RelativeLayout>

        <include layout="@layout/boc_divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_18px"
            android:layout_marginBottom="@dimen/boc_space_between_8px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/boc_space_between_200px"
                android:layout_height="wrap_content"
                android:textColor="@color/boc_text_color_common_gray"
                android:text="交易份额"/>

            <TextView
                android:id="@+id/tvTradeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/boc_text_color_dark_gray"
                android:text="1000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_8px"
            android:layout_marginBottom="@dimen/boc_space_between_8px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/boc_space_between_200px"
                android:layout_height="wrap_content"
                android:textColor="@color/boc_text_color_common_gray"
                android:text="交易金额"/>

            <TextView
                android:id="@+id/tvTradeAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/boc_text_color_dark_gray"
                android:text="1,000.00元"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_8px"
            android:layout_marginBottom="@dimen/boc_space_between_18px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/boc_space_between_200px"
                android:layout_height="wrap_content"
                android:textColor="@color/boc_text_color_common_gray"
                android:text="单位净值"/>

            <TextView
                android:id="@+id/tvDwjz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/boc_text_color_dark_gray"
                android:text="5.1(2016/09/10)"/>
        </LinearLayout>

        <include layout="@layout/boc_divide_line" />

        <TextView
            android:id="@+id/tvAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/boc_space_between_24px"
            android:paddingBottom="@dimen/boc_space_between_24px"
            android:gravity="center"
            android:textSize="@dimen/boc_text_size_common"
            android:text="购买"
            android:textColor="@color/boc_text_color_light_blue"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvWealthManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_10px"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:textColor="@color/boc_text_color_gray"
        android:textSize="@dimen/boc_text_size_small"
        android:text="理财经理 赵晓月"/>

    <TextView
        android:id="@+id/tvTradeCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_10px"
        android:layout_marginBottom="@dimen/boc_space_between_10px"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:textColor="@color/boc_text_color_gray"
        android:textSize="@dimen/boc_text_size_small"
        android:text="交易编码: 19900"/>

</LinearLayout>
