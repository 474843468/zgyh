<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bocroa_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_margin_management"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_200px"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/boc_space_between_200px"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/boc_common_cell_color">

                <TextView
                    android:id="@+id/left_account_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/boc_space_between_30px"
                    android:textColor="@color/boc_text_color_dark_gray"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/boc_text_size_common"/>

                <LinearLayout
                    android:id="@+id/left_account_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/boc_space_between_30px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/left_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/boc_space_between_20px"
                        android:textColor="@color/boc_text_color_dark_gray"
                        android:textSize="@dimen/boc_text_size_small"
                        android:textStyle="bold"
                        android:layout_below="@+id/left_account_title" />

                    <TextView
                        android:id="@+id/left_account_currency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/boc_btn_txt_blue"
                        android:textSize="@dimen/boc_text_size_common"
                        android:gravity="left" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/capital_tranfer_margin"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/boc_space_between_200px"
                android:background="@color/boc_common_cell_color">

                <View
                    style="@style/divider_vertical"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:layout_width="@dimen/boc_space_between_80px"
                    android:layout_height="@dimen/boc_space_between_80px"
                    android:src="@drawable/capital_tranfer_margin"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/boc_space_between_200px"
                android:layout_weight="1"
                android:background="@color/boc_common_cell_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/right_account_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/boc_text_color_dark_gray"
                    android:textSize="@dimen/boc_text_size_common"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/boc_space_between_30px"
                    android:gravity="right" />

                <LinearLayout
                    android:id="@+id/right_account_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/boc_space_between_20px"
                    android:layout_marginRight="@dimen/boc_space_between_30px"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/right_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/boc_text_size_small"
                        android:textStyle="bold"
                        android:textColor="@color/boc_btn_txt_blue"
                        android:gravity="right" />

                    <TextView
                        android:id="@+id/right_account_currency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/boc_text_size_common"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/boc_btn_txt_blue"
                        android:gravity="right" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/tv_balance_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/boc_text_size_common"
                android:text="dddd"
                android:textColor="@color/boc_text_color_common_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_capital_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/boc_space_between_5px"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textColor="@color/boc_text_color_common_gray"
                    android:text="dddd"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_capital_spot_exchange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textColor="@color/boc_text_color_common_gray"
                    android:textStyle="bold"
                    android:text="dddd"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
            android:id="@+id/cash_or_exchange"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="visible"
            app:editChoiceName="钞/汇"
            app:editChoiceNameBold="true"></com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget>

        <View
            style="@style/divider_horizontal"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditMoneyInputWidget
            android:id="@+id/edit_money_input"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            app:editChoiceName="金额" />

        <Button
            android:id="@+id/margin_button"
            style="@style/BocButton.BocPrimaryButton1"
            android:layout_width="match_parent"
            android:text="保证金存入" />
    </LinearLayout>

</LinearLayout>

