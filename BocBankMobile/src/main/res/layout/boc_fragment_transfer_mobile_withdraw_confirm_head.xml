<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/boc_space_between_26px"
        android:paddingTop="@dimen/boc_space_between_50px"
        android:text="@string/boc_transfer_mobile_withdraw_password"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_common" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.dialogview.securityverify.CFCAEditTextView
        android:id="@+id/cfca_edittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_104px"
        android:gravity="center"
        app:isPasswordAppear="true"
        app:passwordLength="6" />
</LinearLayout>