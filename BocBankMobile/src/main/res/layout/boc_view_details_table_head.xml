<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_detail_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/boc_space_between_20px"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical"
    tools:context="base.widget.details.DetailTableHead">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sum_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_28px"
            android:layout_marginTop="@dimen/boc_space_between_30px"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/boc_space_between_28px"
            android:layout_marginTop="@dimen/boc_space_between_30px"
            android:textColor="@color/boc_common_cell_color"
            android:textSize="@dimen/boc_text_size_super_small"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/boc_space_between_62px"
        android:layout_marginTop="@dimen/boc_space_between_44px"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_supper_big_max" />

    <View
        android:id="@+id/v_sum"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="@dimen/boc_space_between_50px"
        android:background="@color/boc_common_view_line" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textName=""
        app:textValue="" />

    <LinearLayout
        android:id="@+id/ll_datail_tow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <View
            android:id="@+id/v_sum_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/boc_common_view_line" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
            android:id="@+id/detail_tow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textName=""
            app:textValue="" />
    </LinearLayout>
</LinearLayout>
