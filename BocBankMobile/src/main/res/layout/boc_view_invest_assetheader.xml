<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <com.boc.bocsoft.mobile.bocmobile.buss.system.invest.ui.view.SecretTextView
      android:id="@+id/tv_money"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:textColor="#ffffff"
      android:textSize="@dimen/boc_text_size_supper_big"
      android:textStyle="bold"
      android:layout_marginTop="-12dp"
  />
  <TextView
      android:id="@+id/tv_info"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@id/tv_money"
      android:layout_centerHorizontal="true"
      android:text="投资总金额(元)"
      android:textColor="#ff9999"
      android:paddingTop="12dp"
      android:paddingBottom="12dp"
      android:textSize="@dimen/boc_text_size_small"
  />

  <ImageView
      android:id="@+id/iv_eye"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/icon_invest_eye_selector"
      android:scaleType="center"
      android:paddingLeft="24dp"
      android:paddingRight="25dp"
      android:layout_marginTop="0dp"
      android:layout_alignTop="@id/tv_info"
      android:layout_alignBottom="@id/tv_info"
      android:layout_toRightOf="@id/tv_info"
      android:layout_marginLeft="-12dp"
      android:focusable="true"
      android:clickable="true"
  />

  <ImageView
      android:id="@+id/iv_info"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/icon_invest_info"
      android:scaleType="center"
     android:layout_alignBaseline="@id/tv_info"
      android:baseline="50dp"
      android:layout_alignParentRight="true"
      android:paddingTop="25dp"
      android:paddingBottom="25dp"
      android:paddingLeft="30dp"
      android:paddingRight="15dp"
      android:layout_marginTop="-10dp"
      android:focusable="true"
      android:clickable="true"
  />

</RelativeLayout>