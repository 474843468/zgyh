<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/boc_kbdltn_bg_color"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageView_bank_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:src="@drawable/boc_cardpic_credit" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_bank_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6217850800013808447"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_bank_account_type"
            style="@style/tv_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="银联卡" />


    </LinearLayout>


</LinearLayout>