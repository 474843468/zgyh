<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <com.boc.bocsoft.mobile.bocmobile.base.widget.emptyview.CommonEmptyView
        android:id="@+id/progress_emptyview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center" />
    <TextView
        android:id="@+id/progress_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_40px"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginBottom="@dimen/boc_space_between_20px"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_88px"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:background="@color/boc_common_cell_color"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/boc_trans_financial_fixedterm_hodedays"/>
        <View
            android:layout_width="@dimen/boc_divider_1px"
            android:layout_height="match_parent"
            android:background="@color/boc_divider_line_color"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/boc_trans_financial_earnbuild_exyield"/>
    </LinearLayout>
    <com.boc.bocsoft.remoteopenacc.common.view.pulltofresh.XListView
        android:id="@+id/paogress_xlist"
        android:background="@color/boc_common_cell_color"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:scrollbars="none"
        android:dividerHeight="@dimen/boc_divider_1px"
        android:listSelector="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
