<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:gravity="center_horizontal"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/ll_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.boc.bocsoft.mobile.bocmobile.base.widget.moneyinputview.MoneyInputTextView
                android:id="@+id/et_rate_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/boc_text_color_red"
                android:textSize="@dimen/boc_text_size_20dp"
                app:maxRightNum="4" />

            <ImageView
                android:id="@+id/iv_line_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_rate_first"
                android:layout_marginTop="@dimen/boc_space_between_10px"
                android:paddingLeft="@dimen/boc_space_between_8px"
                android:paddingRight="@dimen/boc_space_between_8px"
                android:src="@drawable/boc_longshortforex_purchase_red" />

            <ImageView
                android:id="@+id/iv_min_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/iv_line_first"
                android:layout_centerVertical="true"
                android:src="@drawable/boc_longshortforex_purchase_min" />


            <ImageView
                android:id="@+id/iv_plus_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/iv_line_first"
                android:layout_centerVertical="true"
                android:src="@drawable/boc_longshortforex_purchase_plus" />

        </RelativeLayout>

        <com.boc.bocsoft.mobile.bocmobile.base.widget.ClickableSpan.SpannableString
            android:id="@+id/tv_title_first"
            android:visibility="gone"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:gravity="center"
            android:text="@string/boc_purchase_rate_profit" />

        <LinearLayout
            android:id="@+id/ll_first_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/boc_space_between_25px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_profit"
                style="@style/tv_small"
                android:layout_width="@dimen/boc_space_between_104px"
                android:layout_height="@dimen/boc_space_between_54px"
                android:text="@string/boc_purchase_rate_profit"
                android:background="@drawable/boc_longshortforex_purchase_rate_tab_left_selector"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_losses"
                style="@style/tv_small"
                android:layout_width="@dimen/boc_space_between_104px"
                android:layout_height="@dimen/boc_space_between_54px"
                android:background="@drawable/boc_longshortforex_purchase_rate_tab_right_selector"
                android:text="@string/boc_purchase_rate_losses"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/boc_space_between_60px"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.boc.bocsoft.mobile.bocmobile.base.widget.moneyinputview.MoneyInputTextView
                android:id="@+id/et_rate_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/boc_text_color_green"
                android:textSize="@dimen/boc_text_size_20dp"
                app:maxRightNum="4" />

            <ImageView
                android:id="@+id/iv_line_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_rate_second"
                android:layout_marginTop="@dimen/boc_space_between_10px"
                android:paddingLeft="@dimen/boc_space_between_8px"
                android:paddingRight="@dimen/boc_space_between_8px"
                android:src="@drawable/boc_longshortforex_purchase_green" />

            <ImageView
                android:id="@+id/iv_min_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/iv_min_second"
                android:layout_centerVertical="true"
                android:src="@drawable/boc_longshortforex_purchase_min" />

            <ImageView
                android:id="@+id/iv_plus_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/iv_line_second"
                android:layout_centerVertical="true"
                android:src="@drawable/boc_longshortforex_purchase_plus" />

        </RelativeLayout>

        <com.boc.bocsoft.mobile.bocmobile.base.widget.ClickableSpan.SpannableString
            android:id="@+id/tv_title_second"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:gravity="center"
            android:text="@string/boc_purchase_rate_losses" />

    </LinearLayout>
</LinearLayout>