<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_104px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/boc_space_between_30px"
        android:paddingRight="@dimen/boc_space_between_30px">

        <TextView
            android:id="@+id/clear_edit_money_name"
            android:layout_width="@dimen/boc_space_between_190px"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/boc_space_between_6px"
            android:text=""
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/clear_edit_money_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:src="@drawable/boc_image_login"
            android:visibility="gone" />


        <com.boc.bocsoft.mobile.bocmobile.base.widget.moneyinputview.MoneyInputTextView
            android:id="@+id/clear_edit_money_context"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/boc_space_between_50px"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textColorHint="@color/boc_text_color_light_gray"
            android:textSize="@dimen/boc_text_size_common" />

        <TextView
            android:id="@+id/clear_edit_money_del_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/boc_space_between_16px"
            android:paddingLeft="@dimen/boc_space_between_16px"
            android:paddingTop="@dimen/boc_space_between_16px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/clear_edit_money_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/boc_space_between_16px"
            android:paddingLeft="@dimen/boc_space_between_16px"
            android:paddingTop="@dimen/boc_space_between_16px"
            android:textColor="@color/boc_main_button_color"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/clear_edit_right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_18px"
            android:gravity="center_vertical"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/choice_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/boc_divider_line_color"
        android:visibility="gone" />
</LinearLayout>
