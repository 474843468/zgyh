<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivZone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/boc_text_color_gray"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.boc.bocsoft.mobile.bocmobile.base.widget.AccountOverview.AccountCurrentHead
                android:id="@+id/accountMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/xpadNomalAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@null"
                android:visibility="gone">>


                <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
                    android:id="@+id/tradeAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textName="理财交易账户"
                    app:textValue="" />

                <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
                    android:id="@+id/accountType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:textName="账户类型"
                    app:textValue="" />

                <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
                    android:id="@+id/isEbankAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/boc_space_between_32px"
                    app:textName="是否为电子银\n行关联账户"
                    app:textValue="" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/xpadOnlyAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvcurrentState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/boc_space_between_10px"
                    android:layout_marginLeft="@dimen/boc_space_between_20px"
                    android:layout_marginRight="@dimen/boc_space_between_20px"
                    android:layout_marginTop="@dimen/boc_space_between_24px"
                    android:text="当前状态"
                    android:textColor="@color/boc_text_color_dark_gray"
                    android:textSize="@dimen/boc_text_size_small" />

                <LinearLayout
                    android:id="@+id/currentState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/boc_space_between_32px"
                    android:background="@color/boc_titlebar_bg_white"
                    android:orientation="vertical">

                    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
                        android:id="@+id/customername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:textName="姓名"
                        app:textValue="" />

                    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
                        android:id="@+id/bankAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:textName="银行账户"
                        app:textValue="" />

                    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
                        android:id="@+id/openState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:textName="开通状态"
                        app:textValue="" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvUnRegist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_card_pic_height_88px"
                android:layout_marginBottom="@dimen/boc_space_between_26px"
                android:background="@color/boc_titlebar_bg_white"
                android:gravity="center"
                android:text="取消登记"
                android:textColor="@color/boc_bg_finance_red_click"
                android:textSize="@dimen/boc_text_size_small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTrans"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_card_pic_height_88px"
                android:layout_marginBottom="@dimen/boc_space_between_26px"
                android:background="@color/boc_titlebar_bg_white"
                android:gravity="center"
                android:text="资金划转"
                android:textColor="@color/boc_main_button_color"
                android:textSize="@dimen/boc_text_size_small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvCanle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_card_pic_height_88px"
                android:layout_marginBottom="@dimen/boc_space_between_26px"
                android:background="@color/boc_titlebar_bg_white"
                android:gravity="center"
                android:text="解除"
                android:textColor="@color/boc_bg_finance_red_click"
                android:textSize="@dimen/boc_text_size_small"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>


