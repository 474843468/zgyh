<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fff"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_container0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0EFF5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_card_account_height"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_card_account_height"
                android:background="#fff"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_account_image"
                    android:layout_width="@dimen/boc_card_pic_width"
                    android:layout_height="@dimen/boc_card_pic_height"
                    android:layout_marginBottom="@dimen/boc_card_account_pic_margin_bottom"
                    android:layout_marginLeft="@dimen/boc_space_between_50px"
                    android:layout_marginRight="@dimen/boc_space_between_16px"
                    android:layout_marginTop="@dimen/boc_card_account_pic_margin_top"
                    android:layout_weight="0.0"
                    android:scaleType="fitXY"
                    android:src="@drawable/boc_cardpic_debit"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/boc_card_account_info_padding_bottom"
                    android:paddingTop="@dimen/boc_card_account_info_padding_top">

                    <TextView
                        android:id="@+id/tv_account_num"
                        style="@style/tv_common"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:text="6222 ****** 000000"
                        android:textColor="@color/boc_text_color_dark_gray"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_account_type"
                        style="@style/tv_small"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.0"
                        android:text="工资卡"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/boc_card_account_info_padding_bottom"
                    android:paddingLeft="@dimen/boc_space_between_10px"
                    android:paddingRight="@dimen/boc_space_between_40px"
                    android:paddingTop="@dimen/boc_card_account_info_padding_top">

                    <TextView
                        android:id="@+id/tv_is_current_trade_account"
                        style="@style/tv_common"
                        android:layout_gravity="top"
                        android:layout_weight="1"
                        android:text="(当前交易账户)"
                        android:textColor="@color/boc_text_color_dark_gray"
                        android:textSize="@dimen/boc_text_size_super_small"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/boc_button_bg_gray_thin_stroke"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_26px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="[美元]保证金  (7050034)"
                android:textColor="#000"
                android:textSize="@dimen/boc_text_size_small"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_margin_rate"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_red"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:text="余额不足"
                android:textColor="#FF4444"
                android:textSize="@dimen/boc_text_size_very_small"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_26px"
                android:text="暂计盈亏"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_small"/>

            <TextView
                android:id="@+id/tv_current_profit_loss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_26px"
                android:layout_weight="1"
                android:text="-20,000.000"
                android:textColor="#00C192"
                android:textSize="@dimen/boc_text_size_small"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="13.6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/boc_arrow_right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_26px"
                android:text="保证金净值"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_small"/>

            <TextView
                android:id="@+id/tv_margin_net_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_26px"
                android:text="50,000.00"
                android:textColor="#000"
                android:textSize="@dimen/boc_text_size_small"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>