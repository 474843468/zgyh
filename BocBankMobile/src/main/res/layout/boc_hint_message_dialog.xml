<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/boc_space_between_42px"
        android:layout_marginRight="@dimen/boc_space_between_42px"
        android:layout_marginTop="@dimen/boc_space_between_60px"
        android:gravity="center_vertical"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_common"
        tools:text="提示信息" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/boc_space_between_60px"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:background="@color/boc_text_mobile_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_button_height_96px"
            android:layout_weight="1"
            android:background="@drawable/bg_invest_pressed_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/invest_color_selector_pressed"
            android:textSize="@dimen/boc_text_size_common" />


        <Button
            android:id="@+id/btn_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/boc_button_height_96px"
            android:layout_weight="1"
            android:background="@drawable/bg_invest_nomal_selector"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/invest_color_selector_normal"
            android:textSize="@dimen/boc_text_size_common" />
    </LinearLayout>

</LinearLayout>