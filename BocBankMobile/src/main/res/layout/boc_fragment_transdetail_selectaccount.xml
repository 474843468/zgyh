<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_amount_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/boc_space_between_40px"
        android:paddingRight="@dimen/boc_space_between_40px"
        android:paddingTop="@dimen/boc_space_between_40px"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_space_between_26px"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_center_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/boc_space_between_40px"
        android:paddingRight="@dimen/boc_space_between_40px"
        android:paddingTop="@dimen/boc_space_between_280px"
        android:textColor="@color/boc_text_color_gray"
        android:textSize="@dimen/boc_space_between_36px"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lv_transdetail_selectaccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never"
        android:paddingLeft="@dimen/boc_space_between_20px"
        android:paddingRight="@dimen/boc_space_between_20px"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/tv_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/boc_text_color_gray"
        android:textSize="@dimen/boc_space_between_36px"
        android:visibility="gone" />


</LinearLayout>