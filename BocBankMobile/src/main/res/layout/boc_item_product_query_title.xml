<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_main_bg_color"
    android:orientation="horizontal"
    android:paddingTop="@dimen/boc_space_between_30px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_main_btn_bg_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/boc_space_between_22px"
        android:paddingLeft="@dimen/boc_space_between_30px"
        android:paddingRight="@dimen/boc_space_between_30px"
        android:paddingTop="@dimen/boc_space_between_22px">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/boc_text_color_dark_gray" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boc_product_unexpand"
            android:textColor="@color/boc_main_button_color" />
    </LinearLayout>


</LinearLayout>