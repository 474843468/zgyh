<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    >
    <TextView
        android:id="@+id/tv_head"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/boc_space_between_50px"
        android:layout_marginLeft="@dimen/boc_space_between_18px"
        android:gravity="center_vertical"
        android:text="退汇信息"
        android:textSize="@dimen/boc_space_between_28px"
        android:textColor="@color/boc_text_color_dark_gray"
        />
    <View
        android:id="@+id/v_head"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/boc_common_view_line"/>

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailContentView
        android:id="@+id/body_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>