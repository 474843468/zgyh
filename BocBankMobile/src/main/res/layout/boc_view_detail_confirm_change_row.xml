<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/boc_space_between_80px"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_body"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_80px"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_name_again"
            style="@style/tv_small"
            android:layout_width="@dimen/boc_space_between_160px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:gravity="center_vertical"
            android:textColor="@color/boc_text_color_dark_gray" />

        <TextView
            android:id="@+id/tv_value_again"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/boc_space_between_50px"
            android:layout_toRightOf="@id/tv_name_again"
            android:gravity="center_vertical"
            android:textColor="@color/boc_text_color_common_gray"
            android:textSize="@dimen/boc_text_size_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_alter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/boc_space_between_30px"
            android:paddingRight="@dimen/boc_space_between_30px"
            android:layout_toRightOf="@id/tv_value_again"
            android:gravity="center_vertical"
            android:text="@string/boc_invest_treaty_change"
            android:textColor="@color/boc_main_button_color"
            android:textSize="@dimen/boc_text_size_small"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/boc_common_view_line"
        android:visibility="visible" />

</LinearLayout>