<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_80px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/boc_space_between_160px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:gravity="center_vertical"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_small" />

        <TextView
            android:id="@+id/tv_value"
            style="@style/tv_small"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/boc_space_between_50px"
            android:layout_marginRight="@dimen/boc_space_between_30px"
            android:layout_weight="2"
            android:maxLines="2" />

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:text="更改"
                android:textColor="@color/boc_main_button_color"
                android:textSize="@dimen/boc_text_size_small"
                android:textStyle="bold"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_btn"
                android:layout_width="@dimen/boc_space_between_50px"
                android:layout_height="@dimen/boc_space_between_50px"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/boc_divider_line_color" />
</LinearLayout>