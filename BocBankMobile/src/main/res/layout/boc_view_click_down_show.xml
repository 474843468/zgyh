<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_88px"
        android:paddingRight="@dimen/boc_space_between_30px"
        android:paddingLeft="@dimen/boc_space_between_30px">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:text="demo"
            android:textSize="@dimen/boc_text_size_common"
            android:textColor="@color/boc_text_color_dark_gray" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/boc_view_icon_current_open" />
    </RelativeLayout>

    <include layout="@layout/boc_divide_line"/>

    <LinearLayout
        android:id="@+id/ll_parent_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/boc_space_between_30px"
        android:paddingRight="@dimen/boc_space_between_30px"
        android:orientation="vertical"
        android:background="@color/boc_common_bg_color"/>
</LinearLayout>