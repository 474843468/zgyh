<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llyContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_10px"
        android:paddingBottom="@dimen/boc_space_between_20px"
        android:layout_marginBottom="@dimen/boc_space_between_12px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_32px"
            android:layout_marginRight="@dimen/boc_space_between_30px"
            android:layout_marginTop="@dimen/boc_space_between_8px"
            android:layout_marginBottom="@dimen/boc_space_between_6px"
            android:textStyle="bold"
            android:textSize="@dimen/boc_text_size_small"
            android:visibility="visible"/>
    </LinearLayout>
    <include layout="@layout/boc_divide_line" />
</LinearLayout>
