<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <View
        android:id="@+id/divider_top"
        style="@style/divider_horizontal" />

    <com.boc.bocsoft.mobile.bocmobile.buss.account.virtual.ui.VirtualBillItemView
        android:id="@+id/item_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_96px" />

    <View style="@style/divider_horizontal" />

    <com.boc.bocsoft.mobile.bocmobile.buss.account.virtual.ui.VirtualBillItemView
        android:id="@+id/item_in"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_96px"
        android:layout_marginBottom="@dimen/boc_space_between_20px" />

    <TextView
        android:id="@+id/tv_detail"
        style="@style/tv_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/boc_space_between_20px"
        android:text="交易明细" />

</LinearLayout>
