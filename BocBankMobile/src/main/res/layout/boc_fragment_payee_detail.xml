<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F0EFF5"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dingxiang_notice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_80px"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:text="此用户为“定向收款用户”"
        android:textColor="#000"/>

    <View
        android:id="@+id/view_separate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_30px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42.6dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="名称"
                android:textColor="#222222"
                android:textSize="@dimen/boc_text_size_little_big"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:layout_marginRight="@dimen/boc_space_between_48px"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="李云李云李云李云李云李云李云李云李云李云李云李云李云李云李云李云李云李云李云李云李云李云李云李云李云"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_little_big"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:background="#D8D8E0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42.6dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="别名"
                android:textColor="#222222"
                android:textSize="@dimen/boc_text_size_little_big"/>

            <TextView
                android:id="@+id/tv_payee_alias"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="李云云"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_little_big"/>

            <ImageView
                android:id="@+id/iv_modify_payee_alias"
                android:layout_width="54.6dp"
                android:layout_height="match_parent"
                android:paddingBottom="9dp"
                android:paddingLeft="9dp"
                android:paddingRight="21dp"
                android:paddingTop="9dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_detail_modify"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:background="#D8D8E0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42.6dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="账号"
                android:textColor="#222222"
                android:textSize="@dimen/boc_text_size_little_big"/>

            <TextView
                android:id="@+id/tv_account_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="6217 ****** 9239"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_little_big"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:background="#D8D8E0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42.6dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bank_name_notice_txt"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="所属银行"
                android:textColor="#222222"
                android:textSize="@dimen/boc_text_size_little_big"/>

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:layout_marginRight="@dimen/boc_space_between_32px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="中国银行"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_little_big"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:background="#D8D8E0"/>

        <LinearLayout
            android:id="@+id/ll_addreess"
            android:layout_width="match_parent"
            android:layout_height="42.6dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="开户行"
                android:textColor="#222222"
                android:textSize="@dimen/boc_text_size_little_big"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:layout_marginRight="@dimen/boc_space_between_48px"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="中国银行北京上地信息路支行"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_little_big"/>

        </LinearLayout>

        <View
            android:id="@+id/view_address_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:background="#D8D8E0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42.6dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="手机号"
                android:textColor="#222222"
                android:textSize="@dimen/boc_text_size_little_big"/>

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="134 9809 8900"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_little_big"/>

            <ImageView
                android:id="@+id/iv_modify_payee_mobile"
                android:layout_width="54.6dp"
                android:layout_height="match_parent"
                android:paddingBottom="9dp"
                android:paddingLeft="9dp"
                android:paddingRight="21dp"
                android:paddingTop="9dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_detail_modify"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_to_trans_remit"
        android:layout_width="match_parent"
        android:layout_height="42.6dp"
        android:layout_marginTop="@dimen/boc_space_between_24px"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="给ta转账"
        android:textColor="#00AAEE"
        android:textSize="@dimen/boc_text_size_little_big"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_delete_payee"
        android:layout_width="match_parent"
        android:layout_height="42.6dp"
        android:layout_marginTop="@dimen/boc_space_between_24px"
        android:background="@drawable/boc_letter_bg_selector"
        android:gravity="center"
        android:text="删除"
        android:textColor="#FF6666"
        android:textSize="@dimen/boc_text_size_little_big"
        android:textStyle="bold"/>

</LinearLayout>