<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <LinearLayout
      android:id="@+id/ll_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="0dp"
      android:background="@color/boc_common_cell_color"
      android:orientation="vertical"
  >
    <Space android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="@dimen/boc_space_between_52px"
        android:layout_height="@dimen/boc_space_between_52px"
        android:layout_gravity="center_horizontal"
    />

    <Space android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_item"
        android:layout_gravity="center_horizontal"
        android:maxLines="2"
        android:minLines="2"
        android:ellipsize="end"
        android:textColor="@color/boc_text_color_common_gray"
        android:textSize="@dimen/boc_text_size_small_14dp"
        android:gravity="center_vertical|center"
        android:padding="3.5dp"
        android:textAlignment="center"
    />

    <Space android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
  </LinearLayout>
</RelativeLayout>

