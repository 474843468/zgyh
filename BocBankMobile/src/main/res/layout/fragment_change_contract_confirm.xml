<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F0EFF5"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_notice1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="bottom"
        android:paddingLeft="15dp"
        android:text="资金账户变更信息"
        android:textColor="#000"
        android:textSize="@dimen/boc_text_size_small"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:text="原资金账户"
                android:textColor="#222222"
                android:textSize="@dimen/boc_text_size_small"/>

            <TextView
                android:id="@+id/tv_old_account_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:layout_weight="1"
                android:text="6000 ****** 0000"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_small"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:text="新资金账户"
                android:textColor="#222222"
                android:textSize="@dimen/boc_text_size_small"/>

            <TextView
                android:id="@+id/tv_new_account_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:layout_weight="1"
                android:text="6000 ****** 0001"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_small"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:text="保证金账号"
                android:textColor="#222222"
                android:textSize="@dimen/boc_text_size_small"/>

            <TextView
                android:id="@+id/tv_margin_account_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:layout_weight="1"
                android:text="1031 ****** 0072"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_small"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="25dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:text="结算币种"
                android:textColor="#222222"
                android:textSize="@dimen/boc_text_size_small"/>

            <TextView
                android:id="@+id/tv_settle_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:layout_weight="1"
                android:text="人民币元"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_small"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_set_trade_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="#F0EFF5"
            android:gravity="bottom"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:text="双向宝交易账户设置信息"
            android:textColor="#000"
            android:textSize="@dimen/boc_text_size_small"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:text="原交易账户"
                android:textColor="#222222"
                android:textSize="@dimen/boc_text_size_small"/>

            <TextView
                android:id="@+id/tv_old_account_number1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:layout_weight="1"
                android:text="6222 ****** 0000"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_small"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="24dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:text="新交易账户"
                android:textColor="#222222"
                android:textSize="@dimen/boc_text_size_small"/>

            <TextView
                android:id="@+id/tv_new_account_number1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:layout_weight="1"
                android:text="6222 ****** 5938"
                android:textColor="#666666"
                android:textSize="@dimen/boc_text_size_small"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_88px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/boc_button_bg_blue"
        android:gravity="center"
        android:text="确认"
        android:textColor="#fff"/>

</LinearLayout>