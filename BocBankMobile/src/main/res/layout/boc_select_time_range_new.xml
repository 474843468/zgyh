<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/boc_button_height_88px"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/boc_space_between_36px"
            android:gravity="center_vertical"
            android:text="@string/security_cancel"
            android:textColor="@color/boc_text_color_red"
            android:textSize="@dimen/boc_text_size_small" />

        <include layout="@layout/boc_divide_line" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/ll_top"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_add_layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/boc_space_between_46px"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/boc_space_between_22px"
                    android:paddingLeft="@dimen/boc_space_between_20px"
                    android:paddingTop="@dimen/boc_space_between_46px"
                    android:text="@string/boc_transaction_date"
                    android:textColor="@color/boc_text_color_dark_gray"
                    android:textSize="@dimen/boc_text_size_common" />

                <com.boc.bocsoft.mobile.bocmobile.base.widget.singlemoreselect.SelectGridView
                    android:id="@+id/single_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/boc_space_between_20px"
                    android:layout_marginLeft="@dimen/boc_space_between_20px"
                    android:layout_marginRight="@dimen/boc_space_between_20px"
                    android:horizontalSpacing="@dimen/boc_space_between_20px"
                    android:numColumns="3"
                    app:radioTrue="true" />

                <include layout="@layout/boc_divide_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/boc_view_height_96px"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="@string/boc_transaction_date_start"
                        android:textColor="@color/boc_text_color_common_gray"
                        android:textSize="@dimen/boc_text_size_small" />

                    <View
                        android:layout_width="@dimen/boc_view_height_14px"
                        android:layout_height="@dimen/boc_view_height_2px"
                        android:layout_marginLeft="@dimen/boc_space_between_70px"
                        android:layout_marginRight="@dimen/boc_space_between_70px"
                        android:background="@color/boc_text_color_dark_gray" />

                    <TextView
                        android:id="@+id/txt_end"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:text="@string/boc_transaction_date_end"
                        android:textColor="@color/boc_text_color_common_gray"
                        android:textSize="@dimen/boc_text_size_small" />

                </LinearLayout>

                <include layout="@layout/boc_divide_line" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_add_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/boc_view_height_96px"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <include layout="@layout/boc_divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/boc_common_cell_color"
                android:text="@string/boc_transaction_date_reset"
                android:textColor="@color/boc_text_color_red"
                android:textSize="@dimen/boc_text_size_common" />

            <Button
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/boc_text_money_color_red"
                android:text="@string/boc_common_sure"
                android:textColor="@color/boc_common_cell_color"
                android:textSize="@dimen/boc_text_size_common" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>