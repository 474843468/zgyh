<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_shared_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_bg_color"
        android:orientation="vertical">

        <com.boc.bocsoft.mobile.bocmobile.base.widget.selectaccoutview.SelectAccountButton
            android:id="@+id/btn_select_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/boc_space_between_20px"
            tools:background="@drawable/boc_card_background" />

        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            tools:src="@drawable/boc_scan_box_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/boc_common_cell_color"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/boc_space_between_50px"
            android:paddingTop="@dimen/boc_space_between_50px">

            <TextView
                style="@style/tv_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/boc_qrcode_me_tips"
                android:textColor="@color/boc_text_color_dark_gray" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_save"
        style="@style/BocButton.BocWhiteBgButton"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:text="@string/boc_qrcode_save"
        android:textColor="@color/boc_main_button_color" />

    <Button
        android:id="@+id/btn_share"
        style="@style/BocButton.BocWhiteBgButton"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:text="@string/boc_qrcode_share"
        android:textColor="@color/boc_main_button_color" />

</LinearLayout>