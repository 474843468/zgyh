<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_scan_mask"
    android:gravity="center_vertical"
    android:id="@+id/titlebar_scan">


    <ImageView
        android:id="@+id/leftIconIv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@drawable/boc_back_black" />


    <TextView
        android:id="@+id/titleValueTv"
        style="@style/tv_little_big"
        android:layout_centerInParent="true"
        android:text="@string/boc_qrcode_scan"
        android:textColor="@color/boc_text_color_dark_gray"/>

    <ImageView
        android:id="@+id/rightIconIv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:src="@drawable/boc_flashlight_closed" />

</RelativeLayout>