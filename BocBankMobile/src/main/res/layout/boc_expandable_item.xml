<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rl_head"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/boc_space_between_30px"
        android:paddingRight="@dimen/boc_space_between_20px">

        <TextView
            android:id="@+id/tv_head"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            style="@style/tv_small"
            android:gravity="center"
            android:text="总计"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tl_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:layout_weight="1"
        android:shrinkColumns="0">

    </TableLayout>

    <LinearLayout
        android:id="@+id/ll_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingRight="@dimen/boc_space_between_30px">

        <ImageView
            android:id="@+id/img_lead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/boc_arrow_right"/>
    </LinearLayout>

</LinearLayout>


