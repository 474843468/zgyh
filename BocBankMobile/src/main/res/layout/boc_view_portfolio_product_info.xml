<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_product_currency"
        style="@style/tv_common"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textStyle="bold"
        tools:text="[美元]"/>

    <TextView
        android:id="@+id/tv_product_name"
        style="@style/tv_common"
        android:layout_toRightOf="@id/tv_product_currency"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textStyle="bold"
        tools:text="名称特长日积月累理财协议申请名称特长名称特长12345"/>

    <TextView
        android:id="@+id/tv_product_code"
        style="@style/tv_common"
        android:layout_below="@id/tv_product_currency"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textStyle="bold"
        tools:text="(cfd000113123123132123)"/>
</RelativeLayout>