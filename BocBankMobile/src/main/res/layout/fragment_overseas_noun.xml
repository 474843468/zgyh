<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/boc_common_bg_color"
    android:paddingTop="@dimen/boc_space_between_20px"
    android:orientation="vertical">


    <com.boc.bocsoft.mobile.bocmobile.base.widget.tablayout.SimpleTabLayout
        android:id="@+id/tab_indicator"
        app:tabGravity="center"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/boc_text_color_red"
        app:tabIndicatorHeight="@dimen/boc_space_between_5px"
        app:tabIndicatorColor="@color/boc_text_color_red"
        app:tabTextColor="@color/boc_text_color_common_gray"
        app:tabTextSize="@dimen/boc_space_between_26px"
        app:tabPadding="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/boc_common_cell_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>