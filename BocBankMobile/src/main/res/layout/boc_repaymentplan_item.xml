<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/boc_common_cell_color"
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/repaymentLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/boc_common_cell_color"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/numberTv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
           android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/boc_eloan_repayment"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/repayDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="13dp"
                    android:textColor="@color/boc_text_color_dark_gray" />

                <TextView
                    android:id="@+id/repayAmountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="13dp"
                    android:textColor="@color/boc_text_color_dark_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/repayCapitalTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="13dp"
                    android:textColor="@color/boc_text_color_common_gray" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/boc_text_color_light_gray" />
                <TextView
                    android:id="@+id/repayInterestTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="13dp"
                    android:textColor="@color/boc_text_color_common_gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_cell_color"
        android:orientation="vertical">
        <TextView
            android:id="@+id/overdueTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/boc_text_color_red"
            android:singleLine="true"
            android:textSize="13dp"
            android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/v_body"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/boc_divider_line_color" />

</LinearLayout>
