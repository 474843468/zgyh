<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical"
    android:padding="@dimen/boc_space_between_20px">

    <TextView
        android:id="@+id/tv_branch_name"
        style="@style/tv_common"
        android:layout_marginBottom="@dimen/boc_space_between_8px"
        android:textColor="@color/boc_text_color_dark_gray"
        tools:text="中国银行北京王府井支行"/>

    <TextView
        android:id="@+id/tv_branch_address"
        style="@style/tv_small"
        tools:text="北京市东城区东方广场W2座103号"/>
</LinearLayout>