<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_bg_color"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_90px"
            android:background="@color/boc_common_cell_color" >

            <com.boc.bocsoft.mobile.framework.widget.TitleBarView
                android:id="@+id/attcard_select_title_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </com.boc.bocsoft.mobile.framework.widget.TitleBarView>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_popdialog_padding_20px" />

        <LinearLayout
            android:id="@+id/ll_atcard_choose_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_90px"
            android:background="@color/boc_main_btn_bg_color"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_attcard_detail_range"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/boc_space_between_28px"
                android:gravity="center_vertical"
                android:text="近一个月交易"
                android:textColor="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                android:id="@+id/tv_attcard_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/boc_space_between_10px"
                android:drawableRight="@drawable/boc_select_gray"
                android:gravity="center"
                android:paddingLeft="@dimen/boc_space_between_30px"
                android:paddingRight="@dimen/boc_space_between_30px"
                android:text="筛选"
                android:textColor="@color/boc_text_color_common_gray"/>

        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/boc_divider_1px"-->
            <!--android:background="@color/boc_kbdltn_bg_color"/>-->

    </LinearLayout>

</LinearLayout>