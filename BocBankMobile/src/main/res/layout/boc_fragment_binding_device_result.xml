<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color">

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_divider_1px"
        android:background="@color/boc_divide_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_cell_color"
        android:layout_below="@id/view_divider"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/boc_space_between_80px"
            android:layout_height="@dimen/boc_space_between_80px"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/boc_space_between_30px"
            android:layout_marginTop="@dimen/boc_space_between_70px"
            android:src="@drawable/boc_load_succeed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/boc_space_between_44px"
            android:text="验证通过"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_big"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/boc_space_between_40px"
            android:paddingLeft="@dimen/boc_space_between_32px"
            android:paddingRight="@dimen/boc_space_between_32px"
            android:text="@string/boc_login_binding_result"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_alignParentBottom="true"
        android:textColor="@color/boc_common_cell_color"
        android:textSize="@dimen/boc_text_size_little_big"
        android:background="@color/boc_main_button_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_88px"
        android:layout_marginTop="@dimen/boc_space_between_80px"
        android:text="进入手机银行" />

</RelativeLayout>
