<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/boc_space_between_36px"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:visibility="gone"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_need"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/boc_space_between_80px"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:text="@string/boc_common_need_other"
            android:gravity="center_vertical"
            android:textColor="@color/boc_text_color_cinerous"
            android:textSize="@dimen/boc_space_between_26px" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/boc_space_between_80px"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:text="@string/boc_result_guess_like"
            android:gravity="center_vertical"
            android:textColor="@color/boc_text_color_cinerous"
            android:textSize="@dimen/boc_space_between_26px" />

    </LinearLayout>

</LinearLayout>