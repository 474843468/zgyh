<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_before"
    android:scrollbars="none"
    android:paddingTop="@dimen/boc_space_between_470px"
    android:background="@drawable/oversea_ew_before_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/exchange_settlement"
            android:layout_alignParentTop="true"
            style="@style/OverseaszoneNormalTv"
            />

        <TextView
            android:id="@+id/apply_credit_card"
            style="@style/OverseaszoneNormalTv"
            android:layout_below="@+id/exchange_settlement"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            />

        <TextView
            android:id="@+id/certificate_deposit"
            android:layout_below="@+id/apply_credit_card"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            style="@style/OverseaszoneNormalTv"
            />

        <TextView
            android:id="@+id/recommend"
            android:layout_below="@+id/certificate_deposit"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            style="@style/OverseaszoneNormalTv"/>

        <TextView
            android:id="@+id/expatriate_work_card1"
            android:layout_below="@+id/recommend"
            android:layout_marginLeft="@dimen/boc_space_between_50px"
            style="@style/OverseaszoneTv"
            />
        <TextView
            android:id="@+id/expatriate_work_card2"
            android:layout_below="@+id/recommend"
            android:layout_toRightOf="@+id/expatriate_work_card1"
            style="@style/OverseaszoneTv" />

        <TextView
            android:id="@+id/expatriate_work_card3"
            android:layout_below="@+id/expatriate_work_card1"
            android:layout_marginLeft="@dimen/boc_space_between_50px"
            style="@style/OverseaszoneTv" />

        <TextView
            android:id="@+id/expatriate_work_card4"
            android:layout_below="@+id/expatriate_work_card2"
            android:layout_toRightOf="@+id/expatriate_work_card3"
            style="@style/OverseaszoneTv" />

        <TextView
            android:id="@+id/more_service"
            android:layout_below="@+id/expatriate_work_card3"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            style="@style/OverseaszoneNormalTv"
            />

        <TextView
            android:id="@+id/foreign_currency_permit"
            android:layout_below="@+id/more_service"
            android:layout_marginLeft="@dimen/boc_space_between_50px"
            style="@style/OverseaszoneTv" />

        <TextView
            android:id="@+id/travel_cheque"
            android:layout_below="@+id/more_service"
            android:layout_toRightOf="@+id/foreign_currency_permit"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            style="@style/OverseaszoneTv"/>

    </RelativeLayout>
</ScrollView>
