<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/boc_common_cell_color"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投资理财服务已开通"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_80px"
            android:src="@drawable/boc_wealth_manager_open" />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_button_height_88px"
        android:layout_marginLeft="@dimen/boc_space_between_10px"
        android:layout_marginRight="@dimen/boc_space_between_10px"
        android:layout_marginTop="@dimen/boc_space_between_80px"
        android:background="@drawable/boc_button_bg_blue"
        android:gravity="center"
        android:text="关闭投资理财服务"
        android:textColor="@color/boc_common_cell_color"
        android:textSize="@dimen/boc_text_size_common"
        android:textStyle="bold" />
</LinearLayout>