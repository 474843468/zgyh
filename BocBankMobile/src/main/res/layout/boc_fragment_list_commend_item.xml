<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/commendResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/boc_space_between_30px"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            android:background="@drawable/boc_card_background"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/boc_space_between_30px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/boc_space_between_20px"
                    android:ellipsize="end"
                    android:maxEms="7"
                    android:singleLine="true"
                    android:textColor="@color/boc_text_color_dark_gray"
                    android:textSize="@dimen/boc_text_size_small" />

                <TextView
                    android:id="@+id/productCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/productName"
                    android:singleLine="true"
                    android:textColor="@color/boc_main_button_color"
                    android:textSize="@dimen/boc_text_size_small" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_divider_1px"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:background="@color/boc_text_color_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/boc_space_between_30px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/boc_space_between_60px"
                    android:text="交易份额"
                    android:textColor="@color/boc_text_color_common_gray"
                    android:textSize="@dimen/boc_text_size_small" />

                <TextView
                    android:id="@+id/tradeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/boc_text_color_dark_gray"
                    android:textSize="@dimen/boc_text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/boc_space_between_30px"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/boc_space_between_60px"
                    android:text="交易金额"
                    android:textColor="@color/boc_text_color_common_gray"
                    android:textSize="@dimen/boc_text_size_small" />

                <TextView
                    android:id="@+id/tradeSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/boc_text_color_dark_gray"
                    android:textSize="@dimen/boc_text_size_small" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_divider_1px"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:background="@color/boc_text_color_gray" />

            <TextView
                android:id="@+id/clickBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:padding="@dimen/boc_space_between_30px"
                android:textSize="@dimen/boc_text_size_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/empName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:text="理财经理"
            android:textColor="@color/boc_text_color_common_gray"
            android:textSize="@dimen/boc_text_size_small" />

    </LinearLayout>
</LinearLayout>