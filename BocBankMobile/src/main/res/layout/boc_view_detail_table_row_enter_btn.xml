<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color">

    <LinearLayout
        android:id="@+id/layout_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/boc_space_between_172px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/boc_space_between_30px"
            android:layout_marginLeft="@dimen/boc_space_between_26px"
            android:layout_marginTop="@dimen/boc_space_between_30px"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common"
            />

        <LinearLayout
            android:id="@+id/layout_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/boc_space_between_30px"
            android:layout_marginBottom="@dimen/boc_space_between_30px"
            android:layout_marginRight="@dimen/boc_space_between_26px"
            android:layout_marginLeft="@dimen/boc_space_between_72px"

            >

            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/boc_text_size_common"
                android:textColor="@color/boc_text_color_common_gray"
                />
            <TextView
                android:id="@+id/btn_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_10px"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/boc_text_size_common"
                android:textColor="@color/boc_main_button_color"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/v_body"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/boc_space_between_26px"
        android:layout_marginRight="@dimen/boc_space_between_26px"
        android:background="@color/boc_common_view_line"
        />
</LinearLayout>