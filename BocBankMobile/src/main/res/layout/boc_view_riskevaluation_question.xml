<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_round_progressbar_gray">
    <Space
        android:id="@+id/divider_top"
        style="@style/divider_horizontal"
        android:layout_alignParentTop="true"
        android:visibility="visible" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_cell_color"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/boc_space_between_50px"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:layout_marginRight="@dimen/boc_space_between_30px"
            android:layout_marginTop="@dimen/boc_space_between_50px"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_space_between_26px"/>

        <View style="@style/divider_horizontal"/>
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/boc_space_between_30px"
            android:paddingRight="@dimen/boc_space_between_30px">
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1"
                android:id="@+id/tableLayout" />

        </ScrollView>


        <View style="@style/divider_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/boc_round_progressbar_gray"
            android:paddingTop="@dimen/boc_space_between_20px"
            android:paddingBottom="@dimen/boc_space_between_20px">

            <TextView
                android:id="@+id/tv_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:clickable="true"
                android:background="@drawable/bg_risk_assess_up"
                android:gravity="center"
                android:paddingBottom="@dimen/boc_space_between_6px"
                android:paddingLeft="@dimen/boc_space_between_30px"
                android:paddingRight="@dimen/boc_space_between_30px"
                android:paddingTop="@dimen/boc_space_between_6px"
                android:text="上一题"
                android:textColor="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_space_between_26px" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/boc_popdialog_padding_30px"
                android:textColor="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_space_between_26px" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>