<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_simple_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:textColor="@color/boc_common_cell_color"
        android:textSize="@dimen/boc_text_size_big"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:minHeight="@dimen/boc_space_between_260px"
        android:orientation="vertical"
        >

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/dialog_divider_h"/>

    <Button
        android:id="@+id/btn_dialog_error_enter"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:gravity="center"
        android:padding="1dip"
        android:textColor="@color/boc_text_color_red"
        android:textSize="@dimen/boc_text_size_big"/>
</LinearLayout>