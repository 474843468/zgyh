<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_scan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_scan_mask"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/leftIconIv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@drawable/boc_back_white" />


    <TextView
        android:id="@+id/titleValueTv"
        style="@style/tv_little_big"
        android:layout_centerInParent="true"
        android:text="@string/boc_qrpay_scan"
        android:textColor="@color/boc_common_cell_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_divider_1px"
        android:layout_alignParentBottom="true"
        android:background="@color/boc_common_cell_color" />
</RelativeLayout>