<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_cell_color"
    android:paddingBottom="@dimen/boc_space_between_46px">

    <LinearLayout
        android:id="@+id/bocLogoLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/boc_space_between_62px"
        android:paddingBottom="@dimen/boc_space_between_62px"
        android:gravity="center">
        <com.boc.bocsoft.mobile.bocmobile.buss.system.mine.ui.view.CircleImageView
            android:id="@+id/bocLogoIv"
            android:layout_width="@dimen/boc_space_between_136px"
            android:layout_height="@dimen/boc_space_between_136px"
            android:layout_gravity="center"
            android:src="@drawable/boc_logo"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputInforLl"
        android:layout_below="@+id/bocLogoLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/boc_space_between_88px"
        android:paddingRight="@dimen/boc_space_between_88px"
        android:orientation="vertical">
        <EditText
            android:id="@+id/loginNameEt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            android:paddingLeft="@dimen/boc_space_between_24px"
            android:paddingRight="@dimen/boc_space_between_24px"
            android:background="@drawable/boc_item_gray"
            android:gravity="center_vertical"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common"
            android:inputType="number"
            android:maxLength="15"
            android:textColorHint="@color/boc_text_color_common_gray"
            android:hint="手机号"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            android:paddingLeft="@dimen/boc_space_between_24px"
            android:layout_marginTop="@dimen/boc_space_between_16px"
            android:background="@drawable/boc_item_gray">
            <cfca.mobile.sip.SipBox
                android:id="@+id/loginPasswordSipBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_weight="1"
                android:hint="密码"
                android:singleLine="true"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textColorHint="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_text_size_common" />
            <ImageView
                android:id="@+id/loginPasswordDeleteIv"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/boc_space_between_24px"
                android:paddingRight="@dimen/boc_space_between_24px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/boc_delete"/>
        </LinearLayout>

        <!-- 验证码输入框 -->

        <RelativeLayout
            android:id="@+id/loginCodeRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            android:paddingLeft="@dimen/boc_space_between_24px"
            android:paddingRight="@dimen/boc_space_between_24px"
            android:layout_marginTop="@dimen/boc_space_between_16px"
            android:background="@drawable/boc_item_gray"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/loginCodeEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/loginCodeIv"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入验证码"
                android:maxLength="4"
                android:singleLine="true"
                android:inputType="number"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textColorHint="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_text_size_common" />

            <ImageView
                android:id="@+id/loginCodeIv"
                android:layout_width="@dimen/boc_space_between_180px"
                android:layout_height="@dimen/boc_space_between_62px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/boc_space_between_18px" />
        </RelativeLayout>
        <Button
            android:id="@+id/loginSubmitBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            android:background="@drawable/boc_button_bg_red"
            android:layout_marginTop="@dimen/boc_space_between_96px"
            android:textSize="@dimen/boc_text_size_little_big"
            android:textColor="@color/boc_common_cell_color"
            android:text="登录" />
        <TextView
            android:id="@+id/queryBalanceTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            android:gravity="center_vertical|right"
            android:textColor="@color/boc_main_button_color"
            android:textSize="@dimen/boc_text_size_common"
            android:text="快速查询余额>>"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/resetPasswordTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/boc_main_button_color"
            android:textSize="@dimen/boc_text_size_common"
            android:text="重置密码"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/boc_divide_color"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"/>
        <TextView
            android:id="@+id/selfRegisterTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/boc_main_button_color"
            android:textSize="@dimen/boc_text_size_common"
            android:text="自助注册"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/boc_divide_color"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"/>
        <TextView
            android:id="@+id/openElectricAccountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/boc_main_button_color"
            android:textSize="@dimen/boc_text_size_common"
            android:text="电子账户开户"/>
    </LinearLayout>
</RelativeLayout>
