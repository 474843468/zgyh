<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="20dp"
        android:textColor="@color/boc_text_color_dark_gray"
        android:text="分类名称" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.selectview.selecttype.SelectGridView2
        android:id="@+id/listview_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/boc_space_between_20px"
        android:numColumns="3"
        android:verticalSpacing="@dimen/boc_space_between_22px"
        app:radioTrue="true">

    </com.boc.bocsoft.mobile.bocmobile.base.widget.selectview.selecttype.SelectGridView2>
</LinearLayout>