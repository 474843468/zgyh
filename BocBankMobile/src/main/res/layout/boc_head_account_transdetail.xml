<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_titlebar_height"
        android:orientation="horizontal">

        <com.boc.bocsoft.mobile.framework.widget.TitleBarView
            android:id="@+id/select_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.boc.bocsoft.mobile.bocmobile.base.widget.selectaccoutview.SelectAccountButton
        android:id="@+id/select_account_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_20px" />


    <RelativeLayout
        android:id="@+id/select_head_select_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_72px"
        android:background="@color/boc_common_bg_color">

        <TextView
            android:id="@+id/tv_transdetail_range"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/boc_space_between_28px"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/boc_text_color_common_gray"
            android:textSize="@dimen/boc_text_size_small" />

        <LinearLayout
            android:id="@+id/ll_transdetail_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_transdetail_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/boc_account_transdetail_select"
                android:textColor="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <ImageView
                android:id="@+id/iv_transdetail_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_14px"
                android:layout_marginRight="@dimen/boc_space_between_38px"
                android:src="@drawable/boc_select_gray" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>