<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/boc_divide_line" />

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRowButton
            android:id="@+id/btn_security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.ClickableSpan.SpannableString
            android:id="@+id/tv_hint"
            style="@style/tv_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:layout_marginRight="@dimen/boc_space_between_30px"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:includeFontPadding="false"
            android:textColor="@color/boc_text_color_red"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_ok"
            style="@style/BocButton.BocPrimaryButton1"
            android:layout_width="match_parent"
            android:text="@string/boc_common_sure" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.ClickableSpan.SpannableString
            android:id="@+id/tv_hint_bottom"
            style="@style/tv_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:layout_marginRight="@dimen/boc_space_between_30px"
            android:layout_marginTop="@dimen/boc_space_between_50px"
            android:includeFontPadding="false"
            android:textColor="@color/boc_text_color_cinerous"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>