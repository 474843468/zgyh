<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/boc_space_between_122px"
    android:background="@drawable/boc_letter_bg_selector"

    android:orientation="vertical">
    <TextView
        android:id="@+id/item_linkedaccount_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_62px"
        android:text="金金卡"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:gravity="bottom"
        android:paddingLeft="@dimen/boc_space_between_130px"
        android:paddingBottom="@dimen/boc_space_between_6px"/>
    <TextView
        android:id="@+id/item_linkedaccount_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_60px"
        android:text="45454646464646"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/abc_text_size_small_material"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/boc_space_between_130px"
        android:paddingBottom="@dimen/boc_space_between_6px"/>
</LinearLayout>
