<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">


    <ListView
        android:id="@+id/lv_account"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:listSelector="@color/bocroa_transparent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/boc_finance_account_view_no_data"
        android:textColor="@color/boc_text_color_gray"
        android:textSize="@dimen/boc_text_size_big"
        android:visibility="gone" />

</LinearLayout>