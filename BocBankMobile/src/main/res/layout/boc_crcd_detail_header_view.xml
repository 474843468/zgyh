<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/layout_detail_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/boc_common_cell_color"
              android:orientation="vertical"
              tools:context=".buss.creditcard.myinstallment.widget.DetailHeaderView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            tools:text="分期金额(人民币)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_28px"
            android:layout_marginTop="@dimen/boc_space_between_30px"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_small" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/boc_space_between_28px"
            android:layout_marginTop="@dimen/boc_space_between_30px"
            android:textColor="@color/boc_common_cell_color"
            android:textSize="@dimen/boc_text_size_super_small"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2888.00"
        android:layout_marginLeft="@dimen/boc_space_between_28px"
        android:layout_marginBottom="@dimen/boc_space_between_20px"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_58px" />

    <View
        android:id="@+id/value_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/boc_common_bg_color" />

</LinearLayout>
