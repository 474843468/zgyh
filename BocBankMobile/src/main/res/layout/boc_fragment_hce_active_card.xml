<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/boc_common_bg_color"
              android:orientation="vertical"
              android:paddingTop="@dimen/boc_space_between_20px">

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRowButton
        android:id="@+id/table_row_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRowButton
        android:id="@+id/btn_security"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_button_height_88px" />

    <Button
        android:id="@+id/btn_ok"
        style="@style/BocButton.BocPrimaryButton1"
        android:layout_width="match_parent"
        android:text="@string/boc_common_sure" />

    <TextView
        android:text="您也可通过客服电话XXXXX进行激活。"
        android:layout_width="match_parent"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_small"
        android:lineSpacingMultiplier="1.2"
        android:padding="@dimen/boc_space_between_30px"
        android:layout_marginTop="@dimen/boc_space_between_18px"
        android:layout_height="wrap_content"/>

</LinearLayout>