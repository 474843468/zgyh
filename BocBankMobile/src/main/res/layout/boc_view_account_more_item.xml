<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_button_height_96px">

        <TextView
            android:id="@+id/tv_title"
            style="@style/tv_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/boc_space_between_30px"
            android:src="@drawable/boc_arrow_right" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/tv_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/boc_space_between_18px"
            android:layout_toLeftOf="@id/iv_right"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/boc_text_color_red"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_divider_1px"
        android:background="@color/boc_common_view_line" />
</LinearLayout>