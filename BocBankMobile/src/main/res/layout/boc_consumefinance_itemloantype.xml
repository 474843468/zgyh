<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/boc_common_cell_color"
    android:paddingBottom="@dimen/boc_space_between_30px"
    android:paddingLeft="@dimen/boc_space_between_30px"
    android:paddingRight="@dimen/boc_space_between_30px"
    >
        <ImageView
            android:id="@+id/image_loantype"
            android:layout_height="@dimen/boc_space_between_104px"
            android:layout_width="@dimen/boc_space_between_104px"
            android:src="@drawable/boc_consumefinance_zhiya_icon"
            android:layout_marginRight="@dimen/boc_space_between_38px"
            />
        <TextView
            android:id="@+id/text_loaninsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/boc_space_between_20px"
            android:paddingRight="@dimen/boc_space_between_30px"
            android:text="@string/consumefinance_loanapply"
            android:gravity="center_vertical"
            android:textColor="@color/boc_text_color_red"
            android:drawableRight="@drawable/boc_consumefinance_redjiantou"
            android:drawablePadding="@dimen/boc_space_between_16px"
            android:layout_alignTop="@+id/text_loandescript"
        />
        <TextView
            android:id="@+id/text_loanname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d7b065"
            android:textSize="@dimen/boc_space_between_30px"

            android:layout_toRightOf="@id/image_loantype"
            android:layout_toLeftOf="@id/text_loaninsert"
        />

        <TextView
            android:id="@+id/text_loandescript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/boc_space_between_26px"
            android:textColor="@color/boc_text_color_dark_gray"
            android:layout_toRightOf="@id/image_loantype"
            android:layout_toLeftOf="@id/text_loaninsert"
            android:layout_below="@id/text_loanname"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_2px"
            android:background="#dadae3"
            android:layout_below="@id/text_loandescript"
            android:layout_alignLeft="@id/text_loanname"
            android:layout_marginTop="15dp"
        />
</RelativeLayout>
