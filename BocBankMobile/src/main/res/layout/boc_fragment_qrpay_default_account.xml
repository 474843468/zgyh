<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">


    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
        android:id="@+id/qrcode_pay_more_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:background="@drawable/boc_card_background"
        app:editChoiceName="@string/boc_qrpay_account"
        app:editChoiceNameBold="true" />

    <LinearLayout
        android:id="@+id/ll_qrpay_default_account_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/boc_space_between_40px"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_qrpay_default_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/boc_qrpay_available_balance"
            android:textColor="@color/boc_text_color_gray"
            android:textSize="@dimen/boc_text_size_small" />

        <TextView
            android:id="@+id/tv_qrpay_default_account_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/boc_text_color"
            android:textSize="@dimen/boc_text_size_small"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/qrcode_pay_btn_default_account_confirm"
        style="@style/BocButton.BocPrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_88px"
        android:layout_marginTop="@dimen/boc_space_between_80px"
        android:text="@string/boc_common_sure" />


</LinearLayout>