<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/btn_checkbox"
        android:layout_width="@dimen/boc_space_between_60px"
        android:layout_height="@dimen/boc_space_between_60px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:background="@drawable/boc_bg_check_image"
        android:state_selected="false"/>

    <TextView
        android:id="@+id/tv_todate"
        style="@style/tv_small"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/btn_checkbox"
        android:paddingTop="@dimen/boc_space_between_20px"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textStyle="bold"
        tools:text="@string/boc_pledge_deposit_todate"/>

    <TextView
        android:id="@+id/tv_period"
        style="@style/tv_small"
        android:layout_below="@id/tv_todate"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:layout_toRightOf="@id/btn_checkbox"
        android:paddingBottom="@dimen/boc_space_between_20px"
        tools:text="@string/boc_pledge_deposit_period_month"/>


    <TextView
        android:id="@+id/tv_currency"
        style="@style/tv_small"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/boc_space_between_20px"
        android:paddingRight="@dimen/boc_space_between_20px"
        android:paddingTop="@dimen/boc_space_between_20px"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textStyle="bold"
        tools:text="人民币元"/>

    <TextView
        android:id="@+id/tv_money"
        style="@style/tv_common"
        android:layout_alignBottom="@id/tv_period"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/boc_space_between_20px"
        android:paddingRight="@dimen/boc_space_between_20px"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textStyle="bold"
        tools:text="12,000.00"/>

</RelativeLayout>