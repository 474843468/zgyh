<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/ll_no_date"
    android:visibility="gone">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/boc_icon_no_product"/>

    <com.boc.bocsoft.mobile.bocmobile.base.widget.ClickableSpan.SpannableString
        android:id="@+id/tv_nodate"
        style="@style/tv_common"
        android:layout_marginTop="@dimen/boc_space_between_50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="暂无信息"
        android:textColor="@color/boc_text_color_common_gray"
        android:textSize="@dimen/boc_text_size_common"/>

</LinearLayout>