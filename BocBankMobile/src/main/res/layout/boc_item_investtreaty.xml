<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/boc_button_height_104px"
    android:gravity="center_vertical"
    android:minHeight="@dimen/boc_button_height_104px"
    android:padding="@dimen/boc_space_between_10px">

    <RelativeLayout
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/in_ring"
            android:layout_width="@dimen/boc_space_between_50px"
            android:layout_height="@dimen/boc_space_between_50px"
            android:layout_centerInParent="true"
            android:background="@drawable/boc_circle_solid"
            android:gravity="center"
            android:text="1" />

        <View
            android:id="@+id/out_ring"
            android:layout_width="@dimen/boc_space_between_80px"
            android:layout_height="@dimen/boc_space_between_80px"
            android:layout_centerInParent="true"
            android:background="@drawable/boc_circle_empty"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/boc_space_between_30px"
        android:layout_toRightOf="@id/number"
        android:background="@color/boc_common_cell_color"
        android:minHeight="@dimen/boc_button_height_104px">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/boc_space_between_40px"
            android:gravity="center"
            android:text="asdfasdf"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/boc_space_between_20px"
                android:layout_gravity="center_vertical"
                android:text="已开通"
                android:textColor="@color/boc_round_progressbar_green"
                android:textSize="@dimen/boc_text_size_small" />

            <ImageView
                android:id="@+id/choice_data_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/boc_space_between_20px"
                android:src="@drawable/boc_arrow_right" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>