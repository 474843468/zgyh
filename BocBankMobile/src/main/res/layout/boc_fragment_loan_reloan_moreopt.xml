<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llyUseRecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/boc_divide_line"/>
        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:editChoiceName="@string/boc_repayment" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyPreRepay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <include layout="@layout/boc_divide_line"/>
        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:editChoiceName="@string/boc_eloan_prepay_pagename" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyRepayPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/boc_divide_line"/>
        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:editChoiceName="@string/boc_eloan_draw_repayment" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyPaySetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/boc_divide_line"/>
        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:editChoiceName="@string/boc_eloan_pay_func_setting" />
    </LinearLayout>

</LinearLayout>