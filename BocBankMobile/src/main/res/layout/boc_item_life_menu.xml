<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
  <LinearLayout
      android:id="@+id/ll_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="0dp"
      android:background="@color/boc_common_cell_color"
      android:orientation="vertical"
      android:paddingTop="@dimen/boc_space_between_30px"
  >

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="@dimen/boc_space_between_96px"
        android:layout_height="@dimen/boc_space_between_96px"
        android:scaleType="center"
        android:layout_gravity="center_horizontal"
    />

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_item"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_small"
        android:layout_marginTop="@dimen/boc_space_between_10px"
    />

  </LinearLayout>
</RelativeLayout>

