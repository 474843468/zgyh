<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/boc_space_between_130px"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:background="@color/boc_common_cell_color"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/boc_space_between_30px"
            android:paddingRight="@dimen/boc_space_between_30px">


            <com.boc.bocsoft.mobile.bocmobile.base.widget.PortfolioProductInfoView.PortfolioProductInfoView
                android:id="@+id/group_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:layout_toLeftOf="@+id/btn_delete"/>

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/boc_space_between_10px"
                android:paddingTop="@dimen/boc_space_between_10px"
                android:src="@drawable/boc_btn_invest_delete"/>

        </RelativeLayout>

        <View style="@style/divider_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/boc_space_between_20px"
            android:paddingLeft="@dimen/boc_space_between_30px"
            android:paddingRight="@dimen/boc_space_between_30px"
            android:paddingTop="@dimen/boc_space_between_20px">

            <TextView
                style="@style/tv_common"
                android:text="被组合份额"
                android:textColor="@color/boc_text_color_dark_gray"/>

            <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditMoneyNoTitleWidget
                android:id="@+id/purchase_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                android:layout_marginRight="@dimen/boc_space_between_10px"/>

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"/>
</LinearLayout>