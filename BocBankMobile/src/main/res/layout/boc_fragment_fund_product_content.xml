<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flyBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_400px"
        android:background="#C3171B">

        <ImageView
            android:id="@+id/imvFundBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/boc_fund_banner"/>

        <ImageView
            android:id="@+id/img_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/boc_space_between_30px"
            android:layout_marginTop="@dimen/boc_space_between_140px"
            android:visibility="gone"
            android:src="@drawable/icon_help" />

        <LinearLayout
            android:id="@+id/ll_parent_ocrm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_40px"
            android:layout_gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参考市值（折算人民币元）"
                android:textColor="@color/boc_common_cell_color"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                android:id="@+id/txt_ocrm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="00"
                android:textColor="@color/boc_common_cell_color"
                android:textSize="@dimen/boc_text_size_supper_big_max"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="@dimen/boc_space_between_220px"
            android:layout_height="@dimen/boc_space_between_70px"
            android:layout_marginBottom="@dimen/boc_space_between_30px"
            android:background="@drawable/boc_bg_white_frame"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:text="@string/boc_common_login"
            android:textColor="@color/boc_common_cell_color"
            android:textSize="@dimen/boc_text_size_common"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_80px"
        android:background="@color/boc_common_cell_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvQuery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/boc_wealth_tab1"
            android:textColor="@color/boc_main_button_color"
            android:textSize="@dimen/boc_text_size_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAccountManage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/boc_fund_account_management"
            android:textColor="@color/boc_main_button_color"
            android:textSize="@dimen/boc_text_size_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/boc_wealth_tab3"
            android:textColor="@color/boc_main_button_color"
            android:textSize="@dimen/boc_text_size_small"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>