<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/boc_bg_letter"
        android:textColor="#454545"
        android:layout_weight="1.0"
      android:padding="5dp"
        android:text="A"/>

    <LinearLayout
        android:id="@+id/boc_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_view_height_130px"
        android:background="@drawable/boc_card_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_pic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/boc_radius_11px"
            android:src="@drawable/checkbox_bg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="@dimen/boc_radius_11px">

            <TextView
                android:id="@+id/card_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="戴永明"
                android:textColor="@color/boc_text_color_gray" />

            <TextView
                android:id="@+id/card_number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="6222 ****** 9882   农业银行"
                android:textColor="@color/boc_text_color_gray" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>