<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_titlebar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_qrpay_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/boc_back_black" />

        <TextView
            android:id="@+id/tv_qrpay_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/boc_qrpay_pay_record"
            android:textColor="@color/boc_titlebar_text_black"
            android:textSize="@dimen/boc_text_size_big"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_qrpay_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_qrpay_select_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/boc_account_transdetail_select"
                android:textColor="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <ImageView
                android:id="@+id/iv_qrpay_select_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_14px"
                android:layout_marginRight="@dimen/boc_space_between_38px"
                android:src="@drawable/boc_select_gray" />
        </LinearLayout>
    </RelativeLayout>

    <com.boc.bocsoft.mobile.bocmobile.base.widget.selectaccoutview.SelectAccountButton
        android:id="@+id/qrpay_select_account_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/boc_space_between_20px"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_20px" />


</LinearLayout>