<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D9DCDF"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/keybaord_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/num_keybaord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/key_1"
                    style="@style/ca_number_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1" />

                <TextView
                    android:id="@+id/key_2"
                    style="@style/ca_number_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2" />

                <TextView
                    android:id="@+id/key_3"
                    style="@style/ca_number_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3" />

                <TextView
                    android:id="@+id/key_0"
                    style="@style/ca_number_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical">

                <!-- 456789 删除 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:gravity="center">

                    <!-- 456789 -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <!-- 456 -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/key_4"
                                style="@style/ca_number_key_style"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="4" />

                            <TextView
                                android:id="@+id/key_5"
                                style="@style/ca_number_key_style"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="5" />

                            <TextView
                                android:id="@+id/key_6"
                                style="@style/ca_number_key_style"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="6" />
                        </LinearLayout>
                        <!-- 789 -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/key_7"
                                style="@style/ca_number_key_style"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="7" />

                            <TextView
                                android:id="@+id/key_8"
                                style="@style/ca_number_key_style"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="8" />

                            <TextView
                                android:id="@+id/key_9"
                                style="@style/ca_number_key_style"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="9" />
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 删除 -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/key_del"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@drawable/ca_key_grey_bg"
                            android:scaleType="centerInside"
                            android:src="@drawable/ca_delete_src" />
                    </LinearLayout>
                </LinearLayout>
                <!-- ABC enter -->

                <LinearLayout
                    android:id="@+id/num_abc"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/key_abc"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/ca_key_grey_bg"
                            android:gravity="center"
                            android:padding="0dp"
                            android:text="ABC"
                            android:textColor="@drawable/ca_letter_text_color"
                            android:textSize="18dp" />

                        <ImageView
                            android:id="@+id/key_icon"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/ca_key_grey_bg"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ca_dismiss_src" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/key_enter"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/ca_enter_bg"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="确认"
                        android:textColor="@drawable/ca_enter_text_color"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/letter_keybaord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- qwertyuiop -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <Button
                    android:id="@+id/key_q"
                    style="@style/ca_letter_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="q" />

                <Button
                    android:id="@+id/key_w"
                    style="@style/ca_letter_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="w" />

                <Button
                    android:id="@+id/key_e"
                    style="@style/ca_letter_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="e" />

                <Button
                    android:id="@+id/key_r"
                    style="@style/ca_letter_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="r" />

                <Button
                    android:id="@+id/key_t"
                    style="@style/ca_letter_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="t" />

                <Button
                    android:id="@+id/key_y"
                    style="@style/ca_letter_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="y" />

                <Button
                    android:id="@+id/key_u"
                    style="@style/ca_letter_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="u" />

                <Button
                    android:id="@+id/key_i"
                    style="@style/ca_letter_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="i" />

                <Button
                    android:id="@+id/key_o"
                    style="@style/ca_letter_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="o" />

                <Button
                    android:id="@+id/key_p"
                    style="@style/ca_letter_key_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="p" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical">

                <!-- asdfghjkl -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/key_a"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="a" />

                    <Button
                        android:id="@+id/key_s"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="s" />

                    <Button
                        android:id="@+id/key_d"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="d" />

                    <Button
                        android:id="@+id/key_f"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="f" />

                    <Button
                        android:id="@+id/key_g"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="g" />

                    <Button
                        android:id="@+id/key_h"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="h" />

                    <Button
                        android:id="@+id/key_j"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="j" />

                    <Button
                        android:id="@+id/key_k"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="k" />

                    <Button
                        android:id="@+id/key_l"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="l" />
                </LinearLayout>

                <!-- 大写zxcvbnm删除 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <ImageView
                        android:id="@+id/key_cap"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@drawable/ca_grey_up"
                        android:padding="10dp"
                        android:src="@drawable/ca_cap_up" />

                    <Button
                        android:id="@+id/key_z"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="z" />

                    <Button
                        android:id="@+id/key_x"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="x" />

                    <Button
                        android:id="@+id/key_c"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="c" />

                    <Button
                        android:id="@+id/key_v"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="v" />

                    <Button
                        android:id="@+id/key_b"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="b" />

                    <Button
                        android:id="@+id/key_n"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="n" />

                    <Button
                        android:id="@+id/key_m"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="m" />

                    <ImageView
                        android:id="@+id/key_del1"
                        style="@style/ca_letter_key_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@drawable/ca_key_grey_bg"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ca_delete_src" />
                </LinearLayout>
            </LinearLayout>

            <!-- 键盘切换 隐藏键盘 确认 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/key_123"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/ca_key_grey_bg"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="123"
                        android:textColor="@drawable/ca_letter_text_color"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/key_icon1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/ca_key_grey_bg"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ca_dismiss_src" />
                </LinearLayout>

                <Button
                    android:id="@+id/key_enter1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ca_enter_bg"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="确认"
                    android:textColor="@drawable/ca_enter_text_color"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>