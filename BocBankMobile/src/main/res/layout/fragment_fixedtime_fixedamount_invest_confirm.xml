<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0EFF5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingLeft="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="产品名称"
                    android:textColor="#222222"
                    android:textSize="@dimen/boc_text_size_small"/>

                <TextView
                    android:id="@+id/tv_currency_and_proname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:text="[美元]期限可变 (799809)"
                    android:textColor="#666666"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sub_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="申购起点金额"
                    android:textColor="#222222"
                    android:textSize="@dimen/boc_text_size_small"/>

                <TextView
                    android:id="@+id/tv_sub_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:text="10,000.00"
                    android:textColor="#666666"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_add_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="追加申购起点金额"
                    android:textColor="#222222"
                    android:textSize="@dimen/boc_text_size_small"/>

                <TextView
                    android:id="@+id/tv_add_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:text="10,000.00"
                    android:textColor="#666666"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_low_limit_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="赎回起点份额"
                    android:textColor="#222222"
                    android:textSize="@dimen/boc_text_size_small"/>

                <TextView
                    android:id="@+id/tv_low_limit_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:text="10,000.00"
                    android:textColor="#666666"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_xpad_cash_remit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="钞/汇"
                    android:textColor="#222222"
                    android:textSize="@dimen/boc_text_size_small"/>

                <TextView
                    android:id="@+id/tv_xpad_cash_remit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:text="现汇"
                    android:textColor="#666666"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="定投类型"
                    android:textColor="#222222"
                    android:textSize="@dimen/boc_text_size_small"/>

                <TextView
                    android:id="@+id/tv_time_invest_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:text="购买"
                    android:textColor="#666666"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="总期数"
                    android:textColor="#222222"
                    android:textSize="@dimen/boc_text_size_small"/>

                <TextView
                    android:id="@+id/tv_total_period"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:text="20"
                    android:textColor="#666666"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/tv_redeem_amount_notice"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="定投金额"
                    android:textColor="#222222"
                    android:textSize="@dimen/boc_text_size_small"/>

                <TextView
                    android:id="@+id/tv_redeem_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:text="30,000.00"
                    android:textColor="#666666"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="定投频率"
                    android:textColor="#222222"
                    android:textSize="@dimen/boc_text_size_small"/>

                <TextView
                    android:id="@+id/tv_time_invest_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:text="每周一次"
                    android:textColor="#666666"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="首次投资日"
                    android:textColor="#222222"
                    android:textSize="@dimen/boc_text_size_small"/>

                <TextView
                    android:id="@+id/tv_invest_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:text="2016/10/10"
                    android:textColor="#666666"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="理财交易账户"
                    android:textColor="#222222"
                    android:textSize="@dimen/boc_text_size_small"/>

                <TextView
                    android:id="@+id/tv_account_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:text="6002 ****** 8899"
                    android:textColor="#666666"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="产品风险级别"
                    android:textColor="#222222"
                    android:textSize="@dimen/boc_text_size_small"/>

                <TextView
                    android:id="@+id/tv_prorisk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:text="低风险产品"
                    android:textColor="#666666"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="26dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="客户风险级别"
                    android:textColor="#222222"
                    android:textSize="@dimen/boc_text_size_small"/>

                <TextView
                    android:id="@+id/tv_custrisk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:text="平衡型投资者"
                    android:textColor="#666666"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <com.boc.bocsoft.mobile.bocmobile.base.widget.ClickableSpan.SpannableString
            android:id="@+id/txt_risk_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:paddingLeft="@dimen/boc_space_between_30px"
            android:paddingRight="@dimen/boc_space_between_30px"
            android:textColor="@color/boc_text_color_red"
            android:textSize="@dimen/boc_text_size_common"
            tools:text="@string/boc_confirm_hint"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_88px"
            android:layout_marginBottom="103dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/boc_button_bg_blue"
            android:gravity="center"
            android:text="确认"
            android:textColor="#fff"/>
    </LinearLayout>
</ScrollView>