<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/boc_space_between_104px"
    android:background="@color/boc_common_cell_color"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/boc_space_between_32px"
    android:paddingRight="@dimen/boc_space_between_30px">

    <TextView
        android:id="@+id/clear_edit_name"
        android:layout_width="@dimen/boc_space_between_190px"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/boc_space_between_6px"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textStyle="bold"
        android:textSize="@dimen/boc_text_size_common"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/clear_edit_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.ClearEditText
        android:id="@+id/clear_edit_context"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint=""
        android:paddingLeft="@dimen/boc_space_between_50px"
        android:singleLine="true"
        android:textColor="@color/boc_text_color_common_gray"
        android:textColorHint="@color/boc_text_color_light_gray"
        android:textSize="@dimen/boc_text_size_common" />

    <TextView
        android:id="@+id/clear_edit_right_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/boc_space_between_18px"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_common"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/clear_edit_right_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/boc_space_between_18px"
        android:gravity="center_vertical"
        android:visibility="gone" />
</LinearLayout>
