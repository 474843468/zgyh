<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/boc_space_between_50px"
    android:paddingRight="@dimen/boc_space_between_42px"
    tools:background="@color/boc_main_bg_color">

    <ImageButton
        android:id="@+id/btn_checkbox"
        android:layout_width="@dimen/boc_space_between_40px"
        android:layout_height="@dimen/boc_space_between_40px"
        android:layout_marginRight="@dimen/boc_space_between_26px"
        android:background="@drawable/boc_bg_check_image"
        android:state_selected="false"/>

    <TextView
        android:id="@+id/tv_agreement"
        style="@style/tv_small"
        android:textColorHighlight="@color/boc_common_bg_color"
        tools:text="@string/boc_agreement_part2"/>
</LinearLayout>