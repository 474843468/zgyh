<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_main_bg_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="暂无可绑定的借记卡，您可以前往柜台办理"
        android:textColor="@color/boc_text_color_common_gray"
        android:textSize="@dimen/boc_text_size_big"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="查看附近网店"
        android:textColor="@color/boc_main_button_color"
        android:textSize="@dimen/boc_text_size_little_big"/>


</RelativeLayout>