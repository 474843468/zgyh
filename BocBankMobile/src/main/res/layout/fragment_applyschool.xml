<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id ="@+id/applyschool_scro"
    android:scrollbars="none"
    android:paddingTop="@dimen/boc_space_between_540px"
    android:background="@drawable/overseazone_applyschoolfragment_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_deposit_service"
            style="@style/OverseaszoneNormalTv"
            />
        <TextView
            android:id="@+id/tv_remittance"
            android:layout_below="@+id/tv_deposit_service"
            style="@style/OverseaszoneNormalTv"
            android:layout_marginTop="@dimen/boc_space_between_80px"
            />

        <TextView
            android:id="@+id/tv_wealth_management"
            android:layout_below="@+id/tv_remittance"
            style="@style/OverseaszoneNormalTv"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            android:layout_marginRight="0dp"
            />

        <TextView
            android:id="@+id/tv_credit_card"
            android:layout_below="@+id/tv_wealth_management"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            android:layout_marginRight="0dp"
            style="@style/OverseaszoneNormalTv"/>

        <TextView
            android:id="@+id/tv_recommendation"
            android:layout_below="@+id/tv_credit_card"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            style="@style/OverseaszoneNormalTv" />

        <TextView
            android:id="@+id/tv_globle_zhuojun_card"
            android:layout_below="@+id/tv_recommendation"
            android:layout_marginLeft="@dimen/boc_space_between_50px"
            style="@style/OverseaszoneTv"/>

        <TextView
            android:id="@+id/tv_greatwall_study_card"
            android:layout_below="@+id/tv_globle_zhuojun_card"
            android:layout_toRightOf="@+id/tv_globle_multi_card"
            style="@style/OverseaszoneTv"/>

        <TextView
            android:id="@+id/tv_globle_credit_card"
            android:layout_below="@+id/tv_recommendation"
            android:layout_toRightOf="@+id/tv_globle_zhuojun_card"
            style="@style/OverseaszoneTv"
            />

        <TextView
            android:id="@+id/tv_globle_multi_card"
            android:layout_below="@+id/tv_globle_credit_card"
            android:layout_marginLeft="@dimen/boc_space_between_50px"
            style="@style/OverseaszoneTv"
            />

    </RelativeLayout>
</ScrollView>