<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_180px">

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.ClearEditText
            android:id="@+id/dialog_edit_context"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_104px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:layout_marginRight="@dimen/boc_space_between_40px"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textColorHint="@color/boc_text_color_light_gray"
            android:textSize="@dimen/boc_text_size_common" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/dialog_edit_context"
            android:layout_marginRight="@dimen/boc_space_between_40px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/boc_text_color_light_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                android:id="@+id/tv_division"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/boc_text_color_light_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                android:id="@+id/tv_num_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/boc_text_color_light_gray"
                android:textSize="@dimen/boc_text_size_small" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:background="@color/boc_divider_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_edit_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/boc_text_color_red"
            android:textSize="@dimen/boc_text_size_little_big" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/boc_divider_line_color" />

        <TextView
            android:id="@+id/dialog_edit_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/boc_text_color_red"
            android:textSize="@dimen/boc_text_size_little_big" />
    </LinearLayout>
</LinearLayout>