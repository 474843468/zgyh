<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/cb_choice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:button="@drawable/checkbox_style"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/tv_little_big"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/boc_space_between_10px"
        android:layout_toRightOf="@id/cb_choice"
        android:gravity="center"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_currency"
        style="@style/tv_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/boc_space_between_10px"
        android:layout_toLeftOf="@+id/tv_amount"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_amount"
        style="@style/tv_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:gravity="center"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textStyle="bold"
        />

</RelativeLayout>