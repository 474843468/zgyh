<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="@color/boc_common_bg_color"
              android:orientation="vertical">

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:background="#D8D8E0"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_122px"
        android:background="@drawable/boc_letter_bg_selector"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/boc_space_between_10px"
            android:layout_height="match_parent"
            >
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安德海"
                    android:textColor="@color/boc_black"
                    android:textSize="@dimen/boc_text_size_common"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_ding_xiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/boc_bg_gray_with_conner"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="定向"
                    android:textColor="@color/boc_titlebar_text_white"
                    android:textSize="@dimen/boc_text_size_small"
                    />

                <TextView
                    android:id="@+id/tv_shi_shi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/boc_bg_yellow_with_conner"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="实时"
                    android:textColor="@color/boc_titlebar_text_white"
                    android:textSize="@dimen/boc_text_size_small"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_2px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6222 ****** 9882"
                    android:textColor="@color/boc_black"
                    android:textSize="@dimen/boc_text_size_very_small"/>

                <View
                    android:id="@+id/view_separate_line"
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/boc_space_between_28px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/boc_space_between_18px"
                    android:layout_marginRight="@dimen/boc_space_between_18px"
                    android:background="@color/boc_black"/>

                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="155dp"
                    android:singleLine="true"
                    android:text="农业银行农业银行农业银行农业银行农业银行农业银行农业银行"
                    android:textColor="@color/boc_black"
                    android:textSize="@dimen/boc_text_size_small"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
