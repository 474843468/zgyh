<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_parent_profit_extra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <TextView
        style="@style/BocTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:text="@string/boc_wealth_profit_name_1" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditClearWidget
        android:id="@+id/edt_rate_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:editClearName="@string/boc_wealth_profit_rate" />

    <include layout="@layout/boc_divide_line" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditClearWidget
        android:id="@+id/edt_date_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:editClearName="@string/boc_wealth_profit_date" />

    <include layout="@layout/boc_divide_line" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditMoneyInputWidget
        android:id="@+id/edt_money_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:editChoiceName="@string/boc_wealth_profit_money" />

    <include layout="@layout/boc_divide_line" />

    <TextView
        style="@style/BocTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_40px"
        android:text="@string/boc_wealth_profit_name_2" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditClearWidget
        android:id="@+id/edt_rate_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:editClearName="@string/boc_wealth_profit_rate" />

    <include layout="@layout/boc_divide_line" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditClearWidget
        android:id="@+id/edt_date_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:editClearName="@string/boc_wealth_profit_date" />

    <include layout="@layout/boc_divide_line" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditMoneyInputWidget
        android:id="@+id/edt_money_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:editChoiceName="@string/boc_wealth_profit_money" />

    <include layout="@layout/boc_divide_line" />

    <Button
        android:id="@+id/btn_calc_extra"
        style="@style/BocButton.BocPrimaryButton1"
        android:layout_width="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="@dimen/boc_space_between_50px"
        android:text="@string/boc_wealth_profit_btn" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_40px"
        android:text="@string/boc_wealth_profit_hint"
        android:textColor="@color/boc_text_mobile_color"
        android:textSize="@dimen/boc_text_size_common" />
</LinearLayout>