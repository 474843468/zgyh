<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loanmanageTitle"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_vertical"
    android:background="#ca2b4f">


<ImageView
    android:id="@+id/leftIconIv"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:src="@drawable/boc_back_white"/>

    <LinearLayout
        android:id="@+id/loanTitleLy"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:padding="0.5dp"
        android:layout_centerInParent="true"
        android:background="@drawable/boc_drawable_loanmanager"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/loanleftTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/boc_background_loanleft"
            android:textColor="@drawable/boc_text_loanmanager"
            android:textSize="13dp"
            android:text="@string/boc_loan_apply"/>

        <TextView
            android:id="@+id/loanrightTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/boc_background_loanright"
            android:textColor="@drawable/boc_text_loanmanager"
            android:textSize="13dp"
            android:text="@string/boc_loan_userloan"/>
    </LinearLayout>

    <TextView
        android:id="@+id/loanTv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/boc_common_cell_color"
        android:text="@string/boc_loan_apply"
        android:visibility="gone"/>
<LinearLayout
    android:id="@+id/rightButtonContainer"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/rightIconIv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/boc_more_white"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"/>
</LinearLayout>

</RelativeLayout>