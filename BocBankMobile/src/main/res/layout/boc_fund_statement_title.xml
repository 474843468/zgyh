<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fundmanageTitle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/boc_titlebar_bg_white">


    <ImageView
        android:id="@+id/leftIconIv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@drawable/boc_back_black"/>

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/boc_titlebar_text_black"
        android:text="@string/boc_fundstatement_title" />
    <LinearLayout
        android:id="@+id/rightButtonContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--<ImageView-->
            <!--android:id="@+id/rightIconIv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:src="@drawable/boc_more_white"-->
            <!--android:paddingLeft="17dp"-->
            <!--android:paddingRight="17dp"/>-->
        <TextView
            android:id="@+id/rightTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/boc_text_money_color_red"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"/>
        <!--android:text="@string/boc_fundstatemnt_lefttitle"-->
</LinearLayout>

</RelativeLayout>