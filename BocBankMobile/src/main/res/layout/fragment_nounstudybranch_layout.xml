<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/boc_common_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/boc_common_cell_color"
        android:layout_height="wrap_content">


        <GridView
            android:id="@+id/countrygv"
            android:background="@color/boc_common_cell_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/boc_space_between_40px"
            android:horizontalSpacing="@dimen/boc_space_between_20px"
            android:numColumns="3"
            android:verticalSpacing="@dimen/boc_space_between_20px"></GridView>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_divider_1px"
            android:background="@color/boc_divide_color" />

        <TextView
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/boc_space_between_22px"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@color/boc_common_cell_color"
            android:text="更多..."
            android:textSize="16dp"
            android:textColor="@color/boc_btn_txt_blue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/boc_divide_color" />
    </LinearLayout>

</LinearLayout>