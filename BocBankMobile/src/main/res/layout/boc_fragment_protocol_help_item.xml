<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:background="@color/boc_common_cell_color"
        android:orientation="vertical"
        android:paddingBottom="@dimen/boc_space_between_40px"
        android:paddingLeft="@dimen/boc_space_between_20px"
        android:paddingRight="@dimen/boc_space_between_20px"
        android:paddingTop="@dimen/boc_space_between_20px">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="周期连续协议"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_little_big"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_30px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/boc_space_between_200px"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:text="协议类型"
                android:textColor="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_text_size_common" />

            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周期连续协议"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_common"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_30px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/boc_space_between_200px"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:text="协议要素简述"
                android:textColor="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_text_size_common" />

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周期连续协议"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_common"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>