<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_fund_profileloss_comm_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_240px"
        android:background="@color/boc_yellow_end"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_time"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaa"/>

            <TextView
                android:id="@+id/tv_hint"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_time"
                android:text="bbbb"/>

            <TextView
                android:id="@+id/tv_amount"
                style="@style/tv_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hint"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/boc_space_between_10px"
                android:text="3000"
                android:textStyle="bold"/>
        </RelativeLayout>
    </RelativeLayout>

    <include
        layout="@layout/boc_divide_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_20px"></include>

</LinearLayout>