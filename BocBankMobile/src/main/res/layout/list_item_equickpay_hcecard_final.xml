<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/background"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/chinabank"
                    android:textColor="@color/bright_foreground_material_light"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="32dp"
                    android:gravity="center_vertical|right"
                    android:text="e闪付卡"
                    android:textColor="#FF4444"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/moren" />
        </FrameLayout>


        <TextView
            android:id="@+id/textview_hce_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="321785080013808447"
            android:textColor="@color/black"
            android:textSize="22sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView_hce_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/imageView_hce_bland" />

            <ImageView
                android:id="@+id/imageView_hce_bland"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/textview_hce_bland"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:text="222"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主卡卡号"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textview_maincard_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="95276217850800013808447"
                android:textColor="@color/black" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/boc_kbdltn_bg_color" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRowButton
            android:id="@+id/table_single_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易日限额"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textview_dayQuota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text=""
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FF6666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textview_zhuxiao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="11dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="注销"
                android:textColor="@color/boc_text_color_red" />


            <TextView
                android:id="@+id/textview_unloss"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:background="@color/boc_text_color_red"
                android:gravity="center"
                android:text="解挂"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textview_activie"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="13dp"
                android:layout_weight="1"
                android:background="@color/boc_text_color_red"
                android:gravity="center"
                android:text="激活"
                android:textColor="@color/white"
                android:visibility="visible" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
