<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bocroa_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/profit_item_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:paddingLeft="@dimen/boc_text_size_20dp"
        android:text="代付"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_common"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/boc_space_between_20px"
        android:paddingLeft="@dimen/boc_text_size_20dp">

        <TextView
            android:id="@+id/profit_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="2016/3/8"
            android:textColor="@color/boc_text_color_common_gray"
            android:textSize="@dimen/boc_text_size_small" />

        <TextView
            android:id="@+id/profir_timeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profit_starttime"
            android:text=" - "
            android:textColor="@color/boc_text_color_common_gray"
            android:textSize="@dimen/boc_text_size_small" />

        <TextView
            android:id="@+id/profit_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profir_timeline"
            android:text="2016/6/6"
            android:textColor="@color/boc_text_color_common_gray"
            android:textSize="@dimen/boc_text_size_small" />

        <TextView
            android:id="@+id/profit_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/boc_text_size_20dp"
            android:text="2000"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_divider_1px"
        android:background="@color/boc_divider_line_color" />
</LinearLayout>
