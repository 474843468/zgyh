<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/boc_space_between_20px"
    android:paddingLeft="@dimen/boc_space_between_20px"
    android:paddingRight="@dimen/boc_space_between_20px"
    android:paddingTop="@dimen/boc_space_between_20px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_cell_color"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/boc_space_between_20px"
        android:paddingLeft="@dimen/boc_space_between_20px"
        android:paddingRight="@dimen/boc_space_between_20px"
        android:paddingTop="@dimen/boc_space_between_20px">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_little_big"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_risk_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/boc_space_between_10px" />

                <ImageView
                    android:id="@+id/img_risk_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/boc_space_between_20px">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="@dimen/boc_space_between_40px"
                android:layout_height="@dimen/boc_space_between_40px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/boc_bg_checkbox_collect"
                android:button="@null" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_360px"
        android:background="@color/boc_bg_blue"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="单位净值"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            android:textColor="@color/boc_common_cell_color"
            android:textSize="@dimen/boc_text_size_small"/>

        <TextView
            android:id="@+id/txt_type_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="0.00~0.00%"
            android:textColor="@color/boc_common_cell_color"
            android:textSize="@dimen/boc_text_size_supper_big_max"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_40px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/boc_space_between_20px"
                    android:text="左边"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textColor="@color/boc_common_cell_color" />

                <TextView
                    android:id="@+id/txt_value_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="demo"
                    android:textSize="@dimen/boc_text_size_common"
                    android:textColor="@color/boc_common_cell_color"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_parent_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/boc_space_between_20px"
                    android:text="中间"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textColor="@color/boc_common_cell_color" />

                <TextView
                    android:id="@+id/txt_value_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="demo"
                    android:textSize="@dimen/boc_text_size_common"
                    android:textColor="@color/boc_common_cell_color"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/boc_space_between_20px"
                    android:text="右边"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textColor="@color/boc_common_cell_color" />

                <TextView
                    android:id="@+id/txt_value_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="demo"
                    android:textSize="@dimen/boc_text_size_common"
                    android:textColor="@color/boc_common_cell_color"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>