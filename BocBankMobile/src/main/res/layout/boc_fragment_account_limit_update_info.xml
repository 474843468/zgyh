<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditMoneyInputWidget
            android:id="@+id/et_atm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:background="@drawable/boc_card_background"
            android:textColor="@color/boc_text_color_common_gray"
            app:editChoiceName="@string/boc_account_limit_update_atm"
            android:visibility="gone"
            app:editChoiceNameBold="true" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.BalanceHint.BalanceHintView
            android:id="@+id/hv_atm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:visibility="gone"
            android:paddingLeft="@dimen/boc_space_between_32px" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditMoneyInputWidget
            android:id="@+id/et_pos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:background="@drawable/boc_card_background"
            android:textColor="@color/boc_text_color_common_gray"
            app:editChoiceName="@string/boc_account_limit_update_pos"
            android:visibility="gone"
            app:editChoiceNameBold="true" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.BalanceHint.BalanceHintView
            android:id="@+id/hv_pos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:visibility="gone"
            android:paddingLeft="@dimen/boc_space_between_32px" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditMoneyInputWidget
            android:id="@+id/et_atm_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:background="@drawable/boc_card_background"
            android:textColor="@color/boc_text_color_common_gray"
            app:editChoiceName="@string/boc_account_limit_update_atm_cash"
            android:visibility="gone"
            app:editChoiceNameBold="true" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.BalanceHint.BalanceHintView
            android:id="@+id/hv_atm_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:visibility="gone"
            android:paddingLeft="@dimen/boc_space_between_32px" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditMoneyInputWidget
            android:id="@+id/et_border_pos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:background="@drawable/boc_card_background"
            android:textColor="@color/boc_text_color_common_gray"
            app:editChoiceName="@string/boc_account_limit_update_border_pos"
            android:visibility="gone"
            app:editChoiceNameBold="true" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.BalanceHint.BalanceHintView
            android:id="@+id/hv_border_pos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:visibility="gone"
            android:paddingLeft="@dimen/boc_space_between_32px" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditMoneyInputWidget
            android:id="@+id/et_border_atm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:background="@drawable/boc_card_background"
            android:textColor="@color/boc_text_color_common_gray"
            android:visibility="gone"
            app:editChoiceName="@string/boc_account_limit_update_border_atm"
            app:editChoiceNameBold="true" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.BalanceHint.BalanceHintView
            android:id="@+id/hv_border_atm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:visibility="gone"
            android:paddingLeft="@dimen/boc_space_between_32px" />

        <Button
            android:id="@+id/btn_ok"
            style="@style/BocButton.BocPrimaryButton1"
            android:layout_width="match_parent"
            android:text="@string/boc_account_next" />

    </LinearLayout>

</ScrollView>
