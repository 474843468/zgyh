<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/framelayout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_bank_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_bank_logo_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="中国银行"
                android:textColor="@color/bright_foreground_material_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical|right"
                android:text="e闪付卡"
                android:textColor="@color/bright_foreground_material_light" />


        </LinearLayout>


        <ImageView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bank_logo_12" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_hce_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="52452*****4586"
            android:textColor="@color/button_material_dark" />

        <TextView
            android:id="@+id/textview_hce_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="未激活"
            android:textColor="@color/button_material_dark" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/textviewdddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主卡卡号  "
                    android:textColor="@color/button_material_dark" />


                <TextView
                    android:id="@+id/textview_main_card_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6565"
                    android:textColor="@color/button_material_dark" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单笔限额  "
                    android:textColor="@color/button_material_dark" />


                <TextView
                    android:id="@+id/textview_single_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:textColor="@color/button_material_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每日限额  "
                    android:textColor="@color/button_material_dark" />


                <TextView
                    android:id="@+id/textview_single_day_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:textColor="@color/button_material_dark" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/ic_bank_logo_02"
            android:textColor="@color/bright_foreground_material_light" />

    </RelativeLayout>


</LinearLayout>