<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_24px"
        android:background="#f0eff5"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_56px"
            android:background="#f4f6f6"/>
        <TextView
            android:id="@+id/tvSettleCurrency"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/boc_space_between_10px"
            android:gravity="center"
            android:textColor="@color/boc_text_color_dark_gray"
            android:text="@string/boc_long_short_forex_settle_currency"
            android:textSize="@dimen/boc_text_size_small"
            />
    </FrameLayout>
    <View
        style = "@style/divider_horizontal" />
    <LinearLayout
        android:layout_height="@dimen/boc_space_between_122px"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:orientation="horizontal">
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/tvCurrentLimit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/boc_text_color_common_gray"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:text="@string/boc_long_short_forex_current_limit"/>
    </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
        <LinearLayout
            android:id="@+id/normallCurrentShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCurrentRemit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/boc_long_short_forex_remit"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/boc_text_color_common_gray"
                    android:textSize="@dimen/boc_text_size_small" />
                <TextView
                    android:id="@+id/tvCurrentRemitNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="@string/boc_long_short_forex_remit"
                    android:singleLine="true"
                    android:textColor="@color/boc_text_color_dark_gray"
                    android:textSize="@dimen/boc_text_size_small" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_5px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCurrentMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/boc_long_short_forex_money"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/boc_text_color_common_gray"
                    android:textSize="@dimen/boc_text_size_small"/>
                <TextView
                    android:id="@+id/tvCurrentMoneyNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/boc_long_short_forex_money"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/boc_text_color_dark_gray"
                    android:textSize="@dimen/boc_text_size_small" />
                </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_renminbiCurrent"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tvSingle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/boc_long_short_forex_money"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/boc_text_color_common_gray"
                    android:textSize="@dimen/boc_text_size_small"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/tvRenminbiCurrentRemitNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="@string/boc_long_short_forex_remit"
                    android:singleLine="true"
                    android:textColor="@color/boc_text_color_dark_gray"
                    android:textSize="@dimen/boc_text_size_small" />
                </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <View
        style = "@style/divider_horizontal" />
        <LinearLayout
            android:layout_height="@dimen/boc_space_between_122px"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/tvLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/boc_text_color_common_gray"
                    android:singleLine="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/boc_long_short_forex_available_limit"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/normallShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvRemit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/boc_long_short_forex_remit"
                            android:singleLine="true"
                            android:gravity="center"
                            android:textColor="@color/boc_text_color_common_gray"
                            android:textSize="@dimen/boc_text_size_small" />
                        <TextView
                            android:id="@+id/tvRemitNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="@string/boc_long_short_forex_remit"
                            android:singleLine="true"
                            android:gravity="center"
                            android:textColor="@color/boc_text_color_dark_gray"
                            android:textSize="@dimen/boc_text_size_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/boc_space_between_5px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/boc_long_short_forex_money"
                            android:singleLine="true"
                            android:gravity="center"
                            android:textColor="@color/boc_text_color_common_gray"
                            android:textSize="@dimen/boc_text_size_small"/>
                        <TextView
                            android:id="@+id/tvMoneyNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="@string/boc_long_short_forex_money"
                            android:singleLine="true"
                            android:gravity="center"
                            android:textColor="@color/boc_text_color_dark_gray"
                            android:textSize="@dimen/boc_text_size_small" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_renminbi"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tvSingleAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="@string/boc_long_short_forex_money"
                        android:singleLine="true"
                        android:gravity="center"
                        android:textColor="@color/boc_text_color_common_gray"
                        android:textSize="@dimen/boc_text_size_small"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/tvRenminbiRemitNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="@string/boc_long_short_forex_remit"
                        android:singleLine="true"
                        android:textColor="@color/boc_text_color_dark_gray"
                        android:textSize="@dimen/boc_text_size_small" />
                </LinearLayout>

            </LinearLayout>
            </LinearLayout>
    </LinearLayout>