<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/boc_common_bg_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/boc_space_between_16px"
        android:paddingBottom="@dimen/boc_space_between_16px"
        android:background="@color/boc_light_yellow_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/boc_space_between_50px">
        <ImageView
            android:layout_width="@dimen/boc_space_between_32px"
            android:layout_height="@dimen/boc_space_between_32px"
            android:background="@drawable/boc_mark"
            android:layout_marginRight="@dimen/boc_space_between_20px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/boc_text_color_dark_gray"
            android:text="为了确保您的账户安全,请您修改密码"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/boc_space_between_18px"
        android:paddingLeft="@dimen/boc_space_between_20px"
        android:paddingRight="@dimen/boc_space_between_20px"
        android:background="@drawable/boc_card_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/boc_space_between_6px"
                android:background="@null"
                android:layout_weight="1.5"
                android:text="原密码"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_common"
                android:gravity="center_vertical"/>
            <cfca.mobile.sip.SipBox
                android:id="@+id/oldPasswordSipBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请输入"
                android:singleLine="true"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textColorHint="@color/boc_text_color_light_gray"
                android:textSize="@dimen/boc_text_size_common"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_divider_1px"
            android:background="@color/boc_divide_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/boc_space_between_6px"
                android:background="@null"
                android:text="新密码"
                android:layout_weight="1.5"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_common"
                android:gravity="center_vertical"/>
            <cfca.mobile.sip.SipBox
                android:id="@+id/newPasswordSipBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请输入"
                android:singleLine="true"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textColorHint="@color/boc_text_color_light_gray"
                android:textSize="@dimen/boc_text_size_common"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_divider_1px"
            android:background="@color/boc_divide_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/boc_space_between_6px"
                android:background="@null"
                android:text="确认密码"
                android:layout_weight="1.5"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_common"
                android:gravity="center_vertical"/>
            <cfca.mobile.sip.SipBox
                android:id="@+id/confirmPasswordSipBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请再次确认"
                android:singleLine="true"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textColorHint="@color/boc_text_color_light_gray"
                android:textSize="@dimen/boc_text_size_common"
                android:background="@null"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_96px"
        android:orientation="horizontal"
        android:background="@drawable/boc_card_background"
        android:layout_margin="@dimen/boc_space_between_18px"
        android:paddingLeft="@dimen/boc_space_between_20px"
        android:paddingRight="@dimen/boc_space_between_20px"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/boc_space_between_6px"
            android:background="@null"
            android:layout_weight="1.5"
            android:text="关联账户后六位"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/accountEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入"
            android:singleLine="true"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textColorHint="@color/boc_text_color_light_gray"
            android:textSize="@dimen/boc_text_size_common"
            android:maxLength="6"
            android:inputType="number"
            android:background="@null"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/boc_space_between_40px"
        android:layout_margin="@dimen/boc_space_between_10px"
        android:paddingRight="@dimen/boc_space_between_40px"
        android:textColor="@color/boc_text_color_gray"
        android:text="关联账户即您已经成功关联到电子银行的账户"/>


    <Button
        android:id="@+id/confirmBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/boc_space_between_70px"
        android:layout_marginLeft="@dimen/boc_space_between_18px"
        android:layout_marginRight="@dimen/boc_space_between_18px"
        android:background="@drawable/boc_btn_blue"
        android:text="确认"
        android:textColor="@color/boc_common_cell_color"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/boc_space_between_40px"
        android:layout_marginTop="@dimen/boc_space_between_30px"
        android:paddingRight="@dimen/boc_space_between_40px"
        android:textColor="@color/boc_text_color_gray"
        android:text="密码长度为8~20位,区分大小写,至少需要包含一个字母和一个数字,支持键盘可见字符(不包含空格,不包含汉字,不允许全角的字符)."/>

</LinearLayout>
