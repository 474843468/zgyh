<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llyFirstLetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvFirstLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/boc_text_size_common"
            android:textColor="@color/boc_text_color_dark_gray"
            android:text="A"
            android:layout_marginLeft="@dimen/boc_space_between_40px"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:layout_marginBottom="@dimen/boc_space_between_10px"/>

        <include layout="@layout/boc_divide_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/boc_text_size_common"
        android:textColor="@color/boc_text_color_dark_gray"
        android:layout_marginLeft="@dimen/boc_space_between_60px"
        android:layout_marginRight="@dimen/boc_space_between_60px"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:layout_marginBottom="@dimen/boc_space_between_20px"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>
