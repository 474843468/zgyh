<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_main_bg_color"
    android:orientation="vertical">

    <include layout="@layout/boc_divide_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/boc_common_cell_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_detail_more_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/boc_space_between_20px"
                    android:layout_marginTop="@dimen/boc_space_between_20px"
                    android:text="更多额度"
                    android:textColor="@color/boc_main_button_color"
                    android:textSize="@dimen/boc_text_size_common" />

                <com.boc.bocsoft.mobile.bocmobile.buss.creditcard.creditcardhomepage.widget.DrawRoundView
                    android:id="@+id/drv_detail_round_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/boc_space_between_80px"
                    android:background="@color/boc_divider_line_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_detail_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/boc_common_cell_color"
                android:orientation="vertical"
                android:paddingLeft="@dimen/boc_space_between_20px"
                android:paddingRight="@dimen/boc_space_between_20px"
                android:paddingTop="@dimen/boc_space_between_10px"
                android:paddingBottom="@dimen/boc_space_between_10px"/>

            <TextView
                android:id="@+id/btn_detail_report"
                style="@style/BocResultButton"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/boc_space_between_20px"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:gravity="center" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>