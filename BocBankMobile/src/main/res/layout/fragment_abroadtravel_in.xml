<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_in"
    android:paddingTop="@dimen/boc_space_between_470px"
    android:background="@drawable/bg_fragment_abroadtravel_in"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_credit_card_loss"
            style="@style/OverseaszoneNormalTv"
            />

        <TextView
            android:id="@+id/tv_debit_card_loss"
            android:layout_below="@+id/tv_credit_card_loss"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            style="@style/OverseaszoneNormalTv"/>

    </RelativeLayout>

</ScrollView>
