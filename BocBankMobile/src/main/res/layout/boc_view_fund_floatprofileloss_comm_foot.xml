<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_fund_profileloss_comm_foot"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_bg_color"
    android:paddingBottom="@dimen/boc_space_between_50px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/boc_space_between_30px"
        android:paddingRight="@dimen/boc_space_between_30px"
        android:paddingTop="@dimen/boc_space_between_30px"
        android:paddingBottom="@dimen/boc_space_between_30px"
        android:background="@color/boc_common_cell_color">
        <TextView
            android:id="@+id/tv_simple_rule_head"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/boc_fund_profileloss_simple_rule_head"/>
        <TextView
            android:id="@+id/tv_profileloss_simple_rule"
            style="@style/tv_very_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_simple_rule_head"
            android:text="@string/boc_fund_profileloss_simple_rule"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_profileloss_rule_head"
        style="@style/tv_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/boc_space_between_30px"
        android:paddingRight="@dimen/boc_space_between_30px"
        android:paddingTop="@dimen/boc_space_between_50px"
        android:textStyle="bold"
        android:text="@string/boc_fund_profileloss_rule_head"/>
    <TextView
        android:id="@+id/tv_profileloss_rule"
        style="@style/tv_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/boc_space_between_30px"
        android:paddingRight="@dimen/boc_space_between_30px"
        android:text="@string/boc_fund_profileloss_rule"/>

</LinearLayout>