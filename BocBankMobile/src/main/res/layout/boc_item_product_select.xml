<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:minHeight="@dimen/boc_space_between_116px"
    android:paddingLeft="@dimen/boc_space_between_30px"
    android:paddingRight="@dimen/boc_space_between_30px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/check_box"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/boc_space_between_20px"
        android:paddingBottom="@dimen/boc_space_between_20px">

        <com.boc.bocsoft.mobile.bocmobile.base.widget.PortfolioProductInfoView.PortfolioProductInfoView
            android:id="@+id/group_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_delete"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_head"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/money_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="被组合份额"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_common"/>

            <TextView
                android:id="@+id/purchase_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                android:hint="不得大于300000"
                android:textColor="@color/boc_text_color_money_count"
                android:textColorHint="@color/boc_text_color_gray"
                android:textSize="@dimen/boc_text_size_common"/>

        </LinearLayout>

    </RelativeLayout>

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/boc_text_mobile_color"
        android:button="@drawable/checkbox_style"/>


</RelativeLayout>