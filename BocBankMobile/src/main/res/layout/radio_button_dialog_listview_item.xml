<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/boc_space_between_20px"
        android:paddingTop="@dimen/boc_space_between_10px"
        android:paddingBottom="@dimen/boc_space_between_10px"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/ivCheck"
            android:layout_centerVertical="true"
            android:padding="@dimen/boc_space_between_5px"
            android:layout_width="@dimen/boc_space_between_60px"
            android:layout_height="@dimen/boc_space_between_60px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            />
        
        
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="aaaaaa"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ivCheck"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_little_big" />
        <TextView
            android:id="@+id/tv_message_below"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="aaaaaa"
            android:layout_toRightOf="@+id/ivCheck"
            android:layout_below="@+id/tv_message"
            android:textColor="@color/boc_text_color_common_gray"
            android:textSize="@dimen/boc_text_size_common" />
        
    </RelativeLayout>

    <View
        android:id="@+id/view_linear"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:background="@color/boc_divider_line_color" />

</LinearLayout>