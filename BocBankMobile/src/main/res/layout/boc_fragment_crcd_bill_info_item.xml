<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/boc_common_bg_color"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/boc_common_cell_color"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/ll_content_left"
            android:layout_weight="1"
            android:padding="@dimen/boc_space_between_20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_leftTop"
                android:gravity="left"
                android:layout_marginBottom="@dimen/boc_space_between_6px"
                android:layout_marginLeft="@dimen/boc_space_between_10px"
                android:textStyle="normal"
                style="@style/crcd_bill_info"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_leftMiddle1"
                    android:layout_width="wrap_content"
                    android:textStyle="normal"
                    android:gravity="left"
                    style="@style/crcd_bill_info" />
                <TextView
                    android:id="@+id/tv_leftMiddle"
                    android:layout_weight="1"
                    style="@style/crcd_bill_info" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_leftBottom"
                style="@style/crcd_bill_info" />
        </LinearLayout>

        <View
            android:id="@+id/divide_line"
            android:background="@color/boc_divider_line_color"
            android:layout_width="@dimen/boc_divider_1px"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            android:layout_marginLeft="@dimen/boc_space_between_10px"
            android:layout_marginRight="@dimen/boc_space_between_10px"
            />

        <LinearLayout
            android:id="@+id/ll_content_right"
            android:padding="@dimen/boc_space_between_20px"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_rightTop"
                android:gravity="left"
                android:layout_marginBottom="@dimen/boc_space_between_6px"
                android:layout_marginLeft="@dimen/boc_space_between_10px"
                android:textStyle="normal"
                style="@style/crcd_bill_info"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_rightMiddle1"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:textStyle="normal"
                    style="@style/crcd_bill_info" />
                <TextView
                    android:id="@+id/tv_rightMiddle"
                    android:layout_weight="1"
                    style="@style/crcd_bill_info" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_rightBottom"
                style="@style/crcd_bill_info" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_20px"
       />
    <!--无交易明细-->
    <TextView
        android:id="@+id/tv_no_result"
        android:visibility="gone"
        android:layout_marginTop="@dimen/boc_space_between_160px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawablePadding="@dimen/boc_space_between_40px"
        android:drawableTop="@drawable/boc_icon_no_product"
        android:gravity="center_horizontal"
        android:textColor="@color/boc_text_color_rest_gray"
        android:textSize="@dimen/boc_text_size_common" />
</LinearLayout>
