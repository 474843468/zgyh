<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/boc_common_bg_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                android:layout_marginRight="@dimen/boc_space_between_20px"
                android:background="@color/boc_common_cell_color"
                android:paddingTop="@dimen/boc_space_between_20px"
                android:paddingBottom="@dimen/boc_space_between_20px"
                android:paddingLeft="@dimen/boc_space_between_20px">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/imvAttention"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvProductName"
                            style="@style/textview_finc_detail"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:text="中银薪钱包钱包"/>
                        <TextView
                            android:id="@+id/tvProductCode"
                            style="@style/textview_finc_detail"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:text="（600987）"/>
                    </LinearLayout>

                    <LinearLayout
                        android:paddingTop="@dimen/boc_space_between_20px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imvRiskLevel"
                            android:layout_width="@dimen/boc_space_between_86px"
                            android:layout_height="@dimen/boc_space_between_32px"
                            android:layout_marginTop="@dimen/boc_space_between_2px"
                            android:background="@drawable/icon_risk_l"/>
                        <LinearLayout
                            android:layout_marginLeft="@dimen/boc_space_between_10px"
                            android:background="@drawable/bg_fund_detail_type"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="@dimen/boc_space_between_32px">
                            <TextView
                                android:id="@+id/tvFundType"
                                android:paddingLeft="@dimen/boc_space_between_8px"
                                android:paddingRight="@dimen/boc_space_between_8px"
                                android:textSize="@dimen/boc_text_size_super_small"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="股票型"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/imvAttention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/share_not_collected"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/boc_space_between_20px"
                    android:visibility="gone"/>
            </RelativeLayout>
            <include layout="@layout/boc_divide_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_space_between_2px"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                android:layout_marginRight="@dimen/boc_space_between_20px"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:paddingTop="@dimen/boc_space_between_20px"
            android:background="@color/boc_common_cell_color">
            <TextView
                android:id="@+id/tvCurrentPercent"
                style="@style/textview_finc_detail"
                android:textSize="@dimen/boc_text_size_small"
                android:gravity="center"
                android:layout_weight="1"
                android:text="日涨跌幅"/>
            <TextView
                android:id="@+id/tvNewJz"
                style="@style/textview_finc_detail"
                android:textSize="@dimen/boc_text_size_small"
                android:gravity="center"
                android:layout_weight="1"
                android:text="最新净值"/>
            <TextView
                android:id="@+id/tvBuyStart"
                style="@style/textview_finc_detail"
                android:textSize="@dimen/boc_text_size_small"
                android:gravity="center"
                android:layout_weight="1"
                android:text="起购金额"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                android:layout_marginRight="@dimen/boc_space_between_20px"
                android:paddingTop="@dimen/boc_space_between_10px"
                android:paddingBottom="@dimen/boc_space_between_20px"
                android:background="@color/boc_common_cell_color">
                <TextView
                    android:id="@+id/tvCurPercentValue"
                    style="@style/textview_finc_detail"
                    android:textSize="@dimen/boc_text_size_20dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/boc_text_color_red"
                    android:text="0.21%"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvNewJzValue"
                        style="@style/textview_finc_detail"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="5.5921"/>
                    <TextView
                        android:id="@+id/tvJzTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:text="12/09"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvBuyStartValue"
                    style="@style/textview_finc_detail"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="5000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:paddingTop="@dimen/boc_space_between_20px"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:id="@+id/llyLineTitle"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:id="@+id/llyJz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/boc_space_between_20px"
                        android:gravity="center"
                        android:visibility="visible">
                        <TextView
                            android:id="@+id/tvJz"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="净值走势"
                            android:textSize="@dimen/boc_text_size_small"
                            android:textColor="@color/boc_text_color_red"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imvJzBotLine"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/boc_space_between_110px"
                            android:layout_height="@dimen/boc_space_between_6px"
                            android:background="@color/boc_text_color_red"
                            android:layout_marginTop="@dimen/boc_space_between_20px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llyYieldRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tvYieldRate"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="基金累计收益率"
                            android:textSize="@dimen/boc_text_size_small"
                            android:textColor="@color/boc_text_color_common_gray"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imvYieldRateBotLine"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/boc_space_between_200px"
                            android:layout_height="@dimen/boc_space_between_6px"
                            android:background="@color/white"
                            android:layout_marginTop="@dimen/boc_space_between_20px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llyRank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/boc_space_between_20px"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tvRank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="排名变化"
                            android:textSize="@dimen/boc_text_size_small"
                            android:textColor="@color/boc_text_color_common_gray"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/imvRankBotLine"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/boc_space_between_110px"
                            android:layout_height="@dimen/boc_space_between_6px"
                            android:background="@color/white"
                            android:layout_marginTop="@dimen/boc_space_between_20px" />
                    </LinearLayout>
                </LinearLayout>
                <include layout="@layout/boc_divide_line" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llyLines"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/boc_space_between_20px"
                android:paddingBottom="@dimen/boc_space_between_20px"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/boc_space_between_40px">
                    <TextView
                        android:id="@+id/tvChangeOfMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/boc_text_size_common"
                        android:visibility="gone"
                        android:textColor="@color/boc_text_color_common_gray"
                        android:text="近一月涨跌幅(%):"/>
                    <TextView
                        android:id="@+id/tvChangeOfMonthValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/boc_text_size_common"
                        android:text="-"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvLookHistValue"
                    android:paddingRight="@dimen/boc_space_between_40px"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textColor="@color/boc_main_button_color"
                    android:textSize="@dimen/boc_text_size_common"
                    android:text="查看历史净值"/>
            </LinearLayout>
            <com.boc.bocsoft.mobile.bocmobile.base.widget.userwidget.sfkline.SFKLineView
                android:id="@+id/KLine_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/radioGroup_layout"
                android:layout_below="@+id/line_layout"
                android:paddingLeft="@dimen/boc_space_between_30px"
                android:paddingRight="@dimen/boc_space_between_30px"
                android:background="@color/white">
            </com.boc.bocsoft.mobile.bocmobile.base.widget.userwidget.sfkline.SFKLineView>
            <RadioGroup
                android:id="@+id/rgpLayout"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/boc_space_between_20px">
                <RadioButton
                    android:id="@+id/rbOneMonth"
                    style="@style/find_detail_zhexian_btn"
                    android:layout_marginLeft="@dimen/boc_space_between_96px"
                    android:checked="true"
                    android:text="@string/boc_fund_one_month" />
                <RadioButton
                    android:id="@+id/rbThreeMonth"
                    style="@style/find_detail_zhexian_btn"
                    android:text="@string/boc_fund_three_month" />
                <RadioButton
                    android:id="@+id/rbSixMonth"
                    style="@style/find_detail_zhexian_btn"
                    android:text="@string/boc_fund_six_month"
                    android:visibility="visible"/>
                <RadioButton
                    android:id="@+id/rbOneYear"
                    style="@style/find_detail_zhexian_btn"
                    android:layout_marginRight="@dimen/boc_space_between_96px"
                    android:text="@string/boc_fund_one_year" />
            </RadioGroup>
            <LinearLayout
                android:id="@+id/llyFundPositionInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    style="@style/textview_finc_detail"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"
                    android:text="持仓信息"
                    android:padding="@dimen/boc_space_between_20px"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/boc_space_between_20px"
                    android:background="@color/boc_common_cell_color">
                    <TextView
                        style="@style/textview_finc_detail"
                        android:textSize="@dimen/boc_text_size_small"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="当前市值"/>
                    <TextView
                        style="@style/textview_finc_detail"
                        android:textSize="@dimen/boc_text_size_small"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="持有份额"/>
                    <TextView
                        style="@style/textview_finc_detail"
                        android:textSize="@dimen/boc_text_size_small"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="参考浮动盈亏(近一年)"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/boc_space_between_10px"
                    android:paddingBottom="@dimen/boc_space_between_20px"
                    android:background="@color/boc_common_cell_color">
                    <TextView
                        android:id="@+id/tvCurrentCapitals"
                        style="@style/textview_finc_detail"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="1000"/>
                    <TextView
                        android:id="@+id/tvHoldAccount"
                        style="@style/textview_finc_detail"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="1.2333"/>

                    <TextView
                        android:id="@+id/tvFloatProfit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/boc_text_color_green"
                        android:textSize="@dimen/boc_text_size_20dp"
                        android:text="-"/>
                </LinearLayout>
            </LinearLayout>
            <!--产品属性 -->
            <LinearLayout
                android:id="@+id/llyProPropBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/textview_finc_detail"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"
                    android:text="产品属性"
                    android:padding="@dimen/boc_space_between_20px"/>
                <LinearLayout
                    android:id="@+id/llyProductProperties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/boc_space_between_20px"
                    android:paddingBottom="@dimen/boc_space_between_20px"
                    android:background="@color/white"
                    android:orientation="vertical">
                </LinearLayout>
                <include layout="@layout/boc_divide_line" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llyPurchaseAndRedeemBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/boc_space_between_20px"
                android:paddingBottom="@dimen/boc_space_between_20px"
                android:layout_marginTop="@dimen/boc_space_between_10px"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llyPurchaseAndRedeem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="@dimen/boc_space_between_20px"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:id="@+id/llyPurchaseTitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/boc_space_between_20px"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tvPurchaseTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:text="购买属性"
                            android:textSize="@dimen/boc_text_size_small"
                            android:textColor="@color/boc_text_color_red"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/imvPurchaseBotLine"
                            android:layout_width="@dimen/boc_space_between_110px"
                            android:layout_height="@dimen/boc_space_between_6px"
                            android:layout_gravity="right"
                            android:background="@color/boc_text_color_red"
                            android:layout_marginTop="@dimen/boc_space_between_20px"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llyRedeemTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/boc_space_between_20px"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tvRedeem"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="赎回属性"
                            android:textSize="@dimen/boc_text_size_small"
                            android:textColor="@color/boc_text_color_common_gray"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/imvRedeemBotLine"
                            android:layout_gravity="left"
                            android:layout_width="@dimen/boc_space_between_110px"
                            android:layout_height="@dimen/boc_space_between_6px"
                            android:background="@color/boc_text_color_red"
                            android:layout_marginTop="@dimen/boc_space_between_20px"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/boc_divide_line" />

                <LinearLayout
                    android:id="@+id/llyPurchaseContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/boc_space_between_20px"
                    android:paddingBottom="@dimen/boc_space_between_20px"
                    android:background="@color/white"
                    android:orientation="vertical">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llyRedeemContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/boc_space_between_20px"
                    android:paddingBottom="@dimen/boc_space_between_20px"
                    android:background="@color/white"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llyNoticeAndNewsBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/llyNewsAndNotices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="@dimen/boc_space_between_20px"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:id="@+id/llyNoticesTitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tvNotices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:text="公告 "
                            android:layout_marginRight="@dimen/boc_space_between_20px"
                            android:textSize="@dimen/boc_text_size_small"
                            android:textColor="@color/boc_text_color_red"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/imvNoticesLine"
                            android:layout_width="@dimen/boc_space_between_74px"
                            android:layout_height="@dimen/boc_space_between_6px"
                            android:layout_marginRight="@dimen/boc_space_between_16px"
                            android:layout_gravity="right"
                            android:background="@color/boc_text_color_red"
                            android:layout_marginTop="@dimen/boc_space_between_20px"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llyNewsTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tvNews"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/boc_space_between_20px"
                            android:layout_gravity="left"
                            android:text="新闻"
                            android:textSize="@dimen/boc_text_size_small"
                            android:textColor="@color/boc_text_color_common_gray"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/imvNewsLine"
                            android:layout_gravity="left"
                            android:layout_width="@dimen/boc_space_between_74px"
                            android:layout_height="@dimen/boc_space_between_6px"
                            android:layout_marginLeft="@dimen/boc_space_between_14px"
                            android:background="@color/boc_text_color_red"
                            android:layout_marginTop="@dimen/boc_space_between_20px"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/boc_divide_line" />

                <LinearLayout
                    android:id="@+id/llyNewsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/boc_space_between_20px"
                    android:paddingBottom="@dimen/boc_space_between_20px"
                    android:background="@color/white"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/boc_main_button_color"
                    android:textSize="@dimen/boc_text_size_small"
                    android:textStyle="bold"
                    android:text="帮助"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llyFeeRatio"
                android:layout_above="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:visibility="gone">
                <LinearLayout
                    android:padding="5dp"
                    android:background="@drawable/bg_fund_detail_radio_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvFeeRatioTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/boc_text_size_small"
                        android:text="申购费率"/>
                    <TextView
                        android:id="@+id/tvFeeRatioValueOld"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/boc_text_size_small"
                        android:text=""/>
                    <TextView
                        android:id="@+id/tvFeeRadioValueNew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/boc_text_size_small"
                        android:textStyle="bold"
                        android:text=""/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <!--标题下面的分隔线-->
    <include layout="@layout/boc_divide_line" />

    <LinearLayout
        android:id="@+id/llyAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFixedInvest"
            style="@style/fund_detail_white_btn"
            android:text="定投" />
        <Button
            android:id="@+id/btnRedeem"
            style="@style/fund_detail_red_btn"
            android:text="赎回"
            android:visibility="visible" />
        <Button
            android:id="@+id/btnPurchase"
            style="@style/fund_detail_white_btn"
            android:text="购买" />
    </LinearLayout>
</RelativeLayout>
