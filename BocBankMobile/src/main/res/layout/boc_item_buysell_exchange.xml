<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/boc_space_between_12px">
    <!--国旗-->
    <ImageView
        android:id="@+id/iv_national_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--币种-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical">
        <!--币种汉字-->
        <TextView
            android:id="@+id/tv_currency_china"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--币种字母-->
        <TextView
            android:id="@+id/tv_currency_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--银行卖出价-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!--汇-->
        <TextView
            android:id="@+id/tv_sell_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--钞-->
        <TextView
            android:id="@+id/tv_sell_remit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--银行买入价-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!--汇-->
        <TextView
            android:id="@+id/tv_buy_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--钞-->
        <TextView
            android:id="@+id/tv_buy_remit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
