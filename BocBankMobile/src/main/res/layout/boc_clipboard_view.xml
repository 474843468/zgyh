<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_180px"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_clipboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common"

            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:background="@color/boc_divider_line_color" />

    <TextView
        android:id="@+id/tv_clipboard_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_96px"
        android:gravity="center"
        android:text="复制"
        android:textColor="@color/boc_text_color_red"
        android:textSize="@dimen/boc_text_size_little_big"
        android:visibility="gone" />

</LinearLayout>