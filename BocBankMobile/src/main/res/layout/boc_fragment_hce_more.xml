<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/boc_common_bg_color"
              android:orientation="vertical">

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
        android:id="@+id/setting_default_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        app:editChoiceContent="56264941195"
        app:editChoiceName="默认支付卡"
        app:editChoiceNameBold="true"/>

    <include layout="@layout/boc_divide_line"/>

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
        android:id="@+id/setting_lock_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:editChoiceContent="关闭"
        app:editChoiceName="锁屏支付"
        app:editChoiceNameBold="true"/>

    <include layout="@layout/boc_divide_line"/>

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
        android:id="@+id/hce_user_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:editChoiceContent=""
        app:editChoiceName="用户指南"
        app:editChoiceNameBold="true"/>

</LinearLayout>