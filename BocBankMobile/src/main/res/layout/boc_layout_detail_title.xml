<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_main_btn_bg_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/boc_space_between_60px"
        android:layout_marginLeft="@dimen/boc_space_between_30px"
        android:gravity="center_vertical"
        android:text="退汇信息"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_small" />

    <View
        android:id="@+id/v_head"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/boc_common_view_line" />

    <LinearLayout
        android:id="@+id/ly_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>