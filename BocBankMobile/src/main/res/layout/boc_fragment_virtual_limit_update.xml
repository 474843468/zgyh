<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <View
        android:id="@+id/divider_top"
        style="@style/divider_horizontal" />

    <LinearLayout
        android:id="@+id/ll_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:orientation="vertical">

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditMoneyInputWidget
            android:id="@+id/et_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/boc_common_cell_color"
            app:moneyInputMaxLeftNum="11"
            app:editChoiceName="@string/boc_virtual_account_detail_update_account_single"
            app:editChoiceNameBold="true" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.BalanceHint.BalanceHintView
            android:id="@+id/hv_single"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_32px"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            android:layout_height="wrap_content"
            android:layout_gravity="left" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:orientation="vertical">

        <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditMoneyInputWidget
            android:id="@+id/et_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/boc_common_cell_color"
            app:editChoiceName="@string/boc_virtual_account_detail_update_account_total"
            app:moneyInputMaxLeftNum="11"
            app:editChoiceNameBold="true" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.BalanceHint.BalanceHintView
            android:id="@+id/hv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            android:layout_marginLeft="@dimen/boc_space_between_32px"
            android:layout_gravity="left" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        style="@style/BocButton.BocPrimaryButton1"
        android:layout_width="match_parent"
        android:text="@string/boc_common_next" />
</LinearLayout>