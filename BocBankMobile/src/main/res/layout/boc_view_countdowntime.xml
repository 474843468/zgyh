<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.boc.bocsoft.mobile.bocmobile.base.widget.progressbar.CircleProgressBar
        android:id="@+id/view_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_60px"
        app:circle_radius="@dimen/cicle_radius"
        app:circle_stroke_color="@color/boc_main_bg_color"
        app:progress_color="@color/boc_text_color_green"
        app:progress_width="@dimen/progress_width"
        app:text_color="@color/boc_text_color_dark_gray"
        app:text_second_size="@dimen/boc_text_size_common"
        app:text_size="@dimen/boc_text_size_58px"/>

    <TextView
        android:id="@+id/tv_tips"
        style="@style/tv_small"
        android:layout_marginTop="@dimen/boc_space_between_40px"
        android:paddingBottom="@dimen/boc_space_between_50px"
        android:text="@string/boc_pledge_result_qry_tips"
        android:textColor="@color/boc_text_color_dark_gray"/>
</LinearLayout>
