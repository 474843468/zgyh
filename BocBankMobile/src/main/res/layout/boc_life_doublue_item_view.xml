<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/boc_space_between_28px"
    android:paddingRight="@dimen/boc_space_between_18px"
    >

  <TextView
      android:id="@+id/tv_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/boc_text_color_dark_gray"
      android:textSize="@dimen/boc_text_size_common"
      android:layout_marginBottom="@dimen/boc_space_between_2px"
      android:textStyle="bold"
      android:layout_marginTop="@dimen/boc_space_between_26px"
      android:maxLines="1"
      android:ellipsize="end"
  />
  <TextView
      android:id="@+id/tv_info"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tv_name"
      android:textColor="@color/boc_text_color_common_gray"
      android:textSize="@dimen/boc_text_size_small"
      android:layout_marginBottom="@dimen/boc_space_between_32px"
      android:maxLines="1"
      android:ellipsize="end"
  />
  <ImageView
      android:id="@+id/iv_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:paddingTop="@dimen/boc_space_between_12px"
      android:layout_marginLeft="@dimen/boc_space_between_20px"
  />
</RelativeLayout>