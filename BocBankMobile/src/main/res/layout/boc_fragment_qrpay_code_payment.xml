<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_qrpay_csan"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_qrpay_code_big"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/boc_common_cell_color"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_qrpay_code_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_titlebar_height"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_qrpay_title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/boc_back_white" />

        <TextView
            android:id="@+id/tv_qrpay_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/boc_qrpay_payment"
            android:textColor="@color/boc_common_cell_color"
            android:textSize="@dimen/boc_text_size_big"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_30px"
        android:background="@drawable/boc_card_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_qrpay_code_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_40px" />

        <ImageView
            android:id="@+id/iv_qrpay_code_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_20px" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_divider_1px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_30px"
            android:background="@color/boc_common_view_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_110px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_10px"
                android:lineSpacingExtra="@dimen/boc_space_between_6px"
                android:text="@string/boc_qrpay_pay_account"
                android:textColor="@color/boc_text_color_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                android:id="@+id/tv_qrpay_code_pay_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_10px"
                android:lineSpacingExtra="@dimen/boc_space_between_6px"
                android:text="6234 ****** 1234"
                android:textColor="@color/boc_text_color_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                android:id="@+id/tv_qrpay_code_change_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                android:lineSpacingExtra="@dimen/boc_space_between_6px"
                android:padding="@dimen/boc_space_between_10px"
                android:text="@string/boc_qrpay_change"
                android:textColor="@color/boc_main_button_color"
                android:textSize="@dimen/boc_text_size_small" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_110px"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_qrcode_pay_refresh_code"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:padding="@dimen/boc_space_between_30px"
            android:src="@drawable/icon_qrpay_refresh" />

        <TextView
            android:id="@+id/qrcode_pay_refresh_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/boc_space_between_20px"
            android:text="@string/boc_qrpay_pay_hand_refresh"
            android:textColor="@color/boc_common_cell_color"
            android:textSize="@dimen/boc_text_size_small"
            android:textStyle="bold"
            android:visibility="gone" />


    </LinearLayout>


</LinearLayout>