<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/boc_main_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:background="@color/boc_common_cell_color"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_40px">
            <TextView
                android:id="@+id/pay_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:text=""
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                android:id="@+id/pay_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/boc_popdialog_padding_30px"
                android:layout_marginTop="@dimen/boc_space_between_8px"
                android:textColor="@color/boc_common_cell_color"
                 />
        </RelativeLayout>
        <TextView
            android:id="@+id/pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="28dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/boc_space_between_40px"
            android:background="@color/boc_common_view_line" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
            android:id="@+id/fail_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textName="@string/boc_wealth_fail_reason"
            app:textValue=""/>
        <LinearLayout
            android:id="@+id/ll_product_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_80px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/boc_space_between_160px"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:gravity="center_vertical"
                android:text="@string/boc_wealth_product_name"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_small" />
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/boc_space_between_50px"
                android:layout_marginRight="6dp"
                android:gravity="center_vertical"
                android:maxWidth="160dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:layout_weight="1"
                style="@style/tv_small"
                android:textStyle="bold"
                android:textColor="@color/boc_text_color_common_gray"/>
            <TextView
                android:id="@+id/product_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/boc_main_button_color"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_cell_color"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:orientation="vertical">
        <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
            android:id="@+id/detail_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textName="@string/boc_wealth_transaction_type"
            app:textValue=""/>
        <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
            android:id="@+id/detail_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textName="@string/boc_wealth_net_value"
            app:textValue=""/>
        <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
            android:id="@+id/detail_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textName="@string/boc_wealth_count"
            app:textValue=""/>
        <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
            android:id="@+id/detail_charge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textName="@string/boc_wealth_charge_fee"
            app:textValue=""/>
        <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
            android:id="@+id/detail_rewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textName="@string/boc_wealth_rewards"
            app:textValue=""/>
        <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
            android:id="@+id/detail_entrust_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textName="@string/boc_wealth_entrust_date"
            app:textValue=""/>
        <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
            android:id="@+id/detail_operate_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textName="@string/boc_wealth_operate_date"
            app:textValue=""/>
        <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
            android:id="@+id/detail_success_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:textName="@string/boc_wealth_success_date"
            app:textValue=""/>
    </LinearLayout>
</LinearLayout>
