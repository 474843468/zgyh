<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:paddingTop="@dimen/boc_space_between_470px"
    android:background="@drawable/oversea_ew_in_bg">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/exchange_settlement"
                style="@style/OverseaszoneNormalTv" />

            <TextView
                android:id="@+id/exchange_purchasing"
                android:layout_marginTop="@dimen/boc_space_between_60px"
                style="@style/OverseaszoneNormalTv"
                />

            <TextView
                android:id="@+id/remit"
                android:layout_marginTop="@dimen/boc_space_between_60px"
                style="@style/OverseaszoneNormalTv"/>

            <TextView
                android:id="@+id/credit_card_loss"
                android:layout_marginTop="@dimen/boc_space_between_60px"
                style="@style/OverseaszoneNormalTv"/>

            <TextView
                android:id="@+id/debit_card_loss"
                android:layout_marginTop="@dimen/boc_space_between_60px"
                style="@style/OverseaszoneNormalTv"
                />

            <TextView
                android:id="@+id/inward"
                android:layout_marginTop="@dimen/boc_space_between_60px"
                style="@style/OverseaszoneNormalTv"
                />

            <TextView
                android:id="@+id/manage_money"
                android:layout_below="@+id/inward"
                android:layout_marginTop="@dimen/boc_space_between_60px"
                style="@style/OverseaszoneNormalTv" />

            <TextView
                android:id="@+id/more_service"
                android:layout_below="@+id/manage_money"
                style="@style/OverseaszoneNormalTv"
                android:layout_marginTop="@dimen/boc_space_between_60px"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/boc_space_between_20px">
                <TextView
                    android:id="@+id/pre_settlement_remittance"
                    android:layout_marginLeft="@dimen/boc_space_between_50px"
                    style="@style/OverseaszoneTv"
                    />

                <TextView
                    android:id="@+id/credit_information_service"
                    android:layout_marginRight="@dimen/boc_space_between_50px"
                    style="@style/OverseaszoneTv" />
            </LinearLayout>
        </LinearLayout>
</ScrollView>
