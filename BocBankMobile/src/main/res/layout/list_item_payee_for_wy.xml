<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D8D8E0"/>

    <FrameLayout
        android:id="@+id/fl_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/letter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_54px"
            android:background="#F9F9F9"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="A"
            android:textColor="@android:color/black"
            android:textSize="@dimen/boc_text_size_common"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            android:background="#D8D8E0"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_122px"
        android:background="@drawable/boc_letter_bg_selector"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/boc_space_between_130px"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_bank_logo"
                android:layout_width="@dimen/boc_space_between_62px"
                android:layout_height="@dimen/boc_space_between_62px"
                android:layout_gravity="center"
                android:src="@drawable/ic_bank_logo_18"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安德海"
                    android:textColor="@color/boc_black"
                    android:textSize="@dimen/boc_text_size_common"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_ding_xiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/darker_gray"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="定向"
                    android:textColor="@color/boc_titlebar_text_white"
                    android:textSize="@dimen/boc_text_size_small"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_shi_shi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="#FFDC00"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="实时"
                    android:textColor="@color/boc_titlebar_text_white"
                    android:textSize="@dimen/boc_text_size_small"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_2px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6222 ****** 9882"
                    android:textColor="@color/boc_black"
                    android:textSize="@dimen/boc_text_size_very_small"/>

                <View
                    android:id="@+id/view_separate_line"
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/boc_space_between_28px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/boc_space_between_18px"
                    android:layout_marginRight="@dimen/boc_space_between_18px"
                    android:background="@color/boc_black"/>

                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="155dp"
                    android:singleLine="true"
                    android:text="农业银行农业银行农业银行农业银行农业银行农业银行农业银行"
                    android:textColor="@color/boc_black"
                    android:textSize="@dimen/boc_text_size_small"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
