<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/other_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/boc_common_cell_color"
    android:paddingBottom="@dimen/boc_space_between_60px">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:id="@+id/other_liuxue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="@dimen/boc_space_between_104px"
                android:layout_height="@dimen/boc_space_between_104px"
                android:src="@drawable/boc_consumefinance_studyloan_icon"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/boc_space_between_26px"
                android:layout_marginTop="@dimen/boc_space_between_10px"
                android:textColor="@color/boc_text_color_dark_gray"
                android:text="@string/consumefinance_loanname_study"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/other_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_128px"
            android:layout_marginRight="@dimen/boc_space_between_128px"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="@dimen/boc_space_between_104px"
                android:layout_height="@dimen/boc_space_between_104px"
                android:src="@drawable/boc_consumefinance_carloan_icon"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/boc_space_between_10px"
                android:textSize="@dimen/boc_space_between_26px"
                android:textColor="@color/boc_text_color_dark_gray"
                android:text="@string/consumefinance_loanname_car"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/other_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="@dimen/boc_space_between_104px"
                android:layout_height="@dimen/boc_space_between_104px"
                android:src="@drawable/boc_consumefinance_assetloan_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/boc_space_between_26px"
                android:layout_marginTop="@dimen/boc_space_between_10px"
                android:textColor="@color/boc_text_color_dark_gray"
                android:text="@string/consumefinance_loanname_asset"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
