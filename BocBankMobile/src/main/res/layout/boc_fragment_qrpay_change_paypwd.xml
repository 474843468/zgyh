<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_104px"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:background="@drawable/boc_card_background"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/boc_space_between_32px"
        android:paddingRight="@dimen/boc_space_between_30px">

        <TextView
            android:id="@+id/tv_set_pwd_title"
            android:layout_width="@dimen/boc_space_between_190px"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/boc_space_between_6px"
            android:text="@string/boc_qrpay_last_pwd"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common" />

        <cfca.mobile.sip.SipBox
            android:id="@+id/qrcode_pay_sipbox_pay_pwd_last"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/boc_common_input_hint"
            android:paddingLeft="@dimen/boc_space_between_50px"
            android:singleLine="true"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textColorHint="@color/boc_text_color_light_gray"
            android:textSize="@dimen/boc_text_size_common" />
    </LinearLayout>

    <TextView
        android:id="@+id/qrcode_pay_btn_pay_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/boc_space_between_40px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:gravity="center_vertical|right"
        android:layout_gravity="right"
        android:lineSpacingExtra="@dimen/boc_space_between_6px"
        android:paddingRight="@dimen/boc_space_between_20px"
        android:text="@string/boc_qrpay_forget_pay_pwd"
        android:textColor="@color/boc_main_button_color"
        android:textSize="@dimen/boc_text_size_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_104px"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_32px"
        android:background="@drawable/boc_card_background"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/boc_space_between_32px"
        android:paddingRight="@dimen/boc_space_between_30px">

        <TextView
            android:layout_width="@dimen/boc_space_between_190px"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/boc_space_between_6px"
            android:text="@string/boc_qrpay_new_pwd"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common" />

        <cfca.mobile.sip.SipBox
            android:id="@+id/qrcode_pay_sipbox_pay_pwd_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/boc_common_input_hint"
            android:paddingLeft="@dimen/boc_space_between_50px"
            android:singleLine="true"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textColorHint="@color/boc_text_color_light_gray"
            android:textSize="@dimen/boc_text_size_common" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_104px"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_32px"
        android:background="@drawable/boc_card_background"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/boc_space_between_32px"
        android:paddingRight="@dimen/boc_space_between_30px">

        <TextView
            android:layout_width="@dimen/boc_space_between_190px"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/boc_space_between_6px"
            android:text="@string/boc_qrpay_new_again_pwd"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common" />

        <cfca.mobile.sip.SipBox
            android:id="@+id/qrcode_pay_sipbox_pay_pwd_new_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/boc_common_input_hint"
            android:paddingLeft="@dimen/boc_space_between_50px"
            android:singleLine="true"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textColorHint="@color/boc_text_color_light_gray"
            android:textSize="@dimen/boc_text_size_common" />
    </LinearLayout>


    <Button
        android:id="@+id/qrcode_pay_btn_pay_pwd_confirm"
        style="@style/BocButton.BocPrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_88px"
        android:layout_marginTop="@dimen/boc_space_between_80px"
        android:text="@string/boc_common_sure" />

</LinearLayout>