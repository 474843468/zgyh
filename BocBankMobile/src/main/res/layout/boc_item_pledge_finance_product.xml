<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_cell_color"
    android:paddingBottom="@dimen/boc_space_between_20px"
    android:paddingLeft="@dimen/boc_space_between_40px"
    android:paddingRight="@dimen/boc_space_between_40px"
    android:paddingTop="@dimen/boc_space_between_20px">

    <TextView
        android:id="@+id/tv_name"
        style="@style/tv_small"
        android:paddingBottom="@dimen/boc_space_between_10px"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textStyle="bold"
        tools:text="日积月累"/>

    <TextView
        android:id="@id/tv_todate"
        style="@style/tv_small"
        android:layout_below="@id/tv_name"
        tools:text="到期日2016/12/31"/>

    <TextView
        android:id="@+id/tv_currency"
        style="@style/tv_small"
        android:layout_alignParentRight="true"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textStyle="bold"
        tools:text="人民币元"/>

    <TextView
        android:id="@id/tv_money"
        style="@style/tv_common"
        android:layout_alignBottom="@id/tv_todate"
        android:layout_alignParentRight="true"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textStyle="bold"
        tools:text="200,000.00"/>

</RelativeLayout>