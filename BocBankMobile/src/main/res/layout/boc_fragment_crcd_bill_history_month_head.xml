<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_bill_date"
        style="@style/BocTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_cell_color"
        android:paddingBottom="@dimen/boc_space_between_20px"
        android:paddingLeft="@dimen/boc_space_between_30px"
        android:paddingTop="@dimen/boc_space_between_20px"
        tools:text="账单日" />

    <com.boc.bocsoft.mobile.bocmobile.buss.creditcard.billquery.widget.CrcdBillInfoItemView
        android:id="@+id/bill_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_bill_send"
        style="@style/BocTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_88px"
        android:background="@color/boc_common_cell_color"
        android:gravity="center"
        android:text="@string/boc_crcd_bill_send"
        android:textColor="@color/boc_bg_blue" />

    <com.boc.bocsoft.mobile.bocmobile.buss.creditcard.billquery.widget.CrcdBillInfoItemView
        android:id="@+id/bill_money_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_20px" />

</LinearLayout>