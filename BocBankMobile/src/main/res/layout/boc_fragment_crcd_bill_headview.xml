<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:background="@color/boc_common_bg_color"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--账单日-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_60px"
        android:paddingLeft="@dimen/boc_space_between_30px"
        android:paddingRight="@dimen/boc_space_between_30px"
        android:background="@color/boc_common_cell_color"
        >

        <TextView
            android:text="@string/boc_crcd_bill_y_bill_date"
            android:id="@+id/tv_bill_date"
            android:layout_centerVertical="true"
            style="@style/tv_common"/>
        <TextView
            android:id="@+id/bill_date"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_bill_date"
            android:layout_marginLeft="@dimen/boc_space_between_10px"
            android:text="2016/12/02"
            style="@style/tv_common"/>
        <TextView
            android:id="@+id/bill_state"
            android:layout_centerVertical="true"
            android:textColor="@color/boc_text_color_green"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/boc_space_between_44px"
            android:paddingLeft="@dimen/boc_space_between_16px"
            android:paddingRight="@dimen/boc_space_between_16px"
            android:gravity="center"
            android:text="已还清"
            android:background="@drawable/bg_crcd_bill_state_green"
            style="@style/tv_common"/>


    </RelativeLayout>

    <!--账单信息-->
    <com.boc.bocsoft.mobile.bocmobile.buss.creditcard.billquery.widget.CrcdBillInfoItemView
        android:id="@+id/crcdBillInfoItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <!--账单分期、立即还款、发送账单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/boc_space_between_80px"
        android:background="@color/boc_common_cell_color"
        >
        <TextView
            android:id="@+id/tv_billinstallments"
            style="@style/tv_common"
            android:textColor="@color/boc_text_color_light_blue"
            android:text="账单分期"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />

        <View
            android:layout_width="@dimen/boc_divider_1px"
            android:layout_height="match_parent"
            android:background="@color/boc_divider_line_color"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:layout_marginBottom="@dimen/boc_space_between_10px"
            />
        <TextView
            android:id="@+id/tv_immediaterepayment"
            style="@style/tv_common"
            android:textColor="@color/boc_text_color_light_blue"
            android:text="立即还款"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
        <View
            android:layout_width="@dimen/boc_divider_1px"
            android:layout_height="match_parent"
            android:background="@color/boc_divider_line_color"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:layout_marginBottom="@dimen/boc_space_between_10px"
            />
        <TextView
            android:id="@+id/tv_send_bill"
            style="@style/tv_common"
            android:textColor="@color/boc_text_color_light_blue"
            android:text="发送账单"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <!--账单收支情况-->
    <com.boc.bocsoft.mobile.bocmobile.buss.creditcard.billquery.widget.CrcdBillInfoItemView
        android:id="@+id/incomeExpendInfoItemLayout"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_cell_color"
        android:visibility="gone"
        />

    <!--无交易明细-->
    <TextView
        android:id="@+id/tv_no_result"
        android:visibility="gone"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawablePadding="@dimen/boc_space_between_40px"
        android:drawableTop="@drawable/boc_icon_no_product"
        android:gravity="center_horizontal"
        android:text="@string/boc_crcd_bill_y_bill_detail_no_result"
        android:textColor="@color/boc_text_color_rest_gray"
        android:textSize="@dimen/boc_text_size_common" />
</LinearLayout>
