<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_round_progressbar_gray">

    <View
        android:id="@+id/divider_top"
        style="@style/divider_horizontal"
        android:layout_alignParentTop="true"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider_top"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/boc_common_cell_color"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_space_between_20px"
                android:background="@color/boc_round_progressbar_gray" />

            <TextView
                android:id="@+id/tv_risk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_88px"
                android:textColor="@color/boc_text_color_gray"
                android:text="@string/boc_risk_assess_think_level"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                android:id="@+id/tv_risk_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_space_between_50px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_risk_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_30px"
                android:textColor="@color/boc_text_color_dark_gray"
                android:textSize="@dimen/boc_text_size_small"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_risk"
                android:layout_width="@dimen/boc_space_between_260px"
                android:layout_height="@dimen/boc_space_between_260px"
                android:layout_marginTop="@dimen/boc_space_between_80px"
                android:background="@drawable/boc_risk_assess_cheng_zhang" />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_30px"
                android:paddingLeft="@dimen/boc_space_between_30px"
                android:paddingRight="@dimen/boc_space_between_30px"
                android:textColor="@color/boc_text_color_gray"
                android:textSize="@dimen/boc_text_size_small" />

            <LinearLayout
                android:id="@+id/tv_risk_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_110px"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/boc_risk_assess_think_something"
                    android:textColor="@color/boc_text_color_gray"
                    android:textSize="@dimen/boc_space_between_26px" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/boc_space_between_20px"
                    android:text="@string/boc_risk_assess_keep"
                    android:textColor="@color/boc_main_button_color"
                    android:textSize="@dimen/boc_space_between_26px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/boc_round_progressbar_gray"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_ok"
                    style="@style/BocButton.BocPrimaryButton"
                    android:layout_marginBottom="@dimen/boc_space_between_40px"
                    android:layout_marginTop="@dimen/boc_space_between_40px" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>