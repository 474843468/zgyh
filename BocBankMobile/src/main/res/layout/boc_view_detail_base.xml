<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/boc_divider_line_color" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableHead
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailContentView
        android:id="@+id/body_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailContentGroupView
        android:id="@+id/group_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DeatilsBottomTableButtom
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />

</LinearLayout>
