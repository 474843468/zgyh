<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <include layout="@layout/boc_divide_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/boc_common_bg_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llyFundPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:orientation="vertical">
                <include layout="@layout/boc_divide_line"/>
                <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:editChoiceName="@string/boc_position_my_position" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyFloatingCalc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/boc_divide_line" />
                <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:editChoiceName="@string/boc_fund_floating_calc" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyFundstatement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/boc_divide_line" />
                <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:editChoiceName="@string/boc_fund_statement" />
            </LinearLayout>
            <include layout="@layout/boc_divide_line"/>



            <LinearLayout
                android:id="@+id/llyValidInvest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:orientation="vertical">
                <include layout="@layout/boc_divide_line"/>
                <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:editChoiceName="@string/boc_fund_valid_invest" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyInvalidInvest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/boc_divide_line" />
                <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:editChoiceName="@string/boc_fund_invalide_invest" />
            </LinearLayout>
            <include layout="@layout/boc_divide_line"/>




            <LinearLayout
                android:id="@+id/llyFundTransAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:orientation="vertical">
                <include layout="@layout/boc_divide_line"/>
                <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:editChoiceName="@string/boc_fund_trans_account" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyFundTaAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/boc_divide_line"/>
                <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:editChoiceName="@string/boc_fund_ta_account" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyRightsNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/boc_divide_line" />
                <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:editChoiceName="@string/boc_fund_rights_notice" />
            </LinearLayout>
            <include layout="@layout/boc_divide_line"/>



            <LinearLayout
                android:id="@+id/llyTransitTrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:orientation="vertical">
                <include layout="@layout/boc_divide_line" />
                <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:editChoiceName="@string/boc_fund_transit_trade" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyHistoryTrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/boc_divide_line" />
                <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:editChoiceName="@string/boc_fund_history_trade" />
            </LinearLayout>
            <include layout="@layout/boc_divide_line"/>



            <LinearLayout
                android:id="@+id/llyFundRec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:orientation="vertical">
                <include layout="@layout/boc_divide_line" />
                <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:editChoiceName="@string/boc_fund_rec" />
            </LinearLayout>
            <include layout="@layout/boc_divide_line"/>


            <LinearLayout
                android:id="@+id/llyHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:orientation="vertical">
                <include layout="@layout/boc_divide_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/boc_divider_1px"
                    android:layout_marginLeft="@dimen/boc_space_between_30px"/>
                <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:editChoiceName="@string/boc_wealth_protocol_help" />
            </LinearLayout>
            <include layout="@layout/boc_divide_line"/>
            <LinearLayout
                android:id="@+id/llyrisk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:orientation="vertical">
                <include layout="@layout/boc_divide_line"
                         android:layout_width="match_parent"
                         android:layout_height="@dimen/boc_divider_1px"
                         android:layout_marginLeft="@dimen/boc_space_between_30px"/>
                <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:editChoiceName="风险评估" />
            </LinearLayout>
            <include layout="@layout/boc_divide_line"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>




