<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_select_count"
    android:layout_width="match_parent"
    android:layout_height="@dimen/boc_space_between_62px"
    android:background="@color/boc_common_view_line"
    android:orientation="horizontal"
    android:paddingBottom="1dp"
    android:visibility="gone">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/boc_main_btn_bg_color"
      android:gravity="center_vertical|left"
      android:orientation="horizontal"
      android:paddingLeft="@dimen/boc_space_between_60px">
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:background="@drawable/ding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boc_main_invest_notice1"
        android:textColor="@color/boc_text_color_common_gray"/>

    <TextView
        android:id="@+id/tv_added_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/boc_text_color_dark_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boc_main_invest_notice4"
        android:textColor="@color/boc_text_color_common_gray"/>

    <TextView
        android:id="@+id/tv_remainder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/boc_text_color_dark_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boc_main_invest_notice5"
        android:textColor="@color/boc_text_color_common_gray"/>
  </LinearLayout>
</LinearLayout>