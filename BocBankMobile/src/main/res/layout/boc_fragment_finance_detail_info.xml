<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <View
        android:id="@+id/benr_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/boc_common_view_line"
         />
    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/dtr_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textName="@string/boc_finance_account_detail_name"
        />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/dtr_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textName="@string/boc_finance_account_detail_account"
        />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/dtr_total_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textName="@string/boc_finance_account_detail_total_balance"
        />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/dtr_supply_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textName="@string/boc_finance_account_detail_supply_balance"
        />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/dtr_cash_upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textName="@string/boc_finance_account_detail_cash_upper"
        />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/dtr_single_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textName="@string/boc_finance_account_detail_single_limit"
        />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.details.DetailTableRow
        android:id="@+id/dtr_account_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textName="@string/boc_finance_account_detail_status"
        />


</LinearLayout>