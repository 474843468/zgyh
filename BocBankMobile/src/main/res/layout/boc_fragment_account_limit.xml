<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <com.boc.bocsoft.mobile.bocmobile.base.widget.selectaccoutview.SelectAccountButton
        android:id="@+id/btn_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/boc_space_between_20px"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:paddingLeft="@dimen/boc_space_between_20px"
        android:paddingRight="@dimen/boc_space_between_20px" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
        android:id="@+id/et_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_cell_color"
        app:editChoiceName="@string/boc_account_limit_update"
        app:editChoiceNameBold="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_divider_1px"
        android:layout_marginLeft="@dimen/boc_space_between_30px"
        android:background="@color/boc_common_view_line" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_cell_color"
        app:editChoiceName="@string/boc_account_limit_password"
        app:editChoiceNameBold="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_divider_1px"
        android:layout_marginLeft="@dimen/boc_space_between_30px"
        android:background="@color/boc_common_view_line" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
        android:id="@+id/et_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_cell_color"
        app:editChoiceName="@string/boc_account_limit_border"
        app:editChoiceNameBold="true" />

</LinearLayout>