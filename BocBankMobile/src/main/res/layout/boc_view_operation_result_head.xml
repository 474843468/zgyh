<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_operator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color">

    <ImageView
        android:id="@+id/img_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/boc_space_between_74px"
        android:background="@drawable/boc_operator_succeed" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/boc_space_between_30px"
        android:layout_marginBottom="@dimen/boc_space_between_30px"
        android:text="充值成功"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_common" />

    <TextView
        android:id="@+id/tv_result_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_result"
        android:background="@color/boc_common_cell_color"
        android:paddingLeft="@dimen/boc_space_between_44px"
        android:paddingRight="@dimen/boc_space_between_52px"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_space_between_26px"
        android:gravity="center_horizontal"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_result"
        android:background="@color/boc_common_cell_color"
        android:lineSpacingExtra="5dp"
        android:paddingLeft="@dimen/boc_space_between_44px"
        android:paddingRight="@dimen/boc_space_between_52px"
        android:paddingTop="@dimen/boc_space_between_66px"
        android:textStyle="bold"
        android:textColor="@color/boc_text_color_common_gray"
        android:textSize="@dimen/boc_space_between_26px"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/text_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_result"
        android:background="@color/boc_common_cell_color"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:gravity="center_horizontal"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_space_between_26px"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_head_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_info"
        android:orientation="vertical"
        android:paddingTop="@dimen/boc_space_between_50px"
        android:visibility="gone">

    </LinearLayout>

</RelativeLayout>