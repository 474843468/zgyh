<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_main_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_content"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_30px"
            android:textSize="@dimen/boc_text_size_common"
            android:text="@string/boc_account_across_bank_no_data"
            android:textStyle="bold" />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.transactionlist.FullListView
            android:id="@+id/lv_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_104px"
            android:layout_marginBottom="@dimen/boc_space_between_20px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            android:layout_marginRight="@dimen/boc_space_between_20px"
            android:layout_marginTop="@dimen/boc_space_between_80px"
            android:background="@drawable/boc_button_bg_across_bank_grey"
            android:padding="@dimen/boc_space_between_26px"
            android:src="@drawable/btn_left_top_add" />
    </LinearLayout>
</ScrollView>
