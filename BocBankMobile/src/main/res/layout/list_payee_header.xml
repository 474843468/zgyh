<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D8D8E0"/>

    <RelativeLayout
        android:id="@+id/rl_new_payee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_120px"
        android:background="@drawable/boc_letter_bg_selector">

        <ImageView
            android:id="@+id/iv_bank_logo_new"
            android:layout_width="@dimen/boc_space_between_62px"
            android:layout_height="@dimen/boc_space_between_62px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/boc_space_between_44px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/boc_space_between_136px"
            android:layout_marginRight="@dimen/boc_space_between_52px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_payee_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="安德海安德海安德海安德海安德海安德海安德海安德海安德海安德海安德海安德海"
                    android:textColor="@color/boc_black"
                    android:textSize="@dimen/boc_text_size_common"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="17.8dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/new_item"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/boc_text_size_common"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_2px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_account_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6222 ****** 9882"
                    android:textColor="@color/boc_black"
                    android:textSize="@dimen/boc_text_size_very_small"/>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/boc_space_between_28px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/boc_space_between_18px"
                    android:layout_marginRight="@dimen/boc_space_between_18px"
                    android:background="@color/boc_black"/>

                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="145dp"
                    android:singleLine="true"
                    android:text="农业银行农业银行农业银行农业银行农业银行农业银行"
                    android:textColor="@color/boc_black"
                    android:textSize="@dimen/boc_text_size_small"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
