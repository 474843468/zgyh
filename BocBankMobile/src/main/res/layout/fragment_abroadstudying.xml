<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id ="@+id/applyschool_scro"
    android:scrollbars="none"
    android:paddingTop="@dimen/boc_space_between_540px"
    android:background="@drawable/overseazone_abroadstudyingfragment_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_remittance"
                android:layout_alignParentTop="true"
               style="@style/OverseaszoneNormalTv"
                />

            <TextView
                android:id="@+id/tv_credit_card_loss"
                android:layout_below="@+id/tv_remittance"
                android:layout_marginTop="@dimen/boc_space_between_60px"
                style="@style/OverseaszoneNormalTv"
                />

            <TextView
                android:id="@+id/tv_debit_card_loss"
                style="@style/OverseaszoneNormalTv"
                android:layout_below="@+id/tv_credit_card_loss"
                android:layout_marginTop="@dimen/boc_space_between_60px"
               />


        </RelativeLayout>
</ScrollView>