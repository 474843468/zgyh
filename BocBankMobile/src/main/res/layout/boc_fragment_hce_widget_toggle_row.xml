<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_container"
              android:layout_width="match_parent"
              android:layout_height="@dimen/boc_button_height_104px"
              android:background="@color/boc_common_cell_color"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_toggle_title"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/boc_space_between_30px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="锁屏支付"
            android:textColor="@color/boc_text_color_dark_gray"/>

        <CheckBox
            android:id="@+id/toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/boc_space_between_30px"
            android:background="@drawable/boc_bg_checkbox"
            android:checked="true"
            android:button="@null"
            />
    </LinearLayout>

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/boc_divider_line_color"
        android:visibility="visible"/>
</LinearLayout>
