<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_oversea_menucontent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_40px"
        android:layout_marginBottom="@dimen/boc_space_between_20px"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/date_hint"
            style="@style/tv_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/boc_common_cell_color"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/boc_space_between_20px"
            android:text="@string/boc_fund_position_refer_value"/>
        <ImageView
            android:id="@+id/invest_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/boc_space_between_20px"
            android:src="@drawable/icon_invest_eye_selector"/>
    </RelativeLayout>

    <include
        layout="@layout/boc_divide_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_divider_1px"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_marginRight="@dimen/boc_space_between_20px"
        android:textColor="@color/boc_common_cell_color"/>
    <LinearLayout
        android:id="@+id/head"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/boc_space_between_40px"
        android:paddingBottom="@dimen/boc_space_between_40px"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_unit"
            style="@style/tv_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/boc_common_cell_color"
            android:text="单位"/>
        <TextView
            android:id="@+id/tv_num"
            style="@style/tv_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/boc_common_cell_color"
            android:text="单位"/>

    </LinearLayout>
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TableLayout>
    <ImageView
        android:id="@+id/img_more"
        android:layout_marginTop="@dimen/boc_space_between_20px"
        android:layout_marginBottom="@dimen/boc_space_between_20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/boc_titlebar_bg_red"
        android:src="@drawable/boc_expandable_indiction"/>

</LinearLayout>