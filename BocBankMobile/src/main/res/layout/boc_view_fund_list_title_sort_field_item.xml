<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/boc_space_between_200px"
    android:layout_height="@dimen/boc_space_between_60px"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/boc_common_cell_color">
    <TextView
        android:id="@+id/tvFieldName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="单位净值"
        android:textSize="@dimen/boc_text_size_small"
        android:textColor="@color/boc_text_color_common_gray"/>
    <ImageView
        android:id="@+id/imvSort"
        android:layout_marginLeft="@dimen/boc_space_between_6px"
        android:layout_width="@dimen/boc_space_between_14px"
        android:layout_height="@dimen/boc_space_between_28px"
        android:background="@drawable/sort_def"/>
</LinearLayout>
