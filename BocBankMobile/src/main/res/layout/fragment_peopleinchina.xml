<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fadingEdge="none"
    android:background="@drawable/bg_fragment_peopleinchina">
    <ScrollView
        android:id="@+id/scroll_laihua"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/boc_space_between_440px"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/tv_exchange_settlement"
                style="@style/OverseaszoneNormalTv"
                />

            <TextView
                android:id="@+id/tv_exchange_purchasing"
                android:layout_below="@+id/tv_exchange_settlement"
                style="@style/OverseaszoneNormalTv"
                android:layout_marginTop="@dimen/boc_space_between_60px"
               />

            <TextView
                android:id="@+id/tv_wealth_management"
                android:layout_below="@+id/tv_exchange_purchasing"
                style="@style/OverseaszoneNormalTv"
                android:layout_marginTop="@dimen/boc_space_between_60px"
                />

            <TextView
                android:id="@+id/tv_deposit"
                android:layout_below="@+id/tv_wealth_management"
                style="@style/OverseaszoneNormalTv"
                android:layout_marginTop="@dimen/boc_space_between_60px"
                />

            <TextView
                android:id="@+id/tv_credit_card"
                android:layout_below="@+id/tv_deposit"
                style="@style/OverseaszoneNormalTv"
                android:layout_marginTop="@dimen/boc_space_between_60px"
                android:textSize="@dimen/boc_text_size_small" />

            <TextView
                android:id="@+id/tv_more_service"
                android:layout_below="@+id/tv_credit_card"
                style="@style/OverseaszoneNormalTv"
                android:layout_marginTop="@dimen/boc_space_between_60px"
               />

            <TextView
                android:id="@+id/tv_clean_collection"
                android:layout_marginLeft="@dimen/boc_space_between_50px"
                android:layout_below="@+id/tv_more_service"
                style="@style/OverseaszoneTv"/>

            <TextView
                android:id="@+id/tv_traveller_cheque"
                android:layout_below="@+id/tv_more_service"
                android:layout_toRightOf="@+id/tv_clean_collection"
                style="@style/OverseaszoneTv" />

        </RelativeLayout>

    </ScrollView>


    <include layout="@layout/fragment_peopleinchina_title"
        android:id="@+id/laihuarenshiTitle"
        android:layout_width="match_parent"
        android:background="@color/bocroa_transparent"
        android:layout_height="@dimen/boc_space_between_90px"/>
</RelativeLayout>