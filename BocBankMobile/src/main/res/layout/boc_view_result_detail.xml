<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/boc_divide_line" />

    <LinearLayout
        android:id="@+id/ll_detail_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_cell_color"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.boc.bocsoft.mobile.bocmobile.base.widget.ClickableSpan.SpannableString
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_88px"
            android:background="@color/boc_common_cell_color"
            android:gravity="center"
            android:text="@string/boc_result_detail"
            android:textColor="@color/boc_main_button_color"
            android:textSize="@dimen/boc_space_between_30px" />

        <include layout="@layout/boc_divide_line" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boc_common_cell_color"
        android:orientation="vertical"
        android:visibility="gone" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.ClickableSpan.SpannableString
        android:id="@+id/tv_hint"
        style="@style/tv_small"
        android:textColor="@color/boc_text_color_rest_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/boc_space_between_30px"
        android:layout_marginRight="@dimen/boc_space_between_30px"
        android:layout_marginTop="@dimen/boc_space_between_26px"
        android:visibility="gone" />

</LinearLayout>