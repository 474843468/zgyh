<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_cell_color"
    android:orientation="horizontal">


    <EditText
        android:id="@+id/et_clear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_clear_edit_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/boc_space_between_16px"
        android:paddingLeft="@dimen/boc_space_between_16px"
        android:paddingRight="@dimen/boc_space_between_16px"
        android:paddingTop="@dimen/boc_space_between_16px"
        android:visibility="gone" />

</LinearLayout>