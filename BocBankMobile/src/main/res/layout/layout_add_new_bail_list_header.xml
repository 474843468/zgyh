<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#F0EFF5"
              android:orientation="vertical">

    <com.boc.bocsoft.mobile.bocmobile.base.widget.edittext.EditChoiceWidget
        android:id="@+id/ecw_choose_debit_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="11dp"
        android:background="@drawable/boc_button_bg_gray_no_stroke"
        android:padding="1.5dp"
        app:editChoiceContent="6222 ****** 0000"
        app:editChoiceName="交易账户"
        app:editChoiceNameBold="true"/>

    <TextView
        android:id="@+id/tv_notice_choose_bail_product"
        android:textColor="#000"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/boc_text_size_small"
        android:text="选择保证金"
        android:textStyle="bold"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_notice_no_bail_product_for_choose"
        android:textColor="#91A2A8"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/boc_text_size_small"
        android:text="暂无可添加保证金产品"
        android:textStyle="bold"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>

</LinearLayout>