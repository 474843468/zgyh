<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/boc_space_between_70px"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">


    <com.boc.bocsoft.mobile.bocmobile.base.widget.TabPageIndicator.TabPageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="15dp" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.TabPageIndicator.UnderlinePageIndicator
        android:id="@+id/indicator_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="bottom"
        android:background="#00000000"
        android:textColor="#56bde3"
        android:textSize="15dp"
        app:fades="false"
        app:selectedColor="@color/boc_main_button_color" />

</FrameLayout>