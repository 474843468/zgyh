<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/boc_main_bg_color"
    >
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/boc_common_cell_color"
                  android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/boc_main_bg_color"
            />
        <ImageView
            android:id="@+id/iv_boc_fragment_qrcollection_success_tubiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@drawable/boc_operator_succeed"
            />
        <TextView
            android:id="@+id/tv_boc_fragment_qrcollection_success_payeename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="付款人名称"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_small"
            />
        <TextView
            android:id="@+id/tv_boc_fragment_qrcollection_success_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="212.05"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_56px"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="收款成功"
            android:textColor="@color/boc_text_color_gray"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/boc_main_bg_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/boc_qrpay_transnum"
                android:textColor="@color/boc_text_color_common_gray"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/boc_text_size_small"
                />
            <TextView
                android:id="@+id/tv_boc_fragment_qrcollection_success_transnum"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6214 ****** 9899"
                android:textColor="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_text_size_small"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            >
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/boc_qrpay_transtime"
                android:textColor="@color/boc_text_color_common_gray"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/boc_text_size_small"
                />
            <TextView
                android:id="@+id/tv_boc_fragment_qrcollection_success_transtime"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6214 ****** 9899"
                android:textColor="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_text_size_small"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/boc_qrpay_ordernum"
                android:textColor="@color/boc_text_color_common_gray"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/boc_text_size_small"
                />
            <TextView
                android:id="@+id/tv_boc_fragment_qrcollection_success_ordernum"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6214 ****** 9899"
                android:textColor="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_text_size_small"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/boc_main_bg_color"
            />

    </LinearLayout>


</RelativeLayout>