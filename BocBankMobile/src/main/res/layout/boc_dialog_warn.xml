<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg_white">

  <TextView
      android:id="@+id/tv_title"
      android:layout_width="match_parent"
      android:layout_height="52dp"
      android:gravity="center"
      android:textColor="@color/boc_common_cell_color"
      android:textSize="@dimen/boc_text_size_big"
      android:visibility="gone"
       />
    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_common" />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:background="@drawable/dialog_divider_h"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <Button
        android:id="@+id/bt_left"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:gravity="center"
        android:padding="1dip"
        android:textColor="@color/boc_text_color_red"
        android:textSize="@dimen/boc_text_size_big" />

    <View android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/boc_divider_line_color"
    />

    <Button
        android:id="@+id/bt_right"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:gravity="center"
        android:padding="1dip"
        android:textColor="@color/boc_text_color_red"
        android:textSize="@dimen/boc_text_size_big"
        android:textStyle="bold"
    />

  </LinearLayout>
  </LinearLayout>