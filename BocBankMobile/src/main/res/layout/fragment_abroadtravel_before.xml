<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_before"
    android:scrollbars="none"
    android:paddingTop="@dimen/boc_space_between_470px"
    android:background="@drawable/bg_fragment_abroadtravel_before">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <TextView
            android:id="@+id/tv_deposit_service"
            style="@style/OverseaszoneNormalTv"
            />

        <TextView
            android:id="@+id/tv_exchange_purchasing"
            android:layout_below="@+id/tv_deposit_service"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            style="@style/OverseaszoneNormalTv"/>

        <TextView
            android:id="@+id/tv_accident_insurance"
            android:layout_below="@+id/tv_exchange_purchasing"
            style="@style/OverseaszoneNormalTv"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            />

        <TextView
            android:id="@+id/tv_credit_card"
            android:layout_below="@+id/tv_accident_insurance"
            style="@style/OverseaszoneNormalTv"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            />

        <TextView
            android:id="@+id/tv_recommendation"
            style="@style/OverseaszoneNormalTv"
            android:layout_below="@+id/tv_credit_card"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            />

        <TextView
            android:id="@+id/tv_allthingwell_card"
            android:layout_marginLeft="@dimen/boc_space_between_50px"
            android:layout_below="@+id/tv_recommendation"
            style="@style/OverseaszoneTv"/>

        <TextView
            android:id="@+id/tv_multi_currency_card"
            android:layout_below="@+id/tv_recommendation"
            android:layout_toRightOf="@+id/tv_allthingwell_card"
            style="@style/OverseaszoneTv"
            />

        <TextView
            android:id="@+id/tv_globle_credit_card"
            android:layout_below="@+id/tv_allthingwell_card"
            android:layout_marginLeft="@dimen/boc_space_between_50px"
            style="@style/OverseaszoneTv"/>

        <TextView
            android:id="@+id/tv_globle_multi_card"
            android:layout_below="@+id/tv_multi_currency_card"
            android:layout_toRightOf="@+id/tv_globle_credit_card"
            style="@style/OverseaszoneTv" />

        <TextView
            android:id="@+id/tv_greatwall_card"
            android:layout_below="@+id/tv_globle_credit_card"
            android:layout_marginLeft="@dimen/boc_space_between_50px"
            style="@style/OverseaszoneTv" />

        <TextView
            android:id="@+id/tv_out_bound_service"
            android:layout_below="@+id/tv_greatwall_card"
            style="@style/OverseaszoneNormalTv"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            />

        <TextView
            android:id="@+id/tv_free_card"
            android:layout_below="@+id/tv_out_bound_service"
            android:layout_marginLeft="@dimen/boc_space_between_50px"
            style="@style/OverseaszoneTv" />

        <TextView
            android:id="@+id/tv_guardian_card"
            android:layout_below="@+id/tv_out_bound_service"
            android:layout_toRightOf="@+id/tv_free_card"
            style="@style/OverseaszoneTv" />


        <TextView
            android:id="@+id/tv_more_service"
            style="@style/OverseaszoneNormalTv"
            android:layout_below="@+id/tv_free_card"
            android:layout_marginTop="@dimen/boc_space_between_60px"
            />

        <TextView
            android:id="@+id/tv_currency_carry_permit"
            android:layout_below="@+id/tv_more_service"
            android:layout_marginLeft="@dimen/boc_space_between_50px"
            style="@style/OverseaszoneTv" />

        <TextView
            android:id="@+id/tv_traveller_cheque"
            android:layout_below="@+id/tv_more_service"
            android:layout_toRightOf="@+id/tv_currency_carry_permit"
            style="@style/OverseaszoneTv"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_20px"
            android:layout_below="@+id/tv_traveller_cheque"/>

    </RelativeLayout>

</ScrollView>
