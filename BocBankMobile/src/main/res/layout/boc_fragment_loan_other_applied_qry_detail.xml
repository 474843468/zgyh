<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_main_bg_color">

    <include layout="@layout/boc_divide_line"/>

    <ScrollView
        android:id="@+id/view_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lyt_info_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/boc_space_between_20px"
                android:orientation="vertical"/>

            <include layout="@layout/boc_divide_line" />

            <LinearLayout
                android:id="@+id/lyt_info_loan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:layout_marginBottom="@dimen/boc_space_between_20px"
                android:orientation="vertical"/>

            <include layout="@layout/boc_divide_line" />

            <LinearLayout
                android:id="@+id/lyt_info_enterprise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/boc_space_between_20px"
                android:layout_marginBottom="@dimen/boc_space_between_20px"
                android:orientation="vertical"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvNoData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/boc_text_color_common_gray"
        android:textSize="@dimen/boc_text_size_common"
        android:visibility="gone" />
</FrameLayout>
