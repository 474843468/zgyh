<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#ffffff"
    android:minHeight="45dp">


    <ImageView
        android:id="@+id/image_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/boc_image_login"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/phone_no_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/image_phone"
        android:gravity="center_vertical"
        android:textColorHint="@color/boc_text_color_gray"
        android:hint="@string/hint_login_number"
        android:paddingLeft="5dp"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/phone_no_text"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/phone_no_text"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:padding="10dp"
        android:src="@drawable/boc_image_delete" />

</RelativeLayout>
