<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/boc_divide_line" />
        <!--标题-->
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_view_height_58px"
            android:background="@color/boc_main_btn_bg_color"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/boc_space_between_24px"
            android:text="标题"
            android:textColor="@color/boc_text_color_cinerous"
            android:textSize="@dimen/boc_text_size_small" />

        <include layout="@layout/boc_divide_line" />
    </LinearLayout>

    <include layout="@layout/boc_item_list_child" />
</LinearLayout>