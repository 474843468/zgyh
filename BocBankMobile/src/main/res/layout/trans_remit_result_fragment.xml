<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/boc_common_bg_color">

  <com.boc.bocsoft.mobile.bocmobile.base.widget.countdowntime.CountDownPollingView
      android:id="@+id/lyt_countdown"
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" >

</com.boc.bocsoft.mobile.bocmobile.base.widget.countdowntime.CountDownPollingView>

<com.boc.bocsoft.mobile.bocmobile.buss.wealthmanagement.base.widget.BaseResultView
        android:id="@+id/trans_result_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/im_trans_award"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/bocroa_bottom_button_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/trans_award"
        android:layout_marginRight="@dimen/boc_card_account_pic_margin_right"/>
</RelativeLayout>
