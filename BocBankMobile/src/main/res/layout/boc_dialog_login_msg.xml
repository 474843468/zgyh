<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/titleLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/boc_space_between_36px"
        android:paddingRight="@dimen/boc_space_between_36px"
        android:paddingTop="@dimen/boc_space_between_30px"
        android:paddingBottom="@dimen/boc_space_between_20px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="标题"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textStyle="bold"
            android:textSize="@dimen/boc_text_size_big" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/boc_divide_color" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <FrameLayout
            android:id="@+id/contentFl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/boc_space_between_36px"
            android:paddingRight="@dimen/boc_space_between_36px">

            <TextView
                android:id="@+id/noticeTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/boc_text_color_common_gray"
                android:textSize="@dimen/boc_text_size_common" />
        </FrameLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/bottomLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/boc_divide_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/boc_common_cell_color"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/beforBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/boc_button_height_88px"
                android:layout_weight="1"
                android:background="@color/boc_common_cell_color"
                android:gravity="center"
                android:text="上一条"
                android:textColor="@color/boc_text_color_red"
                android:textSize="@dimen/boc_text_size_big" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/boc_divide_color" />

            <Button
                android:id="@+id/nextBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/boc_button_height_88px"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/boc_common_cell_color"
                android:gravity="center"
                android:text="下一条"
                android:textColor="@color/boc_text_color_red"
                android:textSize="@dimen/boc_text_size_big" />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/boc_divide_color" />

            <Button
                android:id="@+id/confirmBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/boc_button_height_88px"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/boc_common_cell_color"
                android:gravity="center"
                android:text="我知道了"
                android:textColor="@color/boc_text_color_red"
                android:textSize="@dimen/boc_text_size_big" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>