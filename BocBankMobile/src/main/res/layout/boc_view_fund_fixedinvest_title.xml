<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/boc_space_between_24px"
        android:paddingRight="@dimen/boc_space_between_24px"
        android:src="@drawable/boc_back_black" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.tab.TableLabelView
        android:id="@+id/tab_label"
        android:layout_width="@dimen/boc_space_between_400px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:tableLabelContentText="@string/boc_fund_fixedinvest_title_tab_hint">
    </com.boc.bocsoft.mobile.bocmobile.base.widget.tab.TableLabelView>
    <TextView
        android:id="@+id/tv_manager"
        style="@style/tv_common"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/boc_space_between_24px"
        android:paddingRight="@dimen/boc_space_between_24px"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:text="@string/boc_fund_fixedinvest_title_manager"/>

</RelativeLayout>