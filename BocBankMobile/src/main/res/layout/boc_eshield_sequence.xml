<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/boc_space_between_30px">

    <RelativeLayout
        android:id="@+id/layout_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_30px">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/boc_space_between_30px"
            android:layout_toLeftOf="@+id/btn_dialog_cancel"
            android:text="@string/security_equip_sequence_tip"
            android:textColor="@color/boc_text_color_dark_gray"
            android:textSize="@dimen/boc_text_size_common" />

        <ImageView
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/title"
            android:padding="5dp"
            android:scaleType="center"
            android:src="@drawable/boc_btn_close" />

    </RelativeLayout>

    <EditText
        android:id="@+id/sequence"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_80px"
        android:layout_marginTop="@dimen/boc_space_between_30px"
        android:background="@drawable/boc_button_bg_gray"
        android:hint="请输入"
        android:paddingLeft="@dimen/boc_space_between_30px"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textColorHint="@color/boc_text_color_gray" />

    <include
        layout="@layout/boc_security_button_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_110px" />

</LinearLayout>