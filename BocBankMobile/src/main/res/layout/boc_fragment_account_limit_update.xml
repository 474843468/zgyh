<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_account"
        style="@style/tv_small"
        android:layout_marginLeft="@dimen/boc_space_between_20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/boc_space_between_30px"
        android:layout_marginBottom="@dimen/boc_space_between_10px"
        android:text="@string/boc_account_limit_update_account"
        android:textColor="@color/boc_text_color_dark_gray" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.AccountCheckBox.AccountCheckBox
        android:id="@+id/acb_atm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_button_height_104px" />

    <include layout="@layout/boc_divide_line" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.AccountCheckBox.AccountCheckBox
        android:id="@+id/acb_pos"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_button_height_104px" />

    <include layout="@layout/boc_divide_line" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.AccountCheckBox.AccountCheckBox
        android:id="@+id/acb_atm_cash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_button_height_104px" />

    <include layout="@layout/boc_divide_line" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.AccountCheckBox.AccountCheckBox
        android:id="@+id/acb_border_pos"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_button_height_104px" />

    <include layout="@layout/boc_divide_line" />

    <com.boc.bocsoft.mobile.bocmobile.base.widget.AccountCheckBox.AccountCheckBox
        android:id="@+id/acb_border_atm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_button_height_104px" />

    <include layout="@layout/boc_divide_line" />

    <Button
        android:id="@+id/btn_next"
        style="@style/BocButton.BocPrimaryButton1"
        android:layout_width="match_parent"
        android:text="@string/boc_account_next"
        android:visibility="gone" />

</LinearLayout>