<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_titlebar_text_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_head_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="212.3"
        android:textColor="@color/boc_text_color_dark_gray"
        android:textSize="@dimen/boc_text_size_supper_big_max"
        android:visibility="gone" />


    <TextView
        android:id="@+id/txt_head_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="支付成功"
        android:textColor="@color/boc_text_color_common_gray"
        android:textSize="@dimen/boc_text_size_common"
        android:visibility="gone" />

    <include layout="@layout/boc_divide_line" />
</LinearLayout>