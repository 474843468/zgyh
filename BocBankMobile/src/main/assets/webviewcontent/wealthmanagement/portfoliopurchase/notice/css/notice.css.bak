p{
    line-height: 20px;
    font-size: 12px;;
}
body{
margin: 0;padding: 0px;
}
h3{
    color: #000;
    font-size: 16px;
}
.bold{font-weight: bold;}
.red{    color: #f00;}
.p-bold{font-weight:bold;line-height:20px;}
.p-content{text-indent:2em;line-height:20px;margin:0;}
.p-content-bold{text-indent:2em;line-height:20px;margin: 0;font-weight:bold;}
.text{ border-top: none; border-bottom: 1px solid #000; border-right: none; border-left: none;display: inline-block;}
.grey{font-size: 12px;color: #adadad;margin-top: 10px;}
.clearfix:after {
    content: " ";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden
}
header {
    background-color: #fff;
    height: 44px;
    color: #000;
    line-height: 44px;
    text-align: center;
    font-size: 16px;
    position: absolute;
    display: block;
    width: 100%;
    z-index: 10000;
    border-bottom: 1px solid #ccc;
    /* top: 0; */
}
.back-img img {
    width: 9px;
}
h1 {
    font-size: 16px;
    line-height: 22px;
}
.back-img {
    position: absolute;
    left: 14px;
    top: 0px;
}
.loading-btn {
    width: 100%;
    height: 48px;
    background-color: #00aaee;
    font-size: 15px;
    text-align: center;
    outline: none;
    border: none;
    position: absolute;
    bottom: 0px;
    color: #ffffff;
    z-index: 100000;
}
.main {
    padding: 3%;
    width: 94%;
    top: 44px;
  
}
::-webkit-scrollbar{width: 0;}