<?xml version="1.0" encoding="utf-8"?>
<!-- 我的外汇双向宝 签约管理 签约确认页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:userProperty="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/step_title_layout" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_sure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/trade_nextButton"
            style="@style/textview_forex_button_cell"
            android:text="@string/confirm" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_sure"
        android:layout_below="@+id/ll_step"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/ScrollView"
            style="@style/scrollview_comm_havemarginbutton"
            android:fillViewport="false"
            android:paddingBottom="@dimen/dp_five"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="@dimen/dp_five"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/isforex_little_cell_title"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:text="@string/isForex_manage_sign_title"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:layout_weight="1"
                        android:text="@string/third_cecuritytrade_bankacc"
                         />

                    <TextView
                        android:id="@+id/isForex_tradeAcc"
                        style="@style/textview_forex_prompt_info"
                        android:layout_weight="1"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:layout_weight="1"
                        android:text="@string/forex_customer_accType"
                         />

                    <TextView
                        android:id="@+id/forex_customer_accType"
                        style="@style/textview_forex_prompt_info"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:layout_weight="1"
                        android:text="@string/forex_customer_accAlias"
                         />

                    <TextView
                        android:id="@+id/forex_customer_accAlias"
                        style="@style/textview_forex_prompt_info"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_number"
                        style="@style/textview_forex_prompt_message"
                        android:layout_weight="1"
                        android:text="@string/isForex_manage_bailNo"
                        android:ellipsize="middle"
                        />

                    <TextView
                        android:id="@+id/isForex_BaillAcc"
                        style="@style/textview_forex_prompt_info"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_chinese"
                        style="@style/textview_forex_prompt_message"
                        android:layout_weight="1"
                        android:text="@string/isForex_manage_bailCNamen"
                        android:ellipsize="middle"
                        />

                    <TextView
                        android:id="@+id/isForex_manage_bailCNamen"
                        style="@style/textview_forex_prompt_info"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_english"
                        style="@style/textview_forex_prompt_message"
                        android:layout_weight="1"
                        android:text="@string/isForex_manage_bailEName"
                        android:ellipsize="middle"
                         />

                    <TextView
                        android:id="@+id/isForex_manage_bailEName"
                        style="@style/textview_forex_prompt_info"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:layout_weight="1"
                        android:text="@string/isForex_vfgRegCurrency1"
                        />

                    <TextView
                        android:id="@+id/isForex_vfgRegCurrency1"
                        style="@style/textview_forex_prompt_info"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:layout_weight="1"
                        android:text="@string/isForex_manage_liquidationRatio"
                         />

                    <TextView
                        android:id="@+id/isForex_manage_liquidationRatio"
                        style="@style/textview_forex_prompt_info"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:layout_weight="1"
                        android:text="@string/isForex_manage_warnRatio"
                        />

                    <TextView
                        android:id="@+id/isForex_manage_warnRatio"
                        style="@style/textview_forex_prompt_info"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/left_text"
                        style="@style/textview_forex_prompt_message"
                        android:layout_weight="1"
                        android:ellipsize="middle"
                        android:text="@string/isForex_manage_needMarginRatio"
                        />

                    <TextView
                        android:id="@+id/isForex_manage_needMarginRatio"
                        style="@style/textview_forex_prompt_info"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:layout_weight="1"
                        android:text="@string/isForex_manage_openRate"
                         />

                    <TextView
                        android:id="@+id/isForex_manage_openRate"
                        style="@style/textview_forex_prompt_info"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_smc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:layout_weight="1"
                        android:text="@string/smc" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/layout_margin_right"
                        android:layout_weight="1" >

                        <RelativeLayout
                            android:id="@+id/ll_smc_sip"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <cfca.mobile.sip.SipBox
                                android:id="@+id/sipbox_smc"
                                style="@style/sip_edit_fill"
                                android:maxLength="6"
                                 />
                        </RelativeLayout>

                        <Button
                            android:id="@+id/smsbtn"
                            style="@style/sms_code_btn"
                            android:layout_marginLeft="@dimen/layout_margin_top" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_active_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:layout_weight="1"
                        android:text="@string/active_code"/>

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:id="@+id/ll_activecode_sip"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/layout_margin_right" >

                            <cfca.mobile.sip.SipBox
                                android:id="@+id/sipbox_active"
                                style="@style/sip_edit_fill"
                                android:maxLength="6"
                                 />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <com.chinamworld.bocmbci.widget.UsbKeyText
                    android:id="@+id/sip_usbkey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/dp_one_zero" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>