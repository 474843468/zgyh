<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_round_2"
    android:orientation="vertical"
     >
    <RelativeLayout style="@style/style_match_wrap">
        <TextView
            android:id="@+id/tv_btn_save"
            style="@style/textview_common_multi_second"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:textColor="@color/blue"
            android:text="@string/assetmanager_capital_71"
            />
        <ImageView
            android:id="@+id/tv_btn_cancel"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/assetmanager_delete"
            android:scaleType="centerInside"
            />
    </RelativeLayout>
     
    <View style="@style/style_line"/>
    <ListView 
        android:id="@+id/listview"
        style="@style/listviewcomm_wrap_noDivider"
        android:layout_margin="5dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent_00"
        />
