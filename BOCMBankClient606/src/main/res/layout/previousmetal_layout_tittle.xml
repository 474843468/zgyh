<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rltotal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eff5">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/goldstore_back_icon"
            android:layout_marginLeft="@dimen/boc_space_between_28px"
            android:textSize="@dimen/textsize_one_three"
            android:text=""
            android:padding="15dp"
            />

        <TextView
            android:id="@+id/tv_title"
            android:text="贵金属积存"
            android:textSize="@dimen/boc_space_between_36px"
            style="@style/titleText"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:id="@+id/titlebar_right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:id="@+id/ib_top_right_other_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
                <TextView
                    android:id="@+id/ib_top_right_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/boc_space_between_28px"
                    android:padding="@dimen/boc_space_between_30px"
                    android:text=""
                    android:drawableRight="@drawable/goldstore_point_more"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/sliding_menu_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/foot_layout"
        android:layout_below="@+id/main_layout"
        android:background="@drawable/bg_content" >

        <LinearLayout
            android:id="@+id/sliding_body"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_bottom_padding_new"
            android:background="@color/gray"
             >
        </LinearLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
