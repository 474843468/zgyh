<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/assetsmanager_accredit_manager_historyrecordsearchitem_bg"

    tools:context=".AssertsAccountManagerActivity" >

    <ImageButton
        android:id="@+id/ib_asaa_historyrecord_delete"
        android:layout_width="@dimen/btn_close_height"
        android:layout_height="@dimen/btn_close_height"
        android:src="@drawable/asam_history_samll_delete"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"


        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="授权日期："
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/textsize_one_six"/>
            <TextView
                android:id="@+id/tv_asaa_historyrecord_authDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2014/03/04"
                android:gravity="left"
                android:textSize="@dimen/textsize_one_six"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:id="@+id/tv_asaa_historyrecord_custName_key"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="被授权人："
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/textsize_one_six"/>
            <TextView
                android:id="@+id/tv_asaa_historyrecord_custName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="张三"
                android:gravity="left"
                android:textSize="@dimen/textsize_one_six"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_asaa_historyrecord_otherAccount"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:visibility="gone">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="授权账号："
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/textsize_one_six"/>
            <TextView
                android:id="@+id/tv_asaa_historyrecord_otherAccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="99999"
                android:gravity="left"
                android:textSize="@dimen/textsize_one_six"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="撤销日期："
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/textsize_one_six"/>
            <TextView
                android:id="@+id/tv_asaa_historyrecord_deleteDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2014/03/15"
                android:gravity="left"
                android:textSize="@dimen/textsize_one_six"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="撤销原因："
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/textsize_one_six"/>
            <TextView
                android:id="@+id/tv_asaa_historyrecord_invalidType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="授权人发起撤销"
                android:gravity="left"
                android:textSize="@dimen/textsize_one_six"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="备注："
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/textsize_one_six"/>
            <TextView
                android:id="@+id/tv_asaa_historyrecord_serviceSet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:gravity="left"
                android:textSize="@dimen/textsize_one_six"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>