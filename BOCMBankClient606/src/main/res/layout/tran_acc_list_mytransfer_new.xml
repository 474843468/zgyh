<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/list_bottom" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbar" >

        <Button
            android:id="@+id/trans_acc_top_back"
            style="@style/tran_title_backbtn"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_one_three" />

        <TextView
            android:id="@+id/trans_acc_top_title"
            style="@style/titleText"
            android:text="@string/tran_acc_in_top_title" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tran_acc_seach_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_for_listview_item_write"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/fill_margin_top" >

        <EditText
            android:id="@+id/search_acc_in_et"
            style="@style/edittext_common_fill"
            android:hint="@string/inPutNameSearch"
            android:textSize="@dimen/textsize_one_three" >

            <requestFocus />
        </EditText>

        <!--
             <Button
            android:id="@+id/trans_acc_top_right_btn"
            style="@style/btn_common_oneline"
            android:layout_marginLeft="@dimen/dp_five"
            android:background="@drawable/btn_gray_big"
            android:text="@string/tran_acc_in_top_right"
            android:textColor="@color/black"
            android:layout_weight="2"
            android:textSize="@dimen/textsize_one_three" />
        -->
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/tran_acc_img_bg_top" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/tran_list_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/trans_acc_top_right_btn" >
        </RelativeLayout>

        <Button
            android:id="@+id/trans_acc_top_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_five"
            android:background="@drawable/btn_gray_big"
            android:text="@string/tran_acc_in_top_right"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_one_three" />
    </RelativeLayout>

</LinearLayout>