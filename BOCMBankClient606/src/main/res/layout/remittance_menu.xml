<?xml version="1.0" encoding="utf-8"?>
<!-- 跨境汇款   三级菜单 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_for_click_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_remit_one"
            style="@style/common_click_first_item_style"
            android:gravity="center" >

            <TextView
                style="@style/textview_common_right"
                android:gravity="left"
                android:text="@string/temit_template" />

            <ImageView
                style="@style/rightbtn_jiantou"
                android:background="@drawable/right_arrow"
                android:focusable="false" />
        </LinearLayout>

        <ImageView
            style="@style/divider_imag_style"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_remit_two"
            style="@style/common_click_item_style"
            android:gravity="center"
            android:visibility="visible" >

            <TextView
                style="@style/textview_common_right"
                android:text="@string/temit_inquire" />

            <ImageView
                style="@style/rightbtn_jiantou"
                android:background="@drawable/right_arrow"
                android:focusable="false" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>