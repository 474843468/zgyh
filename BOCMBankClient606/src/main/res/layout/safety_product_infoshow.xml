                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:background="@color/whitefornet"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="6dip"
                            android:paddingLeft="@dimen/common_row_margin"
                            android:paddingTop="6dip" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.0"
                                android:gravity="left"
                                android:singleLine="true"
                                android:text="@string/safety_productbuy_msgfill_firsttitle"
                                
                                 />

                            <TextView
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="3.5"
                                android:paddingLeft="0dip"
                                android:paddingRight="0dp"
                                android:singleLine="true"
                                
                                 />
                        </LinearLayout>
                        <!-- 项目  start -->

