                            <TextView
                                android:id="@+id/buuyerphone"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="3.7"
                                android:paddingLeft="0dip"
                                android:singleLine="true"
                                
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
