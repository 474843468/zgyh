<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_acc_out_listDetail"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_acc_out_mytransfer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_five"
        android:paddingLeft="@dimen/dp_one_zero"
        android:paddingRight="@dimen/dp_one_zero"
        android:paddingTop="@dimen/dp_five" >

        <!-- android:background="@drawable/tran_bg_acc" -->

        

        <LinearLayout
            android:id="@+id/dept_out_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
          
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/crcd_in_nickName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/card_top_text"
                    android:textSize="@dimen/textsize_one_for" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bankaccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_three_row_paddingTop"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/crcd_in_accountType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_one_for" />

                <TextView
                    android:id="@+id/crcd_in_accountType_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_one_for" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/crcd_in_layout_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_three_row_paddingTop"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/crcd_in_currey1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_one_for" />

              

                <TextView
                    android:id="@+id/crcd_in_currey1_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_one_for" />
            </LinearLayout>
            
               <LinearLayout
                android:id="@+id/crcd_in_layout_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_three_row_paddingTop"
                android:gravity="center_vertical"
                android:orientation="horizontal" 
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/crcd_in_currey2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_one_for" />

               

                <TextView
                    android:id="@+id/crcd_in_currey2_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_one_for" />
            </LinearLayout>
            
             
        </LinearLayout>

        
    </RelativeLayout>

</LinearLayout>