<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/list_bottom" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical"
        android:paddingLeft="@dimen/fill_padding"
        android:paddingRight="@dimen/fill_padding_right" >

        <TextView
            android:id="@+id/contract_title_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fill_margin_top"
            android:gravity="center"
            android:text="@string/collect_protocol_cotent_title"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize_one_six" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/epay_treaty_first_part" />

            <TextView
                android:id="@+id/tv_first_part"
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/epay_treaty_second_part" />

            <TextView
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/epay_treaty_company_name" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/dept_create_layout"
            style="@style/scrollview_fill"
            android:layout_marginTop="@dimen/layout_margin_top" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/agreementcontent"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_one_for"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/dept_protocol_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/fill_padding_bottom"
                    android:text="@string/collect_protocol_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_one_for" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center" >

        <Button
            android:id="@+id/btnYes"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_blue_big"
            android:text="@string/not_agree" />

        <Button
            android:id="@+id/btnNo"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_red_big"
            android:text="@string/agree" />
    </LinearLayout>

</LinearLayout>