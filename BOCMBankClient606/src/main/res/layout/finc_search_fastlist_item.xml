<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/btn_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <ImageView android:id="@+id/quick_sell_iv"
                style="@style/Finc_QuickSell_Flag"
                android:layout_gravity="center_vertical"
                android:visibility="gone" />

            <TextView
                style="@style/textview_finc_detail"
                android:layout_weight="1"
                android:id="@+id/tv_fund_name_and_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中银新动力（000996）"
                 />
            <TextView
                android:id="@+id/type_tv"
                style="@style/textview_finc_detail"
                android:layout_weight="1"
                android:textColor="@color/fonts_dark_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="股票型"/>
        </LinearLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_finc_detail"
                    android:layout_width="0dp"
                    android:textColor="@color/fonts_dark_gray"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="日增长率" />

                <TextView
                    style="@style/textview_finc_detail"
                    android:layout_width="0dp"
                    android:textColor="@color/fonts_dark_gray"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="单位净值" />

                <TextView
                    android:id="@+id/start_amount_tv"
                    style="@style/textview_finc_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="起购金额" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_tv1"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2.33%"
                    android:textColor="@color/fonts_pink"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/item_tv2"
                        style="@style/textview_finc_detail"
                        android:gravity="center"
                        android:text="1.2333%"
                         />
                    <TextView
                        android:id="@+id/item_tv3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/fonts_dark_gray"
                        android:text="09/02"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_tv4"
                        style="@style/textview_finc_detail"
                        android:layout_width="wrap_content"
                        android:text="申购"
                         />
                    <TextView
                        android:id="@+id/item_tv5"
                        style="@style/textview_finc_detail"
                        android:layout_width="wrap_content"
                        android:text="0.4%"
                        />
                    <TextView
                        android:id="@+id/item_tv6"
                        style="@style/textview_finc_detail"
                        android:layout_width="wrap_content"
                        android:textColor="@color/fonts_pink"
                        android:text="0.24%"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_light_gray" />
</RelativeLayout>