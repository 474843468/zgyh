<?xml version="1.0" encoding="utf-8"?>
<!-- 外汇 双向宝 账户贵金属 首页行情适配器布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="铂金(克)/人民币"
                android:textStyle="bold"
                android:textColor="@color/lianlong_text_color_dark_gray"
                android:textSize="@dimen/lianlong_text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <com.chinamworld.llbt.userwidget.NumberStyleTextView
                android:id="@+id/tv_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1000.00"
                android:textStyle="bold"
                android:textColor="@color/lianlong_text_color_dark_gray"
                android:textSize="@dimen/lianlong_text_size_small" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <com.chinamworld.llbt.userwidget.NumberStyleTextView
                android:id="@+id/tv_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="100.23"
                android:textStyle="bold"
                android:textColor="@color/lianlong_text_color_dark_gray"
                android:textSize="@dimen/lianlong_text_size_small" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_riseorfall"
            android:layout_width="63dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="1000%"
            android:background="@color/boc_text_color_red"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/lianlong_text_size_small"
            />
    </LinearLayout>

</LinearLayout>