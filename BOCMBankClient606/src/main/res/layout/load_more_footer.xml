<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_load_more"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_bottom_height" >

        <ProgressBar
            android:id="@+id/load_more_progressbar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="@dimen/dp_two_zero"
            android:layout_height="@dimen/dp_two_zero"
            android:indeterminateDrawable="@drawable/shape_progressbar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:visibility="gone" />

        <TextView
            android:id="@+id/load_more_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_bottom_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/more"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize_default" />
    </RelativeLayout>

</RelativeLayout>