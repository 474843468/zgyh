<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/fill_margin_bottom"
        android:background="@drawable/message_dialog_bg" >

        <ImageView
            android:id="@+id/img_exit_accdetail1"
            android:layout_width="@dimen/dp_for_zero"
            android:layout_height="@dimen/dp_for_zero"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@color/transparent_00" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_exit_accdetail1"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/fill_margin_top" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left"
                        android:text="@string/mycrcd_creditcard_bill_account" />

                    <TextView
                        android:id="@+id/tv_creditcatdaccount"
                        style="@style/textview_common_right"
                        android:singleLine="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mycrcd_bill_type" />

                    <TextView
                        android:id="@+id/tv_creditcatdtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_bill"
                        style="@style/textview_common_left"
                        android:text="@string/mycrcd_xuni_virtual_card" />

                    <TextView
                        android:id="@+id/tv_account"
                        style="@style/textview_common_right"
                        android:gravity="center_vertical"
                        android:singleLine="false" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:src="@color/gray"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left"
                        android:singleLine="false"
                        android:text="@string/mycrcd_virtual_startdate" />

                    <TextView
                        android:id="@+id/tv_starttime"
                        style="@style/textview_common_right" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left"
                        android:text="@string/mycrcd_virtual_enddate" />

                    <TextView
                        android:id="@+id/tv_endtime"
                        style="@style/textview_common_right"
                        android:singleLine="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tests"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left"
                        android:text="@string/mycrcd_virtual_card_single_money" />

                    <TextView
                        android:id="@+id/tv_singlemoney"
                        style="@style/textview_common_right"
                        android:singleLine="false"
                        android:textColor="@color/red" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left"
                        android:text="@string/mycrcd_virtual_card_total_money" />

                    <TextView
                        android:id="@+id/tv_totalmoney"
                        style="@style/textview_common_right"
                        android:singleLine="false"
                        android:textColor="@color/red" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/left_text"
                        style="@style/textview_common_left"
                        android:text="@string/mycrcd_has_total_jiaoyi_money" />

                    <TextView
                        android:id="@+id/tv_hastotalmoney"
                        style="@style/textview_common_right"
                        android:singleLine="false"
                        android:textColor="@color/red" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left"
                        android:text="@string/mycrcd_build_card_type" />

                    <TextView
                        android:id="@+id/tv_jiankacannel"
                        style="@style/textview_common_right"
                        android:singleLine="false" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:src="@color/gray"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/fill_padding_top"
                    android:visibility="gone" >

                    <Button
                        android:id="@+id/btn_xinyong_huan"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_bottom_height"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/btn_gray"
                        android:text="@string/mycrcd_creditcard_huanmoney"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btn_xinyong_gouhui"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_bottom_height"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/btn_gray"
                        android:text="@string/mycrcd_creditcard_huigo_huanmoney"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/fill_margin_bottom"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal"
            android:paddingRight="@dimen/fill_margin_left"
            android:paddingTop="@dimen/fill_padding_top" >

            <Button
                android:id="@+id/img_crcd_setup"
                style="@style/btn_common_oneline"
                android:background="@drawable/btn_gray"
                android:text="@string/mycrcd_virtualcard_setup"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/img_sms_toast"
                style="@style/btn_common_oneline"
                android:background="@drawable/btn_gray"
                android:text="@string/mycrcd_virtualcard_sms_tongzhi"
                android:textColor="@color/black"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_more"
                style="@style/btn_common_oneline"
                android:background="@drawable/btn_gray"
                android:text="@string/more"
                android:textColor="@color/black"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_exit_accdetail"
        android:layout_width="@dimen/close_clickarea_height"
        android:layout_height="@dimen/close_clickarea_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@color/transparent_00" />

</RelativeLayout>