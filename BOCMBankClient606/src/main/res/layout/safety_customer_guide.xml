<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#a0000000"
    android:id="@+id/layout" >
    
    <ImageView 
        android:id="@+id/imagev2"
        android:layout_height="@dimen/btn_bottom_width"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/safety_guide2"/>
    <ImageView 
        android:id="@+id/imagev1"
        android:layout_height="@dimen/btn_bottom_width"
        android:layout_width="match_parent"
        android:layout_above="@id/imagev2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/safety_guide1"/>
    <ImageView 
        android:id="@+id/imagev3"
        android:layout_height="@dimen/btn_bottom_width"
        android:layout_width="@dimen/progress_dialog_height"
        android:layout_below="@+id/imagev2"
        android:paddingLeft="20dip"
        android:layout_marginTop="-25dip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/safety_guide3"/>

</RelativeLayout>