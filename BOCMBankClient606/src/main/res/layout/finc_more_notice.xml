<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.chinamworld.llbt.userwidget.refreshliseview.RefreshLayout
        android:id="@+id/notice_pull_refresh"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <com.chinamworld.llbt.userwidget.refreshliseview.PullableListView
            android:id="@+id/notice_query_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0.5dp"
            android:divider="@color/line_light_gray"
            android:background="@color/bg_white"
            android:layout_marginBottom="@dimen/fill_margin_bottom">
        </com.chinamworld.llbt.userwidget.refreshliseview.PullableListView>
    </com.chinamworld.llbt.userwidget.refreshliseview.RefreshLayout>
</LinearLayout>
