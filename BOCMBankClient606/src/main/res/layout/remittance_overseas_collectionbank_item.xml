<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/assetsmanager_accredit_manager_historyrecordsearchitem_bg"
    android:orientation="vertical"
    tools:context=".AssertsAccountManagerActivity" >

    <!--国家/地区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_two"
        android:paddingTop="@dimen/dp_five"
        android:paddingRight="@dimen/dp_five"
        android:paddingLeft="@dimen/dp_five">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="国家/地区："
            android:textSize="@dimen/textsize_default" />

        <TextView
            android:id="@+id/tv_remittance_collectionbank_region"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textSize="@dimen/textsize_default" />
    </LinearLayout>

    <!--收款银行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_five"
        android:paddingLeft="@dimen/dp_five"
        android:paddingBottom="@dimen/dp_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="收款银行："
            android:textSize="@dimen/textsize_default" />

        <TextView
            android:id="@+id/tv_remittance_collectionbank_bankname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textSize="@dimen/textsize_default" />
    </LinearLayout>

    <!--收款银行 英文-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_five"
        android:paddingLeft="@dimen/dp_five"
        android:paddingBottom="@dimen/dp_two" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_remittance_collectionbank_ebankname"

            android:textSize="@dimen/textsize_default" />

    </LinearLayout>

    <!--SWIFT代码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_five"
        android:paddingLeft="@dimen/dp_five"
        android:paddingBottom="@dimen/dp_two" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="SWIFT代码："
            android:textSize="@dimen/textsize_default" />

        <TextView
            android:id="@+id/tv_remittance_collectionbank_swift"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textSize="@dimen/textsize_default" />
    </LinearLayout>

    <!--备注-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_five"
        android:paddingLeft="@dimen/dp_five"
        android:paddingBottom="@dimen/dp_five"
        >

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:text="备注："-->
            <!--android:textSize="@dimen/textsize_default"/>-->

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_remittance_collectionbank_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:text="前8位一致即可汇达"
            android:textSize="@dimen/textsize_default" />
    </LinearLayout>

</LinearLayout>