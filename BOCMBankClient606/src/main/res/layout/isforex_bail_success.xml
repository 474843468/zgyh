<?xml version="1.0" encoding="utf-8"?>
<!-- 保证金交易   成功页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/step_title_layout" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_sure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
         >

        <Button
            android:id="@+id/sureButton"
            style="@style/textview_forex_button_cell"
            android:text="@string/finish" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_sure"
        android:layout_below="@+id/ll_step"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView
            style="@style/scrollview_comm_havemarginbutton"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/dp_one_zero"
                    android:paddingRight="@dimen/dp_one_zero"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/isforex_little_cell_title"
                        android:text="@string/isForex_myrate_succ1"
                        android:visibility="gone" />

                    <TextView
                        style="@style/isforex_little_cell_title"
                        android:text="@string/forex_rate_currency_title"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/isForex_myrate_tradeNumber"
                            />

                        <TextView
                            android:id="@+id/isForex_myrate_tradeNumber"
                            style="@style/textview_forex_prompt_info"
                            android:paddingLeft="0dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/isForex_throw_confirm_accNumber"
                            />

                        <TextView
                            android:id="@+id/isForex_throw_confirm_accNumber"
                            style="@style/textview_forex_prompt_info"
                            android:paddingLeft="0dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fix_limitRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/isForex_throw_confirm_accType"
                            />

                        <TextView
                            android:id="@+id/isForex_throw_confirm_accType"
                            style="@style/textview_forex_prompt_info"
                            android:paddingLeft="0dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:singleLine="false"
                            android:text="@string/forex_custoner_fix_codes"
                            />

                        <TextView
                            android:id="@+id/isForex_throw_confirm_code"
                            style="@style/textview_forex_prompt_info"
                            android:paddingLeft="0dp"
                            android:singleLine="true"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:singleLine="true"
                            android:text="@string/isForex_throw_money1"
                            />

                        <TextView
                            android:id="@+id/isForex_throw_money"
                            style="@style/textview_forex_prompt_info"
                            android:paddingLeft="0dp"
                            android:singleLine="true"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/left_text"
                            style="@style/textview_forex_prompt_message"
                            android:singleLine="true"
                            android:text="@string/isForex_throw_confirm_money"
                            />

                        <TextView
                            android:id="@+id/isForex_throw_confirm_money"
                            style="@style/textview_forex_prompt_info"
                            android:paddingLeft="0dp"
                            android:singleLine="true"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>