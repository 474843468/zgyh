<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent_00"
    android:gravity="center" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_for_progress"
        android:orientation="vertical" >
         <TextView
                android:id="@+id/tv_metion_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_one_six"
                android:text="温馨提示"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_metion_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="@dimen/common_row_margin"
                android:paddingRight="@dimen/common_row_margin"
                android:paddingTop="@dimen/dp_two_zero"
                android:paddingBottom="@dimen/dp_two_zero"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_one_six" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/retry_btn"
                style="@style/dialogbtnfor_connect"
                android:background="@drawable/fund_btn_common_oneline_right_press_state"
                android:text="@string/button_positive" />
        </LinearLayout>
        </LinearLayout>
</RelativeLayout>