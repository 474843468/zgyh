<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnConfirm"
            style="@style/isforex_two_left_btn"
            android:onClick="onClick"
            android:text="@string/next" />

        <Button
            android:id="@+id/btnQuit"
            style="@style/isforex_two_right_btn"
            android:onClick="onClick"
            android:text="@string/quit" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_layout"
        android:background="@drawable/bg_for_listview_item_write" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/fill_margin_top"
                android:text="@string/safety_riskAssessmentDetail_tip2"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_one_seven"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/fill_margin_top"
                android:text="@string/safety_riskAssessmentDetail_tip3"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_default" />

            <LinearLayout
                android:id="@+id/ll_questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>