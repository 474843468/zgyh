<?xml version="1.0" encoding="utf-8"?>
<!-- 外汇行情    账户登记   没有可登记的账户 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login" >

    <ScrollView style="@style/scrollview_comm" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/ll_financeic_trans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/common_row_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_for_listview_item_write"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/forex_no_acc" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/fill_margin_left"
                        android:layout_marginRight="@dimen/fill_margin_left"
                        android:paddingLeft="@dimen/fill_padding_left"
                        android:paddingRight="@dimen/fill_margin_right"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/acc_financeic_trans_icact"
                            style="@style/bond_textview_15_black_1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/foex_rate_no_acc" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/forex_acc_addnewacc"
                        style="@style/bottombtn_new"
                        android:text="@string/prms_acc_addnewacc"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

</RelativeLayout>