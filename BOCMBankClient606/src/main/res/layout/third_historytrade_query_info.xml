<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:background="@drawable/bg_for_listview_item_write"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/blpt_main_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!-- 项目  start -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_three_zero"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_forex_prompt_message"
                    android:layout_weight="6.5"
                    android:singleLine="true"
                    android:text="@string/trade_date" />

                <TextView
                    android:id="@+id/tv_paytime"
                    style="@style/textview_forex_prompt_info"
                    android:layout_weight="3.5"
                    android:paddingLeft="0dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_forex_prompt_message"
                    android:layout_weight="6.5"
                    android:singleLine="true"
                    android:text="@string/bocinvt_trfType" />

                <TextView
                    android:id="@+id/tv_type"
                    style="@style/textview_forex_prompt_info"
                    android:layout_weight="3.5"
                    android:paddingLeft="0dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_forex_prompt_message"
                    android:layout_weight="6.5"
                    android:singleLine="true"
                    android:text="@string/third_cecuritytrade_bankacc" />

                <TextView
                    android:id="@+id/tv_cec_bankacc"
                    style="@style/textview_forex_prompt_info"
                    android:layout_weight="3.5"
                    android:paddingLeft="0dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_forex_prompt_message"
                    android:layout_weight="6.5"
                    android:singleLine="true"
                    android:text="@string/third_cecuritytrade_cecacc" />

                <TextView
                    android:id="@+id/tv_cecacc"
                    style="@style/textview_forex_prompt_info"
                    android:layout_weight="3.5"
                    android:paddingLeft="0dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_forex_prompt_message"
                    android:layout_weight="6.5"
                    android:singleLine="true"
                    android:text="@string/currency" />

                <TextView
                    android:id="@+id/tv_cec_bizhong"
                    style="@style/textview_forex_prompt_info"
                    android:layout_weight="3.5"
                    android:paddingLeft="0dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_forex_prompt_message"
                    android:layout_weight="6.5"
                    android:singleLine="true"
                    android:text="@string/zhuanzhang_num" />

                <TextView
                    android:id="@+id/tv_amout"
                    style="@style/textview_forex_prompt_info"
                    android:layout_weight="3.5"
                    android:paddingLeft="0dp"
                    android:singleLine="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_one_two" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_forex_prompt_message"
                    android:layout_weight="6.5"
                    android:singleLine="true"
                    android:text="@string/third_cecuritytrade_tradestate" />

                <TextView
                    android:id="@+id/tv_state"
                    style="@style/textview_forex_prompt_info"
                    android:layout_weight="3.5"
                    android:paddingLeft="0dp"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_one_two" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/titleText"
        style="@style/isforex_little_title"
        android:text="@string/forex_trade_detail"
        />

</RelativeLayout>