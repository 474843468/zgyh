<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AssertsAccountManagerActivity"
    android:background="#D7D7D7" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:background="@drawable/assetsmanager_account_mannager_leftbut"
            android:text="@string/otherbankaccount_queryaccord"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/but_otherbankaccount_queryaccord_payment"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:layout_marginRight="20dp"
            android:background="@drawable/assetsmanager_account_mannager_white_rightbut"
            android:text="@string/otherbankaccount_paymentaccord"
            android:textColor="#ff0000" />
    </LinearLayout>
  

    <ExpandableListView
        android:layout_marginTop="10dp"
        android:id="@+id/elv_am_otherbankaccount_qa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="2dp"
        android:divider="#D7D7D7"
        android:childDivider="#D7D7D7"
        android:cacheColorHint="#00000000" >
    </ExpandableListView>
    
    <Button 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        
        android:background="@drawable/assetsmanager_account_mannager_searchbut"
        android:text="完成"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:id="@+id/but_asam_ob_qa_complete"/>

</LinearLayout>