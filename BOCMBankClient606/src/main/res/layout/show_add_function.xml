<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_add_function"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_function_list"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_close" />

    <Button
        android:id="@+id/btn_fanhui"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/ll_add_function"
        android:layout_marginTop="14dp"
        android:background="@drawable/function_back"
        android:text="返回"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_add_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/ll_add_function"
        android:layout_marginTop="14dp"
        android:text="请选择您想添加的功能"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lv_add_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/btn_fanhui"
        android:divider="@drawable/function_list_line" 
        android:focusable="true">
    </ListView>

</RelativeLayout>