<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_new_height"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/dp_five"
    android:paddingLeft="@dimen/dp_one_zero"
    android:paddingRight="@dimen/dp_one_zero"
    android:paddingTop="@dimen/dp_five" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/finc_fundname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_one_for"/>
            <TextView
                android:id="@+id/finc_fundcode_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_one_for"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finc_avilablebalance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

           <LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content">
	            <TextView
	                android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_one_for"
	                android:text="@string/bocinvt_availableQuantity" />
	
	            <TextView
	                android:id="@+id/finc_avilablebalance_tv"
	                android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_one_for"
	                android:textColor="@color/red" />
			</LinearLayout>
			<TextView
                android:id="@+id/finc_risklevel_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:textSize="@dimen/textsize_one_for" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>