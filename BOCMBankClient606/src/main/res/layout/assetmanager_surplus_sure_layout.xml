<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_wrap"
    android:orientation="vertical" 
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.chinamworld.bocmbci.userwidget.LabelTextView
        style="@style/style_match_wrap"
        app:labelText="姓名："
        app:weightShowRate="2:3"
        android:id="@+id/label_1"
        />
    <com.chinamworld.bocmbci.userwidget.LabelTextView
        style="@style/style_match_wrap"
        app:labelText="证件类型："
        app:weightShowRate="2:3"
        android:id="@+id/label_2"
        />
    <com.chinamworld.bocmbci.userwidget.LabelTextView
        style="@style/style_match_wrap"
        app:labelText="证件号码："
        app:weightShowRate="2:3"
        android:id="@+id/label_3"
        />
    <LinearLayout 
        style="@style/style_match_wrap"
        android:layout_marginTop="10dp"
        >
        <TextView 
            style="@style/style_textview_with_weight_1"
            android:layout_weight="2"
            android:gravity="right"
            android:text="askjdkjkgj:"
            />
        <TextView 
            style="@style/style_textview_with_weight_1"
            android:layout_weight="3"
            android:text=""
            android:visibility="gone"
            />
        <EditText 
            style="@style/edittext_input_numberDecimal_fill"
            android:layout_width="0dp"
            android:layout_weight="3"
            />
    </LinearLayout>
    <LinearLayout 
        style="@style/style_match_wrap"
        android:layout_marginTop="10dp"
        >
        <TextView 
            style="@style/style_textview_with_weight_1"
            android:layout_weight="2"
            android:gravity="right"
            android:text="askjdkjkgj:"
            />
        <TextView 
            style="@style/style_textview_with_weight_1"
            android:layout_weight="3"
            android:text=""
            android:visibility="gone"
            />
        <EditText 
            style="@style/edittext_input_numberDecimal_fill"
            android:layout_width="0dp"
            android:layout_weight="3"
            />
    </LinearLayout>
    
    <TextView style="@style/style_match_wrap"/>

</LinearLayout>
