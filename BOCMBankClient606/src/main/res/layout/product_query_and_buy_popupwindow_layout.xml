<?xml version="1.0" encoding="utf-8"?>
<!-- 中银理财-popupwindow布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/style_match_match"
    android:background="@drawable/bg_for_listview_item_write"
    android:orientation="vertical" 
    >
   
    <TextView 
        style="@style/textview_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_left_right"
        android:gravity="center"
        android:textSize="17sp"
        android:text="@string/bocinvt_tv_44"
        />
    
    <ScrollView style="@style/style_height_weight_1"
        android:paddingBottom="10dp">
       <LinearLayout 
           style="@style/style_match_match"
           android:orientation="vertical"
           >
	    <com.chinamworld.bocmbci.userwidget.LabelTextView
	        android:layout_marginTop="20dp"
	        style="@style/style_match_wrap"
	        app:labelText="@string/bocinvt_tv_46"
	        android:id="@id/tv_1"
	        />
	    <com.chinamworld.bocmbci.userwidget.LabelTextView
	        style="@style/style_match_wrap"
	        app:labelText="@string/bocinvt_tv_47"
	        android:id="@id/tv_2"
	        />
	    <LinearLayout 
	        style="@style/style_match_wrap"
	        android:layout_marginTop="40dp"
	        >
	        <TextView 
	            style="@style/style_tv_bocinv_agreement_appley"
	            android:text="@string/bocinvt_tv_45"
	            />
	        <EditText 
	            android:id="@id/et_1"
	            style="@style/edittext_input_numberDecimal_fill"
	            android:layout_width="0dp"
	            android:maxLength="14"
	            android:layout_marginRight="30dp"
	            />
	    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    
    <Button 
        android:id="@+id/btn_sure"
        style="@style/bottombtn"
        android:layout_marginBottom="@dimen/layout_margin_left_right"
        android:text="@string/ok"
        />

</LinearLayout>
