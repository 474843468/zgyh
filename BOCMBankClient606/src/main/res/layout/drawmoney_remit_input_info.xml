<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dept_save_regular_bottom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/common_row_margin" >

        <Button
            android:id="@+id/remit_input_next_btn"
            style="@style/bottombtn"
            android:text="@string/next" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bottom"
        android:layout_alignParentTop="true"
        android:background="@drawable/shap_for_dept_tranlist"
        android:paddingBottom="@dimen/common_row_margin" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dept_title_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/input_remit_info"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/comm_view_left_noweight"
                    android:layout_weight="5"
                    android:text="@string/remitout_account" />

                <TextView
                    android:id="@+id/remitout_account_tv"
                    style="@style/comm_view_right_noweight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/comm_view_left_noweight"
                    android:layout_weight="5"
                    android:text="@string/get_remit_phone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/edittext_paddinglr" >

                    <EditText
                        android:id="@+id/edit_get_remit_phone"
                        style="@style/edittext_common_fill_no_weight"
                        android:layout_weight="3"
                        android:inputType="number"
                        android:maxLength="15"
                        android:textColor="@color/black" >
                    </EditText>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/btnpaddingtb"
                        android:layout_weight="4"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/btn_add_contract"
                            style="@style/btn_add_contact_image"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/comm_view_left_noweight"
                    android:layout_weight="5"
                    android:text="@string/get_remit_name" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/edittext_paddinglr" >

                    <EditText
                        android:id="@+id/edit_get_remit_name"
                        style="@style/edittext_common_fill_no_weight"
                        android:layout_weight="3"
                        android:maxLength="56"
                        android:textColor="@color/black" >
                    </EditText>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="4" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dept_currency_cashremit_tv"
                    style="@style/comm_view_left_noweight"
                    android:layout_weight="5"
                    android:singleLine="true"
                    android:text="@string/remit_money_type" />

                <TextView
                    android:id="@+id/remit_cashremit_tv"
                    style="@style/comm_view_right_noweight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:text="@string/tran_currency_rmb"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/comm_view_left_noweight"
                    android:layout_weight="5"
                    android:text="@string/remit_money_amout" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/edittext_paddinglr" >

                    <EditText
                        android:id="@+id/edit_remit_money_amout"
                        style="@style/edittext_common_fill_no_weight"
                        android:layout_weight="3"
                        android:inputType="number"
                        android:maxLength="14"
                        android:textColor="@color/black" >
                    </EditText>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="4" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/comm_view_left_noweight"
                    android:layout_weight="5"
                    android:text="@string/fuYan" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/edittext_paddinglr" >

                    <EditText
                        android:id="@+id/edit_message_et"
                        style="@style/edittext_common_fill_no_weight"
                        android:layout_weight="3"
                        android:hint="@string/hint_memo"
                        android:maxLength="50"
                        android:textColor="@color/black" >
                    </EditText>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="4" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>