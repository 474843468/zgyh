<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_ensure"
        android:layout_marginBottom="@dimen/common_row_margin"
        android:padding="0dp" >

        <RelativeLayout
            android:id="@+id/rl_order_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/dp_two_zero"
            android:background="@drawable/bg_for_listview_item_write" >

            <ScrollView
                android:id="@+id/ll_pt"
                style="@style/scrollview_fill"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/dp_three_zero" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    
                     <LinearLayout
                        android:id="@+id/ll_on"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="@string/epay_tq_treaty_detail_tv_order_no" />

                        <TextView
                            android:id="@+id/tv_order_no"
                            style="@style/textview_common_right" />
                    </LinearLayout>
                    
                     <LinearLayout
                        android:id="@+id/ll_cn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="支付卡号：" />

                        <TextView
                            android:id="@+id/tv_pay_card_no"
                            style="@style/textview_common_right" />
                    </LinearLayout>
                    
                     <LinearLayout
                        android:id="@+id/ll_ct"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="支付卡类型：" />

                        <TextView
                            android:id="@+id/tv_pay_card_type"
                            style="@style/textview_common_right" />
                    </LinearLayout>
                    
                     <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="支付时间：" />

                        <TextView
                            android:id="@+id/tv_pay_time"
                            style="@style/textview_common_right" />
                    </LinearLayout>
                    
                     <LinearLayout
                        android:id="@+id/ll_oa"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="订单金额：" />

                        <TextView
                            android:id="@+id/tv_order_amount"
                            style="@style/textview_common_right"
                            android:textColor="@color/red" />
                    </LinearLayout>
                    
                     <LinearLayout
                        android:id="@+id/ll_cc"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="@string/epay_tq_treaty_detail_tv_cur_code" />

                        <TextView
                            android:id="@+id/tv_cur_code"
                            style="@style/textview_common_right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="支付方式：" />

                        <TextView
                            android:id="@+id/tv_pay_type"
                            style="@style/textview_common_right" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/ll_os"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="交易状态：" />

                        <TextView
                            android:id="@+id/tv_order_status"
                            style="@style/textview_common_right" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="交易类型：" />

                        <TextView
                            android:id="@+id/tv_order_type"
                            style="@style/textview_common_right" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="交易终端：" />

                        <TextView
                            android:id="@+id/tv_zhongduan"
                            style="@style/textview_common_right" />
                    </LinearLayout>
                    
                     <LinearLayout
                        android:id="@+id/ll_as"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="交易流水号：" />

                        <TextView
                            android:id="@+id/tv_agreement_seq"
                            style="@style/textview_common_right" />
                    </LinearLayout>
                    
                     <LinearLayout
                        android:id="@+id/ll_mn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="@string/epay_tq_treaty_detail_tv_merchant_name" />

                        <TextView
                            android:id="@+id/tv_merchant_name"
                            style="@style/textview_common_right" />
                    </LinearLayout>
                    
                     <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="分期期数：" />

                        <TextView
                            android:id="@+id/tv_fenqishu"
                            style="@style/textview_common_right"/>
                    </LinearLayout>
                    
                     <LinearLayout
                        android:id="@+id/ll_order_note"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:layout_marginBottom="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:layout_weight="1.5"
                            android:text="备忘信息：" />

                        <TextView
                            android:id="@+id/tv_order_note"
                            style="@style/textview_common_right" />
                    </LinearLayout>
                    
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <TextView
            style="@style/titleText_stepacc"
            android:layout_width="@dimen/common_details_title_width"
            android:layout_height="@dimen/left_img_width"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bottom_margin_top"
            android:background="@drawable/bg_title"
            android:gravity="center"
            android:text="@string/epay_tq_detail_tv_title"
            android:textColor="@color/gray_title" />

        <RelativeLayout
            android:id="@+id/rl_pay_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_order_detail"
            android:visibility="gone" >

            <include layout="@layout/epay_tq_pay_detail" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_back_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_pay_content"
            android:visibility="gone" >

            <include layout="@layout/epay_tq_back_detail" />
        </RelativeLayout>
    </RelativeLayout>
    <!-- </com.chinamworld.bocmbci.biz.epay.transquery.widget.EpayDetailScroller> -->

    <Button
        android:id="@+id/bt_ensure"
        style="@style/bottombtn"
        android:layout_alignParentBottom="true"
        android:text="@string/confirm" />

</RelativeLayout>