<?xml version="1.0" encoding="utf-8"?>
<!-- 删除共享账户项 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/checkBox_del"
        android:layout_width="@dimen/checkboxWH"
        android:layout_height="@dimen/checkboxWH"
        android:layout_margin="@dimen/dp_one_zero"
        android:src="@drawable/save_phone_checkbox_selector" />

    <TextView
        android:id="@+id/tv_shared"
        style="@style/textview_common"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:singleLine="true"
        android:layout_marginRight="@dimen/dp_five"
        android:gravity="center_vertical" />

</LinearLayout>