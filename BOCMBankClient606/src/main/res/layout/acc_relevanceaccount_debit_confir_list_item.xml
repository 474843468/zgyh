<?xml version="1.0" encoding="utf-8"?>
<!-- 账户管理  借记卡关联对象选择项  wangmengmeng -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/common_row_margin"
    android:paddingLeft="@dimen/fill_padding_left"
    android:paddingRight="@dimen/fill_padding_right" >
   <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_relevance_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/acc_relevance_type"
                    style="@style/textview_for_list" />

                <TextView
                    android:id="@+id/tv_relevance_type_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/textview_for_list" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_relevance_actnum"
                    style="@style/textview_for_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/acc_relevance_actnum" />

                <TextView
                    android:id="@+id/tv_relevance_actnum_value"
                    style="@style/textview_for_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

</LinearLayout>