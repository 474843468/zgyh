<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/selector_for_click_list_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/fill_padding_top"
        android:paddingLeft="@dimen/layout_margin_top"
        android:paddingTop="@dimen/fill_padding_top" >
    <TextView
        android:id="@+id/text1"
        style="@style/textview_common"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/text2"
        style="@style/textview_common"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_row_margin_half"
        android:layout_marginRight="@dimen/common_row_margin_half"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/text3"
        style="@style/textview_common"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_five"
        android:layout_marginRight="@dimen/common_row_margin_half"
        android:layout_marginTop="@dimen/dp_five"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:singleLine="true"
       />

    <ImageView
        android:id="@+id/gotoDetailImage"
        android:layout_width="@dimen/shap_of_commrequestopen_pdl"
        android:layout_height="@dimen/shap_of_commrequestopen_pdl"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/right_arrow"
        android:visibility="visible" />
</LinearLayout>
</LinearLayout>