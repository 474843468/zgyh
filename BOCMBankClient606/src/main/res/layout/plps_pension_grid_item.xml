<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <FrameLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <RelativeLayout
            android:id="@+id/font"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/rightbtnW"
            android:layout_marginTop="@dimen/rightbtnW"
            android:layout_marginRight="@dimen/rightbtnW"
            android:layout_marginBottom="@dimen/layout_padding_left_right"
            android:gravity="center"
             >

            <ImageView
                android:id="@+id/image_item"
                android:layout_width="@dimen/btn_close_width"
                android:layout_height="@dimen/btn_close_width"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/text_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_item"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="@dimen/textsize_one_for"
                android:minLines="2" />

            <ImageView
                android:id="@+id/crcd_btn_gocancelrelation"
                android:layout_width="@dimen/icon_dele_HW"
                android:layout_height="@dimen/icon_dele_HW"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/icon_del"
                android:visibility="gone" />

        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>