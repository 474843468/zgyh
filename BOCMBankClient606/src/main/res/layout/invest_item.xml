<?xml version="1.0" encoding="utf-8"?>
<!-- 投资理财服务的条目 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/acc_list_item_height"
        android:layout_below="@+id/btn_invest"
        android:layout_marginTop="@dimen/inversitmargintop"
        android:layout_marginLeft="@dimen/fill_margin_left"
        android:layout_marginRight="@dimen/fill_margin_right"
        android:paddingLeft="@dimen/fill_padding_left"
        android:paddingRight="@dimen/fill_padding_right"
        android:background="@drawable/bg_for_listview_item_write"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv1"
            style="@style/textview_common_fill_wheight" 
            android:gravity="center"
           />

        <TextView
            android:id="@+id/tv2"
            style="@style/textview_common_fill_wheight"
            android:text="@string/investaccountstring" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv3"
            style="@style/textview_common_fill_wheight"
            android:textColor="@color/red" 
            android:visibility="gone"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_invest"
        android:layout_width="@dimen/riskimageWhieght"
        android:layout_height="@dimen/riskimageHeight"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_red_touzizhe"
        android:text="@string/investpingu" 
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_one_one"
        
        />

</RelativeLayout>