<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_match"
    android:orientation="vertical"
    android:background="@color/white" >
    
    <ScrollView style="@style/style_height_weight_1"
        android:background="@drawable/bg_for_listview_item_write"
        >
        <LinearLayout 
            style="@style/style_match_wrap"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <LinearLayout 
                style="@style/style_match_match"
                android:orientation="vertical"
                android:background="@drawable/shape_round_1"
                >
                <TextView 
	            style="@style/textview_common_multi_second"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="10dp"
	            android:text="@string/app_name"
	            />
                
           		<TextView 
	            style="@style/textview_common_multi_second"
	            android:layout_width="match_parent"
	            android:padding="10dp"
	            android:text="@string/assetmanager_capital_39"
	            />
            </LinearLayout>
            
            <LinearLayout 
                style="@style/style_match_match"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_round_1"
                >
                <TextView 
	            style="@style/textview_common_multi_second"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="10dp"
	            android:text="@string/app_name"
	            />
                
           		<TextView 
	            style="@style/textview_common_multi_second"
	            android:layout_width="match_parent"
	            android:padding="10dp"
	            android:text="@string/assetmanager_capital_39"
	            />
            </LinearLayout>
            
            
            <TextView style="@style/style_match_wrap"/>
        </LinearLayout>
    </ScrollView>
    
    <include layout="@layout/assetmanager_bottom_button_layout"/>

</LinearLayout>
