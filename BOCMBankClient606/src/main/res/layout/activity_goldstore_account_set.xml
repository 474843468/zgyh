            <RelativeLayout
                android:id="@+id/account_name_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_space_between_104px"
                >
                <TextView
                    android:id="@+id/name"
                    android:layout_width="@dimen/boc_space_between_160px"
                    android:layout_height="wrap_content"
                    android:text="@string/metalgoldstrre_name"
                    android:textSize="@dimen/textsize_default"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/boc_space_between_20px"
                    />
                <TextView
                    android:id="@+id/edtext_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/name"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                   android:layout_marginLeft="@dimen/boc_space_between_110px"
                    android:background="@null"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line_goldstore"
                android:orientation="horizontal" >
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/account_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_space_between_104px"
                >
                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="@dimen/boc_space_between_160px"
                    android:layout_height="wrap_content"
                    android:text="@string/metalgoldstrre_phonenumber"
                    android:textSize="@dimen/textsize_default"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/boc_space_between_20px"/>
                <EditText
                    android:id="@+id/edtext_phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/phone_number"
                    android:hint="@string/metalgoldstrre_pleasein"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/boc_space_between_110px"
                    android:numeric="integer"
                    android:background="@null"
                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line_goldstore"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_table_row"
            android:layout_marginTop="@dimen/boc_space_between_20px">
            <RelativeLayout
                android:id="@+id/account_address_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_space_between_104px"
                >
                <TextView
                    android:id="@+id/address"
                    android:layout_width="@dimen/boc_space_between_160px"
                    android:layout_height="wrap_content"
                    android:text="@string/metalgoldstrre_address"
                    android:textSize="@dimen/textsize_default"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/boc_space_between_20px"
                    />
                <EditText
                    android:id="@+id/edtext_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/address"
                    android:hint="@string/metalgoldstrre_pleasein"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/boc_space_between_110px"
                    android:singleLine="true"
                    android:background="@null"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line_goldstore"
                android:orientation="horizontal" >
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/account_mail_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_space_between_104px"
                >
                <TextView
                    android:id="@+id/mail"
                    android:layout_width="@dimen/boc_space_between_160px"
                    android:layout_height="wrap_content"
                    android:text="@string/metalgoldstrre_mail"
                    android:textSize="@dimen/textsize_default"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/boc_space_between_20px"
                    />
                <EditText
                    android:id="@+id/edtext_mail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/mail"
                    android:hint="@string/metalgoldstrre_pleasein"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/boc_space_between_110px"
                    android:numeric="integer"
                    android:maxLength="6"
                    android:background="@null"
                    />
            </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/boc_space_between_76px"
            >
            <LinearLayout
