<?xml version="1.0" encoding="utf-8"?>
<!-- 中银理财-购买确认页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/style_match_match"
    android:orientation="vertical" 
    >
    <!-- 内容区 -->
            <!-- 净值型产品 布局 -->
    <ScrollView 
        android:id="@+id/layout_jingzhi"
            style="@style/style_height_weight_1"
            android:background="@drawable/bg_for_listview_item_write"
            android:padding="@dimen/common_row_margin"
            android:visibility="visible"
            >
        <LinearLayout 
            style="@style/style_match_wrap"
            android:layout_marginBottom="@dimen/common_row_margin"
            android:orientation="vertical"
            >
            <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/textview_common"
		        android:gravity="center_horizontal"
		        android:textColor="@color/gray"
		        android:layout_marginTop="@dimen/common_row_margin"
		        android:text="@string/bocinvt_contract"
        		/>
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品代码："
                android:id="@+id/tv_jinzhi_1"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品名称："
                android:id="@+id/tv_jinzhi_2"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品币种："
                android:id="@+id/tv_jinzhi_3"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="钞/汇："
                android:id="@+id/tv_jinzhi_4"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="购买金额："
                app:ValueTextColor="red"
                android:id="@+id/tv_jinzhi_5"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="预计购买发起日："
                android:id="@+id/tv_jinzhi_12"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="认购/申购手续费："
                app:ValueTextColor="red"
                android:id="@+id/tv_jinzhi_6"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="柜员营销代码："
                android:id="@+id/tv_jinzhi_7"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="指定赎回日期："
                android:id="@+id/tv_jinzhi_8"
                />
            <TextView 
                android:id="@+id/tv_tip_fjz_1"
                style="@style/style_match_wrap"
                android:layout_marginTop="@dimen/common_row_margin"
                android:layout_marginBottom="@dimen/common_row_margin"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_default"
                android:gravity="left"
                android:text=""
                />
             <TextView 
                android:id="@+id/tv_jz_confirm"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/textview_common"
		        android:gravity="center_horizontal"
		        android:textColor="@color/gray"
		        android:layout_marginTop="@dimen/common_row_margin"
		        android:text="@string/bocinvt_contract"
        		/>
        </LinearLayout>
        </ScrollView>
        
    
        <!-- 非净值型产品  布局 -->
        <ScrollView 
            android:id="@+id/layout_feijingzhi"
            style="@style/style_height_weight_1"
            android:background="@drawable/bg_for_listview_item_write"
            android:padding="@dimen/common_row_margin"
            android:visibility="gone"
            >
            <!-- 净值型产品 布局 -->
        <LinearLayout 
            style="@style/style_match_wrap"
            android:layout_marginBottom="@dimen/common_row_margin"
            android:orientation="vertical"
            >
            <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/textview_common"
		        android:gravity="center_horizontal"
		        android:textColor="@color/gray"
		        android:layout_marginTop="@dimen/common_row_margin"
		        android:text="@string/bocinvt_contract"
        		/>
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品代码："
                android:id="@+id/tv_feijinzhi_1"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品名称："
                android:id="@+id/tv_feijinzhi_2"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品币种："
                android:id="@+id/tv_feijinzhi_3"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="钞/汇："
                android:id="@+id/tv_feijinzhi_4"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品期限："
                android:id="@+id/tv_feijinzhi_5"
                />
            <!-- 固定期限类产品显示：业绩基准-转低收益产品显示“可赎回日期”，其他固定期限产品显示“产品到期日” -->
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品到期日："
                android:id="@+id/tv_feijinzhi_7"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="份额面值："
                app:ValueTextColor="red"
                android:id="@+id/tv_feijinzhi_8"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="购买金额："
                android:id="@+id/tv_feijinzhi_9"
                app:ValueTextColor="red"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="预计购买发起日："
                android:id="@+id/tv_feijinzhi_15"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="预计年收益率："
                android:id="@+id/tv_feijinzhi_10"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="柜员营销代码："
                android:id="@+id/tv_feijinzhi_11"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="指定赎回日期："
                android:id="@+id/tv_feijinzhi_12"
                />
            <TextView 
                android:id="@+id/tv_tip_fjz"
                style="@style/style_match_wrap"
                android:layout_marginTop="@dimen/common_row_margin"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_default"
                android:gravity="left"
                android:text=""
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="投资期数："
                android:id="@+id/tv_feijinzhi_13"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                android:layout_marginBottom="@dimen/common_row_margin"
                app:labelText="预计到期日："
                android:id="@+id/tv_feijinzhi_14"
                />
            <TextView 
                android:id="@+id/tv_fjz_confirm"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/textview_common"
		        android:gravity="center_horizontal"
		        android:textColor="@color/gray"
		        android:layout_marginTop="@dimen/common_row_margin"
		        android:text="@string/bocinvt_contract"
        		/>
        </LinearLayout>
        </ScrollView>
	<!-- 按钮区 -->
    <!-- <LinearLayout style="@style/style_match_wrap"> -->
        <Button 
            android:id="@+id/btn_sure"
            style="@style/bottombtn"
            android:text="@string/ok"
            />
   	<!-- </LinearLayout> -->
</LinearLayout>
