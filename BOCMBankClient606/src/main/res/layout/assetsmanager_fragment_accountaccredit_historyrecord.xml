<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D7D7D7"
    android:orientation="vertical"
    tools:context=".AssertsAccountManagerActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_seven"

        android:layout_marginLeft="@dimen/dp_one_zero"
        android:layout_marginRight="@dimen/dp_one_zero"

        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/but_accountaccredit_history_oneself"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@drawable/assetsmanager_account_mannager_leftbut"
            android:text="@string/account_accredit_history_oneselfe"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/but_accountaccredit_history_other"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:background="@drawable/assetsmanager_account_mannager_white_rightbut"
            android:text="@string/account_accredit_history_otherselfe"
            android:textColor="#ff0000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_accountaccredit_history_oneselfe"
        android:layout_marginTop="@dimen/dp_seven"

        android:layout_marginLeft="@dimen/dp_one_zero"
        android:layout_marginRight="@dimen/dp_one_zero"

        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_accredit_history_otherselfe_selectaccount"
            android:textSize="@dimen/textsize_default"/>

        <Spinner
            android:id="@+id/sp_accountaccredit_history_oneselfe"
            style="@style/Spiiner_fill"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/common_listview_item_paddingLR"
            android:layout_marginLeft="@dimen/common_listview_item_paddingLR"/>

    </LinearLayout>

    <!--
    <LinearLayout
