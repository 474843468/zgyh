    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_seven"

        android:layout_marginLeft="@dimen/dp_one_zero"
        android:layout_marginRight="@dimen/dp_one_zero"

        android:orientation="horizontal" >

        <include layout="@layout/assetsmanager_base_query_fengge" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_asaa_query_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_seven"

        android:layout_marginLeft="@dimen/dp_one_zero"
        android:layout_marginRight="@dimen/dp_one_zero"

        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_asaa_query_transfer_startdate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height"
            android:layout_weight="1"
            android:layout_marginRight="7dp" >

            <TextView
                android:id="@+id/tv_asaa_historyrecordsearch_startdate"
                style="@style/textview_common"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/u51"
                android:gravity="center_vertical"
                android:padding="5dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/u53"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_asaa_query_transfer_enddate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            >

            <TextView
                android:id="@+id/tv_asaa_historyrecordsearch_enddate"
                style="@style/textview_common"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/u51"
                android:gravity="center_vertical"
                android:padding="5dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/u53"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_seven"

        android:layout_marginLeft="@dimen/dp_one_zero"
        android:layout_marginRight="@dimen/dp_one_zero"

        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_asac_historyrecord_query"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/assetsmanager_account_mannager_middlebut"
            android:text="@string/query"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_asac_historyrecord_query_up"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/common_row_margin"
        >

        <TextView
            android:id="@+id/textView1"
            style="@style/textview_common_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:textSize="@dimen/textsize_one_three" />

        <ImageView
            android:id="@+id/iv_asac_query_up"
            style="@style/query_image_up_style"
            android:layout_gravity="bottom"
            android:src="@drawable/u61" />
    </LinearLayout>

</LinearLayout>