<?xml version="1.0" encoding="utf-8"?>
<!-- 基金 撤销 页面xyl -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/finc_last"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_blue_big"
            android:text="@string/last"
            android:textColor="@color/white"
            android:visibility="gone" />
          <Button
            android:id="@+id/finc_confirm"
            style="@style/bottombtn_606"
            android:text="@string/confirm"
             />
    </LinearLayout>

    <ScrollView
        android:id="@+id/prms_scrollView1_layout"
        style="@style/scrollview_comm"
        android:layout_above="@id/btn_layout"
        android:layout_marginBottom="@dimen/common_row_margin"
       >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@drawable/bg_for_listview_item_write"
            android:paddingTop="@dimen/common_details_messages_margintop"
            android:orientation="vertical" >

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_info_textview_style"
                    android:text="@string/finc_myfinc_sell_confirm" />
            </LinearLayout>

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/finc_fundsql_colon" />

                <TextView
                    android:id="@+id/finc_fundsql_tv"
                    style="@style/confirm_right_textview_style606" />
            </LinearLayout>

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/finc_tradefund_colon" />

                <TextView
                    android:id="@+id/finc_tradefund_tv"
                    style="@style/confirm_right_textview_style606" />
            </LinearLayout>

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/finc_entrustdate_colon" />

                <TextView
                    android:id="@+id/finc_entrustdate_tv"
                    style="@style/confirm_right_textview_style606" />
            </LinearLayout>

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/finc_transinfund_colon" />

                <TextView
                    android:id="@+id/finc_transinfund_tv"
                    style="@style/confirm_right_textview_style606" />
            </LinearLayout>

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/finc_tradetype_colon" />

                <TextView
                    android:id="@+id/finc_tradetype_tv"
                    style="@style/confirm_right_textview_style606" />
            </LinearLayout>

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/finc_tradecurrency_colon" />

                <TextView
                    android:id="@+id/finc_tradecurrency_tv"
                    style="@style/confirm_right_textview_style606" />
            </LinearLayout>

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/finc_tradenum_colon" />

                <TextView
                    android:id="@+id/finc_tradenum_tv"
                    style="@style/confirm_right_textview_style606" 
                    android:textColor="@color/red"/>
            </LinearLayout>

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/finc_feetype_colon" />

                <TextView
                    android:id="@+id/finc_feetype_tv"
                    style="@style/confirm_right_textview_style606" />
            </LinearLayout>

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/finc_tradestate_colon" />

                <TextView
                    android:id="@+id/finc_fundstate_tv"
                    style="@style/confirm_right_textview_style606" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_details_title_height"
        android:layout_marginTop="@dimen/common_details_title_margintop"
        android:visibility="gone"
         >

        <TextView
            android:layout_width="@dimen/common_details_title_width"
            android:layout_height="@dimen/common_details_title_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_title"
            android:gravity="center"
            android:text="@string/finc_confirm_conserndeal_info"
            android:textSize="@dimen/textsize_default"
             />
    </RelativeLayout>

</RelativeLayout>