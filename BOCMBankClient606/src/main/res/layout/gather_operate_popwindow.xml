<?xml version="1.0" encoding="utf-8"?>
<!-- 常用联系人 操作弹出的从下往上弹的底部按钮 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_for_foot_choose"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/fill_margin_bottom" >

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/fidgetButton"
            style="@style/popupwindow_btn_normal"
            android:text="@string/modify_phone_number" />
    </LinearLayout>

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/orgButton"
            style="@style/popupwindow_btn_normal"
            android:text="@string/btn_to_creat_gather" />
    </LinearLayout>

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/cancleButton"
            style="@style/popupwindow_btn_cancle"
            android:text="@string/cancle"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>