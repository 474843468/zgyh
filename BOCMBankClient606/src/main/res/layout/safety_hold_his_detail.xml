<?xml version="1.0" encoding="utf-8"?>
<!-- 结售汇 购汇 输入信息页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_details_messages_margintop"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView
            style="@style/scrollview_comm_havemarginbutton"
            android:paddingLeft="0dip"
            android:paddingRight="0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/linnerlayout_common"
                    android:layout_marginRight="0dip" >

                    <TextView
                       style="@style/textview_forex_prompt_message"  
                        
                        android:text="@string/safety_hold_pro_detail_risk_company_name" />

                    <TextView
                        android:id="@+id/risk_company_name"
                        style="@style/textview_forex_prompt_info"  />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                       style="@style/textview_forex_prompt_message"  
                        
                        android:text="@string/prodName" />

                    <TextView
                        android:id="@+id/product_name"
                        style="@style/textview_forex_prompt_info"  />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                       style="@style/textview_forex_prompt_message"  
                        
                        android:text="@string/safety_hold_pro_detail_prod_type" />

                    <TextView
                        android:id="@+id/product_type"
                        style="@style/textview_forex_prompt_info"  />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                       style="@style/textview_forex_prompt_message"  
                        
                        android:text="@string/prodCode" />

                    <TextView
                        android:id="@+id/product_code"
                        style="@style/textview_forex_prompt_info"  />
                </LinearLayout>

                <LinearLayout
                    style="@style/linnerlayout_common"
                    android:layout_marginRight="0dip"
                    android:gravity="left" >

                    <TextView
                        android:id="@+id/capital_use_alert"
                       style="@style/textview_forex_prompt_message"  
                        
                        android:text="@string/safety_hold_pro_detail_risk_bill_code" />

                    <TextView
                        android:id="@+id/bill_num"
                        style="@style/textview_forex_prompt_info" 
                        android:gravity="left"
                        android:maxLines="2"
                        android:paddingRight="2dip"
                        android:singleLine="false" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                       style="@style/textview_forex_prompt_message"  
                        
                        android:text="@string/currency1" />

                    <TextView
                        android:id="@+id/currency"
                        style="@style/textview_forex_prompt_info"  />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                       style="@style/textview_forex_prompt_message"  
                        
                        android:text="@string/trade_money" />

                    <TextView
                        android:id="@+id/trade_amount"
                        style="@style/textview_forex_prompt_info" 
                        android:textColor="@color/red" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                       style="@style/textview_forex_prompt_message"  
                        
                        android:text="@string/trade_type" />

                    <TextView
                        android:id="@+id/trade_type"
                        style="@style/textview_forex_prompt_info"  />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                       style="@style/textview_forex_prompt_message"  
                        
                        android:text="@string/bocinvt_paymentDate" />

                    <TextView
                        android:id="@+id/trade_date"
                        style="@style/textview_forex_prompt_info"  />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_details_title_height"
        android:layout_marginTop="@dimen/dp_one_zero" >

        <TextView
            android:layout_width="@dimen/common_details_title_width"
            android:layout_height="@dimen/btn_operate_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_title"
            android:gravity="center"
            android:text="@string/sbremit_detail_info"
            android:textSize="@dimen/textsize_default" />
    </RelativeLayout>

</RelativeLayout>