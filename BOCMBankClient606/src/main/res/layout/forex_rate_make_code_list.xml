<?xml version="1.0" encoding="utf-8"?>
<!-- 汇率定制的item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/btn_close_width"
    android:background="@drawable/bg_for_listview_item_write" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_close_width"
        android:layout_gravity="center"      
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rate_sourceCurCde"
            style="@style/bond_textview_15_black_1"
            android:layout_width="@dimen/titlebackbtn_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="false"/>

        <TextView
            android:id="@+id/rate_middle"
            style="@style/bond_textview_15_black_1"
            android:layout_width="@dimen/fill_margin_bottom"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/forex_double_arrow" />

        <ImageView
            android:id="@+id/imageViewright"
            style="@style/sucess_right_iv"
            android:layout_width="@dimen/btn_close_height"
            android:layout_height="@dimen/btn_close_height"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/rate_targetCurCde"
            style="@style/bond_textview_15_black_1"
            android:layout_width="@dimen/titlebackbtn_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="false"/>
    </LinearLayout>

</RelativeLayout>