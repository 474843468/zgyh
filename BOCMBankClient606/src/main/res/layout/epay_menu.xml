<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_for_click_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_ele_pay"
                style="@style/common_click_first_item_style" >

                <TextView
                    android:id="@+id/ele_pay"
                    style="@style/textview_common"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_click_item_height"
                    android:layout_toLeftOf="@+id/img_ele_pay"
                    android:gravity="center_vertical"
                    android:text="@string/epay_menu_title" />

                <ImageView
                    android:id="@+id/img_ele_pay"
                    android:layout_width="@dimen/rightbtnW"
                    android:layout_height="@dimen/rightbtnH"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_five"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

            <ImageView style="@style/divider_imag_style" />

            <RelativeLayout
                android:id="@+id/rl_wc_pay"
                style="@style/common_click_item_style" >

                <TextView
                    android:id="@+id/wc_pay"
                    style="@style/textview_common"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_click_item_height"
                    android:layout_toLeftOf="@+id/img_wc_pay"
                    android:gravity="center_vertical"
                    android:text="@string/epay_menu_wc_new" />

                <ImageView
                    android:id="@+id/img_wc_pay"
                    android:layout_width="@dimen/rightbtnW"
                    android:layout_height="@dimen/rightbtnH"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_five"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

            <ImageView style="@style/divider_imag_style" />

            <RelativeLayout
                android:id="@+id/rl_treaty_pay"
                style="@style/common_click_last_item_style" >

                <TextView
                    android:id="@+id/treaty_pay"
                    style="@style/textview_common"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_click_item_height"
                    android:layout_toLeftOf="@+id/img_treaty_pay"
                    android:gravity="center_vertical"
                    android:text="@string/epay_menu_treaty" />

                <ImageView
                    android:id="@+id/img_treaty_pay"
                    android:layout_width="@dimen/rightbtnW"
                    android:layout_height="@dimen/rightbtnH"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_five"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

           
        </LinearLayout>

</RelativeLayout>