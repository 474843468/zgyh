<?xml version="1.0" encoding="utf-8"?>
<!-- 我的双向宝  双向宝账户详情 item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/btn_bottom_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/listiterm_padding_left"
    android:paddingRight="@dimen/listiterm_padding_right" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_bottom_height"
        android:layout_gravity="center"
        android:layout_weight="7" >

        <TextView
            android:id="@+id/finc_code"
            style="@style/textview_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="@string/currency_cashremit_no"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_bottom_height"
        android:layout_gravity="center"
        android:layout_weight="3" >

        <TextView
            android:id="@+id/finc_balance"
            style="@style/textview_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="@string/finc_myfinc_blance_balance"
            android:textColor="@color/red" />
    </LinearLayout>

</LinearLayout>