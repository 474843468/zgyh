<?xml version="1.0" encoding="utf-8"?>
<!-- 资金归集 拆分详情信息项 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_for_listview_item_write" >

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/fill_padding" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:shrinkColumns="1" >

            <TableRow>

                <TextView
                    style="@style/comm_view_left"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:text="@string/collect_trans_number" />

                <TextView
                    android:id="@+id/tv_workno"
                    style="@style/comm_view_right"
                    android:layout_weight="0"
                    android:paddingLeft="0dp"
                    android:singleLine="true" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/comm_view_left"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:text="@string/collect_amount" />

                <TextView
                    android:id="@+id/tv_amount"
                    style="@style/comm_view_right"
                    android:layout_weight="0"
                    android:paddingLeft="0dp"
                    android:textColor="@color/red"
                    android:singleLine="true" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/comm_view_left"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:text="@string/collect_status" />

                <TextView
                    android:id="@+id/tv_status"
                    style="@style/comm_view_right"
                    android:layout_weight="0"
                    android:paddingLeft="0dp"
                    android:singleLine="true" />
            </TableRow>

		<!--  
           <TableRow>

                <TextView
                    style="@style/comm_view_left"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:text="@string/collect_error_code" />

                <TextView
                    android:id="@+id/tv_code"
                    style="@style/comm_view_right"
                    android:layout_weight="0"
                    android:paddingLeft="0dp"
                    android:singleLine="true" />
            </TableRow>
          -->

            <TableRow>

                <TextView
                    style="@style/comm_view_left"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:text="@string/collect_error_message" />

                <TextView
                    android:id="@+id/tv_message"
                    style="@style/comm_view_right"
                    android:layout_weight="0"
                    android:paddingLeft="0dp"
                    android:singleLine="true"
                     />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>