<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:userProperty="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/button_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/lastButton"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_blue_big"
            android:text="@string/last"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/sureButton"
            style="@style/bottombtn"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_lay"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView
            style="@style/scrollview_fill"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_five"
            android:paddingTop="@dimen/dp_five" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_acc_loss_actnum"
                        style="@style/textview_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_horizontal"
                        android:text="@string/mycrcd_tiqian_jieqingandruzhang_info"
                        android:textColor="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:text="@string/mycrcd_credit_card" />

                        <TextView
                            android:id="@+id/finc_accNumber"
                            style="@style/textview_common_right"
                            android:singleLine="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_acc_loss_type"
                            style="@style/textview_common_left"
                            android:text="@string/mycrcd_divided_fenqi_date" />

                        <TextView
                            android:id="@+id/finc_fenqidate"
                            style="@style/textview_common_right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:text="@string/mycrcd_divided_fenqi_miaoshu" />

                        <TextView
                            android:id="@+id/finc_miaoshus"
                            style="@style/textview_common_right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:text="@string/mycrcd_divided_fenqi_bizhong" />

                        <TextView
                            android:id="@+id/finc_bizhong"
                            style="@style/textview_common_right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:text="@string/mycrcd_divided_fenqi_amount" />

                        <TextView
                            android:id="@+id/finc_fincName"
                            style="@style/textview_common_right"
                            android:singleLine="false"
                            android:textColor="@color/red" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:text="@string/mycrcd_divided_fenqi_qinum" />

                        <TextView
                            android:id="@+id/finc_qinum"
                            style="@style/textview_common_right"
                            android:singleLine="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/money"
                            style="@style/textview_common_left"
                            android:text="@string/mycrcd_divided_fenqi_type" />

                        <TextView
                            android:id="@+id/finc_fenqitype"
                            style="@style/textview_common_right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:text="@string/mycrcd_divided_fenqi_firstmoney" />

                        <TextView
                            android:id="@+id/finc_firstamount"
                            style="@style/textview_common_right"
                            android:singleLine="false"
                            android:textColor="@color/red" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:text="@string/mycrcd_divided_fenqi_nextmoney" />

                        <TextView
                            android:id="@+id/finc_nextmoney"
                            style="@style/textview_common_right"
                            android:singleLine="false"
                            android:textColor="@color/red" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:text="@string/mycrcd_divided_fenqi_hasrumoney" />

                        <TextView
                            android:id="@+id/finc_hasrumoney"
                            style="@style/textview_common_right"
                            android:singleLine="false"
                            android:textColor="@color/red" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:text="@string/mycrcd_divided_fenqi_remiannonum" />

                        <TextView
                            android:id="@+id/finc_remiannonum"
                            style="@style/textview_common_right"
                            android:singleLine="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:text="@string/mycrcd_divided_fenqi_remiannomoney" />

                        <TextView
                            android:id="@+id/finc_remiannomoney"
                            style="@style/textview_common_right"
                            android:singleLine="false"
                            android:textColor="@color/red" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left"
                            android:text="@string/mycrcd_divided_fenqi_nextdate" />

                        <TextView
                            android:id="@+id/finc_nextdate"
                            style="@style/textview_common_right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_smc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/fill_padding_right"
                        android:visibility="gone" >

                        <TextView
                            style="@style/textview_common_left_three"
                            android:text="@string/smc" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="3" >

                            <RelativeLayout
                                android:id="@+id/ll_smc_sip"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <cfca.mobile.sip.SipBox
                                    android:id="@+id/sipbox_smc"
                                    style="@style/editext_fill"
                                    android:maxLength="6"
                                    android:textSize="@dimen/textsize_default" />
                            </RelativeLayout>

                            <Button
                                android:id="@+id/smsbtn"
                                style="@style/button_smscode"
                                android:layout_marginRight="@dimen/layout_margin_top" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_active_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/fill_padding_right"
                        android:visibility="gone" >

                        <TextView
                            style="@style/textview_common_left_three"
                            android:text="@string/active_code" />

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="3" >

                            <LinearLayout
                                android:id="@+id/ll_activecode_sip"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent" >

                                <cfca.mobile.sip.SipBox
                                    android:id="@+id/sipbox_active"
                                    style="@style/editext_fill"
                                    android:maxLength="6"
                                    android:textSize="@dimen/textsize_default" />
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>

					<com.chinamworld.bocmbci.widget.UsbKeyText
					    android:id="@+id/sip_usbkey"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="@dimen/common_row_margin"
					    android:paddingRight="@dimen/fill_padding_right"
					    userProperty:ShowRate="1:1"
					    android:gravity="center"
					    android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/crcd_common_tv"
                            android:text="@string/mycrcd_wenxin_tishi"
                            android:textColor="@color/gray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>