<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height"
    android:baselineAligned="false" >

    <LinearLayout
        android:id="@+id/layout_step1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="1"
        android:background="@drawable/safety_step1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/index1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:text="1"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_default"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_marginTop="3dip"
            android:text="@string/safety_simpleInfo"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_one_zero" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_step2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="1"
        android:background="@drawable/safety_step3"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/index2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:text="2"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize_default"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_marginTop="3dip"
            android:text="@string/safety_carsafety_offer"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize_one_zero" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_step3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_weight="1"
        android:background="@drawable/safety_step4"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/index3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:text="3"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize_default"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_marginTop="3dip"
            android:text="@string/safety_msgfill_title"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize_one_zero" />
    </LinearLayout>

</LinearLayout>