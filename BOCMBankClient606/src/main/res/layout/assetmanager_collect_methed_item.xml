<?xml version="1.0" encoding="utf-8"?>
<!-- 跨行资金归集被归集列表 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:paddingBottom="@dimen/fill_padding_top"
        android:paddingLeft="@dimen/layout_margin_top"
        android:paddingTop="@dimen/fill_padding_top"
        android:background="@drawable/selector_for_click_list_item"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/tv_collectmethod"
            style="@style/textview_common"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:singleLine="true"
            android:text="--ddddddddd"
            android:textSize="16dp" />



        <TextView
            android:id="@+id/tv_collectalert"
            style="@style/textview_common"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="大厦大厦大厦ddddddddddddddddddddddddddd"
            android:textSize="12dp" />

        <View
            android:id="@+id/rbt_select"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>



</RelativeLayout>