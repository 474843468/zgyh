<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_wrap"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/lyt_logout_image"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:visibility="gone"
        android:background="@color/gray_bule"
        >

        <ImageView
            android:id="@+id/image_outlogin"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher" />
        <Button
            android:id="@+id/btn_login"
            android:layout_below="@id/image_outlogin"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/lyt_login_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:background="@color/gray_bule">

        <ImageView
            android:id="@+id/ima_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/prms_ima_help" />

        <LinearLayout
            android:id="@+id/lyt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_refvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/prms_refvalue"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/ima_openeye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/prms_ima_openeye"
                android:gravity="center_vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_totalnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lyt_name"
            android:layout_centerInParent="true"
            android:text="aaaaaaaaaa"
            android:textColor="@color/white" />
    </RelativeLayout>


</LinearLayout>