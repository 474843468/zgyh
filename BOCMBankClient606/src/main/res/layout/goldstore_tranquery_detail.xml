<?xml version="1.0" encoding="utf-8"?>
<!-- 贵金属积存 交易查询 详情页面   linyl -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eff5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_40px"
            android:background="#ffffff"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/ll_tra_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/tv_tra_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/boc_space_between_30px"
                android:layout_margin="@dimen/boc_space_between_30px"/>

            <TextView
                android:id="@+id/tra_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="@dimen/boc_space_between_72px"
                android:layout_marginLeft="@dimen/boc_space_between_62px"
                android:layout_marginTop="@dimen/boc_space_between_16px"
                android:layout_marginBottom="@dimen/boc_space_between_50px"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f0eff5"/>

            </LinearLayout>

            <com.chinamworld.llbt.userwidget.NewLabelTextView
               android:id="@+id/tra_weight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_space_between_96px"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_40px"
            android:orientation="vertical">
            <com.chinamworld.bocmbci.biz.preciousmetal.NewTitleAndContent
                android:id="@+id/mycontainerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

           </com.chinamworld.bocmbci.biz.preciousmetal.NewTitleAndContent>

        </LinearLayout>



    </LinearLayout>



</FrameLayout>
