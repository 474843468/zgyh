<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/stepbar"
        layout="@layout/step_title_layout" />

    <ScrollView
        style="@style/scrollview_comm_havemarginbutton"
        android:layout_above="@+id/bottom_btn_layout"
        android:layout_marginBottom="@dimen/common_row_margin"
        android:layout_marginLeft="@dimen/fill_margin_left"
        android:layout_marginRight="@dimen/fill_margin_right"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:layout_below="@id/stepbar"
        android:background="@drawable/bg_for_listview_item_write" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/infoserve_non_fixed_product_remind_setting_account" />

                <TextView
                    android:id="@+id/account_tv"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/infoserve_daedaozhang_fromdate" />

                <TextView
                    android:id="@+id/fromdate_tv"
                    style="@style/Spiiner_fill_small"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:text="@string/please_choose" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/layout_padding_bottom"
                android:paddingTop="@dimen/layout_padding_bottom"
                android:text="@string/infoserve_daedaozhang_fromdate_notice"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_default" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/infoserve_daedaozhang_fromtime" />

                <TextView
                    android:id="@+id/fromtime_tv"
                    style="@style/Spiiner_fill_small"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:text="@string/please_choose" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/layout_padding_bottom"
                android:paddingTop="@dimen/layout_padding_bottom"
                android:text="@string/infoserve_daedaozhang_fromtime_notice"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_default" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/infoserve_daedaozhang_currency" />

                <TextView
                    android:id="@+id/currency_tv"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/infoserve_daedaozhang_beginamt" />

            <EditText
                android:id="@+id/beginamt_et"
                style="@style/comm_view_right"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/bg_for_edittext"
                android:inputType="numberDecimal"
                android:maxLength="14"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_default" >
            </EditText>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/infoserve_daedaozhang_endAmt" />

            <EditText
                android:id="@+id/endamt_et"
                style="@style/comm_view_right"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/bg_for_edittext"
                android:inputType="numberDecimal"
                android:maxLength="14"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_default" >
            </EditText>
            </LinearLayout>
            
            
            
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" 
        android:paddingLeft="@dimen/fill_margin_right"
    	android:paddingRight="@dimen/fill_margin_right">

        <!--
             <Button
            android:id="@+id/btnLast"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_blue_big"
            android:text="@string/last" />
        -->

        <Button
            android:id="@+id/btnSubmit"
            style="@style/bottombtn"
            android:text="@string/submit" />
    </LinearLayout>

</RelativeLayout>