<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_for_foot_choose"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/fill_margin_bottom" >

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/prms_buy"
            style="@style/popupwindow_btn_normal"
             />
    </LinearLayout>

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/prms_sale"
            style="@style/popupwindow_btn_normal"
             />
    </LinearLayout>

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/cancle_btn"
            style="@style/popupwindow_btn_cancle"
            android:text="@string/cancle"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>