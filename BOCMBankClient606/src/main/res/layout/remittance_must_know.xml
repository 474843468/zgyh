<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_for_listview_item_write"
    tools:context=".biz.remittance.RemittanceMustKnowActivity" >

    <TextView
        android:id="@+id/tip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fill_margin_top"
        android:layout_marginRight="@dimen/fill_margin_top"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:text="@string/remittance_mustKnow_tip1"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_default" />

    <ScrollView
        android:id="@+id/tip2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnlayout"
        android:layout_below="@id/tip1"
        android:layout_marginLeft="@dimen/fill_margin_top"
        android:layout_marginRight="@dimen/fill_margin_top" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common_row_margin"
            android:paddingTop="@dimen/common_row_margin" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/remittance_mustKnow_tip2"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_default" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btnlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnConfirm"
            style="@style/bottombtn"
            android:background="@drawable/btn_red_big_long"
            android:text="@string/confirm"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>