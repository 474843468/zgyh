<?xml version="1.0" encoding="utf-8"?>
<!-- 账单缴付首页-增加提示信息 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_match"
    android:background="@drawable/shape_round_2"
    android:gravity="center"
    android:orientation="vertical" >
	<ScrollView style="@style/scrollview_comm" android:layout_height="0dp" android:layout_weight="4">
	    <LinearLayout 
	        style="@style/style_match_match" 
	        android:orientation="vertical"
	        android:gravity="center"
	        android:padding="10dp"
	        >
	        <TextView 
	            android:id="@+id/tv_mess_1"
		        style="@style/textview_common"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        />
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="5dp"
		        />
	    </LinearLayout>
	</ScrollView>    
    
    <View style="@style/style_line"/>
    <TextView 
        android:id="@+id/tv_btn_sure"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
		android:layout_gravity="center_horizontal"        
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#2a69f6"
        android:text="@string/confirm"
        />
    

</LinearLayout>
