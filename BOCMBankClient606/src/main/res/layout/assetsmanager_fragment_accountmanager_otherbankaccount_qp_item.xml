<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7D7D7"
    android:orientation="vertical"
    tools:context=".AssertsAccountManagerActivity" >

    <!--android:layout_marginLeft="20dp"-->
    <!--android:layout_marginRight="20dp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        
        android:background="@drawable/assetsmanager_account_mannager_otherbankaccount_qp_item"
        android:orientation="horizontal"
        android:layout_gravity="center" >
        <TextView 
            android:id="@+id/tv_as_am_otherbankaccountitem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查询协议1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"/>
        <ImageView 
            android:id="@+id/iv_as_am_otherbankaccountitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>

        
    </LinearLayout>

</LinearLayout>