<?xml version="1.0" encoding="utf-8"?>
<!-- 现金宝转入资金 输入信息页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_next"
            style="@style/bottombtn"
            android:background="@drawable/btn_red_big"
            android:text="@string/next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_btn"
        android:layout_marginTop="@dimen/common_row_margin"
        android:layout_weight="1"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView style="@style/scrollview_comm" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_cashbank_fund" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_three"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_cashbank_fund_info"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_one_zero"
                        android:paddingRight="@dimen/dp_one_zero"
                        android:text="中银活期宝货币基金（基金代码000539）"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>
                
                <View 
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line"
                    android:layout_marginTop="@dimen/fill_margin_top"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left"
                        android:layout_weight="6.5"
                        android:gravity="right"
                        android:text="@string/cashbank_balance" />
					<LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/tv_cashbank_balance"
                        style="@style/textview_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" 
                        android:textColor="@color/red" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_five"
                        android:gravity="right"
                        android:text="元"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left"
                        android:layout_gravity="center"
                        android:layout_weight="6.5"
                        android:gravity="right"
                        android:text="@string/cashbank_pay_account" />

                    <RelativeLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:layout_marginRight="@dimen/common_listview_item_paddingLR">
                    <Spinner
                        android:id="@+id/sp_cashbank_pay_acc" 
                        style="@style/Spiiner_fill_big"/>
                    <TextView
                        android:id="@+id/tv_cashbank_pay_acc"
                        style="@style/Spiiner_fill_big"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/textsize_default"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:text="请选择"/>
                    </RelativeLayout>
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left"
                        android:layout_weight="6.5"
                        android:gravity="right"
                        android:text="账户余额：" />
					<LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/tv_cashbank_acc_yue"
                        style="@style/textview_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-" 
                        android:textColor="@color/red" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_five"
                        android:gravity="right"
                        android:text="元"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left"
                        android:layout_gravity="center"
                        android:layout_weight="6.5"
                        android:gravity="right"
                        android:text="@string/cashbank_trans_in_amount" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/et_cashbank_trans_in_amount"
                            style="@style/edittext_common_fill"
                            android:layout_marginRight="@dimen/common_listview_item_paddingLR"
                            android:inputType="numberDecimal"
                            android:maxLength="14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/dp_five"
                            android:gravity="right"
                            android:text="元"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_default" />
                    </LinearLayout>
                </LinearLayout>
                
                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_three_zero"
                    android:paddingRight="@dimen/dp_three_zero"
                    android:layout_marginBottom="@dimen/fill_margin_top"
                    android:layout_marginTop="@dimen/dp_one_zero"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_default" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>