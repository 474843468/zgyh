<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_new_height"
    android:background="@drawable/img_card_new"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/fill_padding_top"
        android:paddingRight="@dimen/fill_padding_top" >

        <TextView
            android:id="@+id/et_templateName"
            style="@style/edittext_inputNumber_fill_new"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dip"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="11"
            android:singleLine="true"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_startRemittance"
            android:layout_width="@dimen/query_btn_width"
            android:layout_height="@dimen/step_title_height"
            android:background="@drawable/btn_chaxun_bg"
            android:text="@string/remittance_template_startRemittance"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_otherOperation"
            android:layout_width="@dimen/query_btn_width"
            android:layout_height="@dimen/step_title_height"
            android:layout_marginLeft="@dimen/common_row_margin"
            android:background="@drawable/btn_chaxun_bg"
            android:text="@string/remittance_template_otherOperation"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_payeeEnName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fill_padding_top"
        android:paddingRight="@dimen/fill_padding_top"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_default" />

</LinearLayout>