<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/goldstore_bg"
    tools:context="com.chinamworld.bocmbci.biz.preciousmetal.PreciousmetalLayoutActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/goldstote_gray_line"></LinearLayout>
    <com.chinamworld.llbt.userwidget.refreshliseview.PullDownRefreshLayout
        android:id="@+id/pull_down_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/bg_goldstore"
            >
            <RelativeLayout
                android:id="@+id/trade_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg_goldstore"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize_default"
                        android:text="@string/transType"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    >
                    <TextView
                        android:id="@+id/type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="-"/>
                    <ImageView
                        android:id="@+id/right_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="@dimen/boc_space_between_30px"
                        android:visibility="invisible"
                        android:src="@drawable/goldstore_jiantou_right"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/goldstote_gray_line"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="4"
                android:background="@color/bg_goldstore">

                <LinearLayout
                    android:id="@+id/acount_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/metalgoldstore_amount"
                    android:layout_marginTop="@dimen/boc_global_loading_height"/>
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    />
                    <TextView
                        android:id="@+id/reminder_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/boc_space_between_72px"
                        android:layout_gravity="center_horizontal"
                        android:text="参考市值（元）--"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/prms_price_top_height"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/listiterm_padding_left"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/metalgoldstote_sellprices"
                                    android:textSize="@dimen/textsize_one_three" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/prms_price_listiterm1_saleprice_head"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/common_listview_item_paddingLR"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/textsize_one_three"
                                    android:text="--"
                                    android:textStyle="bold" />
                                    <TextView
                                        android:id="@+id/prms_price_listiterm1_saleprice_end"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/common_listview_item_paddingLR"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize_one_eight"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </LinearLayout>


                        </RelativeLayout>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/gray"
                        android:gravity="center"
                        android:layout_gravity="center"></LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/metalgoldstote_buyprices"
                                    android:textSize="@dimen/textsize_one_three" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/prms_price_listiterm1_buyprice_head"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/common_listview_item_paddingLR"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/textsize_one_three"
                                    android:text="--"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/prms_price_listiterm1_buyprice_end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/common_listview_item_paddingLR"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/textsize_one_eight"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            </LinearLayout>
                            <ImageView
                                android:id="@+id/prms_price_listiterm1_saleflag"
                                android:layout_width="@dimen/prms_updownflag_widhth"
                                android:layout_height="@dimen/prms_updownflag_widhth"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/common_listview_item_paddingLR"
                                android:src="@drawable/shangsheng"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <TextView
            android:id="@+id/beijing_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="数据更新于北京时间--,具体价格以实际成交为准"
            android:textColor="@color/fonts_lighter_gray"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:id="@+id/trade_check"
            android:layout_width="match_parent"
            android:layout_height="@dimen/prms_zoushitu_width"
            android:layout_marginTop="@dimen/boc_global_loading_height"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_default"
                    android:text="@string/title_traquery"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=""/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/boc_space_between_30px"
                    android:src="@drawable/goldstore_jiantou_right"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metalgoldstote_problem"
                android:textColor="@color/goldstore_blue"/>
        </RelativeLayout>
    </LinearLayout>
        </LinearLayout>
    </com.chinamworld.llbt.userwidget.refreshliseview.PullDownRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_96px"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:orientation="horizontal" >

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/pay_back"
            android:background="@color/white"
            android:textColor="@color/goldstore_red"
            android:text="赎回"
            android:visibility="gone"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/goldstore_red"
            android:textColor="@color/white"
            android:text="购买"
            android:id="@+id/buy_button"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/storegold_cantgray"
            android:textColor="@color/fonts_lighter_gray"
            android:textStyle="bold"
            android:text="暂停交易"
            android:id="@+id/stop_trad"
            android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>