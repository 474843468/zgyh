<?xml version="1.0" encoding="utf-8"?>
<!-- 贵金属查询  三级菜单  页面xyl -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_for_click_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/prms_querymenu_entrust_now_ll"
            style="@style/common_click_first_item_style" >

            <TextView
                style="@style/bond_textview_15_black_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/prms_query_entrust_now" />

            <ImageView style="@style/rightbtn_jiantou" />
        </LinearLayout>

        <ImageView style="@style/divider_imag_style" />

        <LinearLayout
            android:id="@+id/prms_querymenu_entrust_history_ll"
            style="@style/common_click_item_style" >

            <TextView
                style="@style/bond_textview_15_black_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/prms_query_entrust_history" />

            <ImageView style="@style/rightbtn_jiantou" />
        </LinearLayout>

        <ImageView style="@style/divider_imag_style" />

        <LinearLayout
            android:id="@+id/prms_querymenu_deal_ll"
            style="@style/common_click_last_item_style" >

            <TextView
                android:id="@+id/textview"
                style="@style/bond_textview_15_black_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/prms_query_deal" />

            <TextView style="@style/rightbtn_jiantou" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>