            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_default"
            android:text="@string/bocinvt_tv_2"
            android:background="#aaaaaa"
            />
        <!-- <View style="@style/style_line"
            android:layout_marginTop="5dp"
            /> -->
        <LinearLayout 
            style="@style/style_match_wrap"
            android:paddingTop="@dimen/bovinvt_layout_margin_top1"
            >
            <TextView 
                android:id="@+id/tv_yearRR_3"
                style="@style/style_tv_bocinv_agreement_appley"
                android:text="@string/yearlyRR_1"
                />
            <EditText 
                android:id="@+id/et_211"
                android:layout_width="0dp"
                android:maxLength="14"
