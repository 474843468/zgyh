                android:text="@string/bocinvt_product_invest_money"
                />
            <EditText 
                android:id="@+id/et_214"
                android:layout_width="0dp"
                android:maxLength="14"
                android:inputType="numberDecimal"
                android:hint="@string/bocinvt_tv_67"
