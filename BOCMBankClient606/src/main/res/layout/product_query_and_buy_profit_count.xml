                />
            <TextView 
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                style="@style/textview_common"
                android:text="@string/bocinvt_tv_58"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/style_match_wrap"
            android:paddingTop="@dimen/bovinvt_layout_margin_top1"
            >
            <TextView 
                style="@style/style_tv_bocinv_agreement_appley"
                android:text="@string/timeLimithave"
                />
            <EditText 
                android:id="@+id/et_212"
                android:layout_width="0dp"
