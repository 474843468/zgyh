                />
            <TextView 
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/style_match_wrap"
            android:paddingTop="@dimen/bovinvt_layout_margin_top1"
            android:gravity="center_vertical"
            >
            <TextView 
                style="@style/style_tv_bocinv_agreement_appley"
                android:text="@string/bocinvt_product_expected_profit"
                />
            <TextView 
                android:id="@+id/tv_21"
                style="@style/style_with_weight_1"
                android:textSize="25sp"
                android:textColor="@color/red"
                android:singleLine="true"
                android:text=""
                />
            <TextView 
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <TextView 
            style="@style/style_height_weight_1"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_default"
            android:text="@string/bocinvt_tv_3"
            />
    </LinearLayout>
    </ScrollView>
    
    <Button 
        android:id="@+id/btn_compute"
        style="@style/bottombtn"
        android:layout_marginTop="10dp"
        android:text="@string/bocinvt_product_profit_compute1"
        />

</LinearLayout>
