<?xml version="1.0" encoding="utf-8"?>
<!-- 中银理财，收益试算(
分为：
固定期限、
日积月累、
收益累进、
表内周期续约、
业绩基准-转低收益、
业绩基准-到期入账、
业绩基准-周期滚续)
 -->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_match"
    android:orientation="vertical" >
    <!-- 业绩基准-转低收益、业绩基准-到期入账、业绩基准-周期滚续  -->
    <TextView 
        android:id="@+id/tv_title_profit_compute"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="@string/bocinvt_product_profit_compute1"
        android:visibility="gone"
        />
    
    <ScrollView 
        android:id="@+id/layout_public"
        style="@style/style_layout_bocinv_profit_compute"
        android:fillViewport="true"
        android:visibility="gone"
        >
    <!-- 固定期限、日积月累、收益累进、表内周期续约、业绩基准-到期入账、业绩基准-周期滚续 -->
    <LinearLayout 
        style="@style/style_match_match"
        android:orientation="vertical"
        android:background="@drawable/bg_for_listview_item_write"
        >
        <LinearLayout 
            style="@style/style_match_wrap"
            android:paddingTop="@dimen/bovinvt_layout_margin_top"
            >
            <TextView 
                android:id="@+id/tv_yearRR_1"
                style="@style/style_tv_bocinv_agreement_appley"
                android:ellipsize="middle"
                android:text="@string/yearlyRR_1"
                />
            <EditText 
                android:id="@+id/et_11"
                android:layout_width="0dp"
               	android:maxLength="14"
               	android:inputType="numberDecimal"
               	android:hint="@string/bocinvt_tv_67"
                style="@style/edittext_input_numberDecimal_fill"
                />
            <TextView 
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                style="@style/textview_common"
                android:text="@string/bocinvt_tv_58"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/style_match_wrap"
            android:paddingTop="@dimen/bovinvt_layout_margin_top"
            >
            <TextView 
                style="@style/style_tv_bocinv_agreement_appley"
                android:text="@string/timeLimithave"
                />
            <EditText 
                android:id="@+id/et_12"
                android:layout_width="0dp"
                android:maxLength="6"
                android:inputType="number"
                android:hint="@string/bocinvt_tv_67"
                style="@style/edittext_input_numberDecimal_fill"
                />
            <TextView 
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                style="@style/textview_common"
                android:text="@string/bocinvt_tv_57"
                />
        </LinearLayout>
        <!-- 投资期数 ，表内周期续约、业绩基准-周期滚续-->
        <LinearLayout 
            android:id="@+id/layout_1"
            style="@style/style_match_wrap"
            android:paddingTop="@dimen/bovinvt_layout_margin_top"
            android:visibility="gone"
            >
            <TextView 
                style="@style/style_tv_bocinv_agreement_appley"
                android:text="@string/bocinvt_product_stage"
                />
            <EditText 
                android:id="@+id/et_13"
                android:layout_width="0dp"
                android:maxLength="7"
                android:inputType="numberSigned"
                android:hint="@string/bocinvt_tv_67"
                style="@style/edittext_input_numberDecimal_fill"
                />
            <TextView 
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/style_match_wrap"
            android:paddingTop="@dimen/bovinvt_layout_margin_top"
            >
            <TextView 
                style="@style/style_tv_bocinv_agreement_appley"
                android:text="@string/bocinvt_product_invest_money"
                />
            <EditText 
                android:id="@+id/et_14"
                android:layout_width="0dp"
                android:maxLength="14"
                android:inputType="numberDecimal"
                android:hint="@string/bocinvt_tv_67"
                style="@style/edittext_input_numberDecimal_fill"
                />
            <TextView 
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/style_match_wrap"
            android:paddingTop="@dimen/bovinvt_layout_margin_top"
            android:gravity="center_vertical"
            >
            <TextView 
                style="@style/style_tv_bocinv_agreement_appley"
                android:text="@string/bocinvt_product_expected_profit"
                />

            <TextView
                android:id="@+id/tv_11"
                style="@style/style_with_weight_1"
                android:textColor="@color/red"
                android:textSize="25sp"
                android:singleLine="true" />
            <TextView 
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        
    </LinearLayout>
    </ScrollView>
    
    <ScrollView 
        android:id="@+id/layout_2"
        style="@style/style_layout_bocinv_profit_compute"
        android:fillViewport="true"
        android:background="@color/white"
        android:visibility="gone"
        >
    <!-- 业绩基准-转低收益 -->
    <LinearLayout 
        style="@style/style_match_match"
        android:orientation="vertical"
        >
        <TextView 
            style="@style/style_match_wrap"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_default"
            android:text="@string/bocinvt_tv_1"
            android:background="#aaaaaa"
            />
        <!-- <View style="@style/style_line"
            android:layout_marginTop="5dp"
            /> -->
        
        <LinearLayout 
