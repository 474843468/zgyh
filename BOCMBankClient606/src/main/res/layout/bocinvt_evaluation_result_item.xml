<?xml version="1.0" encoding="utf-8"?>
<!-- 中银理财 评估结果单项页 wangmengmeng -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_row_margin_half" >

    <TextView
        android:id="@+id/detail"
        style="@style/textview_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/riskLevel"
        android:paddingBottom="@dimen/rightbtnW"
        android:paddingLeft="@dimen/dp_five"
        android:paddingRight="@dimen/dp_five"
        android:textSize="@dimen/textsize_one_three" />

    <ImageView
        android:id="@+id/img_down"
        style="@style/query_image_up_style"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/fill_margin_top"
        android:layout_marginRight="@dimen/fill_margin_top"
        android:layout_marginTop="@dimen/fill_margin_top" />

    <TextView
        android:id="@+id/riskLevel"
        style="@style/textview_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

</RelativeLayout>