<?xml version="1.0" encoding="utf-8"?>
<!-- 跨省异地交通违法罚款 查询结果页面 zxj -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/acc_query_result_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/result_condition"
        android:layout_marginBottom="@dimen/leftMenuHW"
        android:layout_marginTop="@dimen/bottom_margin_top"
        android:background="@drawable/bg_for_listview_item_write" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/common_row_margin" >

                <TextView
                    android:id="@+id/tvtitle_type"
                    style="@style/textview_for_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/common_details_title_margintop"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="序号"
                    android:textSize="@dimen/textsize_default" />

                <TextView
                    style="@style/textview_for_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/common_details_title_margintop"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="交易日期"
                    android:textSize="@dimen/textsize_default" />
                <TextView
                    style="@style/textview_for_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/common_details_title_margintop"
                    android:layout_weight="1.0"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="合计金额"
                    android:textSize="@dimen/textsize_default" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/gray" />

            <ListView
                android:id="@+id/listview"
                style="@style/listviewcomm_wrap_haveDivider"
                android:divider="@color/gray"
                android:dividerHeight="1dip"/>

            <View
                android:id="@+id/view_line"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>