<?xml version="1.0" encoding="utf-8"?>
<!-- 外汇账户设定、智能通知存款 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_for_listview_item_write" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/common_listview_item_paddingLR" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/common_listview_item_paddingLR" >

                <TextView
                    android:id="@+id/forex_acc_type"
                    style="@style/bond_textview_15_black_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:gravity="left" />

                <TextView
                    android:id="@+id/forex_acc_accountnumber"
                    style="@style/bond_textview_15_black_1"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/fonts_pink" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/common_listview_item_paddingLR" >

                <TextView
                    style="@style/bond_textview_15_black_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:gravity="left"
                    android:visibility="gone">
                </TextView>

                <TextView
                    android:id="@+id/forex_acc_alias"
                    style="@style/bond_tv_15_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:gravity="right"
                    />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewright"
            style="@style/sucess_right_iv"
            android:layout_gravity="center"
            android:visibility="invisible" />
    </FrameLayout>

</RelativeLayout>