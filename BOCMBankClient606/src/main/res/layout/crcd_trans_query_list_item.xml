<?xml version="1.0" encoding="utf-8"?>
<!-- 未出账单查询    已出账单查询    附属卡查询    三个查询都没有分期按钮    item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_for_listview_item_write" >

    <ImageView
        android:id="@+id/img_flag"
        android:layout_width="@dimen/left_img_width"
        android:layout_height="@dimen/left_img_width"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/img_triangle_green"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/fill_margin_top"
        android:paddingTop="@dimen/fill_margin_top" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fill_margin_top"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/acc_query_transfer_paymentdate"
                style="@style/textview_for_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/acc_query_paymentDate"
                android:visibility="gone" />

            <TextView
                android:id="@+id/acc_query_transfer_paymentdate_value"
                style="@style/textview_for_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true"
                android:text="54546"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/fill_margin_top" >

                    <TextView
                        android:id="@+id/acc_query_transfer_amount"
                        style="@style/textview_for_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/acc_query_transfer_amount_value"
                        style="@style/textview_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/fill_margin_top" >

                    <TextView
                        android:id="@+id/acc_query_transfer_balance"
                        style="@style/textview_for_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mycrcd_bill_miaoshu" />

                    <TextView
                        android:id="@+id/acc_query_transfer_balance_value"
                        style="@style/textview_for_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="7"
                android:gravity="right"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/img_crcd_setup"
                    android:layout_width="@dimen/btn_close_width"
                    android:layout_height="@dimen/fill_margin_left_double"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/fill_margin_top"
                    android:background="@drawable/tran_button_red"
                    android:focusable="true"
                    android:text="@string/mycrcd_divide_installment"
                    android:textColor="@color/white"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>