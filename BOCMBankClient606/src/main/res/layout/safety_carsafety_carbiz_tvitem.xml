<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:background="@drawable/bg_for_listview_item_write"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- 险别名称 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fill_margin_top"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_forex_prompt_message" 
                android:text="@string/safety_carsafety_safetyName" />

            <TextView
                android:id="@+id/tv_insName"
                style="@style/textview_forex_prompt_info" />
        </LinearLayout>
        <!-- 赔偿限额/保额 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_keyForAmount"
                style="@style/textview_forex_prompt_message" 
                android:text="@string/safety_carsafety_Amount" />

            <TextView
                android:id="@+id/tv_Amount"
                android:textColor="@color/red"
                style="@style/textview_forex_prompt_info" />
        </LinearLayout>
        <!-- 是否投保不计免赔 -->

        <LinearLayout
            android:id="@+id/ll_isMp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_keyForisMp"
                style="@style/textview_forex_prompt_message" 
                android:text="@string/safety_carsafety_bjmp" />

            <TextView
                android:id="@+id/tv_isMp"
                style="@style/textview_forex_prompt_info" />
        </LinearLayout>
        <!-- 应缴保费 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fill_margin_top"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_forex_prompt_message" 
                android:text="@string/safety_carsafety_Premium" />

            <TextView
                android:id="@+id/tv_Premium"
                android:textColor="@color/red"
                style="@style/textview_forex_prompt_info" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>