<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/acc_list_item_height"
    android:background="@drawable/bg_for_listview_item_write"
    android:orientation="vertical" 
    android:padding="@dimen/common_row_margin">

    <ImageView
        android:id="@+id/boci_gotoDetail"
        android:layout_width="@dimen/shap_of_commrequestopen_pdl"
        android:layout_height="@dimen/shap_of_commrequestopen_pdl"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:src="@drawable/right_arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/boci_gotoDetail"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textproductname"
            style="@style/textview_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginTop="@dimen/common_row_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text1"
                style="@style/textview_common"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:singleLine="true" />

            <TextView
                android:id="@+id/text2"
                style="@style/textview_common"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:singleLine="true" />

            <TextView
                android:id="@+id/text3"
                style="@style/textview_common"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>