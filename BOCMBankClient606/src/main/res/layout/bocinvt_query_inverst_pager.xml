<?xml version="1.0" encoding="utf-8"?>
<!-- 投资明细查询 niuchf -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc_query_result_condition"
        android:background="@drawable/bg_for_listview_item_write" >

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebackbtn_width"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bocinvt_deal_date"
                style="@style/textview_common"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/common_row_margin_half"
                android:layout_weight="1.3"
                android:gravity="center"
                android:text="@string/bocinvt_deal_date" />

            <TextView
                style="@style/textview_common"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.7"
                android:gravity="center"
                android:text="@string/bocinvt_deal_type" />

            <TextView
                style="@style/textview_common"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="@string/bocinvt_deal_status" />

            <ImageView
                android:layout_width="@dimen/shap_of_commrequestopen_pdl"
                android:layout_height="@dimen/shap_of_commrequestopen_pdl"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/right_arrow"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_top"
            android:layout_gravity="center"
            android:background="@color/gray_line"
            android:gravity="center" />

        <ListView
            android:id="@+id/boc_query_inverst_result"
            style="@style/listviewcomm_fill_gray_divider"
            android:layout_below="@+id/iv" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>