<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_pay_transaction_id"
        style="@style/textview_common_right"
        android:layout_marginTop="@dimen/common_row_margin" />

    <TextView
        android:id="@+id/tv_pay_return_time"
        style="@style/textview_common_right"
        android:layout_below="@+id/tv_pay_transaction_id"
        android:layout_marginTop="@dimen/common_row_margin" />

    <TextView
        android:id="@+id/tv_pay_tran_amount"
        style="@style/textview_common_right"
        android:layout_below="@+id/tv_pay_return_time"
        android:layout_marginTop="@dimen/common_row_margin"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/tv_pay_currency"
        android:layout_below="@+id/tv_pay_tran_amount"
        style="@style/textview_common_right"
        android:layout_marginTop="@dimen/common_row_margin" />

    <TextView
        android:id="@+id/tv_pay_tran_status"
        style="@style/textview_common_right"
        android:layout_below="@+id/tv_pay_currency"
        android:layout_marginTop="@dimen/common_row_margin" />

</RelativeLayout>