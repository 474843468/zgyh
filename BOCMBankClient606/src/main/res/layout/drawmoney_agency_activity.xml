<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_row_margin"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edit_search"
            style="@style/edittext_common_fill_no_weight"
            android:layout_weight="3"
            android:hint="@string/please_input_province_query" />

        <Button
            android:id="@+id/btn_query_trans_records"
            style="@style/query_button_style"
            android:layout_marginLeft="@dimen/fill_margin_left"
            android:gravity="center" />
    </LinearLayout>

    <ListView
        android:id="@+id/blpt_lv_province"
        style="@style/listviewcomm_wrap_haveDivider"
        android:layout_height="0dip"
        android:layout_marginBottom="@dimen/fill_margin_bottom"
        android:layout_marginTop="@dimen/common_row_margin"
        android:layout_weight="2"
        android:background="@drawable/bg_for_listview_item_write"
        android:divider="@color/gray"
        android:dividerHeight="1dip"
        android:scrollbars="none" />

</LinearLayout>