<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_for_listview_item_write" >

        <LinearLayout
            android:id="@+id/body_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rate_gotoDetail"
            android:background="@drawable/selector_for_click_list_item"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/fill_padding_top"
            android:paddingLeft="@dimen/fill_margin_left"
            android:paddingTop="@dimen/fill_padding_top" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/large_cd_product_code_tv"
                    android:textSize="@dimen/textsize_one_two" />

                <TextView
                    android:id="@+id/tv_product_num_item"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="-"
                    android:textSize="@dimen/textsize_one_two" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/large_cd_rate_tv"
                    android:textSize="@dimen/textsize_one_two" />

                <TextView
                    android:id="@+id/tv_rate_item"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="-"
                    android:textSize="@dimen/textsize_one_two" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/body_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/body_one"
            android:layout_toLeftOf="@+id/rate_gotoDetail"
            android:background="@drawable/selector_for_click_list_item"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/fill_padding_top"
            android:paddingLeft="@dimen/fill_margin_left"
            android:paddingRight="@dimen/fill_margin_left"
            android:paddingTop="@dimen/fill_padding_top" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/large_cd_begin_money_new"
                    android:textSize="@dimen/textsize_one_three" />

                <TextView
                    android:id="@+id/tv_begin_money_item"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="-"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_one_three" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_operate_item"
                    android:layout_width="@dimen/btn_close_width"
                    android:layout_height="@dimen/btn_close_height"
                    android:background="@drawable/btn_goumai"
                    android:gravity="center"
                    android:text="@string/buy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_one_three" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/rate_gotoDetail"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/shap_of_commrequestopen_pdl"
            android:layout_alignBottom="@+id/body_two"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/body_one"
            android:layout_gravity="center"
            android:contentDescription="@string/detail"
            android:gravity="center"
            android:paddingLeft="@dimen/layout_margin_top"
            android:paddingRight="@dimen/layout_margin_top"
            android:src="@drawable/right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/body_one"
            android:layout_marginLeft="@dimen/fill_margin_left"
            android:layout_marginRight="@dimen/dp_five"
            android:layout_toLeftOf="@+id/rate_gotoDetail"
            android:background="@color/gray_line" />
    </RelativeLayout>

</LinearLayout>