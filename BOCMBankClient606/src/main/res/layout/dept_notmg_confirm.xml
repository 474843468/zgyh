<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/dept_create_layout"
        style="@style/scrollview_comm_havemarginbutton"
        android:layout_above="@+id/dept_btn_layout"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:background="@drawable/bg_for_listview_item_write" >

        <LinearLayout style="@style/tran_body_ll" >

            <!-- <TextView
                android:id="@+id/dept_title_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/notify_detail"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_default"
                android:visibility="invisible" /> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/reg_account" />

                <TextView
                    android:id="@+id/dept_acc_no_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/save_volume_number" />

                <TextView
                    android:id="@+id/dept_volume_number_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/forex_rate_fix_number1" />

                <TextView
                    android:id="@+id/dept_cdnumber_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/currency_cashremit" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/dept_currency_tv"
                        style="@style/textview_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/dept_cashremit_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             />

                        <TextView
                            android:id="@+id/dept_cashremit_tv"
                            style="@style/textview_common"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" 
                    android:layout_marginTop="@dimen/common_row_margin">

                    <TextView
                        style="@style/textview_common_left"
                        android:text="@string/chaohui" />

                    <TextView
                        android:id="@+id/dept_cashremit_tv"
                        style="@style/textview_common_right" />
                </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/save_sheet_money" />

                <TextView
                    android:id="@+id/dept_bookbalance_tv"
                    style="@style/textview_common_right"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/business_type" />

                <TextView
                    android:id="@+id/dept_business_type_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/promise_way" />

                <TextView
                    android:id="@+id/dept_promise_way_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/forex_custoner_fix_interestRate" />

                <TextView
                    android:id="@+id/dept_insertrate_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/notice_no" />

                <TextView
                    android:id="@+id/dept_notifyid_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/promise_checkout_day" />

                <TextView
                    android:id="@+id/dept_promise_checkout_day_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/checkout_way" />

                <TextView
                    android:id="@+id/dept_checkout_way_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dept_notify_money_ltv"
                    style="@style/textview_common_left"
                    android:text="@string/notify_money" />

                <TextView
                    android:id="@+id/dept_notify_money_tv"
                    style="@style/textview_common_right"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/notify_status_tv" />

                <TextView
                    android:id="@+id/dept_notify_status_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/dept_btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/common_row_margin"
        android:visibility="gone" >

        <Button
            android:id="@+id/dept_back_btn"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_red_big"
            android:text="@string/tran_cancle"
            android:visibility="gone" />

        <Button
            android:id="@+id/checkout_btn"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_red_big"
            android:text="@string/checkout"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/left_img_width" >

        <TextView
            style="@style/tran_card_title"
            android:text="@string/notify_detail" />
    </RelativeLayout>

</RelativeLayout>