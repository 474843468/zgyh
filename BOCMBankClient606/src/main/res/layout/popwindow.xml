<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pop_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/img_pop_background"
        android:orientation="vertical"
      >

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:paddingTop="5dp" 
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:baselineAligned="true"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/message_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/message"
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:background="@color/transparent_00"
                    android:tag="message"
                    android:text="@string/leave_message" 
                    android:textColor="@color/white"/>

                 <TextView
                    android:id="@+id/message1"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/btn_close"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/history_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/history"
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:background="@color/transparent_00"
                    android:tag="message"
                    android:text="@string/login_history" 
                    android:textColor="@color/white"/>

                 <TextView
                    android:id="@+id/history1"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/btn_close"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nitify_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/nitify"
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:background="@color/transparent_00"
                    android:tag="message"
                    android:text="@string/special_remind" 
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/nitify1"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/btn_close"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/newMessage_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/newMessage"
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:background="@color/transparent_black"
                    android:tag="message"
                    android:text="@string/newest_message" 
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/newMessage1"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/btn_close"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/bottomButton"
            android:layout_width="@dimen/pulldownbtn_width"
            android:layout_height="@dimen/pulldownbtn_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/pulldownbtn_marginright"
            android:layout_marginTop="@dimen/pulldownbtn_margintop"
            android:background="@drawable/ib_pull_down" />
    </RelativeLayout>

</LinearLayout>