<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/common_bottom_padding_new"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_bg_exit_top"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_five" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/common_row_margin"
                    android:paddingRight="@dimen/common_row_margin"
                    android:paddingTop="@dimen/common_row_margin" >

                    <TextView
                        android:id="@+id/tvcalled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_one_zero"
                        android:text="尊敬的用户"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/tvname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="，"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_seven"
                    android:gravity="center"
                    android:paddingLeft="@dimen/common_row_margin"
                    android:paddingRight="@dimen/common_row_margin"
                    android:text="@string/welcom_use_boc"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_default" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_bg_exit_middle"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_two_zero" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_two_zero"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/common_row_margin"
                    android:paddingRight="@dimen/common_row_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您的预留信息是："
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/tvwelcominfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_seven"
                        android:text="123"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_one_zero"
                    android:layout_marginRight="@dimen/dp_one_zero"
                    android:layout_marginTop="@dimen/dp_two_zero"
                    android:background="@drawable/line_gray_xuxian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/common_row_margin"
                    android:paddingRight="@dimen/common_row_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_login_time" />

                    <TextView
                        android:id="@+id/tvloginday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_five"
                        android:text="fdif"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_five"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/common_row_margin"
                    android:paddingRight="@dimen/common_row_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_login_time_fail" />

                    <TextView
                        android:id="@+id/tvloginday_fail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_five"
                        android:text="22222"
                        android:textColor="@color/gray" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_bg_exit_bottom" >

                <RelativeLayout
                    android:id="@+id/rlyt_logout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_for_login_rlyt"
                    android:paddingTop="@dimen/dp_one_zero"
                    android:paddingBottom="@dimen/dp_one_zero">

                    <TextView
                        android:id="@+id/txt_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/dp_one_zero"
                        android:text="安全退出"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_default" />

                    <ImageView
                        android:id="@+id/btn_logout"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_five"
                        android:layout_toLeftOf="@+id/txt_logout"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/selector_for_login_img" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>