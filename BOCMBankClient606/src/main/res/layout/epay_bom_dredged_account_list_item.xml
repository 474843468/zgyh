<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/ll_item"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/acc_list_item_height"
        android:layout_marginRight="@dimen/fill_margin_right"
        android:background="@drawable/bg_for_listview_item_write"
        android:paddingLeft="@dimen/fill_padding_left"
        android:paddingRight="@dimen/fill_padding_right" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/common_row_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cardtype"
                style="@style/textview_common"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_listview_item_paddingLR"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_account"
                style="@style/textview_amount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/common_row_margin"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_default" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bt_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_five"
        android:paddingLeft="@dimen/dp_five"
        android:paddingRight="@dimen/dp_three"
        android:paddingTop="@dimen/dp_five"
        android:visibility="visible" >

        <ImageView
            android:layout_width="@dimen/icon_dele_HW"
            android:layout_height="@dimen/icon_dele_HW"
            android:background="@drawable/icon_del" />
    </LinearLayout>

</RelativeLayout>