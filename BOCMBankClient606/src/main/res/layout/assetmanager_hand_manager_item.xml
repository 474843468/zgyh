<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.chinamworld.bocmbci"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_round"
    >
    
	<LinearLayout 
	    style="@style/style_match_wrap"
	    android:paddingTop="10dp"
   		android:paddingBottom="20dp"
   		android:paddingLeft="3dp"
    	android:paddingRight="3dp"
	    android:orientation="vertical" 
	    >
	    <com.chinamworld.bocmbci.userwidget.LabelTextView
	        style="@style/style_match_wrap"
	        app:labelText="序列号："
	        app:weightShowRate="2:3"
	        android:id="@+id/vh_label_tv_1"
	        />
	    <com.chinamworld.bocmbci.userwidget.LabelTextView
	        style="@style/style_match_wrap"
	        app:labelText="账户类型："
	        app:weightShowRate="2:3"
	        android:id="@+id/vh_label_tv_2"
	        />
	    <com.chinamworld.bocmbci.userwidget.LabelTextView
	        style="@style/style_match_wrap"
	        app:labelText="币种："
	        app:weightShowRate="2:3"
	        android:id="@+id/vh_label_tv_3"
	        />
	    <com.chinamworld.bocmbci.userwidget.LabelTextView
	        style="@style/style_match_wrap"
	        app:labelText="金额："
	        app:weightShowRate="2:3"
	        android:id="@+id/vh_label_tv_4"
	        />
	    <com.chinamworld.bocmbci.userwidget.LabelTextView
	        style="@style/style_match_wrap"
	        app:labelText="备注："
	        app:weightShowRate="2:3"
	        android:id="@+id/vh_label_tv_5"
	        />
	</LinearLayout>
	
	<ImageView 
        android:id="@+id/img_btn_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_del_f"
        />
    

</RelativeLayout>
