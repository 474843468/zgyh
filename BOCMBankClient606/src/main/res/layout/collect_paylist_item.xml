<?xml version="1.0" encoding="utf-8"?>
<!-- 资金归集协议列表 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_for_listview_item_selector"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_five"
            android:shrinkColumns="1" >

            <TableRow>

                <TextView
                    style="@style/comm_view_left"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:text="@string/collect_protocol_code" />

                <TextView
                    android:id="@+id/tv_protocol_code"
                    style="@style/comm_view_right"
                    android:layout_weight="0"
                    android:paddingLeft="0dp" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/comm_view_left"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:text="@string/collect_begin_amt" />

                <TextView
                    android:id="@+id/tv_begin_amt"
                    style="@style/comm_view_right"
                    android:layout_weight="0"
                    android:paddingLeft="0dp"
                    android:singleLine="true"
                    android:textColor="@color/red" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/comm_view_left"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:text="@string/collect_day_quota" />

                <TextView
                    android:id="@+id/tv_day_quota"
                    style="@style/comm_view_right"
                    android:layout_weight="0"
                    android:paddingLeft="0dp"
                    android:singleLine="true"
                    android:textColor="@color/red" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/comm_view_left"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:text="@string/collect_day_limit" />

                <TextView
                    android:id="@+id/tv_day_limit"
                    style="@style/comm_view_right"
                    android:layout_weight="0"
                    android:paddingLeft="0dp"
                    android:singleLine="true" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/comm_view_left"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:text="@string/collect_month_limit" />

                <TextView
                    android:id="@+id/tv_month_limit"
                    style="@style/comm_view_right"
                    android:layout_weight="0"
                    android:paddingLeft="0dp"
                    android:singleLine="true" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/comm_view_left"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:text="@string/collect_month_quota" />

                <TextView
                    android:id="@+id/tv_month_quota"
                    style="@style/comm_view_right"
                    android:layout_weight="0"
                    android:paddingLeft="0dp"
                    android:singleLine="true"
                    android:textColor="@color/red" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/comm_view_left"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:text="@string/collect_protocol_begin" />

                <TextView
                    android:id="@+id/tv_protocol_begin"
                    style="@style/comm_view_right"
                    android:layout_weight="0"
                    android:paddingLeft="0dp"
                    android:singleLine="true" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/comm_view_left"
                    android:layout_weight="0"
                    android:singleLine="true"
                    android:text="@string/collect_protocol_end" />

                <TextView
                    android:id="@+id/tv_protocol_end"
                    style="@style/comm_view_right"
                    android:layout_weight="0"
                    android:paddingLeft="0dp"
                    android:singleLine="true" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>