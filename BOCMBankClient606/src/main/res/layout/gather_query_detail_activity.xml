<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/cancel_btn"
            style="@style/bottombtn"
            android:text="@string/cancel_gather" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/layout_bottom"
        android:layout_marginBottom="@dimen/common_row_margin"
        android:layout_marginTop="@dimen/dp_two_zero"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView
            style="@style/scrollview_fill"
            android:layout_marginTop="@dimen/dp_three_zero" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/gather_order_number_label" />

                    <TextView
                        android:id="@+id/gather_order_number"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/transationId" />

                    <TextView
                        android:id="@+id/gather_transationId"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:ellipsize="middle"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/gather_creat_date_label" />

                    <TextView
                        android:id="@+id/gather_creat_date"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/gather_tran_status_label" />

                    <TextView
                        android:id="@+id/gather_tran_status"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:text="@string/gather_money_type_label" />

                    <TextView
                        android:id="@+id/gather_money_type"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/gather_money_ammount_label" />

                    <TextView
                        android:id="@+id/tv_gather_money_ammount"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_gather_pay_fact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/gather_pay_fact_label" />

                    <TextView
                        android:id="@+id/tv_gather_pay_fact"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/gather_money_name_label" />

                    <TextView
                        android:id="@+id/gather_money_name"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/gather_account_number_label" />

                    <TextView
                        android:id="@+id/gather_account_number"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/payeeMobile" />

                    <TextView
                        android:id="@+id/tv_payeeMobile"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/payer_name_label_no_blank" />

                    <TextView
                        android:id="@+id/tv_payer_name"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/payer_phone_label" />

                    <TextView
                        android:id="@+id/tv_payer_phone"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/gather_start_way_label" />

                    <TextView
                        android:id="@+id/gather_start_way"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/gather_pay_way_label" />

                    <TextView
                        android:id="@+id/gather_pay_way"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_no_weight"
                        android:layout_weight="3"
                        android:text="@string/beizhu" />

                    <TextView
                        android:id="@+id/tv_beizhu"
                        style="@style/comm_view_right_noweight"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_default" >
                    </TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/gather_confirm_title_tv"
        style="@style/tran_card_title"
        android:text="@string/gather_query_detail_second_title" />

</RelativeLayout>