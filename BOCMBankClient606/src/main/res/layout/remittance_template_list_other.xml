<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_for_foot_choose"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/fill_margin_bottom" >

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/btn_menu_updateName"
            style="@style/popupwindow_btn_normal"
            android:text="@string/remittance_template_otherOperation_updateName" />
    </LinearLayout>

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/btn_menu_queryDetail"
            style="@style/popupwindow_btn_normal"
            android:text="@string/remittance_template_otherOperation_queryDetail" />
    </LinearLayout>

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/btn_menu_delate"
            style="@style/popupwindow_btn_normal"
            android:text="@string/remittance_template_otherOperation_delate" />
    </LinearLayout>

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/btn_menu_cancle"
            style="@style/popupwindow_btn_cancle"
            android:text="@string/cancle"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>