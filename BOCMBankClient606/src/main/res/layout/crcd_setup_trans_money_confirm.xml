<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:userProperty="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/ll_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include
            android:layout_width="match_parent"
            layout="@layout/step_title_layout" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/lastButton"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_blue_big"
            android:text="@string/last"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/sureButton"
            style="@style/bottombtn"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/button_layout"
        android:layout_below="@+id/ll_step"
        android:orientation="vertical" >

        <ScrollView
            style="@style/scrollview_fill"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/fill_margin_left"
            android:layout_marginRight="@dimen/fill_margin_left"
            android:layout_marginTop="@dimen/fill_margin_top"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_for_listview_item_write"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_acc_loss_actnum"
                        style="@style/textview_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/crcd_top_title"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left"
                        android:text="@string/mycrcd_selected_creditcard" />

                    <TextView
                        android:id="@+id/finc_accNumber"
                        style="@style/textview_common_right"
                        android:singleLine="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_acc_loss_type"
                        style="@style/textview_common_left"
                        android:text="@string/mycrcd_supplymentcard_number" />

                    <TextView
                        android:id="@+id/finc_accId"
                        style="@style/textview_common_right"
                        android:singleLine="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left"
                        android:text="@string/mycrcd_bill_seed" />

                    <TextView
                        android:id="@+id/tv_cardNumber"
                        style="@style/textview_common_right" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left"
                        android:text="@string/mycrcd_supplymentcard_jiaoyimoney" />

                    <TextView
                        android:id="@+id/finc_fincName"
                        style="@style/textview_common_right"
                        android:singleLine="false"
                        android:textColor="@color/red" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_smc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/smc" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3" >

                        <RelativeLayout
                            android:id="@+id/ll_smc_sip"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <cfca.mobile.sip.SipBox
                                android:id="@+id/sipbox_smc"
                                style="@style/editext_fill"
                                android:maxLength="6"
                                android:textSize="@dimen/textsize_default" />
                        </RelativeLayout>

                        <Button
                            android:id="@+id/smsbtn"
                            style="@style/button_smscode"
                            android:layout_marginRight="@dimen/layout_margin_top" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_active_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/active_code" />

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/layout_margin_top"
                        android:layout_weight="3" >

                        <LinearLayout
                            android:id="@+id/ll_activecode_sip"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent" >

                            <cfca.mobile.sip.SipBox
                                android:id="@+id/sipbox_active"
                                style="@style/editext_fill"
                                android:maxLength="6"
                                android:textSize="@dimen/textsize_default" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <com.chinamworld.bocmbci.widget.UsbKeyText
                    android:id="@+id/sip_usbkey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    userProperty:MargRight="@dimen/layout_margin_top"
                    android:gravity="center"
                    android:orientation="horizontal" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>