<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lianlong_color_f0eff5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lianlong_color_f0eff5"
        >
        <TextView
            android:id="@+id/tv_refishtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lianlong_space_between_30px"
            android:layout_marginRight="@dimen/lianlong_space_between_30px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/lianlog_text_color_cinerous"
            android:textSize="@dimen/lianlong_text_size_small"
            android:text="数据更新于北京时间"/>
    </LinearLayout>

</RelativeLayout>