<?xml version="1.0" encoding="utf-8"?>
<!-- 中银理财  周期性产品续约协议详情界面 wangmengmeng -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_five"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_bottom_padding" >

        <Button
            android:id="@+id/btn_edit"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_red_big"
            android:text="@string/edit" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_red_big"
            android:text="@string/epay_treaty_detail_bt_cancel_contract" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_btn"
        android:layout_marginTop="@dimen/rightbtnW"
        android:layout_weight="1"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <TextView
            style="@style/titleText_step2"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/detail"
            android:textColor="@color/black"
            android:visibility="invisible" />

        <ScrollView style="@style/scrollview_comm" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/contractSeq" />

                    <TextView
                        android:id="@+id/tv_contractSeq"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/serialName" />

                    <TextView
                        android:id="@+id/tv_serialName"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/boci_curcode_cashremit" />

                    <TextView
                        android:id="@+id/tv_curcode"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/amountTypeCode" />

                    <TextView
                        android:id="@+id/tv_amountTypeCode"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/startPeriod" />

                    <TextView
                        android:id="@+id/tv_startPeriod"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/endPeriod" />

                    <TextView
                        android:id="@+id/tv_endPeriod"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/bocinvt_agree_issuePeriod" />

                    <TextView
                        android:id="@+id/tv_issuePeriod"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/bocinvt_agree_contStatus" />

                    <TextView
                        android:id="@+id/tv_contStatus"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <TextView
                    style="@style/textview_common"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_marginRight="@dimen/dp_five"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:text="@string/bocinvt_detaillong"
                    android:textColor="@color/gray" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >
                </TextView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/titleText"
        style="@style/titleText_stepacc"
        android:layout_width="@dimen/common_details_title_width"
        android:layout_height="@dimen/left_img_width"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_title"
        android:gravity="center"
        android:paddingRight="@dimen/btnpaddingtb"
        android:text="@string/bocinvt_agree_detail"
        android:textColor="@color/gray_title" />

</RelativeLayout>