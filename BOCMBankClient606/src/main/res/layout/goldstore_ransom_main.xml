    <LinearLayout
        android:id="@+id/ll_ransom_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/acc_type_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_104px"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                android:text="@string/goldstore_branchtype"
                android:textStyle="bold"
                android:textSize="@dimen/boc_space_between_30px"/>
            <TextView
                android:id="@+id/tv_storetype_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text=""
                android:textSize="@dimen/boc_space_between_30px"
                />
            <ImageView
                android:id="@+id/ima_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="15dp"
                android:src="@drawable/goldstore_jiantou_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/goldstore_bankaccno"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                android:textSize="@dimen/boc_space_between_30px"/>
            <TextView
                android:id="@+id/goldstore_branch_accno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/boc_space_between_30px"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_10px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/goldstore_num"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                android:textSize="@dimen/boc_space_between_30px"/>
            <TextView
                android:id="@+id/goldstore_branch_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/boc_space_between_30px"
                android:text=""
                android:textColor="#fc720b"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_104px"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/boc_space_between_40px"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                android:text="@string/goldstore_shuhui_unit"
                android:textStyle="bold"
                android:textSize="@dimen/boc_space_between_30px"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_goldstorenum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="请输入"
                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:textColorHint="#cccccc"
                    android:background="@null"
                    android:textSize="@dimen/boc_space_between_28px"/>
                <TextView
                    android:id="@+id/tv_goldstore_shuhui_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goldstore_shuhui_all"
                    android:textStyle="bold"
                    android:textColor="#ff6666"
                    android:textSize="@dimen/boc_space_between_30px"
                    android:layout_marginRight="@dimen/boc_space_between_20px"
                    android:layout_marginLeft="@dimen/boc_space_between_20px"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖出价格"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                android:textColor="#91a2a8"
                android:textSize="@dimen/boc_space_between_30px"/>
            <TextView
                android:id="@+id/goldstore_jicun_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#91a2a8"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                android:text=""
                android:textSize="@dimen/boc_space_between_30px"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_20px"
            android:text="@string/goldstore_shuhui_wenxin1"
            android:textColor="#91a2a8"
            android:textSize="@dimen/boc_space_between_30px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"
            />

        <Button
            android:id="@+id/btn_goldstore_ransom_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            android:layout_marginTop="@dimen/boc_space_between_96px"
            android:background="@drawable/goldstore_buttom_background"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="@dimen/boc_space_between_30px"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/boc_space_between_96px"
            android:text="1. 手机银行APP端交易时间为周一早7:00至晚20:00，周二至周五早6:00至晚20:00。"
            android:textColor="#91a2a8"
            android:textSize="@dimen/boc_space_between_30px"
            android:layout_marginLeft="@dimen/boc_space_between_20px"/>
    </LinearLayout>

</LinearLayout>
