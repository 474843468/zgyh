<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/loan_apply_list_item_height"
    android:background="#f9f9f9"
    android:orientation="vertical" >
    <!--android:background="@drawable/outlaybg_for_listview_item_write"-->

    <View
        android:id="@+id/line"
        style="@style/bond_style_line"
        />
    <!--<ImageView
        android:id="@+id/left_bg"
        android:layout_width="@dimen/dp_one_zero"
        android:layout_height="@dimen/loan_apply_list_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        />-->

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_bond_name_and_code"
            style="@style/bond_textview_15_black_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_five"
            android:layout_marginLeft="@dimen/dp_five"
            android:layout_marginTop="@dimen/dp_five"
            android:singleLine="true"
            />

        <!--<View
            android:id="@+id/v1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/outlay_line"
            />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_five"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bond_textview_13_dark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="利率" />

                <TextView
                    style="@style/bond_textview_13_dark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="期限" />

                <TextView
                    style="@style/bond_textview_13_dark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="债券状态" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_five"
                >

                <TextView
                    android:id="@+id/tv_bond_rate"
                    style="@style/bond_textview_16_red"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/tv_bond_date"
                    style="@style/bond_textview_15_black_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/tv_bond_status"
                    style="@style/bond_textview_15_black_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/bond_style_line"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>