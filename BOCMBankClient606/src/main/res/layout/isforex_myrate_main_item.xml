<?xml version="1.0" encoding="utf-8"?>
<!-- 我的外汇双向宝首页  item -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_click_item_style"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_bottom_height"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/forex_custoner_fix_volunber"
                style="@style/bond_textview_15_black_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_bottom_height"
                android:layout_weight="2"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/forex_custoner_fix_volunber" />

            <TextView
                android:id="@+id/forex_custoner_fix_cd"
                style="@style/bond_textview_15_black_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/forex_custoner_fix_cd" />

            <TextView
                android:id="@+id/forex_custoner_fix_code"
                style="@style/bond_textview_15_black_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/forex_custoner_fix_code" />
        </LinearLayout>

        <ImageView
            android:id="@+id/rate_gotoDetail"
            style="@style/rightbtn_jiantou"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/right_arrow" />
    </LinearLayout>

</RelativeLayout>