<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_for_click_list_item"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/item_fixation_layout"
    android:descendantFocusability="blocksDescendants" >

        <!-- p603批次中银理财固定期限类产品item显示 -->

        <TextView
            android:id="@+id/tv_hold_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_due_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_earnings_percent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="@dimen/product_list_item_right_arrow_width"
            android:layout_height="@dimen/product_list_item_right_arrow_width"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="5dp"
            android:background="@drawable/img_arrow_gray_right_clicked_down" />

</LinearLayout>