<?xml version="1.0" encoding="utf-8"?>
<!-- 我的外汇  定期详情页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/forex_query_deal_detailes_ok"
            style="@style/bottombtn_new"
            android:text="@string/forex_customer_sell" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_btn"
        android:layout_marginTop="@dimen/rightbtnW"
        android:layout_weight="1"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView style="@style/scrollview_comm_havemarginbutton" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:text="@string/forex_rate_fix_accNumber"
                        />

                    <TextView
                        android:id="@+id/forex_rate_fix_accNumber"
                        style="@style/bond_tv_15_right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:text="@string/forex_rate_fix_number1"
                        />

                    <TextView
                        android:id="@+id/forex_rate_fix_number"
                        style="@style/bond_tv_15_right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:text="@string/forex_custoner_fix_codes"
                        />

                    <TextView
                        android:id="@+id/forex_custoner_fix_code"
                        style="@style/bond_tv_15_right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:layout_weight="6"
                        android:text="@string/forex_customer_fix_cash1"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/forex_customer_fix_cash"
                        style="@style/bond_tv_15_right"
                        android:layout_weight="4"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:text="@string/forex_custoner_fix_type"
                        />

                    <TextView
                        android:id="@+id/forex_custoner_fix_type"
                        style="@style/bond_tv_15_right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:text="@string/forex_custoner_fix_interestStartsDate"
                        />

                    <TextView
                        android:id="@+id/forex_custoner_fix_interestStartsDate"
                        style="@style/bond_tv_15_right"
                        android:singleLine="false"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:text="@string/forex_custoner_fix_cdperiod"
                        />

                    <TextView
                        android:id="@+id/forex_custoner_fix_cdperiod"
                        style="@style/bond_tv_15_right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:text="@string/forex_custoner_fix_interestRate"
                        />

                    <TextView
                        android:id="@+id/forex_custoner_fix_interestRate"
                        style="@style/bond_tv_15_right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:text="@string/forex_custoner_fix_balance1"
                        />

                    <TextView
                        android:id="@+id/forex_custoner_fix_balance"
                        style="@style/bond_tv_15_right"
                        android:singleLine="false"
                        android:textColor="@color/red"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/titleText"
        style="@style/titleText_stepacc"
        android:layout_width="@dimen/common_details_title_width"
        android:layout_height="@dimen/left_img_width"
        android:background="@drawable/bg_title"
        android:gravity="center"
        android:text="@string/forex_trade_detail"
        android:textColor="@color/fonts_black" />

</RelativeLayout>