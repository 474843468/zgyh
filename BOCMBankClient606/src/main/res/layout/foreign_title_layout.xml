<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/foreign_title"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal|center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_currency_left"
            style="@style/titleText"
            android:text="1111111"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="@dimen/boc_space_between_34px"/>

        <TextView
            style="@style/titleText"
            android:text="/"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="@dimen/boc_space_between_34px"/>

        <TextView
            android:id="@+id/tv_currency_right"
            style="@style/titleText"
            android:text="1111111"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="@dimen/boc_space_between_34px"/>

        <ImageView
            android:id="@+id/currency_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/share_down_button"/>
    </LinearLayout>
</LinearLayout>
