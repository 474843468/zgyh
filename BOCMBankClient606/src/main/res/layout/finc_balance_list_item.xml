<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/selector_for_listiterm_click"
  >

      <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_bottom_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal" >
		<LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3">
            
            <ImageView android:id="@+id/quick_sell_iv"
			    style="@style/Finc_QuickSell_Flag"
			    android:layout_gravity="center_vertical"/>
            
	        <TextView
	            android:id="@+id/finc_listiterm_tv1"
	            style="@style/textview_common"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="left|center_vertical"
	            android:singleLine="true" />
            
        </LinearLayout>

        <TextView
            android:id="@+id/finc_listiterm_tv2"
            style="@style/textview_common"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true" />

        <TextView
            android:id="@+id/finc_listiterm_tv3"
            style="@style/textview_common"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center"
            android:singleLine="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/right_iv"
        style="@style/rightbtn_jiantou"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_row_margin_half"
        android:layout_marginRight="@dimen/common_row_margin_half"
        android:src="@drawable/right_arrow" />

</LinearLayout>