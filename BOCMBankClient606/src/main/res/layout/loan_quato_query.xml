<?xml version="1.0" encoding="utf-8"?>
<!-- 我的外汇     定期首页 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/has_acc"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_five_zero"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_row_margin"
            android:paddingRight="@dimen/common_row_margin" >

            <TextView
                style="@style/textview_common"
                android:layout_width="@dimen/dp_seven_zero"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_listview_item_paddingLR"
                android:gravity="center"
                android:text="@string/loan_query_loanLimitType" />

            <TextView
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_listview_item_paddingLR"
                android:ems="4"
                android:gravity="center"
                android:text="@string/loan_query_number" />

            <TextView
                style="@style/textview_common"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_listview_item_paddingLR"
                android:gravity="center"
                android:text="@string/loan_query_limitquota" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:orientation="horizontal" >
        </LinearLayout>

        <ListView
            android:id="@+id/loan_listView"
            style="@style/listviewcomm_fill_gray_divider"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:scrollbars="none" >
        </ListView>
    </LinearLayout>

</RelativeLayout>