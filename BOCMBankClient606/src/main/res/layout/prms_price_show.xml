<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/prms_trade_confirm_entrust_winPrice_view"
        style="@style/linnerlayout_common"
        android:visibility="visible" >

        <TextView
            style="@style/textview_forex_prompt_message"
            android:text="@string/prms_win_price_colon" />

        <LinearLayout
            style="@style/textview_prms_prompt_letetitle_info"  >

            <TextView
                android:id="@+id/prms_trade_confirm_winprice"
                style="@style/textview_prms_prompt_middle_info"
                android:singleLine="true"
                 />

            <TextView
                android:id="@+id/prms_trade_confirm_winprice_unit"
                style="@style/textview_prms_prompt_end_info"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/prms_trade_confirm_entrust_losPrice_view"
        style="@style/linnerlayout_common"
        android:visibility="visible" >

        <TextView
            style="@style/textview_forex_prompt_message"
            android:text="@string/prms_lose_price_colon" />

        <LinearLayout
            style="@style/textview_prms_prompt_letetitle_info" >

            <TextView
                android:id="@+id/prms_trade_confirm_losprice"
                style="@style/textview_prms_prompt_middle_info"
                android:singleLine="true"
                 />

            <TextView
                android:id="@+id/prms_trade_confirm_losprice_unit"
                style="@style/textview_prms_prompt_end_info"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    

</LinearLayout>