<?xml version="1.0" encoding="utf-8"?>
<!-- 我的外汇 定期账户item -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp_five_zero"
    android:background="@drawable/selector_for_click_item"
    android:gravity="center"
    android:paddingLeft="@dimen/common_row_margin"
    android:paddingRight="@dimen/common_row_margin" >

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_bottom_height"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/forex_custoner_fix_volunber"
            style="@style/textview_common"
            android:layout_width="@dimen/dp_seven_zero"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_listview_item_paddingLR"
            android:gravity="left"
            android:singleLine="true"
            android:textSize="@dimen/textsize_one_two" />

        <TextView
            android:id="@+id/forex_custoner_fix_code"
            style="@style/textview_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_listview_item_paddingLR"
            android:ems="4"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/textsize_one_two" />

        <TextView
            android:id="@+id/forex_custoner_fix_balance"
            style="@style/textview_common"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_listview_item_paddingLR"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_one_two" />
    </LinearLayout>

    <ImageView
        android:id="@+id/rate_gotoDetail"
        style="@style/rightbtn_jiantou"
        android:layout_gravity="center" />

</LinearLayout>