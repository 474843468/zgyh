<?xml version="1.0" encoding="utf-8"?>
<!-- 资产管理-资金划转，item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_match"
    android:layout_marginLeft="10dp"
    android:paddingTop="5dp"
    android:gravity="center_vertical"
    android:background="@color/white"
    >
    
    <ImageView 
        android:id="@+id/image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        />
    <LinearLayout 
        style="@style/style_match_wrap"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        >
        <RelativeLayout style="@style/style_match_wrap" android:layout_marginRight="3dp">
            <TextView 
		        android:id="@+id/tv_1"
		        style="@style/textview_common"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:text="dsfasdf"
		        />
            <TextView 
		        android:id="@+id/tv_2"
		        android:layout_alignLeft="@+id/tv_1"
		        android:layout_below="@+id/tv_1"
		        style="@style/style_match_wrap"
		        android:textColor="@color/gray"
		        android:textSize="@dimen/textsize_one_two"
		        android:layout_marginTop="3dp"
		        android:ellipsize="middle"
		        android:singleLine="true"
		        android:text="dddddddd"
		        />
            <ImageView 
	            android:id="@+id/img_delete"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:scaleType="centerInside"
	            android:contentDescription="@string/app_name"
	            android:src="@drawable/assetmanager_scene_delete"
	            />	
        </RelativeLayout>
    
   
    <View 
        style="@style/style_line"
        android:layout_height="0.5dp"
        android:layout_marginTop="3dp"
        />
    </LinearLayout>

</LinearLayout>
