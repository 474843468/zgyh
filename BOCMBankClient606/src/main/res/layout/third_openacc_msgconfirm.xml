<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:userProperty="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_for_listview_item_write"
            android:orientation="vertical"
            android:paddingBottom="@dimen/fill_padding_bottom"
            android:paddingTop="@dimen/fill_padding_top" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/blpt_main_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/fill_padding_left" >

                        <!-- 项目  start -->

                        <TextView
                            style="@style/isforex_little_cell_title"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:text="@string/please_confirm_open_account_info"
                            >
                        </TextView>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:shrinkColumns="1" >

                            <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                                <TextView
                                    style="@style/textview_forex_prompt_message"
                                    android:layout_weight="0"
                                    android:text="@string/third_openacc_acc" />

                                <TextView
                                    android:id="@+id/tv_openacc_acc"
                                    style="@style/textview_forex_prompt_info"
                                    android:layout_weight="0"
                                    android:paddingLeft="0dp"
                                    android:singleLine="true" />
                            </TableRow>

                            <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                                <TextView
                                    style="@style/textview_forex_prompt_message"
                                    android:layout_weight="0"
                                    android:text="@string/third_openacc_name" />

                                <TextView
                                    android:id="@+id/tv_openacc_name"
                                    style="@style/textview_forex_prompt_info"
                                    android:layout_weight="0"
                                    android:paddingLeft="0dp"
                                    android:singleLine="true" />
                            </TableRow>

                            <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                                <TextView
                                    style="@style/textview_forex_prompt_message"
                                    android:layout_weight="0"
                                    android:text="@string/third_openacc_idtype" />

                                <TextView
                                    android:id="@+id/tv_openacc_idtype"
                                    style="@style/textview_forex_prompt_info"
                                    android:layout_weight="0"
                                    android:paddingLeft="0dp"
                                    android:singleLine="true" />
                            </TableRow>

                            <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                                <TextView
                                    style="@style/textview_forex_prompt_message"
                                    android:layout_weight="0"
                                    android:text="@string/third_openacc_idnumber" />

                                <TextView
                                    android:id="@+id/tv_openacc_idnum"
                                    style="@style/textview_forex_prompt_info"
                                    android:layout_weight="0"
                                    android:paddingLeft="0dp"
                                    android:singleLine="true" />
                            </TableRow>

                            <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                                <TextView
                                    style="@style/textview_forex_prompt_message"
                                    android:layout_weight="0"
                                    android:text="@string/third_openacc_mobile" />

                                <TextView
                                    android:id="@+id/tv_openacc_mobile"
                                    style="@style/textview_forex_prompt_info"
                                    android:layout_weight="0"
                                    android:paddingLeft="0dp"
                                    android:singleLine="true" />
                            </TableRow>

                            <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                                <TextView
                                    style="@style/textview_forex_prompt_message"
                                    android:layout_weight="0"
                                    android:text="@string/third_openacc_adress" />

                                <TextView
                                    android:id="@+id/tv_openacc_adress"
                                    style="@style/textview_forex_prompt_info"
                                    android:layout_weight="0"
                                    android:paddingLeft="0dp"
                                    android:singleLine="true" />
                            </TableRow>

                            <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                                <TextView
                                    style="@style/textview_forex_prompt_message"
                                    android:layout_weight="0"
                                    android:text="@string/third_openacc_postcode" />

                                <TextView
                                    android:id="@+id/tv_openacc_postcode"
                                    style="@style/textview_forex_prompt_info"
                                    android:layout_weight="0"
                                    android:paddingLeft="0dp"
                                    android:singleLine="true" />
                            </TableRow>

                            <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                                <TextView
                                    android:id="@+id/tip_one"
                                    style="@style/textview_forex_prompt_message"
                                    android:layout_weight="0"
                                    android:text="@string/department_region" />

                                <TextView
                                    android:id="@+id/tv_openacc_province"
                                    style="@style/textview_forex_prompt_info"
                                    android:layout_weight="0"
                                    android:paddingLeft="0dp"
                                    android:singleLine="true" />
                            </TableRow>

                            <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                                <TextView
                                    style="@style/textview_forex_prompt_message"
                                    android:layout_weight="0"
                                    android:text="@string/third_openacc_company" />

                                <TextView
                                    android:id="@+id/tv_openacc_company"
                                    style="@style/textview_forex_prompt_info"
                                    android:layout_weight="0"
                                    android:paddingLeft="0dp"
                                    android:singleLine="true" />
                            </TableRow>

                            <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                                <TextView
                                    style="@style/textview_forex_prompt_message"
                                    android:layout_weight="0"
                                    android:text="@string/third_openacc_companypartname" />

                                <TextView
                                    android:id="@+id/tv_openacc_companypart"
                                    style="@style/textview_forex_prompt_info"
                                    android:layout_weight="0"
                                    android:paddingLeft="0dp"
                                    android:singleLine="true" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/layout_sms"
                                android:layout_marginTop="@dimen/common_row_margin"
                                android:visibility="gone" >

                                <TextView
                                    style="@style/textview_forex_prompt_message"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0"
                                    android:text="@string/blpt_pub_note_code" />

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <cfca.mobile.sip.SipBox
                                        android:id="@+id/sip_sms"
                                        style="@style/sip_edit_fill"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:maxLength="20" >
                                    </cfca.mobile.sip.SipBox>

                                    <!--style="@style/sms_code_btn"-->
                                    <Button
                                        android:id="@+id/smsbtn"
                                        style="@style/button_smscode"
                                        android:layout_marginLeft="@dimen/btn_margin_left"
                                        android:layout_marginRight="@dimen/finc_details_star_width" />
                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:id="@+id/layout_otp"
                                android:layout_marginTop="@dimen/common_row_margin"
                                 android:visibility="gone">

                                <TextView
                                    style="@style/textview_forex_prompt_message"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0"
                                    android:text="@string/active_code" />

                                <cfca.mobile.sip.SipBox
                                    android:id="@+id/modify_pwd_sip"
                                    style="@style/sip_edit_fill"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/finc_details_star_width"
                                    android:gravity="center_vertical"
                                    android:maxLength="20" >
                                </cfca.mobile.sip.SipBox>
                            </TableRow>

                            <TableRow
                                android:id="@+id/layout_usb"
                                android:layout_marginTop="@dimen/common_row_margin"
                                android:visibility="gone" >

                                <TextView
                                    style="@style/textview_forex_prompt_message"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0"
                                    android:text="@string/usbkey_code" />

                                <com.chinamworld.bocmbci.widget.UsbKeyText
                                    android:id="@+id/sip_usbkey"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/finc_details_star_width"
                                    android:layout_marginTop="@dimen/common_row_margin"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    userProperty:ShowRate="1:0" />
                            </TableRow>

                        </TableLayout>
						
						

                        <!-- 项目  end -->

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_bottom_padding"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnconfirm"
                style="@style/textview_forex_button_cell"
                android:text="@string/confirm" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>