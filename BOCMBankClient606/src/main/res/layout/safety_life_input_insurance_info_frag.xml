<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_row_margin"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- 缴费年期类型 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_forex_prompt_message"
                android:layout_weight="6"
                android:singleLine="true"
                android:text="@string/safety_lifeInsurance_payYearType"
                 />

            <TextView
                android:id="@+id/tv_payYearType"
               style="@style/edittext_forex_prompt_info"
                android:layout_marginRight="5dip"
                android:layout_weight="4"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <!-- 缴费年期 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                 style="@style/textview_forex_prompt_message"  
                android:layout_weight="6"
                android:singleLine="true"
                android:text="@string/safety_lifeInsurance_payYear"
               
                />

            <TextView
                android:id="@+id/tv_payYear"
               style="@style/edittext_forex_prompt_info"
                android:layout_marginRight="5dip"
                android:layout_weight="4"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <!-- 保障年期类型 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_forex_prompt_message"
                android:layout_weight="6"
                android:singleLine="true"
                android:text="@string/safety_lifeInsurance_insuYearType"
               
                />

            <TextView
                android:id="@+id/tv_insuYearType"
               style="@style/edittext_forex_prompt_info"
                android:layout_marginRight="5dip"
                android:layout_weight="4"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <!-- 保障年期 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_forex_prompt_message"
                android:layout_weight="6"
                android:singleLine="true"
                android:text="@string/safety_lifeInsurance_insuYear"
               
                />

            <TextView
                android:id="@+id/tv_insuYear"
               style="@style/edittext_forex_prompt_info"
                android:layout_marginRight="5dip"
                android:layout_weight="4"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <!-- 投保份数 -->

        <LinearLayout
            android:id="@+id/ll_copies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                style="@style/comm_view_left"
                android:layout_weight="6"
                android:singleLine="true"
                android:text="@string/safety_lifeInsurance_copies"
               
                />

            <EditText
                android:id="@+id/et_copies"
               style="@style/edittext_forex_prompt_info"
                android:layout_marginRight="5dip"
                android:layout_weight="4"
                android:inputType="number"
                />
        </LinearLayout>

        <!-- 保费 -->

        <LinearLayout
            android:id="@+id/ll_riskPrem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                style="@style/textview_forex_prompt_message"
                android:layout_weight="6"
                android:singleLine="true"
                android:text="@string/safety_product_riskparm"
               
                />

            <EditText
                android:id="@+id/et_riskPrem"
               style="@style/edittext_forex_prompt_info"
                android:layout_marginRight="5dip"
                android:layout_weight="4"
                android:inputType="numberDecimal"
                />
        </LinearLayout>

        <!-- 保额 -->

        <LinearLayout
            android:id="@+id/ll_coverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                style="@style/textview_forex_prompt_message"
                android:layout_weight="6"
                android:singleLine="true"
                android:text="@string/safety_lifeInsurance_coverage"
               
                />

            <EditText
                android:id="@+id/et_coverage"
               style="@style/edittext_forex_prompt_info"
                android:layout_marginRight="5dip"
                android:layout_weight="4"
                android:inputType="numberDecimal"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_copiesTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                style="@style/textview_forex_prompt_message"
                android:layout_weight="6"
                android:singleLine="true"
                android:text="@string/safety_lifeInsurance_copies"
               
                android:textSize="@dimen/textsize_default"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_copiesTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/red"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height"
            android:layout_marginTop="@dimen/common_row_margin" />
    </LinearLayout>

</ScrollView>