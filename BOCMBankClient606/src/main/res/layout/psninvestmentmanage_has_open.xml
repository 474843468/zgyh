<?xml version="1.0" encoding="utf-8"?>
<!-- 开通投资理财的成功页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:orientation="vertical"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fill_margin_left"
            android:layout_weight="1"
            android:background="@drawable/shap_for_content"
            android:orientation="vertical" 
            android:gravity="center">
            
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_of_commrequestopen"
                android:text="@string/investopensuess"
                android:textColor="@color/gray"
                android:gravity="center"
                android:textSize="@dimen/textsize_default" />

         <ImageView 
             android:layout_gravity="center"
             android:layout_width="@dimen/investhasopen"
             android:layout_height="@dimen/investhasopen"
             android:background="@drawable/investopensucess"/>
         
            

            
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
              android:layout_marginBottom="@dimen/common_bottom_padding_new" >

            <Button
                android:id="@+id/btnConfim"
                style="@style/bottombtn"
                android:visibility="visible"
                android:background="@drawable/btn_red_big_long"
                android:text="@string/closeinest" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>