<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_row_margin"
        android:text="@string/epay_wc_open_service_tv_title"
        android:textColor="@color/gray"
        android:textSize="@dimen/textsize_default" />

    <ListView
        android:id="@+id/acc_select_listview"
        style="@style/listviewcomm_wrap_haveDivider"
        android:layout_above="@+id/bt_next"
        android:layout_below="@id/tv_msg"
        android:layout_marginBottom="@dimen/common_row_margin" >
    </ListView>

    <Button
        android:id="@+id/bt_next"
        style="@style/bottombtn"
        android:layout_alignParentBottom="true"
        android:text="@string/next" />

</RelativeLayout>