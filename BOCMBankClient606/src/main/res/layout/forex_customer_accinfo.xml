<?xml version="1.0" encoding="utf-8"?>
<!-- 我的外汇   重设外汇账户 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/fill_margin_left"
    android:layout_marginRight="@dimen/fill_padding_right"
    android:layout_marginTop="@dimen/fill_margin_top"
    android:background="@drawable/message_dialog_bg" >

    <ImageView
        android:id="@+id/img_exit_accdetail"
        android:layout_width="@dimen/dp_six_zero"
        android:layout_height="@dimen/close_clickarea_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="-14dp"
        android:layout_marginTop="-14dp"
        android:src="@color/transparent_00" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fill_margin_left"
        android:layout_marginTop="@dimen/gridview_itemWandH"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_row_margin"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bond_tv_15_left"
                    android:layout_weight="1"
                    android:text="@string/forex_customer_accNumber" />

                <TextView
                    android:id="@+id/customer_accID"
                    style="@style/bond_tv_15_right"
                    android:layout_weight="1"
                    android:textColor="@color/fonts_pink" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bond_tv_15_left"
                    android:layout_weight="1"
                    android:text="@string/forex_customer_accType" />

                <TextView
                    android:id="@+id/customer_accType"
                    style="@style/bond_tv_15_right"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/bond_tv_15_left"
                    android:layout_weight="1"
                    android:text="@string/forex_customer_accAlias" />

                <TextView
                    android:id="@+id/customer_accAlias"
                    style="@style/bond_tv_15_right"
                    android:layout_weight="1"
                    android:singleLine="false" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_row_margin"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/customer_resetAccButton"
                style="@style/bottombtn_new"
                android:layout_marginLeft="@dimen/dp_three_zero"
                android:layout_marginRight="@dimen/dp_three_zero"
                android:text="@string/forex_customer_resetButton"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>