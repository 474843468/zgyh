<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical"
    tools:context=".AssertsAccountManagerActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="@drawable/assetsmanager_accredit_manager_back_bg"
        android:orientation="vertical" >
        
        <ImageView 
            android:layout_gravity="center_horizontal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/u41"
            android:layout_marginTop="30dp"/>
        <TextView 
            android:id="@+id/tv_accountaccredit_confirmdetailback_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:gravity="center"/>

        
            
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" 
        android:gravity="center">

        <Button
            android:id="@+id/but_accountaccredit_confirmdetailback_finish"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/assetsmanager_account_mannager_middlebut"
            android:text="完成"
            
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>