<?xml version="1.0" encoding="utf-8"?>
<!-- 贷款管理  贷款列表界面  wangmengmeng -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.chinamworld.bocmbci.widget.SwipeListView
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loan_accountlist"
        style="@style/listviewcomm_wrap_haveDivider"
        swipe:swipeActionLeft="dismiss"
        swipe:swipeCloseAllItemsWhenMoveList="true"
        swipe:swipeFrontView="@+id/front"
        swipe:swipeMode="both" />

    <TextView
        android:id="@+id/tv_add_bottom"
        style="@style/textview_common"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_row_margin"
        android:paddingLeft="@dimen/common_row_margin"
        android:paddingRight="@dimen/common_row_margin"
        android:text="@string/loan_menu_add_bottom"
        android:textColor="@color/gray" />

</RelativeLayout>