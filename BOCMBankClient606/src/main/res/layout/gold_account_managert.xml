<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_row_margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_row_margin"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/loan_query_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/rl_loan_query_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_five"
                    android:paddingTop="@dimen/dp_five" >

                    <RadioButton
                        android:id="@+id/base_message"
                        style="@style/new_radioButtonLeft"
                        android:layout_height="@dimen/dp_three_zero"
                        android:checked="true"
                        android:text="基本信息"
                        android:textSize="@dimen/textsize_one_two" />

                    <RadioButton
                        android:id="@+id/position_message"
                        style="@style/new_radioButtonRight"
                        android:layout_height="@dimen/dp_three_zero"
                        android:text="持仓信息"
                        android:textSize="@dimen/textsize_one_two" />
                </RadioGroup>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/body_layout"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_loan_query_title"
                android:orientation="vertical" >
              
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
	

</LinearLayout>