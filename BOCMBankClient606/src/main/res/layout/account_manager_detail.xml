<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >


    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_bottom_padding_new"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <!-- 底部刷新时间，业务修改不需要 -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sbremit_quotations_lv_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer_layout"
        android:layout_below="@+id/header_layout"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_confirm_leftiterm_marginleft"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/goldbonus_timedeposit_proName"
                    android:textColor="@color/fonts_dark_gray"/>

                <TextView
                    android:id="@+id/product_name"
                    style="@style/textview_common_right"
                    android:layout_weight="1" />
            </LinearLayout>
                 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_confirm_leftiterm_marginleft"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/fonts_dark_gray"
                    android:text="@string/goldbonus_timedeposit_startdate1" />

                <TextView
                    android:id="@+id/start_date"
                    style="@style/textview_common_right"
                    android:layout_weight="1" />
            </LinearLayout>
                 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_confirm_leftiterm_marginleft"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/fonts_dark_gray"
                    android:text="@string/goldbonus_timedeposit_period" />

                <TextView
                    android:id="@+id/limit"
                    style="@style/textview_common_right"
                    android:layout_weight="1" />
            </LinearLayout>
                 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_confirm_leftiterm_marginleft"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/fonts_dark_gray"
                    android:text="@string/goldbonus_timedeposit_enddate1" />

                <TextView
                    android:id="@+id/end_date"
                    style="@style/textview_common_right"
                    android:layout_weight="1" />
            </LinearLayout>
                 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_confirm_leftiterm_marginleft"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/fonts_dark_gray"
                    android:text="@string/goldbonus_timedeposit_num" />

                <TextView
                    android:id="@+id/amount"
                    style="@style/textview_common_right"
                    android:layout_weight="1" />
            </LinearLayout>
              <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_confirm_leftiterm_marginleft"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/fonts_dark_gray"
                    android:text="@string/goldbonus_year_rate" />

                <TextView
                    android:id="@+id/year_rate"
                    style="@style/textview_common_right"
                    android:layout_weight="1" />
            </LinearLayout>
              <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comm_confirm_leftiterm_marginleft"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/fonts_dark_gray"
                    android:text="@string/goldbonus_shoud_premium" />
                <LinearLayout 
                    style="@style/textview_common_right"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="人民币元"
                    android:textSize="@dimen/textsize_default"
				    />
                <TextView
                    android:id="@+id/should_premium"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:textSize="@dimen/textsize_default"
                    android:textColor="@color/red" />
                </LinearLayout>
				
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>