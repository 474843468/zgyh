<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_for_listview_item_write" 
    android:padding="8dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dip" >

        <LinearLayout
            android:id="@+id/layout_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dip" >

            <TextView
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plps_annuity_userid" />

            <TextView
                android:id="@+id/userid"
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_userid"
            android:orientation="horizontal"
            android:padding="2dip" >

            <TextView
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plps_annuity_username" />

            <TextView
                android:id="@+id/username"
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dip" >

        <TextView
            style="@style/textview_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plps_annuity_investcompoundingname" />

        <TextView
            android:id="@+id/investcompoundingname"
            style="@style/textview_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dip" >

        <TextView
            style="@style/textview_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plps_annuity_amount" />

        <TextView
            android:id="@+id/amount"
            style="@style/textview_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dip" >

        <TextView
            style="@style/textview_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plps_annuity_unitvalue" />

        <TextView
            android:id="@+id/unitvalue"
            style="@style/textview_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dip" >

        <TextView
            style="@style/textview_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plps_annuity_puritydate" />

        <TextView
            android:id="@+id/puritydate"
            style="@style/textview_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dip" >

        <TextView
            style="@style/textview_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plps_annuity_worth" />

        <TextView
            android:id="@+id/worth"
            style="@style/textview_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />
    </LinearLayout>

</LinearLayout>