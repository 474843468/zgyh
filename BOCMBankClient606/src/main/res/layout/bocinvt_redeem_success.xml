<?xml version="1.0" encoding="utf-8"?>
<!-- 中银理财  产品赎回成功信息页  wangmengmeng -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/step_title_layout" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_five"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_bottom_padding" >

        <Button
            android:id="@+id/btn_ok"
            style="@style/bottombtn"
            android:text="@string/finish" />
    </LinearLayout>

    <ScrollView
        style="@style/scrollview_comm"
        android:layout_above="@+id/ll_btn"
        android:layout_below="@+id/ll_step"
        android:layout_marginLeft="@dimen/fill_margin_left"
        android:layout_marginRight="@dimen/fill_margin_left"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:background="@drawable/bg_for_listview_item_write" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/fill_padding_top" >

            <TextView
                style="@style/textview_common"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bocinvt_redeemSuccess_title"
                android:textColor="@color/gray"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left_three"
                    android:text="@string/tranSeq" />

                <TextView
                    android:id="@+id/tv_tranSeq_detail"
                    style="@style/textview_common_right_two" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left_three"
                    android:text="@string/prms_tradetime" />

                <TextView
                    android:id="@+id/tv_paymentDate"
                    style="@style/textview_common_right_two" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left_three"
                    android:text="@string/prodCode" />

                <TextView
                    android:id="@+id/tv_prodCode_detail"
                    style="@style/textview_common_right_two" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left_three"
                    android:text="@string/prodName" />

                <TextView
                    android:id="@+id/tv_prodName_detail"
                    style="@style/textview_common_right_two" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left_three"
                    android:text="@string/currency_cashremit_colon" />

                <TextView
                    android:id="@+id/tv_currency_detail"
                    style="@style/textview_common_right_two" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left_three"
                    android:text="@string/bocinvt_sellPrice_success" />

                <TextView
                    android:id="@+id/tv_trfPrice_detail"
                    style="@style/textview_common_right_two"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left_three"
                    android:text="@string/bocinvt_redeemQuantity" />

                <TextView
                    android:id="@+id/tv_redeemQuantity_detail"
                    style="@style/textview_common_right_two"
                    android:textColor="@color/red" />
            </LinearLayout>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >
                </TextView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>