<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_acc_in_listDetail"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_acc_out_mytransfer"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/card_new_height"
        android:layout_marginTop="@dimen/dp_five"
        android:paddingBottom="@dimen/dp_five"
        android:paddingLeft="@dimen/dp_one_zero"
        android:paddingRight="@dimen/dp_one_zero"
        android:paddingTop="@dimen/dp_five" >

        <LinearLayout
            android:id="@+id/ll_acc_out_2dimen_scan_write"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/fill_padding_top"
            android:visibility="gone" >

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/tran_acc_in_person" />

            <TextView
                style="@style/textview_for_list"
                android:layout_width="80dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:gravity="bottom"
                android:text="@string/tran_acc_in_person" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dept_out_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/ll_acc_out_2dimen_scan_write"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_acc_in_item_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/card_top_text"
                    android:textSize="@dimen/textsize_one_for" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bankaccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_three_row_paddingTop"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_acc_in_item_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_one_for" />

                <TextView
                    android:id="@+id/tv_acc_in_item_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_one_for" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dept_out_info_layout"
            android:gravity="center_horizontal"
            android:paddingTop="0dip"
            android:visibility="gone" >

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/tran_acc_hand" />

            <TextView
                style="@style/textview_for_list"
                android:layout_width="80dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:gravity="bottom"
                android:text="@string/tran_select_again" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>