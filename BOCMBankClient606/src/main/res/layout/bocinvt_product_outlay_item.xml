<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/acc_list_item_height"
    android:background="@drawable/outlaybg_for_listview_item_write"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/left_bg"
        android:layout_width="@dimen/dp_one_zero"
        android:layout_height="@dimen/acc_list_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/left_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textproductname"
            style="@style/textview_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_five"
            android:layout_marginBottom="@dimen/dp_five"
            android:layout_marginTop="@dimen/dp_five"
            android:layout_weight="1.0"
            android:singleLine="true" />

        <View
            android:id="@+id/v1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/outlay_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text3"
                style="@style/textview_common"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品期限"
                        android:textColor="#4c4c4c" />

                    <TextView
                        style="@style/textview_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outlay_left_lan_yuan"
                        android:text="期"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <TextView
                        style="@style/textview_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text2"
                    style="@style/textview_common"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/outlay_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/outlay_left_ceng_yuan"
                        android:text="起"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <TextView
                        style="@style/textview_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起购金额"
                        android:textColor="#4c4c4c" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text1"
                    style="@style/textview_common"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/outlay_text_color" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>