<?xml version="1.0" encoding="utf-8"?>
<!-- 辅助功能 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_for_click_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/llyt_clear_new_message"
            style="@style/common_click_first_item_style" >

            <TextView
                android:id="@+id/tv_infoserve_clear_new_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/infoserve_clear_new_message"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_default" />

            <ImageView
                android:layout_width="@dimen/dp_two_zero"
                android:layout_height="@dimen/dp_two_zero"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_one_zero"
                android:layout_toLeftOf="@id/tv_infoserve_clear_new_message"
                android:src="@drawable/icon_red_fuzhu_news" />
        </RelativeLayout>

        <ImageView style="@style/divider_imag_style" />

        <RelativeLayout
            android:id="@+id/llyt_clear_vip_message"
            style="@style/common_click_item_style" >

            <TextView
                android:id="@+id/tv_infoserve_clear_vip_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/infoserve_clear_vip_message"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_default" />

            <ImageView
                android:id="@+id/icon_red_fuzhu_tixing"
                android:layout_width="@dimen/dp_two_zero"
                android:layout_height="@dimen/dp_two_zero"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_one_zero"
                android:layout_toLeftOf="@id/tv_infoserve_clear_vip_message"
                android:src="@drawable/icon_red_fuzhu_tixing" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_line"
            style="@style/divider_imag_style" />

        <RelativeLayout
            android:id="@+id/llyt_clear_all"
            style="@style/common_click_last_item_style" >

            <LinearLayout
                android:id="@+id/tv_infoserve_clear_all_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infoserve_clear_all_message"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清空"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" 
                    android:visibility="invisible"/>
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp_two_zero"
                android:layout_height="@dimen/dp_two_zero"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_one_zero"
                android:layout_toLeftOf="@id/tv_infoserve_clear_all_message"
                android:src="@drawable/icon_red_fuzhu_all" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>