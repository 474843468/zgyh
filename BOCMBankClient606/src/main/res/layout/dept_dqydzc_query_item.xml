<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_three_zero"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_five" >

        <TextView
            android:id="@+id/dept_accounttype"
            style="@style/textview_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_five"
            android:gravity="right"
            android:textColor="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_five"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dept_dqyzc_cdandvolum" />

            <TextView
                android:id="@+id/dept_dqyzc_cdandvolum"
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_five"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dept_dqyzc_codeandcash" />

            <TextView
                android:id="@+id/dept_dqyzc_codeandcash"
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_five"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dept_dqyzc_money" />

            <TextView
                android:id="@+id/dept_dqyzc_money"
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_five"
            android:layout_marginTop="@dimen/dp_five"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dept_dqyzc_status" />

            <TextView
                android:id="@+id/dept_dqyzc_status"
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/right_img"
        style="@style/rightbtn_jiantou_imageView"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/right_arrow" />

</RelativeLayout>