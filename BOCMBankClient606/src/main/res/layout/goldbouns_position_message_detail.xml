<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_details_messages_margintop"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView style="@style/scrollview_comm_havemarginbutton" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:gravity="right"
                        android:text="@string/trade_serial_number" />

                    <TextView
                        android:id="@+id/trade_serial_number"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="@string/goldbonus_type" />

                    <TextView
                        android:id="@+id/trade_date"
                        android:layout_weight="1"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="@string/goldbonus_start_date" />

                    <TextView
                        android:id="@+id/trade_type"
                        style="@style/textview_common_right_two"
                        android:layout_weight="1" />
                </LinearLayout>
				  <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="@string/goldbonus_time_limit" />

                    <TextView
                        android:id="@+id/foreign_currency"
                        style="@style/textview_common_right_two"
                        android:layout_weight="1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="@string/goldbonus_end_date" />

                    <TextView
                        android:id="@+id/trade_money"
                        style="@style/textview_common_right_two"
                        android:layout_weight="1"
                        android:textColor="@color/red" />
                </LinearLayout>

              


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="@string/goldbonus_account" />

                    <TextView
                        android:id="@+id/exchange_rate"
                        style="@style/textview_common_right_two"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="@string/goldbonus_year_rate" />

                    <TextView
                        android:id="@+id/rmb_money"
                        style="@style/textview_common_right_two"
                        android:layout_weight="1"
                        android:textColor="@color/red" />
                </LinearLayout>
				
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/capital_use_alert"
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="@string/goldbonus_shoud_premium" />

                    <TextView
                        android:id="@+id/capital_use"
                        style="@style/textview_common_right_two" 
                        android:layout_weight="1"/>
                </LinearLayout>
             


            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>