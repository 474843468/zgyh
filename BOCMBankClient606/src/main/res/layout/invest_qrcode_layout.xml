<?xml version="1.0" encoding="utf-8"?>
<!-- 理财详情 二维码页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_qrcode_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="中银薪钱包 000699"
            android:gravity="center"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="@dimen/boc_space_between_400px"
        android:layout_height="@dimen/boc_space_between_400px"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/boc_space_between_20px"
        tools:src="@drawable/boc_scan_box_bg" />


</LinearLayout>
