<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/common_row_margin" >

        <Button
            style="@style/bottombtn"
            android:onClick="btnFinishOnclick"
            android:text="@string/finish" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom"
        android:layout_weight="1"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView style="@style/scrollview_comm" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/remit_title_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:text="@string/plps_sing_success"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_default"
                     />

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_common_left"
                        android:layout_weight="1.3"
                        android:text="@string/crcd_setUp_confirm_nick" />

                    <TextView
                        android:id="@+id/nickname"
                        style="@style/textview_common_right"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        android:id="@+id/year_remain_limit_alert"
                        style="@style/textview_common_left"
                        android:layout_weight="1.3"
                        android:text="@string/plps_agent" />

                    <TextView
                        android:id="@+id/agent"
                        style="@style/textview_common_right" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_common_left"
                        android:layout_weight="1.3"
                        android:text="@string/plps_customername" />

                    <TextView
                        android:id="@+id/customerName"
                        style="@style/textview_common_right" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_common_left"
                        android:layout_weight="1.3"
                        android:text="@string/plps_payuserno" />

                    <TextView
                        android:id="@+id/payuserno"
                        style="@style/textview_common_right" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_common_left"
                        android:layout_weight="1.3"
                        android:text="@string/plps_signacct" />

                    <TextView
                        android:id="@+id/signacct"
                        style="@style/textview_common_right" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_common_left"
                        android:layout_weight="1.3"
                        android:text="@string/beizhu" />

                    <TextView
                        android:id="@+id/remarks"
                        style="@style/textview_common_right" />
                </LinearLayout>
                <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/textview_common_left"
                    android:layout_weight="1.3"
                    android:text="@string/bocinvt_status"
                     />

                <TextView
                    android:id="@+id/statue"
                    style="@style/textview_common_right"
                     />
            </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>