<?xml version="1.0" encoding="utf-8"?>
<!-- 服务设定  交易限额设定  xyl -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_for_listview_item_write"
    android:orientation="vertical"
    android:paddingLeft="@dimen/listiterm_padding_left" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/set_servicename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal" 
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/boc_invest_procur"
                android:textSize="@dimen/textsize_default" />

            <TextView
                android:id="@+id/set_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="人民币元"
                android:textSize="@dimen/textsize_default" />
            <Button
                android:id="@+id/button1"
                android:layout_width="@dimen/setting_limit_edit_icon"
                android:layout_height="@dimen/setting_limit_edit_icon"
                android:layout_marginLeft="@dimen/common_listview_item_paddingLR"
                android:background="@drawable/icon_bianji"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/common_listview_item_paddingLR" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_daymaxlimit"
            android:textSize="@dimen/textsize_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" 
            android:gravity="right">

            <TextView
                android:id="@+id/set_daymaxlimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_default" />

            <Button
                android:layout_width="@dimen/setting_limit_edit_icon"
                android:layout_height="@dimen/setting_limit_edit_icon"
                android:background="@drawable/icon_bianji"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_listview_item_paddingLR" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/set_mydaymaxlimit"
            android:textSize="@dimen/textsize_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingRight="@dimen/common_listview_item_paddingLR"
            android:gravity="right" >

            <TextView
                android:id="@+id/set_predaymaxlimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_default" />

            <Button
                android:layout_width="@dimen/setting_limit_edit_icon"
                android:layout_height="@dimen/setting_limit_edit_icon"
                android:background="@drawable/icon_bianji"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>