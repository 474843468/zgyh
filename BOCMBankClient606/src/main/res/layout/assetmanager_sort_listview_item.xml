<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_match"
	android:paddingLeft="5dp"
	android:paddingRight="5dp"
	android:paddingTop="10dp"
    android:paddingBottom="10dp"
	android:gravity="center_vertical"
    >
    
    <LinearLayout 
        style="@style/style_with_weight_1"
		android:layout_weight="1"
        android:orientation="vertical"
		android:gravity="center"
        >
       <LinearLayout style="@style/style_match_wrap">
	    <TextView 
	        android:id="@+id/tv_1"
	        style="@style/textview_common_multi_second"
	        android:text=""
	        />
        <TextView 
            android:id="@+id/tv_2"
            android:layout_marginLeft="3dp"
            style="@style/textview_common_multi_second"
            android:text=""
            />
    	</LinearLayout>
        <View style="@style/style_line_1" android:layout_marginTop="10dp"/>
    </LinearLayout>
    
    <LinearLayout style="@style/style_wrap_wrap" android:layout_marginLeft="5dp"  android:gravity="center_vertical">
        <TextView 
	        android:id="@+id/tv_up"
			android:layout_marginRight="5dp"
	        style="@style/textview_common_multi_second"
	        android:textColor="@color/blue"
	        android:text="@string/assetmanager_capital_69"
	        />
        <TextView
	        android:id="@+id/tv_down"
	        style="@style/textview_common_multi_second"
	        android:textColor="@color/blue"
	        android:text="@string/assetmanager_capital_70"
	        />
    </LinearLayout>
    

</LinearLayout>
