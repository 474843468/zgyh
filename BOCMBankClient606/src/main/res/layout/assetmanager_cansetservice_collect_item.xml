<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_wrap"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center"
    >
    <View style="@style/style_match_wrap" android:layout_height="0dp"/>
    <LinearLayout style="@style/style_match_wrap"
        android:padding="10dp"
        android:background="@drawable/shape_round_1">
    <TextView 
        android:id="@+id/tv_cardname"
        style="@style/textview_common_multi_second"
        />
    <LinearLayout 
        style="@style/style_with_weight_1"
        android:gravity="right"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/tv_num"
            style="@style/textview_common_multi_second"
            android:textColor="@color/red"
            />
        <TextView 
            android:id="@+id/tv_manname"
            android:layout_marginTop="10dp"
            style="@style/textview_common_multi_second"
            />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
