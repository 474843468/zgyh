<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_tishi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_confirm"
        android:background="@drawable/shap_for_content"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/dp_six_zero"
            android:layout_height="@dimen/dp_six_zero"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_three_zero"
            android:background="@drawable/large_sign_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_five"
            android:text="@string/large_cd_choice_sign_Success"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_one_nine"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_one_zero"
            android:layout_marginTop="@dimen/dp_two_zero"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/large_cd_choice_sign_acc"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_one_for"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_three_zero"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/acc_account_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_one_zero"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_one_two"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/acc_account_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_marginTop="@dimen/dp_one_zero"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_one_two"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        style="@style/bottombtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_bottom_padding"
        android:layout_marginTop="@dimen/dp_five"
        android:text="@string/large_cd_add_title" />

</RelativeLayout>