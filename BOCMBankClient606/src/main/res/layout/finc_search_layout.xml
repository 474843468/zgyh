<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0eff5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_88px"
        android:background="@color/bg_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/finc_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/llbt_new_back_icon"
            android:textSize="@dimen/text_size_13sp"
            android:text=""
            android:padding="15dp"
            android:layout_gravity="left|center_vertical"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_64px"
            android:layout_gravity="center"
            android:background="@drawable/finc_search"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/boc_space_between_20px"
                android:paddingRight="@dimen/boc_space_between_12px"
                android:src="@drawable/inverst_search" />
            <EditText
                android:id="@+id/finc_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="@string/finc_title_fundinvest_reminder"
                android:textColor="@color/fonts_black"
                android:textColorHint="@color/fonts_light_gray"
                android:textSize="@dimen/fonts_one_five" />

        </LinearLayout>
        <TextView
            android:id="@+id/finc_search_top_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btn_blue"
            android:gravity="center"
            style="@style/inverst_text_blod_black_style15"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:text="搜索"
            />
    </LinearLayout>
