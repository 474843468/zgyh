    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_light_gray" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/finc_search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/recommend_search_layout"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/bg_light_gray"
                android:visibility="gone">
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_light_gray" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/fonts_one_five"
                    android:textColor="@color/fonts_dark_gray"
                    android:text="热门搜索"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_light_gray" />
                <com.chinamworld.bocmbci.biz.finc.finc_p606.util.MeasureListView
                    android:background="@color/bg_white"
                    android:dividerHeight="0.5dp"
                    android:divider="@color/line_light_gray"
                    android:id="@+id/finc_search_recommend_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/finc_history_search_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/bg_light_gray">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/line_light_gray" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:textSize="@dimen/fonts_one_five"
                        android:textColor="@color/fonts_dark_gray"
                        android:text="搜索历史"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/line_light_gray" />
                    <com.chinamworld.bocmbci.biz.finc.finc_p606.util.MeasureListView
                        android:id="@+id/finc_search_history_listview"
                        android:dividerHeight="0.5dp"
                        android:divider="@color/line_light_gray"
                        android:background="@color/bg_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="13dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/finc_search_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/btn_blue"
                        android:padding="10dp"
                        android:textSize="@dimen/fonts_one_five"
                        android:text="清除"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/finc_search_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <com.chinamworld.llbt.userwidget.refreshliseview.RefreshLayout
            android:id="@+id/fast_pull_refresh"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <com.chinamworld.llbt.userwidget.refreshliseview.PullableListView
                android:id="@+id/fast_query_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="0.5dp"
                android:divider="@color/line_light_gray"
                android:background="@color/bg_white"
                android:layout_marginBottom="@dimen/fill_margin_bottom"
                android:paddingLeft="13dp"
                android:scrollbars="none"
                android:visibility="gone" >
            </com.chinamworld.llbt.userwidget.refreshliseview.PullableListView>
        </com.chinamworld.llbt.userwidget.refreshliseview.RefreshLayout>
    </LinearLayout>


</LinearLayout>
