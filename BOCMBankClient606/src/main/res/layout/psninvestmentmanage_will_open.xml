<?xml version="1.0" encoding="utf-8"?>
<!-- 开通投资理财的成功页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:orientation="vertical"
  
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fill_margin_left"
            android:layout_weight="1"
            android:background="@drawable/shap_for_content"
            android:orientation="vertical" >

         <ImageView 
             android:layout_gravity="center"
             android:layout_marginTop="@dimen/icon_dele_HW"
             android:layout_width="@dimen/dp_six_zero"
             android:layout_height="@dimen/dp_six_zero"
             android:background="@drawable/forex_no_acc"/>
         
            

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fill_margin_left"
                android:text="@string/investwillopen"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_default" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" 
              android:layout_marginBottom="@dimen/common_bottom_padding_new">

            <Button
                android:id="@+id/btnConfim"
                style="@style/bottombtn"
                android:background="@drawable/btn_red_big_long"
                android:text="@string/openinest" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>