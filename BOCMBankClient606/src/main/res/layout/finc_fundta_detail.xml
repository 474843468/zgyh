<?xml version="1.0" encoding="utf-8"?>
<!-- 基金Ta账户 详情页面 xyl -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/finc_fundta_cancelrelation_btn"
            style="@style/btn_common_oneline_left"
            android:text="@string/set_conserconnection"
             />

        <Button
            android:id="@+id/finc_fundta_discharge_btn"
            style="@style/btn_common_oneline_right"
            android:text="@string/fincn_discharge"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/prms_scrollView1_layout"
        style="@style/scrollview_comm"
        android:layout_above="@id/btn_layout"
        android:layout_marginBottom="@dimen/common_row_margin"
        android:layout_marginTop="@dimen/common_details_messages_margintop" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_for_listview_item_write"
            android:orientation="vertical"
            android:paddingTop="@dimen/common_details_messages_paddingtop" >

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/finc_setfundcompany_colon" />

                <TextView
                    android:id="@+id/finc_setfundcompany_Tv"
                    style="@style/confirm_right_textview_style606" />
            </LinearLayout>

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/finc_fundtaacc_colon" />

                <TextView
                    android:id="@+id/finc_fundtaacc_tv"
                    style="@style/confirm_right_textview_style606" />
            </LinearLayout>

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/acc_state" />

                <TextView 
                    android:id="@+id/acc_state_tv"
                    style="@style/confirm_right_textview_style606" />
            </LinearLayout>

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/fincn_ifposition_colon" />

                <TextView 
                    android:id="@+id/fincn_ifposition_tv"
                    style="@style/confirm_right_textview_style606" />
            </LinearLayout>

            <LinearLayout style="@style/linnerlayout_common" >

                <TextView
                    style="@style/confirm_left_textview_style606"
                    android:text="@string/fincn_ifTrans_colon" />

                <TextView 
                    android:id="@+id/fincn_ifTrans_tv"
                    style="@style/confirm_right_textview_style606" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_details_title_height"
        android:layout_marginTop="@dimen/common_details_title_margintop" >

        <TextView
            android:layout_width="@dimen/common_details_title_width"
            android:layout_height="@dimen/common_details_title_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_title"
            android:gravity="center"
            android:text="@string/prms_query_detailes_header"
            android:textSize="@dimen/textsize_default" />
    </RelativeLayout>

</RelativeLayout>