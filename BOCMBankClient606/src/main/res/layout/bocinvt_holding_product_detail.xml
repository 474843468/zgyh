<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 持仓详情页面 -->

    <com.chinamworld.bocmbci.userwidget.TitleAndContentLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="理财产品详情" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.chinamworld.bocmbci.userwidget.LabelTextView
                android:id="@+id/ltv_product_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:labelText="产品代码：" />

            <com.chinamworld.bocmbci.userwidget.LabelTextView
                android:id="@+id/ltv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:labelText="产品名称：" />

            <com.chinamworld.bocmbci.userwidget.LabelTextView
                android:id="@+id/ltv_currency_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:labelText="币种：" />

            <com.chinamworld.bocmbci.userwidget.LabelTextView
                android:id="@+id/ltv_cash_remit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:labelText="钞/汇：" />

            <com.chinamworld.bocmbci.userwidget.LabelTextView
                android:id="@+id/ltv_product_term"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:labelText="产品期限：" />

            <com.chinamworld.bocmbci.userwidget.LabelTextView
                android:id="@+id/ltv_prodeuct_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:labelText="产品到期日：" />

            <com.chinamworld.bocmbci.userwidget.LabelTextView
                android:id="@+id/ltv_yearly_yield_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:labelText="预计年收益率：" />

            <com.chinamworld.bocmbci.userwidget.LabelTextView
                android:id="@+id/ltv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:labelText="单位净值：" />

            <com.chinamworld.bocmbci.userwidget.LabelTextView
                android:id="@+id/ltv_price_refresh_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:labelText="净值更新日期：" />

            <com.chinamworld.bocmbci.userwidget.LabelTextView
                android:id="@+id/ltv_holding_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:labelText="持有份额：" />

            <com.chinamworld.bocmbci.userwidget.LabelTextView
                android:id="@+id/ltv_available_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:labelText="可用份额：" />

            <com.chinamworld.bocmbci.userwidget.LabelTextView
                android:id="@+id/ltv_exp_profit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:labelText="参考收益：" />

            <com.chinamworld.bocmbci.userwidget.LabelTextView
                android:id="@+id/ltv_banc_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:labelText="资金账户：" />
        </LinearLayout>
    </com.chinamworld.bocmbci.userwidget.TitleAndContentLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bt_superaddition"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_bottom_height"
            android:layout_weight="4"
            android:background="@drawable/btn_red_big"
            android:text="追加购买" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bt_more"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_bottom_height"
            android:layout_weight="4"
            android:background="@drawable/btn_red_big"
            android:text="更多" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>