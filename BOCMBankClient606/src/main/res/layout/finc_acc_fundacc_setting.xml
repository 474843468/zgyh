<?xml version="1.0" encoding="utf-8"?>
<!-- 基金账户开户  xyl -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_bottom_padding" >

    <RelativeLayout
        android:id="@+id/registAcc_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_for_listview_item_write"
        android:padding="@dimen/fill_margin_bottom" >

        <TextView
            android:id="@+id/regist_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/fill_margin_bottom"
            android:text="基金交易账户开户"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize_default"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/regist_text1"
            android:layout_marginTop="@dimen/fill_margin_top"
            android:layout_above="@+id/finc_acc_regist_btn"
            android:text="@string/finc_acc_registAcc_info"
            android:textSize="@dimen/textsize_default" />

        <Button
            android:id="@+id/finc_acc_regist_btn"
            style="@style/bottombtn_606"
            android:layout_alignParentBottom="true"
            android:text="@string/finc_acc_registAcc_btn"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/checkIn_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_row_margin"
        android:layout_weight="1"
        android:background="@drawable/bg_for_listview_item_write"
        android:padding="@dimen/fill_margin_bottom" >

        <TextView
            android:id="@+id/checkIn_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/fill_margin_bottom"
            android:text="基金交易账户登记"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize_default"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkIn_text1"
            android:layout_above="@+id/finc_acc_checkin_btn"
            android:layout_marginTop="@dimen/fill_margin_top"
            android:text="@string/finc_acc_checkInAcc_info"
            android:textSize="@dimen/textsize_default" />

        <Button
            android:id="@+id/finc_acc_checkin_btn"
            style="@style/bottombtn_606"
            android:layout_alignParentBottom="true"
            android:text="@string/finc_acc_checkInAcc_btn"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>