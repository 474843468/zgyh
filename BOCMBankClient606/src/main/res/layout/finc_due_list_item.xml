<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_for_listiterm_click"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="7dp"
    android:paddingTop="7dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/finc_listiterm_tv1"
            style="@style/textview_common"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/finc_listiterm_tv2"
            style="@style/textview_common"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/finc_listiterm_tv3"
            style="@style/textview_common"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:singleLine="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/right_iv"
        style="@style/rightbtn_jiantou"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/common_row_margin"
        android:layout_marginRight="@dimen/common_row_margin"
         />

</LinearLayout>