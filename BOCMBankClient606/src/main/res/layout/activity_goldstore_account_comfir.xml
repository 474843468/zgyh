            <LinearLayout
                android:id="@+id/safetool_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <com.chinamworld.bocmbci.userwidget.securityview.SelectSecurityView
