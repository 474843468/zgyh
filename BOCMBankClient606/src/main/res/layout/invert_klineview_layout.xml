<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_rl">

    <LinearLayout
        android:layout_marginTop="@dimen/boc_space_between_6px"
        android:layout_marginRight="@dimen/lianlong_space_between_30px"
        android:layout_marginLeft="@dimen/lianlong_space_between_30px"

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                tools:text="9999/99/99"
                android:textSize="@dimen/lianlong_text_size_11dp"
                android:textColor="@color/lianlong_text_color_common_gray"
                />
            <TextView
                android:id="@+id/time_two"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                tools:text="05:00:00"

                android:textSize="@dimen/lianlong_text_size_11dp"
                android:textColor="@color/lianlong_text_color_dark_gray"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开"
                android:textSize="@dimen/lianlong_text_size_11dp"
                android:textColor="@color/lianlong_text_color_dark_gray"
                />
            <TextView
                android:id="@+id/openPrice_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:textSize="@dimen/lianlong_text_size_11dp"
                android:textColor="@color/lianlong_text_color_dark_gray"
                tools:text="123.45"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高"
                android:textSize="@dimen/lianlong_text_size_11dp"
                android:textColor="@color/lianlong_text_color_dark_gray"
                />
            <TextView
                android:id="@+id/maxPrice_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/lianlong_text_size_11dp"
                android:textColor="@color/lianlong_text_color_dark_gray"
                android:gravity="center|left"
                tools:text="1345.9"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal"
            android:gravity="right|center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="低"
                android:textColor="@color/lianlong_text_color_dark_gray"
                android:textSize="@dimen/lianlong_text_size_11dp"
                />
            <TextView
                android:id="@+id/minPrice_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/lianlong_text_size_11dp"
                android:textColor="@color/lianlong_text_color_dark_gray"
                tools:text="65.90"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_20px"
        android:background="@color/boc_bottom_date_color"/>

</LinearLayout>
