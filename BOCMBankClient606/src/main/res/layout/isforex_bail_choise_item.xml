<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_click_item_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dept_in_info_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_query_widtht"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/fill_padding_left"
            android:paddingRight="@dimen/fill_padding_left" >

            <TextView
                android:id="@+id/isForex_numberName"
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="@dimen/textsize_one_two" />

            <TextView
                android:id="@+id/isForex_number"
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_one_two" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/fill_padding_left"
            android:paddingRight="@dimen/fill_padding_left"
            android:paddingTop="@dimen/dp_five" >

            <TextView
                android:id="@+id/isforex_bzjAccCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_one_two" />

            <TextView
                android:id="@+id/isforex_bzjAccMoney"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_one_two" />
        </LinearLayout>
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/fill_padding_left"
            android:paddingRight="@dimen/fill_padding_left"
            android:paddingTop="@dimen/dp_five" >

            <TextView
                android:id="@+id/isforex_bzjAccCodet"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_one_two" />

            <TextView
                android:id="@+id/isforex_bzjAccMoneyt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_one_two" />
        </LinearLayout>
        
        <!--  -->
    </LinearLayout>

</RelativeLayout>