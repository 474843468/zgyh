<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/rightbtnW"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/rate_listView"
            style="@style/listviewcomm_fill_gray_divider"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_two_zero"
            android:divider="@color/gray" >
        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/titleText"
        style="@style/isforex_little_title"
        android:text="@string/forex_trade_detail"
        />

</RelativeLayout>