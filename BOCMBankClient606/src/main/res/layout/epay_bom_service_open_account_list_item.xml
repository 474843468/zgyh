<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/acc_list_item_height"
        android:background="@drawable/bg_for_listview_item_write"
        android:paddingLeft="@dimen/fill_padding_left"
        android:paddingRight="@dimen/fill_padding_right" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/common_row_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_acc_type"
                style="@style/textview_common"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_account"
                style="@style/textview_amount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/common_row_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_default" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_selected_img"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/acc_list_item_height"
        android:background="@drawable/bg_for_listview_item_half_black"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/img_gou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sucess_rightbg" />
    </RelativeLayout>

</RelativeLayout>