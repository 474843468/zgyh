<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dip"
    android:background="@drawable/shap_for_progress"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_metion_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/titlebackbtn_marginleft"
            android:layout_marginTop="@dimen/titlebackbtn_marginleft"
            android:gravity="center"
            android:textSize="@dimen/textsize_one_for" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="3dip"
            android:indeterminateDrawable="@drawable/shape_progressbar"
            android:background="@null" />

        <Button
            android:id="@+id/confirm_btn"
            style="@style/btn_common_oneline"
            android:layout_width="@dimen/btn_connect_width"
            android:layout_height="@dimen/btn_dialog_height"
            android:background="@drawable/btn_red_big_long"
            android:text="@string/blpt_location_btn" />

</LinearLayout>