<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bocinvt_bg_rectangle_gray_sideline_round_corners"
    android:orientation="vertical" >

    <com.chinamworld.bocmbci.userwidget.LabelTextView
        android:id="@+id/ltv_product_deprecate_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:labelText="产品到期日：" />

    <com.chinamworld.bocmbci.userwidget.LabelTextView
        android:id="@+id/ltv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:labelText="产品名称：" />

    <com.chinamworld.bocmbci.userwidget.LabelTextView
        android:id="@+id/ltv_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:labelText="产品币种：" />

    <com.chinamworld.bocmbci.userwidget.LabelTextView
        android:id="@+id/ltv_remit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:labelText="钞/汇：" />
    
    <com.chinamworld.bocmbci.userwidget.LabelTextView
        android:id="@+id/ltv_product_deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:labelText="产品期限：" />

    <com.chinamworld.bocmbci.userwidget.LabelTextView
        android:id="@+id/ltv_investment_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:labelText="投资本金：" />

    <com.chinamworld.bocmbci.userwidget.LabelTextView
        android:id="@+id/ltv_actuality_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:labelText="实际收益：" />

    <com.chinamworld.bocmbci.userwidget.LabelTextView
        android:id="@+id/ltv_actuality_yield_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:labelText="实际年收益率：" />

    <com.chinamworld.bocmbci.userwidget.LabelTextView
        android:id="@+id/ltv_capital_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:labelText="资金账户：" />

</LinearLayout>