<?xml version="1.0" encoding="utf-8"?>
<!-- 贵金属积利金定投管理主界面      linyl -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tv_goldbonus_fixinvest"
        style="@style/textview_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bocinvt_bg_rectangle_black_sideline_top_round_corners"
        android:drawableRight="@drawable/img_arrow_gray_right"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/goldbonus_fixinvest" />
    <TextView
        android:id="@+id/tv_goldbonus_fixinvest_modify"
        style="@style/textview_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:background="@drawable/bocinvt_bg_rectangle_black_sideline"
        android:drawableRight="@drawable/img_arrow_gray_right"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/goldbonus_fixinvest_modify" />
    <TextView
        android:id="@+id/tv_goldbonus_fixinvest_cannel"
        style="@style/textview_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:background="@drawable/bocinvt_bg_rectangle_black_sideline"
        android:drawableRight="@drawable/img_arrow_gray_right"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/goldbonus_fixinvest_cannel" />
    <TextView
        android:id="@+id/tv_goldbonus_fixinvest_query"
        style="@style/textview_common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:background="@drawable/bocinvt_bg_rectangle_black_sideline_bottom_round_corners"
        android:drawableRight="@drawable/img_arrow_gray_right"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/goldbonus_fixinvest_query" />

</LinearLayout>
