<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dept_save_regular_bottom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dept_save_title_tv"
        style="@style/save_title_tv" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_for_dept_tranlist"
        android:orientation="vertical"
        android:paddingBottom="@dimen/layout_margin_top"
        android:paddingLeft="@dimen/layout_padding_left_right"
        android:paddingRight="@dimen/layout_padding_left_right" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/fill_padding_right" >

            <TextView
                android:id="@+id/dept_currency_cashremit_tv"
                style="@style/comm_view_left"
                android:text="@string/currency_cashremit" 
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/edittext_paddinglr"
                android:layout_weight="3" >

                <TextView
                    android:id="@+id/dept_checkout_currency_tv"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/dept_cashremit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/dept_cashremit_tv"
                        style="@style/textview_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/fill_padding_right" >

            <TextView
                style="@style/comm_view_left"
                android:text="@string/chaohui" />

            <TextView
                android:id="@+id/dept_cashremit_tv"
                style="@style/comm_view_right"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_default" >
            </TextView>
        </LinearLayout> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/fill_padding_right" >

            <TextView
                style="@style/comm_view_left"
                android:text="@string/booksheet_money_g" />

            <TextView
                android:id="@+id/dept_booksheet_money_tv"
                style="@style/comm_view_right"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_default" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/fill_padding_right" >

            <TextView
                style="@style/comm_view_left"
                android:text="@string/forex_custoner_fix_balance1" />

            <TextView
                android:id="@+id/dept_availablebalance_tv"
                style="@style/comm_view_right"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_default" >
            </TextView>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/dept_checkout_money_tvlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/fill_padding_right"
            android:visibility="gone" >

            <TextView
                style="@style/comm_view_left"
                android:text="@string/notify_money" />

            <TextView
                android:id="@+id/dept_checkout_money_tv"
                style="@style/comm_view_right"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_default" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dept_notice_no_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/fill_padding_right" >

            <TextView
                style="@style/comm_view_left"
                android:text="@string/notice_no" />

            <Spinner
                android:id="@+id/dept_notice_no_spinner"
                style="@style/comm_view_right"
                android:background="@drawable/bg_spinner" 
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dept_checkout_way_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/fill_padding_right"
            android:visibility="gone" >

            <TextView
                style="@style/comm_view_left"
                android:text="@string/checkout_way" />

            <TextView
                android:id="@+id/dept_checkout_way_tv"
                style="@style/comm_view_right"
                android:singleLine="true"
                android:text="@string/checkout_whole_money"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_default" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dept_checkout_way_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:orientation="horizontal"
            android:paddingRight="@dimen/fill_padding_right" >
            
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical" >
            <TextView
                android:paddingTop="@dimen/dp_five"
                style="@style/comm_view_left"
                android:text="@string/checkout_way" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/dept_checkout_way_radiogroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="left"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/dept_checkout_part_rb"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/checkout_part" 
                    android:textSize="@dimen/textsize_default"
                    android:button="@drawable/radiobtn_selector"
                    android:singleLine="true"/>

                <RadioButton
                    android:id="@+id/dept_checkout_all_rb"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_three"
                    android:layout_weight="1"
                    android:text="@string/checkout_all" 
                    android:textSize="@dimen/textsize_default"
                    android:button="@drawable/radiobtn_selector"
                    android:singleLine="true"/>
            </RadioGroup>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/dept_checkout_money_layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/fill_padding_right"
            android:visibility="gone" >

            <TextView
                style="@style/comm_view_left"
                android:text="@string/checkout_money" />

            <TextView
                android:id="@+id/dept_checkout_money_tv_bottom"
                style="@style/comm_view_right"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_default" >
            </TextView>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/dept_checkout_moeny_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/fill_padding_right" >

            <TextView
                style="@style/comm_view_left"
                android:text="@string/checkout_money" />

            <EditText
                android:id="@+id/dept_checkout_money_et"
                style="@style/comm_view_right"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/bg_for_edittext"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="numberDecimal"
                android:maxLength="14"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_default" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/fill_padding_right" >

            <TextView
                style="@style/comm_view_left"
                android:text="@string/attach_message" />

            <EditText
                android:id="@+id/dept_message_et"
                style="@style/comm_view_right"
                android:layout_height="@dimen/edittext_height"
                        android:background="@drawable/bg_for_edittext"
                android:hint="@string/hint_memo"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_default" 
                android:maxLength="50">
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnNext"
            style="@style/bottombtn"
            android:text="@string/next" />
    </LinearLayout>

</LinearLayout>