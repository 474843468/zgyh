<?xml version="1.0" encoding="utf-8"?>
<!-- 我的外汇  定期详情页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/forex_query_deal_detailes_ok"
            style="@style/bottombtn"
            android:text="@string/loan_repay_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_btn"
        android:layout_marginTop="@dimen/rightbtnW"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView
            style="@style/scrollview_comm_havemarginbutton"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_choise_input_loanType"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_choise_input_loanType"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_actNum1"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_choise_accountNumber1"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_choise_pa_moneys"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_choise_pa_moneys"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/forex_customer_fix_cash1"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/forex_customer_fix_cash"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/loan_choise_code"
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/currency"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_choise_input_code"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:singleLine="false"
                        android:text="@string/loan_repay_loanPeriod"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_loanPeriod"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:singleLine="false"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_repay_loanToDate"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_loanToDate"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_repay_remainCapital"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_remainCapital"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_repay_interestType"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_interestType"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_repay_remainIssue"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_remainIssue"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_repay_thisIssueRepayDate"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_thisIssueRepayDate"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:singleLine="false"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_repay_thisIssueRepayAmount"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_thisIssueRepayAmount"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:singleLine="false"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text_left"
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:singleLine="true"
                        android:text="@string/loan_repay_thisIssueRepayInterest"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_thisIssueRepayInterest"
                        style="@style/comm_view_right"
                        android:textColor="@color/red"
                        android:layout_weight="5"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_repay_loanDate"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_loanDate"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:singleLine="false"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_repay_loanRate"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_loanRate"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:singleLine="false"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_repay_payAccountNumber"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_payAccountNumber"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:singleLine="false"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_loan_old_pay_acc_label"
                        style="@style/textview_common_left_three"
                          android:layout_weight="5"
                        android:text="@string/loan_debit_card_account" />

                    <TextView
                        android:id="@+id/tv_loan_old_pay_acc"
                        style="@style/comm_view_right"
                         android:layout_weight="5"
                        android:text="" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/titleText"
        style="@style/titleText_stepacc"
        android:layout_width="@dimen/common_details_title_width"
        android:layout_height="@dimen/left_img_width"
        android:background="@drawable/bg_title"
        android:gravity="center"
        android:text="@string/forex_trade_detail"
        android:textColor="@color/gray_title" />

</RelativeLayout>