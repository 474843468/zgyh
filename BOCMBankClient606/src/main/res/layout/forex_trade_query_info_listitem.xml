<?xml version="1.0" encoding="utf-8"?>
<!-- 成交状况查询结果页面  itme -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_click_item_style"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_bottom_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/forex_query_tradenum"
                style="@style/bond_textview_15_black_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/forex_trade_number"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/forex_query_tradeprice"
                style="@style/bond_textview_15_black_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ems="4"
                android:text="@string/forex_trade_sell" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/forex_query_trademethod"
                style="@style/bond_textview_15_black_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ems="4"
                android:text="@string/forex_trade_buy" />
        </LinearLayout>

        <ImageView
            android:id="@+id/rate_gotoDetail"
            style="@style/rightbtn_jiantou"
            android:layout_gravity="center"
            android:src="@drawable/right_arrow" />
    </LinearLayout>

</RelativeLayout>