<?xml version="1.0" encoding="utf-8"?>
<!-- 贷款管理  贷款详细信息页    wangmengmeng -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/message_dialog_bg" >

    <ImageView
        android:id="@+id/img_exit_loandetail"
        android:layout_width="@dimen/close_clickarea_height"
        android:layout_height="@dimen/close_clickarea_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="-14dp"
        android:layout_marginTop="-14dp"
        android:src="@color/transparent_00" />

    <LinearLayout
        android:id="@+id/llGoAdvanced"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dialogbtn_marginTop"
        android:layout_marginRight="@dimen/fill_margin_right_fordialog"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:paddingLeft="@dimen/fill_margin_left"
        android:paddingRight="@dimen/fill_margin_left" >

        <Button
            android:id="@+id/btnGoLoanUse"
            style="@style/btn_common_oneline_for_dialog"
            android:background="@drawable/btn_gray"
            android:text="@string/loan_use_1"
            android:textColor="@color/gray_title" />
        <Button
            android:id="@+id/btnGoLoanUseQuery"
            style="@style/btn_common_oneline_for_dialog"
            android:background="@drawable/btn_gray"
            android:text="@string/loan_use_query"
            android:textColor="@color/gray_title" />
    </LinearLayout>

    <ScrollView
        style="@style/scrollview_comm"
        android:layout_above="@+id/llGoAdvanced"
        android:layout_below="@+id/img_exit_loandetail"
        android:layout_marginRight="@dimen/fill_margin_right_fordialog"
        android:gravity="center"
        android:paddingLeft="@dimen/fill_margin_top">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/loan_actNum"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_type_name" />

                <TextView
                    android:id="@+id/loan_type_value"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_actNum1" />

                <TextView
                    android:id="@+id/loan_actNum_value"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/loan_currencycode"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_currencycode" />

                <TextView
                    android:id="@+id/loan_currencycode_value"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_cycleAppAmount" />

                <TextView
                    android:id="@+id/loan_cycleAppAmount_value"
                    style="@style/textview_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_cycleAdvVal" />

                <TextView
                    android:id="@+id/loan_cycleAdvVal_value"
                    style="@style/textview_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_cycleBalance" />

                <TextView
                    android:id="@+id/loan_cycleBalance_value"
                    style="@style/textview_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_cycleAvaAmount" />

                <TextView
                    android:id="@+id/loan_cycleAvaAmount_value"
                    style="@style/textview_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/loan_todate"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_cycleDrawdownDate" />

                <TextView
                    android:id="@+id/loan_cycleDrawdownDate_value"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/loan_remaincapital"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_cycleMatDate" />

                <TextView
                    android:id="@+id/loan_cycleMatDate_value"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

          

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="horizontal" >
            </TextView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>