<?xml version="1.0" encoding="utf-8"?>
<!-- 账户管理  我的账户交易明细结果信息项  wangmengmeng -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_for_listview_item_write" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="@dimen/dp_five" >

        <TextView
            android:id="@+id/acc_query_transfer_paymentdate_value"
            style="@style/textview_for_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/acc_query_transfer_amount"
                style="@style/textview_for_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acc_query_amount_in" />

            <TextView
                android:id="@+id/acc_query_transfer_amount_value"
                style="@style/textview_for_list_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/acc_query_transfer_balance"
                style="@style/textview_for_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acc_query_balance" />

            <TextView
                android:id="@+id/acc_query_transfer_balance_value"
                style="@style/textview_for_list_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/acc_query_transfer_businessdigest"
                style="@style/textview_for_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acc_query_businessDigest" />

            <TextView
                android:id="@+id/acc_query_transfer_businessdigest_value"
                style="@style/textview_for_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

          <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/acc_query_bocnet_trade_ditch"
                style="@style/textview_for_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bocnet_trade_ditch" />

            <TextView
                android:id="@+id/acc_query_bocnet_trade_ditch_value"
                style="@style/textview_for_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        
          <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/acc_query_bocnet_name_point"
                style="@style/textview_for_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acc_trade_place" />

            <TextView
                android:id="@+id/acc_query_bocnet_name_point_value"
                style="@style/textview_for_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
         
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_for_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acc_query_payeeAccountName" />

            <TextView
                android:id="@+id/payeeAccName"
                style="@style/textview_for_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_for_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fuYan"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/furInfo"
                style="@style/textview_for_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>