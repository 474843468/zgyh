<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/boc_common_cell_color"
    android:orientation="vertical">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        >

        <LinearLayout
            android:id="@+id/finc_all_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="37dp"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="35dp"
                android:paddingTop="2dp">
                <TextView
                    style="@style/finc_text_blod_gray_style13"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/finc_title_fundinvest_all"
                    android:id="@+id/finc_all_tv"
                    android:textColor="#ff6666"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/ima_all_line"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_select_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="37dp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="35dp"
                android:paddingTop="2dp"
                android:visibility="visible">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/finc_title_fundinvest_my"
                    style="@style/finc_text_blod_gray_style13"
                    android:id="@+id/finc_my_tv" />
            </LinearLayout>
            <ImageView
                android:id="@+id/ima_my_line"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                android:visibility="invisible"
                />
            </LinearLayout>


        <LinearLayout
            android:id="@+id/finc_typeStock_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="37dp"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="35dp"
                android:paddingTop="2dp">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/finc_title_fundinvest_type_stock"
                    style="@style/finc_text_blod_gray_style13"
                    android:id="@+id/finc_typeStock_tv"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/ima_typeStock_line"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                android:visibility="invisible"
                />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/finc_type_bond_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="37dp"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="35dp"
                android:paddingTop="2dp">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/finc_title_fundinvest_type_bond"
                    style="@style/finc_text_blod_gray_style13"
                    android:id="@+id/finc_type_bond_tv"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/ima_type_bond_line"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                android:visibility="invisible"
                />
            </LinearLayout>

        <LinearLayout
            android:id="@+id/finc_type_currency_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="37dp"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="35dp"
                android:paddingTop="2dp">
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/finc_title_fundinvest_type_currency"
                    style="@style/finc_text_blod_gray_style13"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/finc_type_currency_tv"
                    />

            </LinearLayout>
            <ImageView
                android:id="@+id/ima_type_currency_line"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                android:visibility="invisible"
                />
            </LinearLayout>


        <ImageView
            android:id="@+id/finc_more_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/finc_arrow_down"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/finc_more_item_img_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/finc_arrow_up"
            android:visibility="gone"
            />
    </LinearLayout>
    <!-- 第二行 -->
    <LinearLayout
        android:id="@+id/finc_item_second_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/boc_common_cell_color"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/boc_space_between_30px"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/finc_type_hunhe_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finc_title_fundinvest_hunhe"
                style="@style/finc_text_blod_gray_style13"
                android:id="@+id/finc_type_hunhe_tv"
                />

            <ImageView
                android:id="@+id/ima_fundinvest_hunhe_line"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finc_type_qd_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finc_title_fundinvest_qd"
                style="@style/finc_text_blod_gray_style13"
                android:id="@+id/finc_type_qd_tv"
                />
            <ImageView
                android:id="@+id/ima_fundinvest_qd_line"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finc_type_baoben_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finc_title_fundinvest_type_baoben"
                style="@style/finc_text_blod_gray_style13"
                android:id="@+id/finc_type_baoben_tv"
                />
            <ImageView
                android:id="@+id/ima_fundinvest_type_baoben_line"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/finc_type_zhishu_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finc_title_fundinvest_type_zhishu"
                style="@style/finc_text_blod_gray_style13"
                android:id="@+id/finc_type_zhishu_tv"
                />
            <ImageView
                android:id="@+id/ima_fundinvest_type_zhishu_line"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/finc_type_licai_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finc_title_fundinvest_type_licai"
                style="@style/finc_text_blod_gray_style13"
                android:id="@+id/finc_type_licai_tv"
                />
            <ImageView
                android:id="@+id/ima_fundinvest_type_licai_line"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/boc_space_between_26px"
            android:background="@drawable/finc_arrow_down"
            android:layout_marginTop="@dimen/boc_space_between_8px"
            android:visibility="invisible"
            />

    </LinearLayout>
    <!-- 第三行item-->
    <LinearLayout
        android:id="@+id/finc_item_three_layout"
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/boc_common_cell_color"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="@dimen/boc_space_between_40px"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/finc_type_etf_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finc_title_fundinvest_etf"
                style="@style/finc_text_blod_gray_style13"
                android:id="@+id/finc_type_etf_tv"
                />
            <ImageView
                android:id="@+id/ima_fundinvest_etf_line"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/finc_type_zq_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finc_title_fundinvest_type_zg"
                style="@style/finc_text_blod_gray_style13"
                android:id="@+id/finc_type_zq_tv"
                />
            <ImageView
                android:id="@+id/ima_fundinvest_type_zg_line"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finc_type_xintuo_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finc_title_fundinvest_type_xintuo"
                style="@style/finc_text_blod_gray_style13"
                android:id="@+id/finc_type_xintuo_tv"
                />
            <ImageView
                android:id="@+id/ima_fundinvest_type_xintuo_line"
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/finc_type_other_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finc_title_fundinvest_type_other"
                style="@style/finc_text_blod_gray_style13"
                android:id="@+id/finc_type_other_tv"
                />
            <ImageView
                android:id="@+id/ima_fundinvest_type_other_line"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#ff6666"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/boc_space_between_26px"
            android:background="@drawable/finc_arrow_down"
            android:layout_marginTop="@dimen/boc_space_between_8px"
            android:visibility="invisible"
            />
    </LinearLayout>

</LinearLayout>
