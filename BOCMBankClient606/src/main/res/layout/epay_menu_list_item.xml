<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:padding="@dimen/fill_padding" 
    android:id="@+id/epay_menu_rl_list_item">

    <TextView 
        style="@style/textview_common" 
        android:id="@+id/epay_menu_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/epay_menu_item_button"
        android:gravity="center_vertical" />
    <TextView
        style="@style/textview_common" 
        android:id="@+id/epay_menu_item_button"
        android:layout_width="@dimen/rightbtnW"
        android:layout_height="@dimen/rightbtnH"
        android:layout_centerVertical="true"
        android:background="@drawable/right_arrow"
        android:layout_alignParentRight="true" />
</RelativeLayout>