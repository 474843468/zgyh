<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/prms_trade_confirm_limitlay"
        style="@style/linnerlayout_common"
        android:visibility="visible" >

        <TextView
            style="@style/textview_forex_prompt_message"
            android:text="@string/prms_str_limitprice" />

        <LinearLayout
            style="@style/textview_prms_prompt_letetitle_info"
            android:paddingLeft="0dp" >

            <TextView
                android:id="@+id/prms_trade_confirm_limitprice"
                style="@style/textview_prms_prompt_middle_info"
                android:singleLine="true"
               />

            <TextView
                android:id="@+id/prms_trade_confirm_limitprice_unit"
                style="@style/textview_prms_prompt_end_info"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
 <LinearLayout
        android:id="@+id/prms_trade_confirm_runlostlay"
        style="@style/linnerlayout_common"
        android:visibility="visible" >

        <TextView
            style="@style/textview_forex_prompt_message"
            android:text="@string/prms_runlost_diancha" />

        <LinearLayout
            style="@style/textview_prms_prompt_letetitle_info"
            android:paddingLeft="0dp" >

            <TextView
                android:id="@+id/prms_trade_confirm_runlostprice"
                style="@style/textview_prms_prompt_middle_info"
                android:singleLine="true"
               />

          
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/prms_trade_confirm_entrust_winPrice_view"
        style="@style/linnerlayout_common"
        android:visibility="visible" >

        <TextView
            style="@style/textview_forex_prompt_message"
            android:text="@string/prms_win_price_colon" />

        <LinearLayout
            style="@style/textview_prms_prompt_letetitle_info"
            android:paddingLeft="0dp">

            <TextView
                android:id="@+id/prms_trade_confirm_winprice"
                style="@style/textview_prms_prompt_middle_info"
                android:singleLine="true"
                 />

            <TextView
                android:id="@+id/prms_trade_confirm_winprice_unit"
                style="@style/textview_prms_prompt_end_info"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/prms_trade_confirm_entrust_losPrice_view"
        style="@style/linnerlayout_common"
        android:visibility="visible" >

        <TextView
            style="@style/textview_forex_prompt_message"
            android:text="@string/prms_lose_price_colon" />

        <LinearLayout
            style="@style/textview_prms_prompt_letetitle_info"
            android:paddingLeft="0dp">

            <TextView
                android:id="@+id/prms_trade_confirm_losprice"
                style="@style/textview_prms_prompt_middle_info"
                android:singleLine="true"
                 />

            <TextView
                android:id="@+id/prms_trade_confirm_losprice_unit"
                style="@style/textview_prms_prompt_end_info"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/prms_trade_confirm_entrust_date_view"
        style="@style/linnerlayout_common"
        android:visibility="visible" >

        <TextView
            style="@style/textview_forex_prompt_message"
            android:text="@string/prms_entrust_time_colon" />

        <TextView
            android:id="@+id/prms_trade_confirm_entrustDate_tv"
            style="@style/textview_forex_prompt_info"
            android:paddingLeft="0dp"/>
    </LinearLayout>

</LinearLayout>