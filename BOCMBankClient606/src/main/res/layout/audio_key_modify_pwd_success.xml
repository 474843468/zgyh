<?xml version="1.0" encoding="utf-8"?>
<!-- 信息提示框 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent_00"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/progress_margin_close"
        android:layout_marginLeft="@dimen/progress_margin_close"
        android:layout_marginTop="@dimen/progress_margin_close"
        android:background="@drawable/shap_for_progress"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialogbtn_marginTop"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_title"
                style="@style/titleText"
                android:text="@string/modify_pwd"
                android:textColor="@color/black" />
        </LinearLayout>

        <ScrollView style="@style/scrollview_fill" >

            <TextView
                android:id="@+id/tv_metion_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/common_row_margin"
                android:paddingRight="@dimen/common_row_margin"
                android:paddingTop="@dimen/dp_two_zero"
                android:text="@string/modify_pwd_confirm_tips"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_one_five" />
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialogbtn_marginTop"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/confirm_btn"
                style="@style/dialogbtnfor_connect"
                android:background="@drawable/btn_red_big"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnClose"
        android:layout_width="@dimen/progress_close_WH"
        android:layout_height="@dimen/progress_close_WH"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/butten_guanbi"
        android:visibility="gone" />

</RelativeLayout>