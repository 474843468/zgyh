<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssertsAccountManagerActivity" 
    android:background="#D7D7D7">

    <RelativeLayout
        android:id="@+id/rl_accountaccredit_item_second_contont"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/assetsmanager_account_accredit_othermanager_item"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/tv_accountaccredit_othermanager_cardtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="20dp"
             />
        
        <TextView
            android:id="@+id/tv_accountaccredit_othermanager_cardnumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="20dp"
            
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_accountaccredit_othermanager_cardtype"
            />

        <TextView
            android:id="@+id/tv_accountaccredit_othermanager_cardnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_accountaccredit_othermanager_cardtype"
            android:gravity="right"
            android:paddingRight="20dp"
             />

        <TextView
            android:id="@+id/tv_accountaccredit_othermanager_carduse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_accountaccredit_othermanager_cardnumber"
            android:layout_marginTop="10dp"
            android:paddingRight="20dp"
             />
    </RelativeLayout>

</RelativeLayout>