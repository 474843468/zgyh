<?xml version="1.0" encoding="utf-8"?>
<!-- 中银理财，投资协议申请，列表页 -->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_match"
    android:orientation="vertical" 
    android:paddingLeft="@dimen/layout_margin_left_right"
    android:paddingRight="@dimen/layout_margin_left_right"
    android:background="@drawable/bg_for_listview_item_write"
    >
    
    <LinearLayout 
        style="@style/style_match_wrap"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/bovinvt_layout_margin_top1"
        >
        <TextView 
            style="@style/style_tv_bocinv_profit_compute"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/bocinvt_tv_4"
            />
        <TextView 
            android:id="@+id/tv_sp1"
            style="@style/style_tv_spinner"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            />
        <!-- <Spinner 
            android:id="@+id/sp_1"
            style="@style/Spiiner_fill"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:prompt="@string/bocinvt_tv_15"
            /> -->
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/layout_invest_way"
        style="@style/style_match_wrap"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/bovinvt_layout_margin_top1"
        android:visibility="gone"
        >
        <TextView 
            style="@style/style_tv_bocinv_profit_compute"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/bocinvt_investType"
            />
        <TextView 
            android:id="@+id/tv_sp2"
            style="@style/style_tv_spinner"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            />
        <!-- <Spinner 
            android:id="@+id/sp_2"
            style="@style/Spiiner_fill"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:prompt="@string/bocinvt_tv_53"
            /> -->
    </LinearLayout>
    <ListView 
        android:id="@+id/listview"
        style="@style/listviewcomm_fill_gray_divider"
        android:divider="@color/listview_line"
        android:background="@drawable/shape_product_query_and_buy_layout_round"
        android:layout_marginTop="@dimen/bovinvt_layout_margin_top"
        android:layout_marginBottom="@dimen/bovinvt_layout_margin_top1"
        />

</LinearLayout>
