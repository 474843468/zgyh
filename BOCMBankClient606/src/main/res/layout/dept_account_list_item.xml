<?xml version="1.0" encoding="utf-8"?>
<!-- 存款管理 - 我的定期存款 - 存单列表  luqp -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/loan_rl_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/acc_list_item_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_for_listview_item_write"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_loan_type"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/shap_for_half_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/fill_padding_left" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/loan_account"
                    style="@style/textview_for_list"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/dept_acc_money" />

                <TextView
                    android:id="@+id/dept_account_value"
                    style="@style/textview_for_list_act"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="100000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/fill_padding_left" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/common_row_margin_half" >

                <TextView
                    style="@style/textview_for_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dept_acc_number" />

                <TextView
                    android:id="@+id/dept_account_number"
                    style="@style/textview_for_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="fill_vertical"
                    android:overScrollMode="always"
                    android:text="01/10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/common_row_margin_half" >

                <TextView
                    style="@style/textview_for_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dept_acc_time" />

                <TextView
                    android:id="@+id/dept_account_time"
                    style="@style/textview_for_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="两年" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/common_row_margin_half" >

                <TextView
                    style="@style/textview_for_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dept_acc_code" />

                <TextView
                    android:id="@+id/dept_account_code"
                    style="@style/textview_for_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="6"
                    android:text="美元/现钞美元现钞" />
            </LinearLayout>

            <ImageView
                android:id="@+id/loan_btn_goitem"
                style="@style/rightbtn_jiantou"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_five"
                android:background="@drawable/img_arrow_write" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>