<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_deal_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="交易序号："
            />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_deal_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="委托日期：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="产品名称 ：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="产品币种：" />

         <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_cashremmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="钞/汇：" />
        
        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_deal_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="交易类型：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="委托金额：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_commission_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="委托份额：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="资金账户：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_estimate_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="预计交易日期：" />
        <TextView
        	android:id="@+id/tv_reminder"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="20dp"
        	android:layout_marginLeft="4dp"
        	android:layout_marginBottom="20dp"
        	android:textSize="@dimen/textsize_default"
        	android:text="@string/bocinvt_deal_revoke_deal"
        	android:visibility="gone"
        	android:textColor="@color/gray" />
    </LinearLayout>

</ScrollView>