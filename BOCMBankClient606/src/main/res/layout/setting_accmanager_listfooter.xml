<?xml version="1.0" encoding="utf-8"?>
<!-- 服务设定 账户管家 list footer  xyl -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/set_btn_gocancelrelation"
        android:layout_width="@dimen/icon_dele_HW"
        android:layout_height="@dimen/icon_dele_HW"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_del"
        android:layout_marginLeft="@dimen/icon_dele_HW_margarin"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/set_btn_gocancelrelation"
        android:background="@drawable/bg_for_listview_item_write"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_listview_item__half_grqy_Height"
            android:background="@drawable/shap_for_half_gray"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_huoqi"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_accmanager_height"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/set_accmanager_add"
                android:layout_width="@dimen/setting_accmanager_add_height"
                android:layout_height="@dimen/setting_accmanager_add_height"
                android:layout_marginBottom="@dimen/common_row_margin"
                android:layout_marginTop="@dimen/common_listview_item_paddingLR"
                android:background="@drawable/icon_add"
                 />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>