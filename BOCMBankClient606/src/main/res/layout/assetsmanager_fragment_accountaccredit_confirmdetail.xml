<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical"
    tools:context=".AssertsAccountManagerActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="@drawable/assetsmanager_accredit_manager_back_bg"
        android:orientation="vertical" >

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp" >

            <TextView
                style="@style/accreditmanagerback_textview"
                android:text="授权人姓名：" />

            <TextView
                android:id="@+id/tv_asaa_confdetail_actName"
                style="@style/accreditmanagerback_textview2"
                android:text="张三" />
        </LinearLayout>

        <LinearLayout style="@style/accreditmanagerback_linearLayout" >

            <TextView
                style="@style/accreditmanagerback_textview"
                android:text="授权账号：" />

            <TextView
                android:id="@+id/tv_asaa_confdetail_actNum"
                style="@style/accreditmanagerback_textview2"
                android:text="2312******1093" />
        </LinearLayout>

        <LinearLayout style="@style/accreditmanagerback_linearLayout" >

            <TextView
                style="@style/accreditmanagerback_textview"
                android:text="日累积限额：" />

            <TextView
                android:id="@+id/tv_asaa_confdetail_totalLimit"
                style="@style/accreditmanagerback_textview2"
                android:textColor="@color/red"
                 />
        </LinearLayout>
        
        <LinearLayout style="@style/accreditmanagerback_linearLayout" >

            <TextView
                style="@style/accreditmanagerback_textview"
                android:text="累积转账总额：" />

            <TextView
                android:id="@+id/tv_asaa_confdetail_totalTransAmt "
                style="@style/accreditmanagerback_textview2"
                android:textColor="@color/red"
                 />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" 
        android:gravity="center">

        <Button
            android:id="@+id/but_accreditconfirm_back"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/assetsmanager_account_mannager_middlebut"
            android:text="退回"
            android:layout_marginRight="30dp"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/but_accreditconfirm_agree"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/assetsmanager_account_mannager_middlebut"
            android:text="同意"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>