<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_wrap"
    android:background="@color/white"
    android:orientation="vertical" 
    android:padding="10dp"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
       <ImageView 
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_marginTop="10dp"
           android:scaleType="centerInside"
           android:src="@drawable/apply_succeed"
           android:contentDescription="@string/app_name"
           />
       <TextView 
           style="@style/textview_common_multi_second"
           android:layout_marginTop="10dp"
           android:textSize="24sp"
           android:text="恭喜您，操作成功！"
           />
       <com.chinamworld.bocmbci.userwidget.LabelTextView 
           style="@style/style_match_wrap"
           app:labelText="现金宝余额（元）："
           android:id="@+id/label_1"
           /> 
       <com.chinamworld.bocmbci.userwidget.LabelTextView 
           style="@style/style_match_wrap"
           app:labelText="付款账户："
           android:id="@+id/label_2"
           /> 
       <com.chinamworld.bocmbci.userwidget.LabelTextView 
           style="@style/style_match_wrap"
           app:labelText="账户余额保留（元）："
           android:id="@+id/label_3"
           /> 
       <com.chinamworld.bocmbci.userwidget.LabelTextView 
           style="@style/style_match_wrap"
           app:labelText="手机号码："
           android:id="@+id/label_4"
           /> 
       <com.chinamworld.bocmbci.userwidget.LabelTextView 
           style="@style/style_match_wrap"
           app:labelText="Email："
           android:id="@+id/label_5"
           /> 
           
       <TextView style="@style/style_match_wrap"/>
</LinearLayout>
