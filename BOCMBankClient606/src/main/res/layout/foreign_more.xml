<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/share_dividing_line"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/goldstore_bg_gray"
        android:layout_height="@dimen/boc_space_between_20px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/share_dividing_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_table_row"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_fast_trade"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:text="@string/boci_fast_trans"
                android:textSize="@dimen/boc_space_between_30px"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:src="@drawable/goldstore_jiantou_right"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/share_dividing_line"/>

        <RelativeLayout
            android:id="@+id/rl_my_foreign_exchange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:text="@string/foreign_my_foreign_exchange"
                android:textSize="@dimen/boc_space_between_30px"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:src="@drawable/goldstore_jiantou_right"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/share_dividing_line"/>

        <RelativeLayout
            android:id="@+id/rl_transaction_status_query"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:text="@string/prms_title_query_deal_new"
                android:textSize="@dimen/boc_space_between_30px"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:src="@drawable/goldstore_jiantou_right"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/share_dividing_line"/>

        <RelativeLayout
            android:id="@+id/rl_commissioned_status_query"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:text="@string/forex_quash"
                android:textSize="@dimen/boc_space_between_30px"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:src="@drawable/goldstore_jiantou_right"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/share_dividing_line"/>

        <RelativeLayout
            android:id="@+id/rl_help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/boc_space_between_30px"
                android:text="@string/help"
                android:textSize="@dimen/boc_space_between_30px"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:src="@drawable/goldstore_jiantou_right"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/share_dividing_line"/>

    </LinearLayout>
</LinearLayout>
