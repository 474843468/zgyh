<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/step_title_layout" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_sure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:orientation="vertical" >

        <Button
            android:id="@+id/trade_nextButton"
            style="@style/bottombtn"
            android:text="@string/confirm"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_sure"
        android:layout_below="@+id/ll_step"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView
            style="@style/scrollview_comm_havemarginbutton"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_five" >

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:text="@string/loan_repay_confirm_title"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_default" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_choise_input_loanType"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_choise_input_loanType"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_actNum1"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_choise_accountNumber1"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/forex_customer_fix_cash1"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/forex_customer_fix_cash"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/prms_currency_colon"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_choise_input_code"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:singleLine="false"
                        android:text="@string/loan_repay_edit_money"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_edit_money_m"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:singleLine="false"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_repay_advanceRepayCapital"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_advanceRepayCapital_n"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:text="@string/loan_repay_advanceRepayInterest"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_advanceRepayInterest"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/left_text2"
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:singleLine="true"
                        android:text="@string/loan_repay_afterRepayRemainAmount"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_repayAmountInAdvance"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

              <!--   <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/left_text1"
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:singleLine="true"
                        android:text="@string/loan_repay_everyTermAmount"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/loan_repay_everyTermAmount"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>  -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:textColor="@color/red"
                        android:singleLine="true"
                        android:text="@string/loan_repay_charges"
                        android:textSize="@dimen/textsize_one_five" />

                    <TextView
                        android:id="@+id/loan_repay_charges"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_one_five" />
                </LinearLayout>
                
                   <LinearLayout
                    android:id="@+id/comm_view_left_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:textColor="@color/red"
                        android:singleLine="true"
                        android:text="@string/loan_repay_charges_charges"
                        android:textSize="@dimen/textsize_one_five" />

                    <TextView
                        android:id="@+id/loan_repay_charges1"
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_one_five" />
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/loan_chages_view"       
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/comm_view_left"
                        android:layout_weight="5"
                        android:singleLine="true"
                        android:text="@string/loan_repay_charges_charges"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        style="@style/comm_view_right"
                        android:layout_weight="5"
                        android:text="@string/loan_repay_charges_values"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_smc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/dp_one_zero"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_weight="1"
                        android:text="@string/smc" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" >

                        <RelativeLayout
                            android:id="@+id/ll_smc_sip"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" >

                            <cfca.mobile.sip.SipBox
                                android:id="@+id/sipbox_smc"
                                style="@style/editext_fill"
                                android:maxLength="6"
                                android:textSize="@dimen/textsize_default" />
                        </RelativeLayout>

                        <Button
                            android:id="@+id/smsbtn"
                            style="@style/button_smscode"
                            android:layout_marginLeft="@dimen/layout_margin_top" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_active_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/dp_one_zero"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_weight="1"
                        android:text="@string/active_code" />

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:id="@+id/ll_activecode_sip"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent" >

                            <cfca.mobile.sip.SipBox
                                android:id="@+id/sipbox_active"
                                style="@style/editext_fill"
                                android:maxLength="6"
                                android:textSize="@dimen/textsize_default" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                     <com.chinamworld.bocmbci.widget.UsbKeyText
                         android:id="@+id/sip_usbkey"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/common_row_margin"
                         android:paddingRight="@dimen/dp_one_zero"
                         android:gravity="center"
                         android:orientation="horizontal" />
               
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>