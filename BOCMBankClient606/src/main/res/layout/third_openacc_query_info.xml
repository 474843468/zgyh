<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/progress_margin_close"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/dp_three_zero"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/blpt_main_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- 项目  start -->

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/fill_padding_left"
                    android:shrinkColumns="1" >

                    <TableRow>

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:layout_weight="0"
                            android:singleLine="true"
                            android:text="@string/third_openacc_acc" />

                        <TextView
                            android:id="@+id/tv_bankacc"
                            style="@style/textview_forex_prompt_info"
                            android:layout_weight="0"
                            android:paddingLeft="0dp"
                            android:singleLine="true" />
                    </TableRow>

                    <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:layout_weight="0"
                            android:singleLine="true"
                            android:text="@string/third_openacc_company" />

                        <TextView
                            android:id="@+id/tv_company"
                            style="@style/textview_forex_prompt_info"
                            android:layout_weight="0"
                            android:paddingLeft="0dp"
                            android:singleLine="true" />
                    </TableRow>

                    <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:layout_weight="0"
                            android:singleLine="true"
                            android:text="@string/third_openacc_companypartname" />

                        <TextView
                            android:id="@+id/tv_companypart"
                            style="@style/textview_forex_prompt_info"
                            android:layout_weight="0"
                            android:paddingLeft="0dp"
                            android:singleLine="true" />
                    </TableRow>

                    <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:layout_weight="0"
                            android:singleLine="true"
                            android:text="@string/third_openacc_province_aprt" />

                        <TextView
                            android:id="@+id/tv_adress"
                            style="@style/textview_forex_prompt_info"
                            android:layout_weight="0"
                            android:paddingLeft="0dp"
                            android:singleLine="true" />
                    </TableRow>

                    <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:layout_weight="0"
                            android:ellipsize="middle"
                            android:singleLine="true"
                            android:text="@string/department_link_name" />

                        <TextView
                            android:id="@+id/tv_company_pens"
                            style="@style/textview_forex_prompt_info"
                            android:layout_weight="0"
                            android:paddingLeft="0dp"
                            android:singleLine="true" />
                    </TableRow>

                    <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                        <TextView
                            android:id="@+id/tv_mobile_label"
                            style="@style/textview_forex_prompt_message"
                            android:layout_weight="0"
                            android:singleLine="true"
                            android:text="@string/department_link_phone" />

                        <TextView
                            android:id="@+id/tv_mobile"
                            style="@style/textview_forex_prompt_info"
                            android:layout_weight="0"
                            android:paddingLeft="0dp"
                            android:singleLine="true" />
                    </TableRow>

                    <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:layout_weight="0"
                            android:singleLine="true"
                            android:text="@string/manage_predate_detail" />

                        <TextView
                            android:id="@+id/tv_bookdate"
                            style="@style/textview_forex_prompt_info"
                            android:layout_weight="0"
                            android:paddingLeft="0dp"
                            android:singleLine="true" />
                    </TableRow>

                    <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:layout_weight="0"
                            android:singleLine="true"
                            android:text="@string/mycrcd_virtual_enddate" />

                        <TextView
                            android:id="@+id/tv_unuseddate"
                            style="@style/textview_forex_prompt_info"
                            android:layout_weight="0"
                            android:paddingLeft="0dp"
                            android:singleLine="true" />
                    </TableRow>

                    <TableRow android:layout_marginTop="@dimen/common_row_margin" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:layout_weight="0"
                            android:singleLine="true"
                            android:text="@string/third_info_state" />

                        <TextView
                            android:id="@+id/tv_bookstate"
                            style="@style/textview_forex_prompt_info"
                            android:layout_weight="0"
                            android:paddingLeft="0dp"
                            android:singleLine="true" />
                    </TableRow>
                </TableLayout>

                <LinearLayout  android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/fill_padding_left"
                        android:paddingRight="@dimen/fill_padding_right"
                        android:text="@string/openacc_query_prompt"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>
                <!-- 项目  end -->

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/titleText"
        style="@style/isforex_little_title"
        android:text="@string/forex_trade_detail"
        />

</RelativeLayout>