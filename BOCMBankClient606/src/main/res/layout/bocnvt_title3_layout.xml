<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_for_zero"
    android:background="@drawable/bocnvt_title_bg" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/titlebackbtn_height"
        android:layout_height="@dimen/titlebackbtn_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="3dip"
        android:src="@drawable/gold_icon" />

    <Button
        android:id="@+id/btn"
        style="@style/titlerightbtn_b"
        android:layout_width="@dimen/titlebackbtn_width"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="@dimen/fill_margin_right"
        android:background="@drawable/fund_btn_common_oneline_right_press_state"
        android:onClick="buttonOnclick"
        android:text="请查看"
        android:textSize="@dimen/textsize_one_three" />

    <TextView
        android:id="@+id/text_title2"
        style="@style/textview_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn"
        android:layout_toRightOf="@id/icon"
        android:text="@string/finc_recommendation_link2"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_one_two" />

</RelativeLayout>