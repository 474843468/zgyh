<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_step"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_marginBottom="@dimen/fill_margin_top">

        <LinearLayout
            android:id="@+id/layout_step1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_weight="1.0"
            android:background="@drawable/safety_step1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/index1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/titlebackbtn_marginleft"
                android:layout_marginTop="3dip"
                android:text="1"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_default"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginTop="3dip"
                android:text="@string/safety_productbuy_msgfill_firsttitle"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_one_zero" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_step2"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_weight="1.0"
            android:background="@drawable/safety_step3"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/index2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginTop="3dip"
                android:text="2"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_default"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginTop="3dip"
                android:text="@string/safety_productbuy_msgfill_secondtitle"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_one_zero" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_step3"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_weight="1.0"
            android:background="@drawable/safety_step3"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/index3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginTop="3dip"
                android:text="3"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_default"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginTop="3dip"
                android:text="@string/safety_productbuy_msgfill_thirdtitle"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_one_zero" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_step4"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_weight="1.0"
            android:background="@drawable/safety_step4"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/index4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginTop="3dip"
                android:text="4"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_default"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginTop="3dip"
                android:text="@string/safety_productbuy_msgfill_fourthtitle"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_one_zero" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/fill_margin_left"
        android:layout_marginRight="@dimen/fill_margin_right"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnLast"
            style="@style/isforex_two_left_btn"
            android:onClick="btnLastOnclick"
            android:text="@string/last"
            android:visibility="gone" />

        <Button
            android:id="@+id/fourth_btn_save"
            style="@style/isforex_two_left_btn"
            android:onClick="btnSaveOnclick"
            android:text="@string/safety_save" />

        <Button
            android:id="@+id/fourth_btn_next"
            style="@style/isforex_two_right_btn"
            android:onClick="btnSubmitOnclick"
            android:text="@string/next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_layout_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/fill_margin_left"
        android:layout_marginRight="@dimen/fill_margin_right"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/btnnext"
            style="@style/textview_forex_button_cell"
            android:onClick="btnNextOnclick"
            android:text="@string/next" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_layout"
        android:layout_below="@id/layout_step"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/fill_margin_left"
        android:layout_marginRight="@dimen/fill_margin_right" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/layout_mainw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_layout_confirm"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:layout_marginLeft="@dimen/fill_margin_left"
        android:layout_marginRight="@dimen/fill_margin_right"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding_left_right"
        android:visibility="gone" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/layout_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>