<?xml version="1.0" encoding="utf-8"?>
<!-- 套餐签约确认信息页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:userProperty="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/common_row_margin" >

        <Button
            android:id="@+id/remit_input_next_btn"
            style="@style/bottombtn"
            android:text="@string/ok" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom"
        android:layout_weight="1"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollview"
            style="@style/scrollview_comm" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:text="@string/trans_remit_setmeal_confirm_title"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/trans_remit_meal_account" />

                    <TextView
                        android:id="@+id/tran_remit_account"
                        style="@style/textview_common_right_two" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/trans_remit_settype" />

                    <TextView
                        android:id="@+id/sp_remit_type"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/bizhong" />

                    <TextView
                        style="@style/textview_common_right_two"
                        android:text="@string/tran_currency_rmb" >
                    </TextView>
                </LinearLayout>

                
                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/trans_remit_extension_type" />

                    <TextView
                        android:id="@+id/tv_remit_config_attribute"
                        style="@style/textview_common_right_two" />
                </LinearLayout>
                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/charge_after_sale_label" />

                    <TextView
                        android:id="@+id/coupon_amount"
                        style="@style/textview_common_right_two"
                        android:textColor="@color/red" />
                </LinearLayout>
                
                
                
                

                <LinearLayout
                    android:id="@+id/ll_extension_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                         android:id="@+id/tran_remit_amount_lable"
                        style="@style/textview_common_left_three"
                        android:ellipsize="middle"
                        android:text="@string/trans_remit_orign_amount" />

                    <TextView
                        android:id="@+id/tran_remit_amount"
                        style="@style/textview_common_right_two"
                        android:textColor="@color/red" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_extension_flag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/trans_remit_extension_flag" />

                    <TextView
                        android:id="@+id/yes_or_no"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/trans_remit_phone" />

                    <TextView
                        android:id="@+id/tran_remit_phone"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/mycrcd_virtual_startdate" />

                    <TextView
                        android:id="@+id/tv_remit_valuedate"
                        style="@style/textview_common_right_two" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sharedAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="top"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="top"
                        android:text="@string/trans_remit_sharedAccount" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" >

                        <com.chinamworld.bocmbci.widget.LinearListView
                            android:id="@+id/lv_sharedAcc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                        </com.chinamworld.bocmbci.widget.LinearListView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <LinearLayout
                    android:id="@+id/ll_smc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_bottom_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:text="@string/smc" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="2" >

                        <LinearLayout
                            android:id="@+id/ll_smc_sip"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center" >

                            <cfca.mobile.sip.SipBox
                                android:id="@+id/sipbox_smc"
                                style="@style/editext_fill"
                                android:maxLength="6"
                                android:textSize="@dimen/textsize_default" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/smsbtn"
                            style="@style/button_smscode"
                            android:layout_marginLeft="@dimen/fill_margin_top"
                            android:layout_marginRight="@dimen/dp_five"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_active_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/active_code" />

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2" >

                        <LinearLayout
                            android:id="@+id/ll_activecode_sip"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:paddingRight="@dimen/dp_five" >

                            <cfca.mobile.sip.SipBox
                                android:id="@+id/sipbox_active"
                                style="@style/editext_fill"
                                android:maxLength="6"
                                android:textSize="@dimen/textsize_default" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <com.chinamworld.bocmbci.widget.UsbKeyText
                    android:id="@+id/sip_usbkey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    userProperty:MargRight="@dimen/dp_five"
                    userProperty:ShowRate="3:2" />

                <TextView
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/common_row_margin" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>