<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_for_foot_choose"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/fill_padding" >

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/crcd_xiaofei_setup"
            style="@style/popupwindow_btn_normal"
            android:text="@string/mycrcd_xiaofei_fuwu_setup" />
    </LinearLayout>

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/crcd_billservice_setup"
            style="@style/popupwindow_btn_normal"
            android:text="@string/mycrcd_to_bill_service_setup" />
    </LinearLayout>

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/crcd_cut_money_setup"
            style="@style/popupwindow_btn_normal"
            android:text="@string/mycrcd_cut_money_setup" />
    </LinearLayout>

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/crcd_fushu_service_setup"
            style="@style/popupwindow_btn_normal"
            android:text="@string/mycrcd_fushu_service_setup" />
    </LinearLayout>

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/cancle_btn"
            style="@style/popupwindow_btn_normal"
            android:text="@string/cancle" />
    </LinearLayout>

</LinearLayout>