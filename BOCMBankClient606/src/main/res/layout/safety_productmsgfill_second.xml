<?xml version="1.0" encoding="utf-8"?>
<!-- 投保信息填写页面2 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_for_listview_item_write"
            android:orientation="vertical"
            android:padding="@dimen/fill_padding_top" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/blpt_main_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical" >

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/tv_bill_tip"
                                style="@style/confirm_info_textview_style"
                                android:layout_gravity="center"
                                android:text="@string/safety_productbuy_msgfill_secondtitle" />

                            <!--
                                 <TextView
                                android:layout_width="@dimen/prms_gride_textView_height"
                                android:layout_height="@dimen/btn_close_width"
                                android:background="@drawable/safety_pageindex"
                                android:gravity="center_horizontal"
                                android:padding="8dip"
                                android:paddingTop="@dimen/btn_close_height"
                                android:text="2"
                                android:textColor="@color/white" />
                            -->
                        </FrameLayout>

                        <!-- 项目  start -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:singleLine="true"
                                android:text="姓名："
                                
                                />

                            <TextView
                                android:id="@+id/second_name"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="3.5"
                                android:paddingLeft="0dip"
                                android:singleLine="true"
                                
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.2"
                                android:singleLine="true"
                                android:text="@string/safety_buyergender"
                                
                                />

                            <RadioGroup
                                android:id="@+id/loan_advance_type"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_listview_item_paddingLR"
                                android:layout_weight="3.3"
                                android:orientation="horizontal" >

                                <RadioButton
                                    android:id="@+id/second_gneder_btn1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/btn_bottom_height"
                                    android:button="@drawable/radiobtn_selector"
                                    android:checked="true"
                                    android:text="@string/boy"
                                    
                                    />

                                <RadioButton
                                    android:id="@+id/second_gneder_btn2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/btn_bottom_height"
                                    android:layout_marginLeft="@dimen/common_listview_item_paddingLR"
                                    android:button="@drawable/radiobtn_selector"
                                    android:text="@string/girl"
                                    
                                    />
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:singleLine="true"
                                android:text="@string/safety_buyerbirthday"
                                
                                />

                            <TextView
                                android:id="@+id/second_birthday"
                                style="@style/spinner_forex_prompt_info"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/layout_height"
                                android:layout_marginRight="5dp"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:singleLine="true"
                                android:text="@string/safety_buyercounty"
                                
                                />

                            <TextView
                                android:id="@+id/second_county"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="3.5"
                                android:paddingLeft="0dip"
                                android:singleLine="true"
                                
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:singleLine="true"
                                android:text="@string/id_category"
                                
                                />

                            <TextView
                                android:id="@+id/second_idtype"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="3.5"
                                android:paddingLeft="0dip"
                                android:singleLine="true"
                                
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:singleLine="true"
                                android:text="@string/bocinvt_eva_identityactnum"
                                
                                />

                            <TextView
                                android:id="@+id/second_idnumber"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="3.5"
                                android:ellipsize="end"
                                android:paddingLeft="0dip"
                                android:singleLine="true"
                                
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:singleLine="true"
                                android:text="@string/safety_buyeridlastdate"
                                
                                />

                            <TextView
                                android:id="@+id/second_idlastdate"
                                style="@style/textview_common"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/layout_height"
                                android:layout_marginRight="5dp"
                                android:layout_weight="3.5"
                                android:background="@drawable/bg_spinner"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:singleLine="true"
                                android:text="@string/safety_buyermrigstatu"
                                
                                />

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3.5" >

                                <TextView
                                    android:id="@+id/text"
                                    style="@style/textview_forex_prompt_info"
                                    android:layout_width="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:paddingLeft="0dip"
                                    android:paddingRight="0dip"
                                    android:singleLine="true"
                                    android:text="（选填）"
                                    android:textColor="@color/gray"
                                    />

                                <Spinner
                                    android:id="@+id/second_mrigstatu"
                                    style="@style/spinner_forex_prompt_info"
                                    android:layout_width="fill_parent"
                                    android:layout_gravity="left"
                                    android:layout_marginRight="5dp"
                                    android:layout_toLeftOf="@id/text" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:singleLine="true"
                                android:text="@string/third_openacc_adress"
                                
                                />

                            <Spinner
                                android:id="@+id/second_adress_prov"
                                style="@style/spinner_forex_prompt_info"
                                android:layout_width="fill_parent"
                                android:layout_gravity="left"
                                android:layout_marginRight="5dp"
                                android:paddingRight="30dip"
                                android:layout_weight="3.5" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:ellipsize="middle"
                                android:singleLine="true"
                                android:visibility="invisible" />

                            <Spinner
                                android:id="@+id/second_adress_city"
                                style="@style/spinner_forex_prompt_info"
                                android:layout_width="fill_parent"
                                android:layout_gravity="left"
                                android:paddingRight="30dip"
                                android:layout_marginRight="5dp"
                                android:layout_weight="3.5" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:ellipsize="middle"
                                android:singleLine="true"
                                android:visibility="invisible" />

                            <Spinner
                                android:id="@+id/second_adress_county"
                                style="@style/spinner_forex_prompt_info"
                                android:layout_width="fill_parent"
                                android:layout_gravity="left"
                                android:paddingRight="30dip"
                                android:layout_marginRight="5dp"
                                android:layout_weight="3.5" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:singleLine="true"
                                android:visibility="invisible" />

                            <EditText
                                android:id="@+id/second_adress_other"
                                style="@style/edittext_inputNumber_fill"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dip"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:hint="@string/safety_adress_hint"
                                android:inputType="text"
                                android:maxLength="80"
                                android:singleLine="true"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:singleLine="true"
                                android:text="@string/bond_customer_postcode"
                                
                                />

                            <EditText
                                android:id="@+id/second_postcode"
                                style="@style/edittext_inputNumber_fill"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dip"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:inputType="number"
                                android:maxLength="6"
                                android:singleLine="true"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:singleLine="true"
                                android:text="@string/trans_remit_phone"
                                
                                />

                            <TextView
                                android:id="@+id/secoond_phone"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="3.5"
                                android:paddingLeft="0dip"
                                android:singleLine="true"
                                
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:singleLine="true"
                                android:text="@string/safety_email"
                                
                                />

                            <EditText
                                android:id="@+id/secoond_email"
                                style="@style/edittext_inputNumber_fill"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dip"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:inputType="text"
                                android:maxLength="40"
                                android:singleLine="true"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="7.0"
                                android:singleLine="true"
                                
                               
                                android:visibility="invisible" />

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="1.0"
                                android:gravity="left"
                                android:text="@string/safety_email_alert_info"
                                android:textColor="@color/gray"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_buyerrelation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="4.0"
                                android:ellipsize="middle"
                                android:gravity="left"
                                android:text="@string/safety_buyerguanxi"
                                
                                />

                            <Spinner
                                android:id="@+id/second_buyerguanxi"
                                style="@style/spinner_forex_prompt_info"
                                android:layout_width="fill_parent"
                                android:layout_gravity="left"
                                android:layout_marginRight="5dp"
                                android:layout_weight="4.0" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_buyerrelation_tishi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:gravity="left"
                                android:text="@string/safety_buyerguanxi_tishi"
                                android:textColor="@color/gray"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_buyer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="4.0"
                                android:ellipsize="middle"
                                android:gravity="left"
                                android:text="@string/safety_buyer" />

                            <RadioGroup
                                android:id="@+id/loan_advan"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_listview_item_paddingLR"
                                android:layout_weight="4.0"
                                android:orientation="horizontal" >

                                <RadioButton
                                    android:id="@+id/second_buyer_btn1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/btn_bottom_height"
                                    android:button="@drawable/radiobtn_selector"
                                    android:checked="false"
                                    android:text="是"
                                    
                                    />

                                <RadioButton
                                    android:id="@+id/second_buyer_btn2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/btn_bottom_height"
                                    android:layout_marginLeft="@dimen/common_listview_item_paddingLR"
                                    android:button="@drawable/radiobtn_selector"
                                    android:text="否"
                                    android:checked="false"
                                    
                                    />
                            </RadioGroup>
                        </LinearLayout>

                        <!-- 项目  end -->

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>