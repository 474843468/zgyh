<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/clickup"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

         

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivadd1"
                    android:layout_width="@dimen/dp_six_zero"
                    android:layout_height="@dimen/dp_six_zero"
                    android:background="@drawable/foot_add"
                    android:scaleType="centerInside"
                    android:src="@drawable/foot_add" />

                <com.chinamworld.bocmbci.widget.AlwaysMarqueeTextView
                    android:id="@+id/fasttv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="添加常用功能"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_one_one" />
            </LinearLayout>
            <ImageView
                android:id="@+id/ivclose1"
                android:layout_width="@dimen/icon_dele_HW"
                android:layout_height="@dimen/icon_dele_HW"
                android:background="@drawable/icon_del_f"
                android:scaleType="centerInside"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivadd2"
                    android:layout_width="@dimen/dp_six_zero"
                    android:layout_height="@dimen/dp_six_zero"
                    android:background="@drawable/foot_add"
                    android:scaleType="centerInside"
                    android:src="@drawable/foot_add" />

                <com.chinamworld.bocmbci.widget.AlwaysMarqueeTextView
                    android:id="@+id/fasttv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="添加常用功能"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_one_one" />
            </LinearLayout>
            <ImageView
                android:id="@+id/ivclose2"
                android:layout_width="@dimen/icon_dele_HW"
                android:layout_height="@dimen/icon_dele_HW"
                android:background="@drawable/icon_del_f"
                android:scaleType="centerInside"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivadd3"
                    android:layout_width="@dimen/dp_six_zero"
                    android:layout_height="@dimen/dp_six_zero"
                    android:background="@drawable/foot_add"
                    android:scaleType="centerInside"
                    android:src="@drawable/foot_add" />

                <com.chinamworld.bocmbci.widget.AlwaysMarqueeTextView
                    android:id="@+id/fasttv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="添加常用功能"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_one_one" />
            </LinearLayout>
            <ImageView
                android:id="@+id/ivclose3"
                android:layout_width="@dimen/icon_dele_HW"
                android:layout_height="@dimen/icon_dele_HW"
                android:background="@drawable/icon_del_f"
                android:scaleType="centerInside"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivadd4"
                    android:layout_width="@dimen/dp_six_zero"
                    android:layout_height="@dimen/dp_six_zero"
                    android:background="@drawable/foot_add"
                    android:scaleType="centerInside"
                    android:src="@drawable/foot_add" />

                <com.chinamworld.bocmbci.widget.AlwaysMarqueeTextView
                    android:id="@+id/fasttv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="添加常用功能"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_one_one" />
            </LinearLayout>
            <ImageView
                android:id="@+id/ivclose4"
                android:layout_width="@dimen/icon_dele_HW"
                android:layout_height="@dimen/icon_dele_HW"
                android:background="@drawable/icon_del_f"
                android:scaleType="centerInside"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_two"
        android:gravity="center_horizontal"
        android:text="长按图标可进行删除"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_one_one" />

</LinearLayout>