            android:visibility="gone" >

            <TextView
                style="@style/textview_forex_prompt_message"
                android:layout_weight="6"
                android:singleLine="true"
                android:text="@string/safety_lifeInsurance_bnft_applAccName"
                android:textColor="@color/black"
