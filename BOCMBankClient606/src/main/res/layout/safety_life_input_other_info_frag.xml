            android:text="@string/safety_lifeInsurance_other_bottom_tip"
            android:textColor="@color/red"
             />
        <!-- 底部显示不全，占位 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
