                    android:id="@+id/rb_policyHandFlag1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_bottom_height"
                    android:button="@drawable/radiobtn_selector"
                    android:text="@string/safety_lifeInsurance_bnft_policyHandFlag1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_one_two" />

                <RadioButton
                    android:id="@+id/rb_policyHandFlag2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_bottom_height"
