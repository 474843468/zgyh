                <TextView
                    style="@style/textview_forex_prompt_message"
                    android:layout_weight="6"
                    android:singleLine="true"
                    android:text="@string/safety_lifeInsurance_coverage"
                    android:textColor="@color/black"
                    
                    android:visibility="invisible" />

