<com.chinamworld.llbt.userwidget.SlipMenu.SlipDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boc_common_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff00ff00"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0eff5"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/boc_space_between_130px"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:visibility="visible">
                <!--<ImageView
                    android:id="@+id/ima_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/goldstore_back_icon"
                    android:padding="@dimen/boc_space_between_20px"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"/>-->
                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text=""
                    android:gravity="right"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/goldstore_back_icon"
                    android:padding="@dimen/boc_space_between_26px"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="交易查询"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_tra_choose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="筛选"
                    android:textColor="#666666"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:drawableRight="@drawable/goldstore_choose_one"
                    android:padding="@dimen/boc_space_between_20px"
                    />
                <!-- 选中筛选样式 高亮 -->
                <TextView
                    android:id="@+id/tv_tra_choose_sel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="筛选"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#ff6666"
                    android:drawableRight="@drawable/goldstore_choose_two"
                    android:padding="@dimen/boc_space_between_20px"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <ImageView
                android:layout_below="@id/ll_layout1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/gray_line"

                />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <LinearLayout
                    android:id="@+id/ll_layout1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"

                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingTop="10dp">
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="购买交易"
                            android:padding="10dp"
                            android:textSize="@dimen/textsize_default"
                            android:id="@+id/textView16"
                            android:textColor="#ff6666"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:id="@+id/ima_trabuyline"
                            android:layout_width="90dp"
                            android:layout_height="2dp"
                            android:background="#ff6666"
                            android:layout_marginTop="10dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="赎回交易"
                            android:padding="10dp"
                            android:textSize="@dimen/textsize_default"
                            android:id="@+id/textView17"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/ima_tanransomline"
                            android:layout_width="90dp"
                            android:layout_height="2dp"
                            android:background="#ff6666"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提货交易"
                            android:padding="10dp"
                            android:textSize="@dimen/textsize_default"
                            android:id="@+id/textView18"
                            android:textStyle="bold"/>
                        <ImageView
                            android:id="@+id/ima_trabranchline"
                            android:layout_width="90dp"
                            android:layout_height="2dp"
                            android:background="#ff6666"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_below="@id/ll_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/gray_line"
                    />
            </RelativeLayout>

            <ScrollView
                android:id="@+id/sc_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.chinamworld.bocmbci.biz.preciousmetal.goldstoretransquery.GoldPullToRefreshLayout
                        android:id="@+id/refreshLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none"

                        />
                    <!--<com.chinamworld.llbt.userwidget.refreshliseview.PullToRefreshLayout
                        android:id="@+id/refreshLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </com.chinamworld.llbt.userwidget.refreshliseview.PullToRefreshLayout>
               -->  <!--   <LinearLayout
                    android:layout_width="match_parent"
                    android:id = "@+id/contentLayout"
                    android:layout_height="match_parent">
                    <com.chinamworld.bocmbci.biz.preciousmetal.goldstoretransquery.PullPinnedSectionListView
                        android:id="@+id/list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>-->

                    <LinearLayout
                        android:id="@+id/ll_querylist_null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/goldstore_tran_null"/>
                        <TextView
                            android:id="@+id/tv_tra_null"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/boc_space_between_20px"
                            android:textSize="17sp"
                            android:textColor="#91a2a8"
                            android:text=""
                            android:padding="@dimen/boc_space_between_20px"/>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff0000"
        android:layout_gravity="right"
        android:orientation="vertical">
        <com.chinamworld.llbt.userwidget.selectedview.FilterView
            android:layout_width="match_parent"
            android:id="@+id/filterView"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <com.chinamworld.llbt.userwidget.selectedview.SelectTimeView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/selectTimeView"
                    >

                </com.chinamworld.llbt.userwidget.selectedview.SelectTimeView>

            </LinearLayout>



        </com.chinamworld.llbt.userwidget.selectedview.FilterView>
    </LinearLayout>


</com.chinamworld.llbt.userwidget.SlipMenu.SlipDrawerLayout>