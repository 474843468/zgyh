<?xml version="1.0" encoding="utf-8"?>
<!-- 结售汇 购汇 输入信息页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_details_messages_margintop"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView style="@style/scrollview_comm_havemarginbutton" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:gravity="right"
                        android:text="@string/trade_serial_number" />

                    <TextView
                        android:id="@+id/trade_serial_number"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin_half"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="@string/trade_time" />

                    <TextView
                        android:id="@+id/trade_date"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin_half"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="@string/trade_type" />

                    <TextView
                        android:id="@+id/trade_type"
                        style="@style/textview_common_right_two" />
                </LinearLayout>
				  <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin_half"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="@string/foreign_currency" />

                    <TextView
                        android:id="@+id/foreign_currency"
                        style="@style/textview_common_right_two" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin_half"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="@string/foreign_money" />

                    <TextView
                        android:id="@+id/trade_money"
                        style="@style/textview_common_right_two"
                        android:textColor="@color/red" />
                </LinearLayout>

              


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin_half"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="@string/rich_reference_price" />

                    <TextView
                        android:id="@+id/exchange_rate"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin_half"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="@string/rmb_money" />

                    <TextView
                        android:id="@+id/rmb_money"
                        style="@style/textview_common_right_two"
                        android:textColor="@color/red" />
                </LinearLayout>
				
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin_half"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/capital_use_alert"
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="@string/capital_use" />

                    <TextView
                        android:id="@+id/capital_use"
                        style="@style/textview_common_right_two" />
                </LinearLayout>
             

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin_half"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="@string/failure_reason" />

                    <TextView
                        android:id="@+id/failure_reason"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin_half"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:gravity="right"
                        android:text="@string/finc_monyacc_colon" />

                    <TextView
                        android:id="@+id/trade_acc"
                        style="@style/textview_common_right_two" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin_half"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="@string/trade_channel" />

                    <TextView
                        android:id="@+id/trade_channel"
                        style="@style/textview_common_right_two" />
                </LinearLayout>
                   <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin_half"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="@string/trade_status" />

                    <TextView
                        android:id="@+id/trade_status"
                        style="@style/textview_common_right_two" />
                </LinearLayout>
                  <LinearLayout
                    android:id="@+id/fail_reason"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin_half"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="@string/trans_mobile_failReason" />

                    <TextView
                        android:id="@+id/foreign_currency_reason"
                        style="@style/textview_common_right_two" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/handmade"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin_half"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="@string/handmade" />

                    <TextView
                        android:id="@+id/handmade_message"
                        style="@style/textview_common_right_two" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_details_title_height"
        android:layout_marginTop="@dimen/common_details_title_margintop" >

        <TextView
            android:layout_width="@dimen/common_details_title_width"
            android:layout_height="@dimen/common_details_title_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_title"
            android:gravity="center"
            android:text="@string/sbremit_detail_info"
            android:textSize="@dimen/textsize_default" />
    </RelativeLayout>

</RelativeLayout>