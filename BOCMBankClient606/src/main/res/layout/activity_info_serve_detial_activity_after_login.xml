<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.chinamworld.bocmbci.InfoServeDetialActivityAfterLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_one_zero"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical"
        android:layout_above="@+id/layout_btu"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_one_five"
            android:layout_marginRight="@dimen/dimen_one_five"
            >
        <TextView 
            android:id="@+id/tv_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_one_five"
            android:layout_marginTop="@dimen/dimen_two_zero"
            android:textColor="@android:color/background_dark"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            />
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen_one_zero"
            android:layout_marginRight="@dimen/dimen_one_zero"
            android:background="@color/info_serve_line"
            />
        <ScrollView 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginLeft="@dimen/dimen_one_five"
            android:layout_marginRight="@dimen/dimen_one_five"
            android:scrollbars="none"
            >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_one_five"
                android:paddingTop="@dimen/dimen_one_five"
                >
                <TextView 
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/background_dark"
                    android:textSize="15sp"
                    android:text=""
                    />
            </LinearLayout>
        </ScrollView>
        
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/layout_btu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_one_zero"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:baselineAligned="true"
        >
        <LinearLayout 
            android:id="@+id/layout_before"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <Button 
            android:id="@+id/btu_before"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_for_five"
            android:text="@string/tv_infoserve_before"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_info_serve_button"
            />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/layout_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <Button 
            android:id="@+id/btu_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_for_five"
            android:text="@string/tv_infoserve_next"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_info_serve_button"
            />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/layout_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
             <Button 
            android:id="@+id/btu_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_for_five"
            android:text="@string/tv_infoserve_sure"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_info_serve_button"
            />
        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>
