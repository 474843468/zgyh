<?xml version="1.0" encoding="utf-8"?>
<!-- 修改账户menu dialog xyl -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_for_foot_choose"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/fill_margin_bottom" >

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/set_accmanager_editalias"
            style="@style/popupwindow_btn_normal"

            android:text="@string/set_editalias" />
    </LinearLayout>

    <LinearLayout 
        android:visibility="gone"
        android:id="@+id/set_accmanager_setdefaultacc_ll"
        style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/set_accmanager_setdefaultacc"
            style="@style/popupwindow_btn_normal"
            android:text="@string/set_setdefaultacc" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/set_accmanager_consern_ll"
         style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/set_accmanager_consern"
            style="@style/popupwindow_btn_normal"
            android:text="@string/set_conserconnection" />
    </LinearLayout>

    <LinearLayout style="@style/fill_fill_weight1" >

        <Button
            android:id="@+id/cancle_btn"
              style="@style/popupwindow_btn_cancle"
            android:text="@string/cancle"
            android:textColor="@color/white"  />
    </LinearLayout>

</LinearLayout>