<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/boc_space_between_20px"
    android:background="@color/goldstore_bg_gray"
    tools:context="com.chinamworld.bocmbci.biz.preciousmetal.goldstoremainpage.GoldstoreMoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_table_row">
        <RelativeLayout
            android:id="@+id/buy_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metalgoldstote_buy"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:src="@drawable/goldstore_jiantou_right" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line_goldstore"
            android:orientation="horizontal" >
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metalgoldstote_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:src="@drawable/goldstore_jiantou_right" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line_goldstore"
            android:orientation="horizontal" >
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/chaeck_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_traquery"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:src="@drawable/goldstore_jiantou_right" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line_goldstore"
            android:orientation="horizontal" >
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/accmanager_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metalgoldstote_accmanager"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                />
            <TextView
                android:id="@+id/account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12346579"
                android:layout_toLeftOf="@+id/right_arrow"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:src="@drawable/goldstore_jiantou_right" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line_goldstore"
            android:orientation="horizontal" >
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/problem_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_96px"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metalgoldstote_problem"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/boc_space_between_20px"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/boc_space_between_30px"
                android:src="@drawable/goldstore_jiantou_right" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line_goldstore"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
