<?xml version="1.0" encoding="utf-8"?>
<!-- 保险  持有保单详情页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/finc_btn1"
            style="@style/isforex_two_left_btn"
            android:text="@string/safety_hold_pro_detail_btn_prod_intr"
 />

        <Button
            android:id="@+id/finc_btn2"
            style="@style/isforex_two_right_btn"
            android:text="@string/more"
             />
    </LinearLayout>

    <LinearLayout
        style="@style/scrollview_comm"
        android:layout_above="@+id/btn_layout"
        android:layout_marginTop="@dimen/common_details_messages_paddingtop"
        android:background="@drawable/bg_for_listview_item_write"
        android:paddingBottom="@dimen/common_row_margin"
        android:paddingTop="@dimen/common_details_messages_paddingtop" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/fill_padding_top" >

                <LinearLayout style="@style/linnerlayout_common" 
                    android:layout_width="wrap_content"
                    android:layout_marginRight="0dip"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:text="@string/safety_hold_pro_detail_risk_bill_code" />

                    <TextView
                        android:id="@+id/safety_hold_risk_bill_code"
                        style="@style/textview_forex_prompt_info" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:text="@string/safety_hold_pro_detail_prod_code" />

                    <TextView
                        android:id="@+id/safety_hold_pro_code"
                        style="@style/textview_forex_prompt_info" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:text="@string/safety_hold_pro_detail_prod_name" />

                    <TextView
                        android:id="@+id/safety_hold_pro_name"
                        style="@style/textview_forex_prompt_info" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:text="@string/safety_hold_pro_detail_prod_type" />

                    <TextView
                        android:id="@+id/safety_hold_pro_type"
                        style="@style/textview_forex_prompt_info" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:text="@string/safety_company" />

                    <TextView
                        android:id="@+id/safety_hold_risk_company"
                        style="@style/textview_forex_prompt_info" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:text="@string/safety_hold_pro_detail_buy_channel" />

                    <TextView
                        android:id="@+id/safety_hold_buy_channel"
                        style="@style/textview_forex_prompt_info" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:text="@string/safety_hold_pro_detail_risk_bill_credate" />

                    <TextView
                        android:id="@+id/safety_hold_risk_bill_credate"
                        style="@style/textview_forex_prompt_info" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:text="@string/safety_hold_pro_detail_risk_bill_effdate" />

                    <TextView
                        android:id="@+id/safety_hold_risk_bill_effdate"
                        style="@style/textview_forex_prompt_info" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:text="@string/safety_hold_pro_detail_risk_bill_enddate" />

                    <TextView
                        android:id="@+id/safety_hold_risk_bill_enddate"
                        style="@style/textview_forex_prompt_info" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:text="@string/bizhong" />

                    <TextView
                        android:id="@+id/safety_hold_bizhong"
                        style="@style/textview_forex_prompt_info" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:text="@string/safety_hold_pro_detail_deal" />

                    <TextView
                        android:id="@+id/safety_hold_pro_detail_deal"
                        style="@style/textview_forex_prompt_info" />
                </LinearLayout>

                <LinearLayout style="@style/linnerlayout_common" >

                    <TextView
                        style="@style/textview_forex_prompt_message"
                        android:text="@string/safety_hold_pro_detail_risk_fee" />

                    <TextView
                        android:id="@+id/safety_hold_pro_detail_risk_fee"
                        style="@style/textview_forex_prompt_info"
                        android:textColor="@color/red" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/applicant_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/forex_make_code_spacing"
                    android:orientation="vertical" >

                    <LinearLayout style="@style/safety_fengge_bg" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:gravity="left"
                            android:paddingLeft="10dip"
                            android:text="@string/safety_hold_pro_detail_applicant_info" />

                        <TextView style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linnerlayout_common"
                        android:layout_weight="1" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_name" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_name"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linnerlayout_common"
                        android:layout_weight="1" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_gender" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_gender"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout style="@style/linnerlayout_common" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_cred_type" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_cred_type"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout style="@style/linnerlayout_common" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_cred_num" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_cred_num"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout style="@style/linnerlayout_common" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_birth_date" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_birth_date"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout style="@style/linnerlayout_common" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_national" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_national"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout style="@style/linnerlayout_common" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_email" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_email"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/applicant_by_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/forex_make_code_spacing"
                    android:orientation="vertical" >

                    <LinearLayout style="@style/safety_fengge_bg" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:gravity="left"
                            android:paddingLeft="10dip"
                            android:text="@string/safety_hold_pro_detail_applicant_by_info" />

                        <TextView style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linnerlayout_common"
                        android:layout_weight="1" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_name" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_by_name"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/linnerlayout_common"
                        android:layout_weight="1" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_gender" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_by_gender"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout style="@style/linnerlayout_common" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_cred_type" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_by_cred_type"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout style="@style/linnerlayout_common" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_cred_num" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_by_cred_num"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout style="@style/linnerlayout_common" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_birth_date" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_by_birth_date"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout style="@style/linnerlayout_common" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_national" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_by_national"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>

                    <LinearLayout style="@style/linnerlayout_common" >

                        <TextView
                            style="@style/textview_forex_prompt_message"
                            android:text="@string/safety_hold_pro_detail_applicant_email" />

                        <TextView
                            android:id="@+id/safety_hold_pro_detail_applicant_by_email"
                            style="@style/textview_forex_prompt_info" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_details_title_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_one_zero" >

        <TextView
            android:id="@+id/safety_hold_pro_detail_second_title"
            android:layout_width="@dimen/common_details_title_width"
            android:layout_height="@dimen/btn_operate_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_title"
            android:gravity="center"
            android:text="@string/safety_hold_pro_detail_second_title"
            android:textSize="@dimen/textsize_default" />
    </RelativeLayout>

</RelativeLayout>