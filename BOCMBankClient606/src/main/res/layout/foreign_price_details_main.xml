<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/share_dividing_line"/>

    <com.chinamworld.llbt.userwidget.LLBTScrollView android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/foreign_details_specification"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/lianlong_space_between_30px"
                        android:layout_marginTop="@dimen/lianlong_space_between_30px"
                        android:layout_weight="1.4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/foreign_middle_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/boc_text_color_red"
                            android:textSize="36dp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/boc_space_between_20px"
                            android:layout_marginTop="1dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/foreign_currDiff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/boc_text_color_red"
                                android:textSize="15dp"
                                android:textStyle="bold"/>

                            <LinearLayout
                                android:id="@+id/ll_foreign_currPercentDiff"
                                android:layout_width="@dimen/boc_space_between_140px"
                                android:layout_height="wrap_content"
                                android:background="@color/boc_text_color_red"
                                android:layout_marginLeft="@dimen/boc_space_between_40px"
                                android:gravity="center_horizontal"
                                android:padding="3dip"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/foreign_currPercentDiff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_marginBottom="2dp"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/boc_space_between_20px"
                        android:layout_marginRight="@dimen/boc_space_between_30px"
                        android:layout_marginTop="@dimen/boc_space_between_26px"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_foreign_details_collect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="invisible">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/foreign_details_collect"
                                    android:layout_width="@dimen/boc_text_size_20dp"
                                    android:layout_height="@dimen/boc_text_size_20dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/boc_space_between_10px"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/boc_space_between_10px"
                                android:gravity="right"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/boc_space_between_20px"
                                    android:text="@string/foreign_sell_price"
                                    android:textColor="@color/boc_text_color_dark_gray"
                                    android:textSize="@dimen/boc_space_between_22px"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/foreign_details_sell_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text=""
                                    android:textColor="@color/boc_text_color_dark_gray"
                                    android:textSize="@dimen/boc_space_between_22px"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/boc_space_between_10px"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/boc_space_between_20px"
                                    android:text="@string/foreign_buy_price"
                                    android:textColor="@color/boc_text_color_dark_gray"
                                    android:textSize="@dimen/boc_space_between_22px"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/foreign_details_buy_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/boc_space_between_10px"
                                    android:text=""
                                    android:textColor="@color/boc_text_color_dark_gray"
                                    android:textSize="@dimen/boc_space_between_22px"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.chinamworld.bocmbci.userwidget.sfkline.InverstKLineView
                android:id="@+id/query_KTendency_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            ></com.chinamworld.bocmbci.userwidget.sfkline.InverstKLineView>
        </LinearLayout>
    </com.chinamworld.llbt.userwidget.LLBTScrollView>

    <LinearLayout
        android:id="@+id/button"
        style="@style/share_multi_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp">

        <Button
            android:id="@+id/foreign_details_button_sell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/share_white_button"
            android:text="卖出"
            android:textColor="@color/boc_text_color_red"
            android:visibility="gone"/>

        <Button
            android:id="@+id/foreign_details_button_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/share_red_button"
            android:text="买入"
            android:textColor="@color/boc_common_cell_color"/>
    </LinearLayout>
</LinearLayout>