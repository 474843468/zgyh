<?xml version="1.0" encoding="utf-8"?>
<!-- 贵金属积存 自提网点 列表项 item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:minHeight="@dimen/boc_space_between_126px">
    <TextView
        android:id="@+id/goldstore_branch_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="中国银行广州增城支行营业部"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/goldstore_branch_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="16sp"
            android:text="增城市荔城街随缘路11号"
            />

        <TextView
            android:id="@+id/goldstore_branch_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="021-88888888"
            android:textColor="#00aaee"
            />

    </LinearLayout>

</LinearLayout>
