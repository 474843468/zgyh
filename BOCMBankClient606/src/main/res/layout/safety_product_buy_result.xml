<?xml version="1.0" encoding="utf-8"?>
<!-- 投保成功页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_step"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_for_listview_item_write"
            android:orientation="vertical"
            android:paddingTop="@dimen/fill_padding_top" 
            android:paddingLeft="@dimen/fill_padding_top" 
            android:paddingBottom="@dimen/fill_padding_top" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/blpt_main_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_bill_tip"
                            style="@style/confirm_info_textview_style"
                            android:gravity="center"
                            android:layout_marginRight="@dimen/fill_padding_top"
                            android:text="@string/safety_result_title" />

                        <!-- 项目  start -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="6"
                                android:singleLine="true"
                                android:text="@string/safety_hold_pro_detail_risk_company_name"
                                
                                 />

                            <TextView
                                android:id="@+id/companyname"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="4"
                                android:paddingLeft="0dip"
                                android:layout_marginRight="@dimen/fill_padding_top"
                                android:singleLine="true"
                                
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="6"
                                android:singleLine="true"
                                android:text="@string/safety_lifeInsurance_subCompany"
                                
                                 />

                            <TextView
                                android:id="@+id/tv_subCompany"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="4"
                                android:paddingLeft="0dip"
                                android:layout_marginRight="@dimen/fill_padding_top"
                                android:singleLine="true"
                                
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="6"
                                android:singleLine="true"
                                android:text="@string/prodName"
                                
                                 />

                            <TextView
                                android:id="@+id/productname"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="4"
                                android:paddingLeft="0dip"
                                android:singleLine="true"
                                
                                android:layout_marginRight="@dimen/fill_padding_top"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="6"
                                android:singleLine="true"
                                android:text="@string/safety_hold_pro_detail_risk_bill_code"
                                
                                 />

                            <TextView
                                android:id="@+id/billcode"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="4"
                                android:paddingLeft="0dip"
                                android:paddingRight="2dip"
                                android:singleLine="false"
                                
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="6"
                                android:singleLine="true"
                                android:text="@string/safety_buy_amount"
                                
                                 />

                            <TextView
                                android:id="@+id/money"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="4"
                                android:paddingLeft="0dip"
                                android:singleLine="true"
                                android:textColor="@color/red"
                                android:layout_marginRight="@dimen/fill_padding_top"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="6"
                                android:singleLine="true"
                                android:text="@string/safety_bill_startdate"
                                
                                 />

                            <TextView
                                android:id="@+id/surstartdate"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="4"
                                android:paddingLeft="0dip"
                                android:singleLine="true"
                                
                                android:layout_marginRight="@dimen/fill_padding_top"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="6"
                                android:singleLine="true"
                                android:text="@string/safety_hold_pro_detail_risk_bill_enddate"
                                
                                 />

                            <TextView
                                android:id="@+id/surlastdate"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="4"
                                android:paddingLeft="0dip"
                                android:singleLine="true"
                                
                                android:layout_marginRight="@dimen/fill_padding_top"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="6"
                                android:singleLine="true"
                                android:text="@string/safety_email"
                                
                                 />

                            <TextView
                                android:id="@+id/email"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="4"
                                android:paddingLeft="0dip"
                                android:singleLine="true"
                                
                                android:layout_marginRight="@dimen/fill_padding_top"
                                 />
                        </LinearLayout>

                        <!-- 项目  end -->

                        <TextView
                            android:id="@+id/tv_bottom_tip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/fill_padding_top"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="left"
                            android:text="@string/safety_newin_success"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/textsize_default" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_bottom_padding"
            android:layout_marginTop="@dimen/fill_margin_top"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnok"
                style="@style/textview_forex_button_cell"
                android:onClick="insurFinishOnclick"
                android:text="@string/finish" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>