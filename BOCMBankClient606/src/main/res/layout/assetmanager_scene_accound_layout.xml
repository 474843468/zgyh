<?xml version="1.0" encoding="utf-8"?>
    <ScrollView 
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/style_match_match"
        android:background="@color/white"
        android:id="@+id/scrollview"
        >
        <LinearLayout 
            style="@style/style_match_wrap"
		    android:orientation="vertical" 
		    android:paddingLeft="20dp"
		    android:paddingRight="20dp"
		    android:paddingBottom="20dp"
		    android:paddingTop="5dp"
		    android:background="@color/transparent_00"
            >
            <LinearLayout 
                android:id="@+id/layout_scene_name"
                style="@style/style_match_wrap"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                >
                <TextView 
                    style="@style/textview_common_multi_second"
                    android:text="@string/assetmanager_capital_47"
                    />
                <EditText 
                    android:id="@+id/ed_scene"
                    style="@style/editext_fill"
                    android:hint="@string/assetmanager_capital_62"
                    android:maxLength="50"
                    />
                <TextView 
                    android:id="@+id/tv_scene"
                    style="@style/textview_common_multi_second"
                    android:text=""
                    android:visibility="gone"
                    />
            </LinearLayout>
            <TextView 
                android:id="@+id/tv_tip_max_scene"
                style="@style/textview_common_multi_second"
                android:textColor="@color/red"
                android:text=""
                android:visibility="gone"
                />
            
	    <!-- 资金转出账户 -->
	    <include 
	        android:id="@+id/layout_include_1" 
	        layout="@layout/assetmanager_scene_accound_includ_layout"
	        />
	    <!-- 资金转入账户 -->
	    <include 
	        android:id="@+id/layout_include_2" 
	        layout="@layout/assetmanager_scene_accound_includ_layout"
	        />
	    
        <!-- <LinearLayout style="@style/style_match_wrap"> -->
    	<!-- 信息输入界面 -->
    	<LinearLayout 
	        android:id="@+id/layout_include_3"
	        style="@style/style_match_wrap"
	        android:orientation="vertical"
	        android:visibility="gone"
	        />
	    <TextView style="@style/style_match_wrap"/>
	    <!-- </LinearLayout> -->
	    
        </LinearLayout>
        </ScrollView>
    

