<?xml version="1.0" encoding="utf-8"?>
<!-- 账户设定  账户列表 iterm xyl -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/set_btn_gocancelrelation"
        android:layout_width="@dimen/icon_dele_HW"
        android:layout_height="@dimen/icon_dele_HW"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_del"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/set_accountmanager_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/set_btn_gocancelrelation"
        android:background="@drawable/bg_for_listview_item_write"
        android:gravity="left"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_listview_item__half_grqy_Height"
            android:background="@drawable/shap_for_half_gray"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/set_accmanager_iconTextView1"
                android:layout_width="@dimen/defaultAcc_width"
                android:layout_height="@dimen/common_listview_item__half_grqy_Height"
                android:background="@drawable/img_moren"
                android:textSize="@dimen/textsize_default"
                android:visibility="visible" />
            <TextView
                android:id="@+id/set_accmanager_edit"
                android:layout_width="@dimen/setting_limit_edit_icon"
                android:layout_height="@dimen/setting_limit_edit_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:background="@drawable/icon_bianji"
                android:textSize="@dimen/textsize_default" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_accmanager_height"
            android:orientation="vertical"
            android:paddingLeft="@dimen/common_listview_item_paddingLR" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/set_accmanager_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textsize_one_six" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" 
                    android:gravity="right">

                    <TextView
                        android:id="@+id/set_accmanager_accnum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_default" />

                     <TextView
                        android:layout_width="@dimen/setting_limit_edit_icon"
                        android:layout_height="@dimen/setting_limit_edit_icon"
                        android:layout_marginRight="1dp"
                        android:background="@drawable/icon_bianji"
                        android:textSize="@dimen/textsize_default"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/set_accmana"
                        android:layout_width="@dimen/setting_limit_edit_icon"
                        android:layout_height="@dimen/setting_limit_edit_icon"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="1dp"
                        android:visibility="invisible"
                        android:background="@drawable/icon_bianji"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:id="@+id/set_accmanager_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/set_accmana"
                        android:gravity="center_vertical|right"
                         android:layout_marginRight="1dp"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/textsize_default" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>