<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_deal_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="交易序号："
            android:visibility="gone" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_product_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="产品代码：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="产品名称 ：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="产品币种：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_cash_remit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="钞/汇：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="购买金额：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_deal_mount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="已成交金额：" />
    </LinearLayout>

</ScrollView>