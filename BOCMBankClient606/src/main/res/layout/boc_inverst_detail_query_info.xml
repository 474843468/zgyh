<?xml version="1.0" encoding="utf-8"?>
<!-- 投资明细查询详情 niuchf -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" > 

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/rightbtnW"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/bocinvt_deal_date2" />

                    <TextView
                        android:id="@+id/tv_dealDate"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/bocinvt_deal_type2" />

                    <TextView
                        android:id="@+id/tv_dealType"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dealCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/bocinvt_deal_cash" />

                    <TextView
                        android:id="@+id/tv_dealCash"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dealNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/bocinvt_deal_num" />

                    <TextView
                        android:id="@+id/tv_dealNum"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/bocinvt_deal_status2" />

                    <TextView
                        android:id="@+id/tv_dealStatus"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/failReason_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        style="@style/textview_common_left_three"
                        android:text="@string/bocinvt_fail_reason" />

                    <TextView
                        android:id="@+id/tv_failReason"
                        style="@style/textview_common_right_two" />
                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >
                </TextView>
    </LinearLayout>
</RelativeLayout>