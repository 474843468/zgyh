<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_for_progress"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/fill_padding"
    android:paddingTop="@dimen/fill_padding" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_bottom_height"
        android:gravity="center" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/payeeOthName"
            android:textSize="@dimen/textsize_default" />

        <TextView
            android:id="@+id/tv_nike_name_payee_edit_dialog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="@dimen/textsize_default" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_payeeMobile_comm_boc_tranSeting"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/btn_bottom_height"
        android:gravity="center" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/new_payeeOthName"
            android:textSize="@dimen/textsize_default" />

        <EditText
            android:id="@+id/et_nike_name_payee_edit_dialog"
            style="@style/edittext_common_fill"
            android:layout_weight="1"
            android:maxLength="50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancle_nike_name_payee_edit_dialog"
            style="@style/dialogbtn"
            android:layout_marginRight="@dimen/margin_of_bottom_btn"
            android:background="@drawable/btn_blue_big"
            android:text="@string/cancle" />

        <Button
            android:id="@+id/btn_confirm_nike_name_payee_edit_dialog"
            style="@style/dialogbtn"
            android:background="@drawable/btn_red_big"
            android:text="@string/confirm" />
    </LinearLayout>

</LinearLayout>