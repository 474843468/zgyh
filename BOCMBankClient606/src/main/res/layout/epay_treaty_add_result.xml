<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/sv_content"
        style="@style/scrollview_with_no_padding"
        android:layout_above="@+id/bt_finish"
        android:layout_marginBottom="@dimen/common_row_margin"
        android:background="@drawable/bg_for_listview_item_write"
        android:paddingBottom="@dimen/fill_padding_bottom"
        android:paddingTop="@dimen/fill_padding_top" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_row_margin"
                android:gravity="center"
                android:text="@string/epay_treaty_add_result_tv_msg"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_default" />

            <LinearLayout
                android:id="@+id/ll_tn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_msg"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/epay_treaty_detail_tv_treaty_num" />

                <TextView
                    android:id="@+id/tv_treaty_num"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_tn"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/epay_treaty_add_confirm_tv_cust_name" />

                <TextView
                    android:id="@+id/tv_cust_name"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_cn"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/epay_treaty_detail_tv_merchant_name" />

                <TextView
                    android:id="@+id/tv_merchant_name"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ma"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_mn"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/epay_treaty_detail_tv_merchant_acc" />

                <TextView
                    android:id="@+id/tv_merchant_id"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_ma"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/epay_treaty_input_accounts" />

                <TextView
                    android:id="@+id/tv_account"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_acn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_ia"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/epay_treaty_add_confirm_nickname" />

                <TextView
                    android:id="@+id/tv_acc_nickname"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_acn"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/epay_treaty_detail_tv_contract_date" />

                <TextView
                    android:id="@+id/tv_contract_date"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_cd"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/epay_treaty_detail_tv_contract_channel" />

                <TextView
                    android:id="@+id/tv_contract_channel"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rcc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_cc"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/epay_treaty_add_result_contract_client" />

                <TextView
                    android:id="@+id/tv_contract_client"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_currency"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_rcc"
                android:layout_marginTop="@dimen/common_row_margin"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/epay_wc_spa_tv_currency" />

                <TextView
                    android:id="@+id/tv_currency"
                    style="@style/textview_common_right"
                    android:text="@string/rmb_currency" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_currency"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/epay_treaty_modify_quota_tv_per_quota" />

                <TextView
                    android:id="@+id/tv_per_quota"
                    style="@style/textview_money_adapter"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_aq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_pq"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/epay_treaty_modify_quota_tv_addup_quota" />

                <TextView
                    android:id="@+id/tv_addup_quota"
                    style="@style/textview_money_adapter"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_aq"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/epay_treaty_modify_quota_tv_day_quota" />

                <TextView
                    android:id="@+id/tv_day_quota"
                    style="@style/textview_money_adapter"
                    android:textColor="@color/red" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_finish"
        style="@style/bottombtn"
        android:layout_alignParentBottom="true"
        android:text="@string/finish" />

</RelativeLayout>