<?xml version="1.0" encoding="utf-8"?>
<!-- 账户管理  电子现金账户详情弹出框  wangmengmeng -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/message_dialog_bg" >

        <ImageView
            android:id="@+id/top_right_close"
            android:layout_width="@dimen/btn_bottom_height"
            android:layout_height="@dimen/btn_bottom_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@color/transparent_00" />

        <ScrollView
            style="@style/scrollview_comm"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/fill_padding_top" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_textview_15_black_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/fill_margin_bottom"
                        android:paddingLeft="@dimen/fill_margin_bottom"
                        android:paddingRight="@dimen/fill_margin_bottom"
                        android:text="@string/forex_task_finish" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/forex_trade_button"
                        style="@style/bottombtn_new"
                        android:layout_gravity="top"
                        android:text="@string/forex_task_button"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>