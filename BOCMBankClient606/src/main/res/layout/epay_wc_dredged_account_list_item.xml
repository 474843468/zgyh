<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/rl_item"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/acc_list_item_height"
        android:layout_marginRight="@dimen/fill_margin_right"
        android:background="@drawable/bg_for_listview_item_write"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_listview_item_paddingLR" >

            <TextView
                android:id="@+id/tv_cardtype"
                style="@style/textview_common"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_listview_item_paddingLR"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_account"
                style="@style/textview_amount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="@dimen/common_listview_item_paddingLR"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_row_margin"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/common_listview_item_paddingLR"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/gray"/>

            <ImageButton
                android:id="@+id/ibt_setting"
                android:layout_width="@dimen/dp_two_zero"
                android:layout_height="@dimen/dp_two_zero"
                android:layout_marginRight="@dimen/common_listview_item_paddingLR"
                android:background="@drawable/icon_bianji"
                android:contentDescription="@string/epay_bomobile_ib_desc" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/bt_del"
        android:layout_width="@dimen/icon_dele_HW"
        android:layout_height="@dimen/icon_dele_HW"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_three"
        android:background="@drawable/icon_del"
        android:visibility="visible" />

</RelativeLayout>