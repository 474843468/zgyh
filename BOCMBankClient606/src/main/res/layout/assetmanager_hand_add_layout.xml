<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <ScrollView 
        style="@style/style_height_weight_1"
        android:background="@drawable/shape_round_1"
        android:id="@+id/layout_content"
        >
        <LinearLayout 
            style="@style/style_match_match"
            android:orientation="vertical"
            >
            <LinearLayout 
                style="@style/style_match_wrap"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                >
                <TextView 
                    android:id="@+id/tv_1"
                    style="@style/style_tv_bocinv_agreement_appley"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:text="记账类型："
                    />
                <Spinner 
                    android:id="@+id/sp_1"
                    style="@style/Spiiner_fill"
                    android:layout_weight="2"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/style_match_wrap"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                >
                <TextView 
                    style="@style/style_tv_bocinv_agreement_appley"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:text="币种："
                    />
                <Spinner 
                    android:id="@+id/sp_2"
                    style="@style/Spiiner_fill"
                    android:layout_weight="2"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/style_match_wrap"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                >
                <TextView 
                    style="@style/style_tv_bocinv_agreement_appley"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:text="金额："
                    />
                <EditText 
                    android:id="@+id/edt_1"
                    style="@style/edittext_inputNumber_fill"
                    android:layout_weight="2"
					android:maxLength="20"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/style_match_wrap"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                >
                <TextView 
                    style="@style/style_tv_bocinv_agreement_appley"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:text="备注："
                    />
                <EditText 
                    android:id="@+id/edt_2"
                    style="@style/edittext_inputNumber_fill"
                    android:layout_weight="2"
					android:maxLength="200"
                    />
            </LinearLayout>
            
            
            <TextView style="@style/style_match_wrap"/>
        </LinearLayout>
    </ScrollView>
    
    <!-- 按钮 -->
    <include layout="@layout/assetmanager_bottom_button_layout"/>

</LinearLayout>
