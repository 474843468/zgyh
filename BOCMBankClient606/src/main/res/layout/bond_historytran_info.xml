<?xml version="1.0" encoding="utf-8"?>
<!-- 债券历史交易状态详情页面   -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/rightbtnW"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <TextView
            style="@style/titleText_step2"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/detail"
            android:textColor="@color/black"
            android:visibility="invisible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bottom_margin_top"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:layout_weight="1.0"
                        android:text="@string/bond_history_trandate"
                        />

                    <TextView
                        android:id="@+id/tv_trandate"
                        style="@style/bond_tv_15_right"
                        android:layout_weight="1.0"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:layout_weight="1.0"
                        android:text="@string/bond_history_name"
                        />

                    <TextView
                        android:id="@+id/tv_tran_name"
                        style="@style/bond_tv_15_right"
                        android:layout_weight="1.0"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:layout_weight="1.0"
                        android:text="@string/bond_history_type"
                        />

                    <TextView
                        android:id="@+id/tv_tran_type"
                        style="@style/bond_tv_15_right"
                        android:layout_weight="1.0"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:layout_weight="1.0"
                        android:text="@string/bond_history_money"
                        />

                    <TextView
                        android:id="@+id/tv_bondmoney"
                        style="@style/bond_tv_15_right"
                        android:layout_weight="1.0"
                        android:textColor="@color/red"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:layout_weight="1.0"
                        android:text="@string/bond_history_paymoney"
                        />

                    <TextView
                        android:id="@+id/tv_paymoney"
                        style="@style/bond_tv_15_right"
                        android:layout_weight="1.0"
                        android:textColor="@color/red"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:layout_weight="1.0"
                        android:text="@string/bond_history_yuer"
                        />

                    <TextView
                        android:id="@+id/tv_blan"
                        style="@style/bond_tv_15_right"
                        android:layout_weight="1.0"
                        android:textColor="@color/red"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:layout_weight="1.0"
                        android:text="@string/bond_history_time"
                        />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/bond_tv_15_right"
                        android:layout_weight="1.0"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:layout_weight="1.0"
                        android:text="@string/bond_history_transRate"
                        />

                    <TextView
                        android:id="@+id/tv_rate"
                        style="@style/bond_tv_15_right"
                        android:layout_weight="1.0"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:layout_weight="1.0"
                        android:text="@string/bond_history_getInterest"
                        />

                    <TextView
                        android:id="@+id/tv_getInterest"
                        style="@style/bond_tv_15_right"
                        android:layout_weight="1.0"
                        android:textColor="@color/red"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:layout_weight="1.0"
                        android:text="@string/bond_history_minusInterest"
                        />

                    <TextView
                        android:id="@+id/tv_minusInterest"
                        style="@style/bond_tv_15_right"
                        android:layout_weight="1.0"
                        android:textColor="@color/red"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/bond_tv_15_left"
                        android:layout_weight="1.0"
                        android:text="@string/bond_history_transFee"
                        />

                    <TextView
                        android:id="@+id/tv_transFee"
                        style="@style/bond_tv_15_right"
                        android:layout_weight="1.0"
                        android:textColor="@color/red"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/titleText"
        style="@style/titleText_stepacc"
        android:layout_width="@dimen/common_details_title_width"
        android:layout_height="@dimen/left_img_width"
        android:background="@drawable/bg_title"
        android:gravity="center"
        android:text="详情信息"
        android:textColor="@color/gray_title" />

</RelativeLayout>