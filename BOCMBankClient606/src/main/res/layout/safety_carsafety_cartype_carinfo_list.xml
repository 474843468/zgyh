<?xml version="1.0" encoding="utf-8"?>
<!-- 车险—车型选择页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_for_listview_item_write"
            android:orientation="vertical"
            android:padding="@dimen/fill_padding_top" >

            <TextView
                android:id="@+id/text_tip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/fill_padding_top"
                android:text="请从下列平台返回车型列表中选择相应的车型"
                 android:textColor="@color/fonts_dark_gray"
                android:textSize="@dimen/fonts_one_five" />

            <ListView
                android:id="@+id/listview"
                style="@style/listviewcomm_fill_haveDivider"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_bottom_padding"
            android:layout_marginTop="@dimen/fill_margin_top"
            android:gravity="center"
            android:orientation="horizontal" >
            
			<Button
                android:id="@+id/btnNext"
                style="@style/textview_forex_button_cell"
                android:text="@string/next" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>