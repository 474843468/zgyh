<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/common_row_margin" >

        <Button
            android:id="@+id/next_btn"
            style="@style/bottombtn"
            android:text="@string/next" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bottom"
        android:layout_alignParentTop="true"
        android:background="@drawable/shap_for_dept_tranlist"
        android:paddingBottom="@dimen/layout_margin_top"
        android:paddingLeft="@dimen/layout_padding_left_right"
        android:paddingRight="@dimen/layout_padding_left_right" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/gather_confirm_title_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:text="@string/pay_input_second_title"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_default" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/gather_order_number_label" />

                <TextView
                    android:id="@+id/gather_order_number"
                    style="@style/comm_view_right_noweight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/gather_creat_date_label" />

                <TextView
                    android:id="@+id/gather_creat_date"
                    style="@style/comm_view_right_noweight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/gather_tran_status_label" />

                <TextView
                    android:id="@+id/gather_tran_status"
                    style="@style/comm_view_right_noweight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/gather_money_name_label" />

                <TextView
                    android:id="@+id/gather_money_name"
                    style="@style/comm_view_right_noweight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/gather_account_number_label" />

                <TextView
                    android:id="@+id/gather_account_number"
                    style="@style/comm_view_right_noweight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/gather_payee_mobile_label"
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/payeeMobile" />

                <TextView
                    android:id="@+id/gather_payee_mobile"
                    style="@style/comm_view_right_noweight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/beizhu" />

                <TextView
                    android:id="@+id/tv_beizhu"
                    style="@style/comm_view_right_noweight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/gather_pay_currency_label" />

                <TextView
                    android:id="@+id/gather_pay_currency"
                    style="@style/comm_view_right_noweight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/gather_pay_amount_label" />

                <TextView
                    android:id="@+id/gather_pay_amount"
                    style="@style/comm_view_right_noweight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >
                
                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/gather_pay_fact_label" />

                <EditText
                    android:id="@+id/edit_gather_pay_fact"
                    style="@style/edittext_common_fill_no_weight"
                    android:layout_weight="3"
                    android:layout_marginRight="@dimen/fill_padding_right"
                    android:paddingLeft="@dimen/edittext_paddinglr"
                    android:inputType="numberDecimal"
                    android:maxLength="14"
                    android:textColor="@color/black" >
                </EditText>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="10dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>