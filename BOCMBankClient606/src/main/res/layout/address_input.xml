<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_one_zero"
    android:background="@drawable/bg_for_listview_item_write"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/test"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_one_zero"
            android:gravity="center"
            android:text="服务器地址"
            android:textSize="@dimen/textsize_two_zero" />

        <Spinner
            android:id="@+id/findpwd_sp_idcty"
            style="@style/Spinner_comm_view_right"
            android:layout_margin="@dimen/fill_margin_bottom"
            android:background="@drawable/bg_spinner" />

        <EditText
            android:id="@+id/address"
            style="@style/editext_fill"
            android:layout_margin="@dimen/dp_one_zero"
            android:text="http://22.188.20.117:9095/BII/_bfwajax.do"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnConfirm"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_red_big_long"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>