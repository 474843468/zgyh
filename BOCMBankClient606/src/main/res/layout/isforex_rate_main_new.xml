<?xml version="1.0" encoding="utf-8"?><!-- 账户贵金属 首页 -->
<com.chinamworld.llbt.userwidget.scrollview.NewScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sc"
    >

    <LinearLayout
        android:background="@color/gray_line"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--<include layout="@layout/biz_base_title" />

        <include layout="@layout/biz_base_image" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.chinamworld.bocmbci.userwidget.investview.InvestPriceView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/investPriceView"
                />

            <LinearLayout
                android:id="@+id/btn_ly"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@color/white">

                <Button
                    android:id="@+id/btn_query"
                    style="@style/btn_blue_white_26px_bold"
                    android:text="交易查询"
                    />

                <!--<View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/fonts_light_gray"
                    />-->

                <Button
                    android:id="@+id/btn_accountmanager"
                    style="@style/btn_blue_white_26px_bold"
                    android:text="@string/isForex_throw_title"
                    />

                <!--<View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/fonts_light_gray"
                    />-->

                <Button
                    android:id="@+id/btn_recall"
                    style="@style/btn_blue_white_26px_bold"
                    android:text="委托交易查询"
                    />

            </LinearLayout>

            <View style="@style/view_split_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/lianlong_color_f0eff5"
                />
        </LinearLayout>
        <View style="@style/view_split_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lianlong_space_between_74px"
            android:gravity="center"
            android:background="@color/white">
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                />
            <LinearLayout
                android:id="@+id/self_ly"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/fill_margin_left"
                android:paddingRight="@dimen/fill_margin_left"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btn_selfchose"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_dialog_height"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/lianlong_text_size_small"
                    android:text="自选"
                    android:textStyle="bold"
                    android:textColor="@color/lianlong_text_color_red" />
                <View
                    android:id="@+id/ly_selfchose"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_height="4dp"
                    android:background="@color/red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/fill_margin_left"
                android:paddingRight="@dimen/fill_margin_left"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btn_gold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_dialog_height"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="贵金属"
                    android:textSize="@dimen/lianlong_text_size_small"
                    android:textStyle="bold"
                    android:textColor="@color/lianlong_text_color_common_gray" />
                <View
                    android:id="@+id/ly_gold"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_height="4dp"
                    android:background="@color/red"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/fill_margin_left"
                android:paddingRight="@dimen/fill_margin_left"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btn_forex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_dialog_height"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="外汇"
                    android:textStyle="bold"
                    android:textSize="@dimen/lianlong_text_size_small"
                    android:textColor="@color/lianlong_text_color_common_gray" />
                <View
                    android:id="@+id/ly_forex"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_height="4dp"
                    android:background="@color/red"
                    android:visibility="gone"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                />


        </LinearLayout>


        <View style="@style/view_split_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/lianlong_space_between_60px"
            android:paddingLeft="@dimen/lianlong_space_between_30px"
            android:paddingRight="@dimen/lianlong_space_between_30px"
            android:gravity="center"
            android:background="@color/lianlong_currency_pair_title_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="编辑 |"
                    android:textStyle="bold"
                    android:textSize="@dimen/lianlong_text_size_small"
                    android:textColor="@color/lianlong_text_color_common_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="货币对"
                    android:textSize="@dimen/lianlong_text_size_small"
                    android:textColor="@color/lianlong_text_color_dark_gray" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="卖出价"
                android:textSize="@dimen/lianlong_text_size_small"
                android:textColor="@color/lianlong_text_color_dark_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="买入价"
                android:textSize="@dimen/lianlong_text_size_small"
                android:textColor="@color/lianlong_text_color_dark_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                >

                <TextView
                    android:id="@+id/tv_riseorfall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="涨跌幅"
                    android:textSize="@dimen/lianlong_text_size_small"
                    android:textColor="@color/lianlong_text_color_dark_gray"
                    android:drawablePadding="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <View style="@style/view_split_gray"/>


        <com.chinamworld.llbt.userwidget.refreshliseview.DownRefreshLayout
            android:layout_width="match_parent"
            android:id="@+id/pull_down_layout"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <com.chinamworld.llbt.userwidget.refreshliseview.PullableListView
                android:id="@+id/lv_prms"
                style="@style/listviewcomm_fill_haveDivider"
                android:layout_width="match_parent"
                android:divider="@color/lianlong_color_d8d8e0"
                android:dividerHeight="0.5dp"
                android:background="@color/white">

            </com.chinamworld.llbt.userwidget.refreshliseview.PullableListView>
        </com.chinamworld.llbt.userwidget.refreshliseview.DownRefreshLayout>


        <!-- <View style="@style/view_split_gray"/>-->
        <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lianlong_color_f0eff5"
                >
                <TextView
                    android:id="@+id/tv_refishtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lianlong_space_between_30px"
                    android:layout_marginRight="@dimen/lianlong_space_between_30px"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/lianlog_text_color_cinerous"
                    android:textSize="@dimen/lianlong_text_size_small"
                    android:text="数据更新于北京时间"/>
            </LinearLayout>-->

    </LinearLayout>

</com.chinamworld.llbt.userwidget.scrollview.NewScrollView>