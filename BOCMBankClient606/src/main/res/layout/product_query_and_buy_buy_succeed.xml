<?xml version="1.0" encoding="utf-8"?>
<!-- 中银理财-购买成功页 -->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_match"
    android:orientation="vertical" 
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- 内容区 -->
    <ScrollView 
            style="@style/style_height_weight_1"
            android:background="@drawable/bg_for_listview_item_write"
            android:padding="@dimen/common_row_margin"
            android:visibility="visible"
            >
        <LinearLayout 
            style="@style/style_match_wrap"
            android:layout_marginBottom="@dimen/common_row_margin"
            android:orientation="vertical"
            >
            <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        style="@style/textview_common"
		        android:gravity="center_horizontal"
		        android:textColor="@color/gray"
		        android:layout_marginTop="@dimen/common_row_margin"
		        android:text="@string/buy_info"
        		/>
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="交易序号："
                android:id="@+id/tv_jingzhi_1"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="交易日期："
                android:id="@+id/tv_jingzhi_12"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品代码："
                android:id="@+id/tv_jingzhi_2"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品名称："
                android:id="@+id/tv_jingzhi_3"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品币种："
                android:id="@+id/tv_jingzhi_4"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="钞/汇："
                android:id="@+id/tv_jingzhi_5"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品期限："
                android:id="@+id/tv_jingzhi_6"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品到期日/可赎回日期："
                android:id="@+id/tv_jingzhi_13"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="份额面值："
                app:ValueTextColor="red"
                android:id="@+id/tv_jingzhi_7"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="购买金额："
                app:ValueTextColor="red"
                android:id="@+id/tv_jingzhi_8"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="预计购买发起日："
                android:id="@+id/tv_jingzhi_11"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="预计年收益率："
                android:id="@+id/tv_jingzhi_9"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="认购/申购手续费："
                app:ValueTextColor="red"
                android:id="@+id/tv_jingzhi_14"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="交易类型："
                android:id="@+id/tv_jingzhi_15"
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="柜员营销代码："
                android:id="@+id/tv_jingzhi_10"
                />
              <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="指定赎回日期："
                android:id="@+id/tv_feijingzhi_1"
                />
              <TextView 
                android:id="@+id/tv_tip_fjz"
                style="@style/style_match_wrap"
                android:layout_marginTop="@dimen/common_row_margin"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_default"
                android:gravity="left"
                android:text=""
                />
              <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="投资期数："
                android:id="@+id/tv_feijingzhi_2"
                />
              <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="预计到期日："
                android:layout_marginBottom="@dimen/common_row_margin"
                android:id="@+id/tv_feijingzhi_3"
                />
            </LinearLayout>
        </ScrollView>
	<!-- 按钮区 -->
    <LinearLayout style="@style/style_match_wrap">
        <Button 
            android:id="@+id/btn_sure"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_red_big"
            android:text="@string/finish"
            android:textColor="@color/white"
            />
   	</LinearLayout>

</LinearLayout>
