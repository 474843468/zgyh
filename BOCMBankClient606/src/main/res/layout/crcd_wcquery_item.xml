<?xml version="1.0" encoding="utf-8"?>
<!-- 未出账单查询item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_for_listview_item_write" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/fill_margin_top"
        android:paddingLeft="@dimen/dp_five"
        android:paddingRight="@dimen/dp_five"
        android:paddingTop="@dimen/fill_margin_top" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/crcd_outOrIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_one_three" />

            <TextView
                android:id="@+id/crcd_bookDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_one_three" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView          
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/crcd_wc_tranAmount"
                android:textSize="@dimen/textsize_one_three" />

            <TextView
                android:id="@+id/crcd_wc_tranAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_one_three" />

            <TextView
                android:id="@+id/crcd_wc_tranCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_five"
                android:singleLine="true"
                android:textSize="@dimen/textsize_one_three" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bookAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/crcd_wc_bookAmount"
                android:textSize="@dimen/textsize_one_three" />

            <TextView
                android:id="@+id/crcd_wc_bookAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_one_three" />

            <TextView
                android:id="@+id/crcd_wc_bookCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_five"
                android:singleLine="true"
                android:textSize="@dimen/textsize_one_three" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/crcd_wc_bookDate_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/crcd_wc_bookDate"
                android:textSize="@dimen/textsize_one_three" />

            <TextView
                android:id="@+id/crcd_wc_bookDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_one_three" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/crcd_wc_remark"
                android:textSize="@dimen/textsize_one_three" />

            <TextView
                android:id="@+id/crcd_wc_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/textsize_one_three" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>