<?xml version="1.0" encoding="utf-8"?>
<!-- 周期滚续协议申请，确认页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_match"
    android:orientation="vertical" 
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <!-- 内容区 -->
    <ScrollView 
            style="@style/style_height_weight_1"
            android:background="@drawable/bg_for_listview_item_write"
            android:paddingTop="@dimen/bovinvt_layout_margin_top"
            android:paddingBottom="@dimen/bovinvt_layout_margin_top"
            >
            <LinearLayout 
                style="@style/style_match_wrap"
                android:orientation="vertical"
                >
                <TextView 
                    style="@style/style_match_wrap"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_default"
                    android:gravity="center"
                    android:text="@string/bocinvt_agree_confirm_title"
                    />
                <com.chinamworld.bocmbci.userwidget.LabelTextView
                    style="@style/style_match_wrap"
                    app:labelText="理财交易账户："
                    android:id="@+id/tv_1"
                    />
                <com.chinamworld.bocmbci.userwidget.LabelTextView
                    style="@style/style_match_wrap"
                    app:labelText="当期产品名称："
                    android:id="@+id/tv_2"
                    />
                <com.chinamworld.bocmbci.userwidget.LabelTextView
                    style="@style/style_match_wrap"
                    app:labelText="产品系列名称："
                    android:id="@+id/tv_3"
                    />
                <com.chinamworld.bocmbci.userwidget.LabelTextView
                    style="@style/style_match_wrap"
                    app:labelText="产品币种："
                    android:id="@+id/tv_4"
                    />
                <com.chinamworld.bocmbci.userwidget.LabelTextView
                    style="@style/style_match_wrap"
                    app:labelText="钞/汇："
                    android:id="@+id/tv_5"
                    />
                <com.chinamworld.bocmbci.userwidget.LabelTextView
                    style="@style/style_match_wrap"
                    app:labelText="最大可购买期数："
                    android:id="@+id/tv_6"
                    />
                <com.chinamworld.bocmbci.userwidget.LabelTextView
                    style="@style/style_match_wrap"
                    app:labelText="购买期数："
                    android:id="@+id/tv_7"
                    />
                <com.chinamworld.bocmbci.userwidget.LabelTextView
                    style="@style/style_match_wrap"
                    app:labelText="基础金额模式："
                    android:id="@+id/tv_8"
                    />
                <!-- 定额显示 -->
                <com.chinamworld.bocmbci.userwidget.LabelTextView
                    style="@style/style_match_wrap"
                    app:labelText="基础金额："
                    android:id="@+id/tv_9"
                    />
                <!-- 不定额显示 -->
                <com.chinamworld.bocmbci.userwidget.LabelTextView
                    style="@style/style_match_wrap"
                    app:labelText="最低预留金额："
                    android:id="@+id/tv_10"
                    />
                <!-- 不定额显示 -->
                <com.chinamworld.bocmbci.userwidget.LabelTextView
                    style="@style/style_match_wrap"
                    app:labelText="最大扣款金额："
                    android:id="@+id/tv_11"
                    />
                <com.chinamworld.bocmbci.userwidget.LabelTextView
                    style="@style/style_match_wrap"
                    app:labelText="产品风险级别："
                    android:id="@+id/tv_12"
                    />
                <com.chinamworld.bocmbci.userwidget.LabelTextView
                    style="@style/style_match_wrap"
                    app:labelText="客户风险级别："
                    android:id="@+id/tv_13"
                    />
                <TextView 
                    android:id="@+id/tv_tip_bottom"
                    style="@style/style_match_wrap"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_default"
                    android:gravity="center"
                    />
                
                <TextView style="@style/style_match_wrap"/>
            </LinearLayout>
    </ScrollView>
    
    <!-- 按钮区 -->
    <LinearLayout style="@style/style_match_wrap">
        <Button 
            android:id="@+id/btn_next"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_red_big"
            android:text="@string/bocinvt_btn_sure"
            android:textColor="@color/white"
            />
   	</LinearLayout>
    

</LinearLayout>
