<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dept_save_regular_bottom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/common_row_margin" >

        <Button
            android:id="@+id/draw_input_next_btn"
            style="@style/bottombtn"
            android:text="@string/next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bottom"
        android:layout_alignParentTop="true"
        android:background="@drawable/shap_for_dept_tranlist"
        android:orientation="vertical"
        android:paddingBottom="@dimen/common_row_margin"
        android:paddingLeft="@dimen/layout_padding_left_right"
        android:paddingRight="@dimen/layout_padding_left_right" >

        <TextView
            android:id="@+id/dept_title_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center"
            android:text="@string/input_get_remit_info"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:layout_marginRight="@dimen/fill_padding_right"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/comm_view_left_noweight"
                android:layout_weight="5"
                android:text="@string/remitout_no" />

            <EditText
                android:id="@+id/edit_remit_no"
                style="@style/edittext_common_fill_no_weight"
                android:layout_weight="3"
                android:maxLength="9"
                android:inputType="number"
                android:textColor="@color/black" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:layout_marginRight="@dimen/fill_padding_right"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/comm_view_left_noweight"
                android:layout_weight="5"
                android:text="@string/get_remit_phone" />

            <EditText
                android:id="@+id/edit_get_remit_phone"
                style="@style/edittext_common_fill_no_weight"
                android:layout_weight="3"
                android:maxLength="15"
                android:inputType="number"
                android:textColor="@color/black" >
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:layout_marginRight="@dimen/fill_padding_right"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                style="@style/comm_view_left_noweight"
                android:layout_weight="5"
                android:text="@string/get_remit_name" />

            <EditText
                android:id="@+id/edit_get_remit_name"
                style="@style/edittext_common_fill_no_weight"
                android:layout_weight="3"
                android:maxLength="56"
                android:textColor="@color/black" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>