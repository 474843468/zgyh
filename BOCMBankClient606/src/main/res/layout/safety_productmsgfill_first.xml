<?xml version="1.0" encoding="utf-8"?>
<!-- 投保信息填写页面1 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_for_listview_item_write"
            android:orientation="vertical"
            android:padding="@dimen/fill_padding_top" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/blpt_main_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical" >

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/tv_bill_tip"
                                style="@style/confirm_info_textview_style"
                                android:layout_gravity="center"
                                android:text="@string/safety_productbuy_msgfill_firsttitle" />
                            <!--
                            <TextView
                                android:layout_width="@dimen/prms_gride_textView_height"
                                android:layout_height="@dimen/btn_close_width"
                                android:background="@drawable/safety_pageindex"
                                android:gravity="center_horizontal"
                                android:padding="8dip"
                                android:paddingTop="@dimen/btn_close_height"
                                android:text="1"
                                android:textColor="@color/white" />

                            -->
                        </FrameLayout>

                        <!-- 项目  start -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.0"
                                android:singleLine="true"
                                android:text="@string/safety_company"
                              
                                 />

                            <TextView
                                android:id="@+id/first_insurcompany"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="3.5"
                                android:singleLine="true"
                              
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.0"
                                android:singleLine="true"
                                android:text="@string/safety_lifeInsurance_subCompany"
                              
                                 />

                            <Spinner
                                android:id="@+id/first_subInsurcompany"
                                style="@style/spinner_forex_prompt_info"
                                android:layout_weight="3.5"
                                android:singleLine="true"
                              
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/bottom_margin_top" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="5.0"
                                android:singleLine="true"
                                android:text="@string/safety_lifeInsurance_subCompany"
                              
                                
                                android:visibility="invisible" />

                            <TextView
                                style="@style/comm_view_right"
                                android:layout_width="match_parent"
                                android:layout_weight="3.5"
                                android:ellipsize="end"
                                android:paddingLeft="0dip"
                                android:text="@string/safety_lifeInsurance_subCompany_tip"
                                android:textColor="@color/red"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.0"
                                android:singleLine="true"
                                android:text="@string/prodName"
                              
                                 />

                            <TextView
                                android:id="@+id/first_insurname"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="3.5"
                                android:singleLine="true"
                              
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.0"
                                android:singleLine="true"
                                android:text="@string/safety_startdate"
                                 />

                            <TextView
                                android:id="@+id/first_startdate"
                                style="@style/spinner_forex_prompt_info"
                                android:layout_height="@dimen/layout_height"
                                android:layout_marginRight="5dp"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:paddingLeft="8dip"
                              
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.0"
                                android:singleLine="true"
                                android:text="@string/safety_insurnumber"
                              
                                 />

                            <TextView
                                android:id="@+id/first_insurnumber"
                                style="@style/textview_forex_prompt_info"
                                android:layout_weight="3.5"
                                android:singleLine="true"
                              
                                 />
                        </LinearLayout>

                        <!--
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:ellipsize="middle"
                                android:singleLine="true"
                                android:text="@string/safety_marketername"
                              
                                 />

                            <EditText
                                android:id="@+id/first_marketername"
                                style="@style/edittext_inputNumber_fill"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dip"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:inputType="text"
                                android:singleLine="true"
                              
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/common_row_margin"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/textview_forex_prompt_message"
                                android:layout_weight="5.5"
                                android:singleLine="true"
                                android:text="@string/safety_marketernumber"
                              
                                 />

                            <EditText
                                android:id="@+id/first_marketernumber"
                                style="@style/edittext_inputNumber_fill"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dip"
                                android:layout_weight="3.5"
                                android:gravity="center_vertical"
                                android:inputType="text"
                                android:singleLine="true"
                              
                                 />
                        </LinearLayout>

                        -->


                        <!-- 项目  end -->

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>