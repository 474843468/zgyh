<?xml version="1.0" encoding="utf-8"?>
<!-- 建立通知页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/main_padding_bottom" >

    <ScrollView
        android:id="@+id/dept_create_layout"
        style="@style/scrollview_comm_havemarginbutton"
        android:layout_above="@+id/bottom_btn_layout" >

        <LinearLayout style="@style/tran_detail_activity_ll" >

            <TextView
                android:id="@+id/dept_title_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/common_row_margin"
                android:layout_marginBottom="@dimen/common_row_margin"
                android:text="@string/create_notice_info"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/reg_account" />

                <TextView
                    android:id="@+id/dept_acc_no_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/dept_acc_in_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/acc_in" />

                <TextView
                    android:id="@+id/dept_acc_in_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/save_volume_number" />

                <TextView
                    android:id="@+id/dept_volume_number_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/save_cdnumber" />

                <TextView
                    android:id="@+id/dept_cdnumber_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/currency_cashremit" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/dept_currency_tv"
                        style="@style/textview_common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/dept_cashremit_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             />

                        <TextView
                            android:id="@+id/dept_cashremit_tv"
                            style="@style/textview_common"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" 
                android:layout_marginTop="@dimen/common_row_margin">

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/chaohui" />

                <TextView
                    android:id="@+id/dept_cashremit_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/business_type" />

                <TextView
                    android:id="@+id/dept_business_type_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/promise_way" />

                <TextView
                    android:id="@+id/dept_promise_way_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/checkout_type" />

                <TextView
                    android:id="@+id/dept_checkout_type_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/checkout_way" />

                <TextView
                    android:id="@+id/dept_checkout_way_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/promise_checkout_day" />

                <TextView
                    android:id="@+id/dept_promise_checkout_day_tv"
                    style="@style/textview_common_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/save_sheet_money" />

                <TextView
                    android:id="@+id/dept_avaliable_money_tv"
                    style="@style/textview_common_right"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dept_checkout_money_tvlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_left"
                    android:text="@string/checkout_money" />

                <TextView
                    android:id="@+id/dept_checkout_money_tv"
                    style="@style/textview_common_right"
                    android:textColor="@color/red" />
            </LinearLayout>
             <TextView 
                android:layout_height="fill_parent"
                android:layout_width="20dp"
                android:visibility="invisible"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        <Button
            android:id="@+id/btnConfirm"
            style="@style/bottombtn"
            android:text="@string/confirm" />
    </LinearLayout>

</RelativeLayout>