<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.chinamworld.bocmbci.userwidget.TitleAndContentLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="详情" >

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_commission_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="委托日期：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="产品名称：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="产品币种：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_cashremmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="钞/汇：" />
        
        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_deal_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="交易类型：" />

         <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_deal_attr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="交易属性：" />
         
        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_commission_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="委托金额：" />
        
        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_commission_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="委托份额：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="资金账户：" />

        <com.chinamworld.bocmbci.userwidget.LabelTextView
            android:id="@+id/ltv_predict_deal_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:labelText="预计交易日期：" />
    </com.chinamworld.bocmbci.userwidget.TitleAndContentLayout>

    <Button
        android:id="@+id/bt_revoke"
        style="@style/bottombtn"
        android:text="撤单" />

</LinearLayout>