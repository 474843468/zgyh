<?xml version="1.0" encoding="utf-8"?>
<!-- 中银理财-购买页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_match"
    android:orientation="vertical" 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    
    <ScrollView 
            style="@style/style_height_weight_1"
            android:background="@drawable/shape_product_query_and_buy_layout_round"
            android:fillViewport="true"
            >
        <LinearLayout 
            android:id="@+id/layout_content"
            style="@style/style_match_match"
            android:paddingLeft="@dimen/layout_margin_left_right"
            android:paddingRight="@dimen/layout_margin_left_right"
            android:orientation="vertical"
            >
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品代码："
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品名称："
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品币种："
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="钞/汇："
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="预计年收益率："
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="产品期限："
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="剩余额度："
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="首次购买起点金额："
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="追加购买起点金额："
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="购买金额基数："
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="是否允许撤单："
                />
            <com.chinamworld.bocmbci.userwidget.LabelTextView
                style="@style/style_match_wrap"
                app:labelText="理财交易账户："
                />
            <LinearLayout 
                style="@style/style_match_wrap"
                >
                <TextView 
                    style="@style/style_tv_bocinv_agreement_appley"
                    android:text="@string/bocinvt_buy_price"
                    />
                <EditText 
                    style="@style/edittext_input_numberDecimal_fill"
                    android:layout_width="0dp"
                    android:maxLength="14"
                    />
            </LinearLayout>
            <LinearLayout 
                style="@style/style_match_wrap"
                android:layout_marginTop="@dimen/bovinvt_layout_margin_top1"
                >
                <TextView 
                    style="@style/style_tv_bocinv_agreement_appley"
                    android:text="@string/martCode"
                    />
                <EditText 
                    style="@style/edittext_input_numberDecimal_fill"
                    android:layout_width="0dp"
                    android:maxLength="20"
                    />
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
        
    
    <!-- 按钮区 -->
    <LinearLayout style="@style/style_match_wrap">
        <Button 
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_red_big"
            android:text="@string/next"
            android:textColor="@color/white"
            />
   	</LinearLayout>

</LinearLayout>
