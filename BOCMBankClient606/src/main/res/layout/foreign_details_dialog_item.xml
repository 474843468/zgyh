<?xml version="1.0" encoding="utf-8"?>
<!-- 汇率定制的item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_cilck"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/boc_space_between_96px"
    android:background="@drawable/share_dialog_item"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_96px"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rate_sourceCurCde"
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="3"
                android:singleLine="false"
                android:layout_marginRight="5dip"
                tools:text="1111"
                android:textSize="@dimen/boc_space_between_30px"/>


            <TextView
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text=" / "
                android:textSize="@dimen/boc_space_between_30px"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/rate_targetCurCde"
                style="@style/textview_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:singleLine="false"
                tools:text="1111"
                android:layout_marginLeft="5dip"
                android:textSize="@dimen/boc_space_between_30px"
                />
        </LinearLayout>

    </LinearLayout>
    <include  layout="@layout/horizontal_line"/>

</RelativeLayout>