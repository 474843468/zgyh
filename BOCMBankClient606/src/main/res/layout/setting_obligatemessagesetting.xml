<?xml version="1.0" encoding="utf-8"?>
<!-- 服务设定 修改预留信息  xyl' -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_bottom_padding_new" >

    <LinearLayout
        android:id="@+id/set_obligate_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/prms_obmessage_bgheight"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:background="@drawable/prms_obmessage_title"
        android:orientation="vertical"
        android:padding="@dimen/common_row_margin" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_row_margin"
            android:layout_marginTop="@dimen/common_row_margin"
            android:text="@string/set_obligatemessage"
            android:textSize="@dimen/textsize_default" />

        <TextView
            android:id="@+id/set_obligatemessage"
            android:layout_margin="@dimen/common_row_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_default" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/set_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/set_editobligateimage"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_red_big"
            android:text="@string/set_editobligateimage"
            android:textSize="@dimen/textsize_default"
            android:visibility="gone" />

        <Button
            android:id="@+id/set_editobligatemessage"
            style="@style/bottombtn"
            android:text="@string/set_editobligatemessage"
            android:textColor="@color/white" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/set_scrollview"
        style="@style/scrollview_comm"
        android:layout_above="@id/set_btn_layout"
        android:layout_below="@id/set_obligate_layout" 
        android:layout_margin="@dimen/common_row_margin">

        <LinearLayout
            style="@style/confirm_main_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_padding_bottom"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_obligatemessage_info1"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_one_three" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_padding_bottom"
                android:gravity="left"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textviewChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_obligatemessage_info2"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_one_three" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>