<?xml version="1.0" encoding="utf-8"?>
<!-- 我的基金 基金账户设置 item -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fill_margin_top"
    android:background="@drawable/bg_for_listview_item_write" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebackbtn_width"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/titlerightbtn_paddingtb"
        android:paddingRight="@dimen/titlerightbtn_paddingtb" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/finc_accType"
                style="@style/textview_common"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:gravity="left"/>

            <TextView
                android:id="@+id/finc_accNumber"
                style="@style/textview_list_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/finc_accAlias"
                style="@style/textview_list_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/gray"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewright"
        style="@style/sucess_right_iv"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>