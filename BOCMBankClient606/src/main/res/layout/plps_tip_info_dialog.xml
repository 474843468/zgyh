<?xml version="1.0" encoding="utf-8"?>
<!-- 信息提示框 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/transparent_00"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_for_progress"
        android:orientation="vertical" >
        
        <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_for_progress"
        android:orientation="vertical" >
        
        <TextView
                    style="@style/confirm_left_textview_style"
                    android:gravity="center"
                    android:text="@string/plps_plps_info" />
        </LinearLayout>

        
   		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialogbtn_marginTop"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

                <TextView
                    style="@style/confirm_left_textview_style"
                    android:layout_weight="3"
                    android:text="@string/plps_pro_name" />

                <TextView
                    android:id="@+id/plps_pro_name"
                    style="@style/confirm_right_textview_style"
                   
                    android:layout_weight="2" />
         </LinearLayout>
  
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialogbtn_marginTop"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

                <TextView
                    style="@style/confirm_left_textview_style"
                    android:layout_weight="3"
                    android:text="@string/plps_city_name" />

                <TextView
                    android:id="@+id/plps_city_name"
                    style="@style/confirm_right_textview_style"
                    
                    android:layout_weight="2" />
         </LinearLayout>
            
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialogbtn_marginTop"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

                <TextView
                    style="@style/confirm_left_textview_style"
                    android:layout_weight="3"
                    android:text="@string/plps_service_type" />

                <TextView
                    android:id="@+id/plps_service_type"
                    style="@style/confirm_right_textview_style"
                   
                    android:layout_weight="2" />
        </LinearLayout>
            

		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialogbtn_marginTop"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

                <TextView
                    style="@style/confirm_left_textview_style"
                    android:layout_weight="3"
                    android:text="@string/plps_merch_name" />

                <TextView
                    android:id="@+id/plps_merch_name"
                    style="@style/confirm_right_textview_style"
                   
                    android:layout_weight="2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialogbtn_marginTop"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

             <Button
                android:id="@+id/cancel_btn"
                style="@style/dialogbtnfor_connect"
                android:background="@drawable/btn_red_big"
                android:text="@string/cancle"
                android:textColor="@color/white" />
             
            <Button
                android:id="@+id/confirm_btn"
                style="@style/dialogbtnfor_connect"
                android:background="@drawable/btn_red_big"
                android:text="@string/confirm"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>