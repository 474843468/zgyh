<?xml version="1.0" encoding="utf-8"?>
<!-- 债券账户信息弹出框 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent_00" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/layout_height"
        android:layout_marginBottom="@dimen/layout_height"
        android:background="@drawable/message_dialog_bg" >

        <ImageView
            android:id="@+id/img_exit_accdetail1"
            android:layout_width="@dimen/pulldownbtn_height"
            android:layout_height="@dimen/pulldownbtn_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@color/transparent_00" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_exit_accdetail1"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/linnerlayout_common"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="0dip" >

                <TextView
                    style="@style/bond_tv_15_left"
                    android:layout_weight="2.0"
                    android:text="@string/bond_mybond_title1"
                    />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/bond_tv_15_right"
                    android:layout_weight="1.5"
                    android:singleLine="false"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/linnerlayout_common"
                android:paddingLeft="0dip" >

                <TextView
                    style="@style/bond_tv_15_left"
                    android:layout_weight="2.0"
                    android:text="@string/bond_mybond_title2"
                    />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/bond_tv_15_right"
                    android:layout_weight="1.5"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/linnerlayout_common"
                android:paddingLeft="0dip" >

                <TextView
                    style="@style/bond_tv_15_left"
                    android:layout_weight="2.0"
                    android:text="@string/currency"
                    />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/bond_tv_15_right"
                    android:layout_weight="1.5"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/linnerlayout_common"
                android:layout_marginBottom="@dimen/fill_margin_top"
                android:paddingLeft="0dip" >

                <TextView
                    style="@style/bond_tv_15_left"
                    android:layout_weight="2.0"
                    android:text="@string/boond_dialog_money"
                    />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/bond_tv_15_right"
                    android:layout_weight="1.5"
                    android:singleLine="false"
                    />
            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_btn"
                style="@style/linnerlayout_common"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/fill_margin_top"
                android:layout_marginTop="@dimen/main_img_width"
                android:visibility="visible" >

                <Button
                    android:id="@+id/btnReset"
                    style="@style/isforex_two_left_btn"
                    android:text="@string/bond_acct_reset" />

                <Button
                    android:id="@+id/btnMore"
                    style="@style/isforex_two_right_btn"
                    android:layout_marginRight="15dp"
                    android:text="@string/more" />
            </LinearLayout>
    </RelativeLayout>
	<ImageView
            android:id="@+id/img_exit_accdetail"
            android:layout_width="@dimen/close_clickarea_height"
            android:layout_height="@dimen/close_clickarea_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/layout_height"
            android:src="@color/transparent_00" />
</RelativeLayout>