<?xml version="1.0" encoding="utf-8"?>
<!-- 账户管理   临时挂失成功页 wangmengmeng -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/ll_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/step_title_layout" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_bottom_padding"
        android:layout_marginTop="@dimen/dp_five"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnConfirm"
            style="@style/bottombtn"
            android:text="@string/finish" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_btn"
        android:layout_below="@+id/ll_step"
        android:layout_marginLeft="@dimen/fill_margin_left"
        android:layout_marginRight="@dimen/fill_margin_left"
        android:layout_marginTop="@dimen/fill_margin_left"
        android:layout_weight="1"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView style="@style/scrollview_comm" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_success_title_2"
                    style="@style/textview_common"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fill_margin_top"
                    android:gravity="center"
                    android:text="@string/acc_loss_success_title_2"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left_three"
                            android:text="@string/acc_accounttype" />

                        <TextView
                            android:id="@+id/tv_acc_loss_type_value"
                            style="@style/textview_common_right_two" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left_three"
                            android:text="@string/acc_accountnumber" />

                        <TextView
                            android:id="@+id/tv_acc_loss_actnum_value"
                            style="@style/textview_common_right_two" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left_three"
                            android:text="@string/acc_account_nickname" />

                        <TextView
                            android:id="@+id/tv_acc_loss_nicknames"
                            style="@style/textview_common_right_two" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/textview_common_left_three"
                            android:text="@string/acc_loss_lossDays" />

                        <TextView
                            android:id="@+id/tv_acc_loss_lossDays"
                            style="@style/textview_common_right_two" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_acc_flozen_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_acc_flozen_values"
                            style="@style/textview_common_left_three"
                            android:ellipsize="middle"
                            android:text="@string/acc_input_account" />

                        <TextView
                            android:id="@+id/tv_acc_flozen_value"
                            style="@style/textview_common_right_two" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/acc_flozen_date_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_acc_flozen_date"
                            style="@style/textview_common_left_three"
                            android:ellipsize="middle"
                            android:text="@string/acc_loss_date" />

                        <TextView
                            android:id="@+id/tv_acc_flozen_date_value"
                            style="@style/textview_common_right_two" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>