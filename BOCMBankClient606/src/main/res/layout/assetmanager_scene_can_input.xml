<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_wrap" 
    android:orientation="vertical"
    >
    	<LinearLayout 
            style="@style/style_match_wrap" 
            android:layout_margin="10dp" 
            android:gravity="center_vertical"
            >
            <TextView 
                android:id="@+id/tv_1"
                style="@style/textview_common_multi_second"
                android:text="@string/assetmanager_capital_11"
                />
            <EditText 
                android:id="@+id/ed_1"
                style="@style/edittext_input_numberDecimal_wrap"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
            <TextView 
                android:id="@+id/tv_2"
                style="@style/textview_common_multi_second"
                android:text="@string/assetmanager_capital_12"
                />
        </LinearLayout>
        
    	<LinearLayout 
            style="@style/style_match_wrap" 
            android:layout_margin="10dp" 
            android:gravity="center_vertical"
            >
            <TextView 
                android:id="@+id/tv_3"
                style="@style/textview_common_multi_second"
                android:text="@string/assetmanager_capital_13"
                />
            <EditText 
                android:id="@+id/ed_2"
                style="@style/edittext_input_numberDecimal_wrap"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
            <TextView 
                android:id="@+id/tv_4"
                style="@style/textview_common_multi_second"
                android:text="@string/assetmanager_capital_14"
