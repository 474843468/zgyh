<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dept_list_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/acc_list_item_height" >

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/acc_list_item_height"
        android:tag="back" >

        <FrameLayout
            android:id="@+id/acc_frame_back"
            style="@style/rightbtn_jiantou"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/acc_btn_goitem_back"
                style="@style/rightbtn_jiantou"
                android:background="@drawable/img_arrow_write" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/ll_acc_msg_back"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/acc_list_item_height"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/acc_frame_back"
            android:background="@drawable/img_ka_press"
            android:gravity="center" >

            <TextView
                android:id="@+id/text_back_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/acc_list_item_height"
                android:text="@string/acc_myaccount_trans_title"
                android:textColor="@color/black" />
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/front"
        android:layout_width="match_parent"
        android:layout_height="@dimen/acc_list_item_height" >

        <ImageView
            android:id="@+id/financeic_btn_goitem"
            style="@style/rightbtn_jiantou"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/img_arrow_write" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/acc_list_item_height"
            android:layout_toLeftOf="@+id/financeic_btn_goitem"
            android:background="@drawable/bg_for_listview_item_write" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/acc_list_item_height"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_bankact_top"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_listview_item__half_grqy_Height"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/shap_for_half_gray"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common_listview_item__half_grqy_Height"
                        android:layout_marginLeft="@dimen/fill_margin_top"
                        android:src="@drawable/icon_huoqi"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common_listview_item__half_grqy_Height"
                        android:layout_marginLeft="@dimen/fill_margin_top"
                        android:src="@drawable/icon_guijinshu"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignBottom="@+id/img_acc_go_detail"
                    android:layout_below="@+id/ll_bankact_top"
                    android:layout_marginTop="@dimen/common_listview_item_paddingLR"
                    android:layout_toLeftOf="@+id/img_acc_go_detail"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/ll_bankaccount"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/common_listview_item_paddingLR"
                        android:paddingRight="@dimen/common_listview_item_paddingLR" >

                        <TextView
                            android:id="@+id/dept_type_tv"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_one_six" />

                        <TextView
                            android:id="@+id/dept_account_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:singleLine="true"
                            android:textColor="@color/red"
                            android:textSize="@dimen/textsize_one_three" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/common_listview_item_paddingLR"
                        android:paddingRight="@dimen/common_listview_item_paddingLR" >

                        <TextView
                            android:id="@+id/dept_card_description_tv"
                            style="@style/textview_for_list"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:singleLine="true"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/textsize_one_three" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>