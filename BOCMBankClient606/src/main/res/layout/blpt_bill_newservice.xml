<?xml version="1.0" encoding="utf-8"?>
<!-- 账单缴费用户协议页 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/btnlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_bottom_padding"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnunaccept"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_blue_big"
            android:text="@string/noaccept"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnaccept"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_red_big"
            android:text="@string/accept"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnlayout"
        android:layout_marginLeft="@dimen/fill_margin_left"
        android:layout_marginRight="@dimen/fill_margin_left"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_confirm_title_2"
            style="@style/textview_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fill_margin_top"
            android:text="@string/blpt_applynewbill_konw_title"
            android:textColor="@color/gray" />

        <ScrollView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:padding="@dimen/fill_margin_top" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_billapply_konw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blpt_apply_actknow"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>