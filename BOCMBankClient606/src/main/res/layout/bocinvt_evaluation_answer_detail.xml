<?xml version="1.0" encoding="utf-8"?>
<!-- 中银理财  答题界面 wangmengmeng -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/fill_margin_left"
        android:layout_marginRight="@dimen/fill_margin_left"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/fill_padding_top" >

        <ScrollView style="@style/scrollview_comm" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/bocinvt_eva_answer"
                    style="@style/textview_step4"
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:text="@string/bocinvt_eva_answer_title"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_default" />

                <TextView
                    android:id="@+id/bocinvt_eva_answer_title"
                    style="@style/textview_default"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:id="@+id/radioGroup_answer"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radio_answer0"
                        style="@style/textview_common"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:button="@drawable/radiobtn_selector" />

                    <RadioButton
                        android:id="@+id/radio_answer1"
                        style="@style/textview_common"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:button="@drawable/radiobtn_selector" />

                    <RadioButton
                        android:id="@+id/radio_answer2"
                        style="@style/textview_common"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:button="@drawable/radiobtn_selector" />

                    <RadioButton
                        android:id="@+id/radio_answer3"
                        style="@style/textview_common"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:button="@drawable/radiobtn_selector" />

                    <RadioButton
                        android:id="@+id/radio_answer4"
                        style="@style/textview_common"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:button="@drawable/radiobtn_selector" />
                </RadioGroup>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_row_margin"
                    android:orientation="horizontal" >
                </TextView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>