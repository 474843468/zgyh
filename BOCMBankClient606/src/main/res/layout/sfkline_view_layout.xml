<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <FrameLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>
    <LinearLayout
        android:id="@+id/titleContentLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- K线图横屏时的 标题栏 布局 -->
        <LinearLayout
            android:id="@+id/ll_klinetitle_landscape"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_70px"
            android:orientation="horizontal"
            android:background="@color/btn_pink"
            android:paddingLeft="@dimen/boc_space_between_30px"
            android:paddingRight="@dimen/boc_space_between_30px"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_choose_currcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="美元/欧元 "
                android:textColor="@color/boc_common_cell_color"
                android:textStyle="bold"
                android:textSize="@dimen/boc_space_between_34px"
                android:drawableRight="@drawable/llbt_kline_choose_currcode"
                />
            <TextView
                android:id="@+id/middrate_landscape"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="12"
                android:textSize="@dimen/boc_space_between_22px"
                android:textStyle="bold"
                android:textColor="@color/boc_common_cell_color"
                />
            <TextView
                android:id="@+id/currdiff_landscape"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|right"
                tools:text="14"
                android:textSize="@dimen/boc_space_between_22px"
                android:textStyle="bold"
                android:textColor="@color/boc_common_cell_color"
                />
            <TextView
                android:id="@+id/currdiffrate_landscape"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                tools:text="(3%)"
                android:textSize="@dimen/boc_space_between_22px"
                android:textStyle="bold"
                android:textColor="@color/boc_common_cell_color"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开"
                        android:textColor="@color/boc_common_cell_color"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/openPrice_landscape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/boc_common_cell_color"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:textStyle="bold"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高"
                        android:textColor="@color/boc_common_cell_color"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/maxPrice_landscape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/boc_common_cell_color"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:textStyle="bold"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="低"
                        android:textColor="@color/boc_common_cell_color"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/minPrice_landscape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/boc_common_cell_color"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:textStyle="bold"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收"
                        android:textColor="@color/boc_common_cell_color"
                        android:textStyle="bold"
                        android:textSize="@dimen/boc_space_between_22px"
                        />
                    <TextView
                        android:id="@+id/closePrice_landscape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/boc_common_cell_color"
                        android:textStyle="bold"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:text=""
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/ima_landscape_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/llbt_kline_cancel"
                android:layout_gravity="center"
                android:padding="@dimen/lianlong_space_between_20px"/>
        </LinearLayout>

        <!-- 竖屏的布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_74px"
            >

            <ImageView
                android:id="@+id/changedCharsView"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/llbt_ima_zoushi"
                android:layout_gravity="center"
                android:padding="5dp"
                />


            <LinearLayout
                android:id="@+id/ll_fengge"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffa0a0a0"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"/>
            <com.chinamworld.llbt.userwidget.tabview.TabView
                android:id="@+id/tabView"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>
        <View
            android:id="@+id/fenggeline"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ffa0a0a0"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_kline_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/boc_space_between_60px"
            android:background="@color/boc_text_color_common_gray"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/boc_common_cell_color"
                    android:textSize="@dimen/boc_space_between_22px"/>

               <!-- <TextView
                    android:id="@+id/hour"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/boc_common_cell_color"
                    android:textSize="@dimen/boc_space_between_22px"/>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开"
                        android:textColor="@color/boc_common_cell_color"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/openPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/boc_common_cell_color"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:textStyle="bold"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高"
                        android:textColor="@color/boc_common_cell_color"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/maxPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/boc_common_cell_color"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:textStyle="bold"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="低"
                        android:textColor="@color/boc_common_cell_color"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/minPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/boc_common_cell_color"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:textStyle="bold"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收"
                        android:textColor="@color/boc_common_cell_color"
                        android:textStyle="bold"
                        android:textSize="@dimen/boc_space_between_22px"
                        />
                    <TextView
                        android:id="@+id/closePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/boc_common_cell_color"
                        android:textStyle="bold"
                        android:textSize="@dimen/boc_space_between_22px"
                        android:text=""
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/view_fenge_landscape"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffa0a0a0"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_mavalue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/boc_space_between_60px"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_ma5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/boc_space_between_22px"
            android:textColor="@color/llbt_kline_ma5"
            android:gravity="center"
            tools:text="MA5"
            />
        <TextView
            android:id="@+id/tv_ma10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/boc_space_between_22px"
            android:textColor="@color/llbt_kline_ma10"
            android:gravity="center"
            tools:text="MA10"
            />
        <TextView
            android:id="@+id/tv_ma20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/boc_space_between_22px"
            android:textColor="@color/llbt_kline_ma20"
            android:gravity="center"
            tools:text="MA20"
            />
        <TextView
            android:id="@+id/tv_ma30"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/boc_space_between_22px"
            android:textColor="@color/llbt_kline_ma30"
            android:gravity="center"
            tools:text="MA30"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/lianlong_space_between_20px"
        android:layout_marginRight="@dimen/lianlong_space_between_20px">

        <com.chinamworld.bocmbci.userwidget.echarsview.ECharsView
            android:id="@+id/echartsView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="gone"
            />

        <com.boc.bocsoft.mobile.bocmobile.base.widget.trendview.BocTrendView
            android:id="@+id/echartsView1"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/sfkLine_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/finc_text_style13"
            android:gravity="center"
            android:text="暂无数据"
            android:visibility="gone"/>
        <com.forms.view.ChartsView
            android:id="@+id/kLineView"
            android:layout_width="match_parent"
            app:menu_child_alpha="0.5"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/ima_landscape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kline_landscape"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/boc_space_between_30px"
            android:padding="10dp"/>

    </FrameLayout>



</LinearLayout>