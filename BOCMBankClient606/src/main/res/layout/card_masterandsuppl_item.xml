<?xml version="1.0" encoding="utf-8"?>
<!-- 外汇账户设定、智能通知存款 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/card_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/common_listview_item_paddingLR" >

        <RelativeLayout
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/common_listview_item_paddingLR" >

            <TextView
                android:id="@+id/card_num"
                style="@style/textview_for_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_five" />

            <TextView
                android:id="@+id/card_numvalue"
                style="@style/textview_for_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_five"
                android:layout_toRightOf="@+id/card_num" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/common_listview_item_paddingLR" >

            <TextView
                android:id="@+id/card_name"
                style="@style/textview_for_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_five" />

            <TextView
                android:id="@+id/card_namevalue"
                style="@style/textview_for_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_five"
                android:layout_toRightOf="@+id/card_name" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>