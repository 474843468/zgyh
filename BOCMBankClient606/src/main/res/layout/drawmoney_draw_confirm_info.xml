<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/common_row_margin" >

        <Button
            android:id="@+id/draw_confirm_next_btn"
            style="@style/bottombtn"
            android:text="@string/confirm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <ScrollView
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bottom"
        android:layout_alignParentTop="true"
        android:background="@drawable/shap_for_dept_tranlist"
        android:paddingBottom="@dimen/common_row_margin"
        android:paddingLeft="@dimen/layout_padding_left_right"
        android:paddingRight="@dimen/layout_padding_left_right" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/draw_title_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:text="@string/ensure_your_draw_info"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fill_padding_right"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/remitout_no" />

                <TextView
                    android:id="@+id/draw_confirm_remitout_no"
                    style="@style/textview_common_right_no_weight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fill_padding_right"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/draw_confirm_phone_lable"
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/get_remit_phone" />

                <TextView
                    android:id="@+id/draw_confirm_phone"
                    style="@style/textview_common_right_no_weight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fill_padding_right"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/get_remit_name" />

                <TextView
                    android:id="@+id/draw_confirm_name"
                    style="@style/textview_common_right_no_weight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fill_padding_right"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dept_currency_cashremit_tv"
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:singleLine="true"
                    android:text="@string/money_type_for_drawing" />
                
                <TextView
                    android:id="@+id/draw_cashremit_tv"
                    style="@style/textview_common_right_no_weight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default"
                    android:text="@string/tran_currency_rmb" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fill_padding_right"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/money_amount_for_drawing" />

                <TextView
                    android:id="@+id/draw_confirm_amount"
                    style="@style/textview_common_right_no_weight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fill_padding_right"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/fuYan" />

                <TextView
                    android:id="@+id/draw_confirm_fuyan"
                    style="@style/textview_common_right_no_weight"
                    android:layout_weight="3"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_default" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_pass1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginRight="@dimen/fill_padding_right"
                android:layout_marginTop="@dimen/common_row_margin"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/textview_common_no_weight"
                    android:layout_weight="5"
                    android:text="@string/set_get_remit_pw" />

                <LinearLayout
                    android:id="@+id/layout_pass_1"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <!--
                    <EditText
	                    android:id="@+id/edit_password_for_drawing"
	                    style="@style/edittext_common_fill_no_weight"
	                    android:layout_weight="3"
	                    android:maxLength="18"
	                    android:textColor="@color/black" >
                	</EditText>
                    -->
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="10dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>