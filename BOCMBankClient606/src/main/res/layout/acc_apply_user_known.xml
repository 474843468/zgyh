<?xml version="1.0" encoding="utf-8"?>
<!-- 申请定期活期账户	用户须知页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/ll_user_known"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_btnConfirm"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:gravity="center">
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fill_padding_left"
                android:layout_marginRight="@dimen/fill_padding_right"
                android:gravity="center"
                android:text="@string/acc_user_known_title"
                android:textSize="@dimen/textsize_default"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_row_margin"
            android:orientation="vertical">
            
            <ScrollView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">
                
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <TextView 
                        style="@style/user_known_textview_common"
                        android:text="@string/acc_user_known_first"/>
                    
                    <TextView 
                        style="@style/user_known_textview_common"
                        android:text="@string/acc_user_known_second"/>
                    
                    <TextView 
                        style="@style/user_known_textview_common"
                        android:text="@string/acc_user_known_third"/>
                    
                    <TextView 
                        style="@style/user_known_textview_common"
                        android:text="@string/acc_user_known_forth"/>
                    
                    <TextView 
                        style="@style/user_known_textview_common"
                        android:text="@string/acc_user_known_fifth"/>
                    
                    <TextView 
                        android:id="@+id/tv_user_known_content"
                        style="@style/user_known_textview_common"
                        android:layout_marginTop="@dimen/common_row_margin"
                        android:layout_marginBottom="@dimen/common_row_margin"
                        android:paddingBottom="@dimen/fill_padding_bottom"
                        android:paddingTop="@dimen/fill_padding_top"
                        android:text="@string/acc_user_known_content"
                        android:textColor="@color/gray"/>
                    
                    <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <TextView 
                            style="@style/tell_content_textview_common"
                            android:text="@string/acc_user_countone"/>
                        
                        <TextView 
                            style="@style/tell_content_textview_common"
                            android:text="@string/acc_user_contentone"/>
                    </LinearLayout>
                    
                    <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <TextView 
                            style="@style/tell_content_textview_common"
                            android:text="@string/acc_user_counttwo"/>
                        
                        <TextView 
                            style="@style/tell_content_textview_common"
                            android:text="@string/acc_user_contenttwo"/>
                    </LinearLayout>
                    
                    <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <TextView 
                            style="@style/tell_content_textview_common"
                            android:text="@string/acc_user_countthree"/>
                        
                        <TextView 
                            style="@style/tell_content_textview_common"
                            android:text="@string/acc_user_contentthree"/>
                    </LinearLayout>
                    
                    <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <TextView 
                            style="@style/tell_content_textview_common"
                            android:text="@string/acc_user_countfour"/>
                        
                        <TextView 
                            style="@style/tell_content_textview_common"
                            android:text="@string/acc_user_contentfour"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout 
        android:id="@+id/ll_btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_bottom_padding"
        android:layout_marginTop="@dimen/fill_margin_top"
        android:gravity="center"
        android:orientation="horizontal">
        
        <Button 
            android:id="@+id/btnConfirm"
            style="@style/bottombtn"
            android:layout_width="@dimen/btn_bottom"
            android:text="@string/acc_user_sure"/>
    </LinearLayout>
</RelativeLayout>
