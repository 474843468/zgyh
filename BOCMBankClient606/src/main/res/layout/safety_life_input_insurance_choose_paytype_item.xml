<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_for_listview_item_write"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/icon_dele_HW_margin"
        android:paddingRight="@dimen/icon_dele_HW_margin" >

        <TextView
            style="@style/textview_forex_prompt_message"
            android:singleLine="true"
            android:text="@string/safety_lifeInsurance_payYearType" />

        <TextView
            android:id="@+id/tv_payYearType"
            style="@style/textview_forex_prompt_info"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/icon_dele_HW_margin"
        android:paddingRight="@dimen/icon_dele_HW_margin" >

        <TextView
            style="@style/textview_forex_prompt_message"
            android:singleLine="true"
            android:text="@string/safety_lifeInsurance_payYear" />

        <TextView
            android:id="@+id/tv_payYear"
            style="@style/textview_forex_prompt_info"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/icon_dele_HW_margin"
        android:paddingRight="@dimen/icon_dele_HW_margin" >

        <TextView
            style="@style/textview_forex_prompt_message"
            android:singleLine="true"
            android:text="@string/safety_lifeInsurance_insuYearType" />

        <TextView
            android:id="@+id/tv_insuYearType"
            style="@style/textview_forex_prompt_info"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/icon_dele_HW_margin"
        android:paddingRight="@dimen/icon_dele_HW_margin" >

        <TextView
            style="@style/textview_forex_prompt_message"
            android:singleLine="true"
            android:text="@string/safety_lifeInsurance_insuYear" />

        <TextView
            android:id="@+id/tv_insuYear"
            style="@style/textview_forex_prompt_info"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>