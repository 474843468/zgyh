<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_match"
    android:background="#FFFFFF"
    android:orientation="vertical" 
    >
    <!-- 经业务确认，去掉顶部滑动图片 -->
    <android.support.v4.view.ViewPager
		android:layout_width="match_parent"
		android:layout_height="80dp"   
		android:id="@+id/viewpager"
		android:visibility="gone"
        />
	    <com.chinamworld.bocmbci.userwidget.Calendar.CalendarView 
	        style="@style/style_match_wrap"
	        android:id="@+id/calender_view"
	        />
    
		    <ExpandableListView 
		        android:id="@+id/ep_listview"
		        style="@style/listviewcomm_wrap_noDivider"
		        android:layout_marginTop="5dp"
		        android:visibility="gone"
		        />
		    <TextView 
		        android:id="@+id/tv_no_date"
		        style="@style/textview_common_multi_second"
		        android:layout_marginTop="10dp"
		        android:textColor="@color/red"
		        android:layout_gravity="center_horizontal"
		        android:text="@string/assetmanager_capital_41"
		        android:visibility="gone"
		        />
		    
</LinearLayout>
    

