<?xml version="1.0" encoding="utf-8"?>
<!-- 资产管理-资金划转，修改 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_match_match"
    android:orientation="vertical"
    android:background="@color/white">
    
    <!-- 账户部分 -->
    <LinearLayout 
        style="@style/style_match_wrap"
    	android:orientation="vertical"
        >
    <TextView 
        style="@style/textview_common_multi_second"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/assetmanager_capital_transfer_7"
        android:drawableLeft="@drawable/assetmanager_accound_out"
        />
    <LinearLayout 
        style="@style/style_match_wrap"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/assetmanager_accound_bg"
        >
        <TextView 
            android:id="@+id/tv_1"
            style="@style/textview_common_multi_second"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray"
            android:text="dsjakjkg"
            />
        <LinearLayout style="@style/style_match_wrap">
            <TextView 
	            android:id="@+id/tv_2"
	            style="@style/textview_common_multi_second"
	            android:layout_weight="1"
	            android:text="dsjakjkg"
	            />
	        <TextView 
	            android:id="@+id/tv_3"
	            style="@style/textview_common_multi_second"
	            android:textColor="@color/red"
	            android:text="dsjakjkg"
	            />
        </LinearLayout>
        <!-- <LinearLayout style="@style/style_match_wrap">
            <TextView 
	            android:id="@+id/tv_4"
	            style="@style/textview_common_multi_second"
	            android:layout_weight="1"
	            android:text="dsjakjkg"
	            />
	        <TextView 
	            android:id="@+id/tv_5"
	            style="@style/textview_common_multi_second"
	            android:textColor="@color/red"
	            android:text="dsjakjkg"
	            />
        </LinearLayout> -->
        
    </LinearLayout>
        
    	
    
    <TextView 
        style="@style/textview_common_multi_second"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/assetmanager_capital_4"
        android:drawableLeft="@drawable/assetmanager_accound_in"
        />
        
    <LinearLayout 
        style="@style/style_match_wrap"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/assetmanager_accound_bg"
        >
        <TextView 
            android:id="@+id/tv_6"
            style="@style/textview_common_multi_second"
            android:layout_gravity="center_horizontal"
            android:text="dsjakjkg"
            />
        <LinearLayout style="@style/style_match_wrap">
            <TextView 
	            android:id="@+id/tv_7"
	            style="@style/textview_common_multi_second"
	            android:layout_weight="1"
	            android:text="dsjakjkg"
	            />
	        <TextView 
	            android:id="@+id/tv_8"
	            style="@style/textview_common_multi_second"
	            android:textColor="@color/red"
	            android:text="dsjakjkg"
	            />
        </LinearLayout>
        
    </LinearLayout>
        
    	
    </LinearLayout>
    
    <!-- 滑动部分 输入部分 -->
    <ScrollView style="@style/style_match_wrap">
        <LinearLayout 
            style="@style/style_match_wrap"
            android:orientation="vertical"
            >
        <LinearLayout style="@style/style_match_wrap" android:layout_margin="10dp">
            <TextView style="@style/style_textview_with_weight_1"
                android:textColor="#666666"
                android:text="币种"
                />
            <TextView style="@style/style_textview_with_weight_1"
                android:textColor="#666666"
                android:gravity="right"
                android:text="人民币"
                />
        </LinearLayout>
        <View style="@style/style_line_1" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        <LinearLayout style="@style/style_match_wrap" android:layout_margin="10dp">
            <TextView style="@style/style_textview_with_weight_1"
                android:textColor="#666666"
                android:text="执行模式"
                />
            <TextView style="@style/style_textview_with_weight_1"
                android:textColor="#666666"
                android:gravity="right"
                android:text="固定金额"
                />
        </LinearLayout>
        <View style="@style/style_line_1" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        <LinearLayout style="@style/style_match_wrap" android:layout_margin="10dp">
            <TextView style="@style/style_textview_with_weight_1"
                android:textColor="#666666"
                android:text="执行周期"
                />
            <TextView style="@style/style_textview_with_weight_1"
                android:textColor="#666666"
                android:gravity="right"
                android:text="按月"
                />
        </LinearLayout>
        <View style="@style/style_line_1"/>
        <LinearLayout style="@style/style_match_wrap" android:layout_margin="10dp" android:gravity="center_vertical">
            <TextView style="@style/style_textview_with_weight_1"
                android:text="具体执行日"
                />
            <include 
                android:id="@+id/tv_sp_layout_1"
                style="@style/style_textview_with_weight_1"
                layout="@layout/assetmanager_tv_sp_layout"/>
        </LinearLayout>
        <View style="@style/style_line_1" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        <LinearLayout style="@style/style_match_wrap" android:layout_margin="10dp" android:gravity="center_vertical">
            <TextView style="@style/textview_common_multi_second"
                android:layout_marginRight="3dp"
                android:text="终止日期"
                />
            <include 
                android:id="@+id/tv_sp_layout_2"
                style="@style/style_textview_with_weight_1"
                layout="@layout/assetmanager_tv_sp_layout"/>
            <LinearLayout style="@style/style_wrap_wrap" android:padding="3dp" android:gravity="center_vertical">
            <CheckBox android:id="@+id/checkbox" style="@style/check_box_style" />
            <TextView style="@style/textview_common_multi_second"
                android:text="@string/assetmanager_capital_7"
                />
            </LinearLayout>
        </LinearLayout>
        <View style="@style/style_line_1" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        <LinearLayout style="@style/style_match_wrap" android:layout_margin="10dp" android:gravity="center_vertical">
            <TextView style="@style/textview_common_multi_second"
                android:text="从资金转出账户向转入账户划转 "
                />
            <EditText 
                android:id="@+id/ed_money"
                style="@style/edittext_input_numberDecimal_wrap"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
            <TextView style="@style/textview_common_multi_second"
                android:text="元"
                />
        </LinearLayout>
        <!-- <View style="@style/style_line_1"/> -->
        <LinearLayout style="@style/style_match_wrap" android:padding="3dp" android:gravity="center_vertical">
            <CheckBox android:id="@+id/checkbox_1" 
                style="@style/check_box_style" 
                android:checked="true"
                />
            <TextView style="@style/textview_common_multi_second"
                android:text="@string/assetmanager_capital_44"
                />
        </LinearLayout>
        <LinearLayout 
            style="@style/style_match_wrap"
            >
            <TextView 
                style="@style/textview_common_multi_second"
                android:text="划转人手机号："
                />
            <TextView 
                style="@style/textview_common_multi_second"
                android:id="@+id/tv_mobilphone"
                />
        </LinearLayout>
        
        <TextView 
            style="@style/style_match_wrap"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize_default"
            android:padding="10dp"
            android:text="@string/assetmanager_capital_8"
            />
        
        <include layout="@layout/assetmanager_bottom_button_layout"/>
        
            <TextView 
                style="@style/style_match_wrap"
                android:layout_marginTop="@dimen/bovinvt_layout_margin_top"
                android:background="@color/transparent_00"
                />
        </LinearLayout>
    </ScrollView>
    

</LinearLayout>
