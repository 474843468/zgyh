<?xml version="1.0" encoding="utf-8"?>
<!-- 重点关注对象  wangdongkai -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/textview_common_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/important_focus_tittle"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_btn"
        android:layout_below="@+id/ll2"
        android:layout_marginLeft="@dimen/fill_margin_left"
        android:layout_marginRight="@dimen/fill_margin_right"
        android:layout_marginTop="@dimen/prms_margin_top"
        android:background="@drawable/bg_for_listview_item_write"
        android:orientation="vertical" >

        <ScrollView
            style="@style/scrollview_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_five"
            android:paddingRight="@dimen/dp_five" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/messsage"
                        style="@style/textview_common_multi_second_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text=""
                        android:textSize="@dimen/textsize_one_two" 
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="关注期限："
                        android:textSize="@dimen/textsize_one_two"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/messsage_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="关注期限："
                        android:textSize="@dimen/textsize_one_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="false"
                        android:text="列入原因:"
                        android:textSize="@dimen/textsize_one_two"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/messsage_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="false"
                        android:text="asddsa"
                        android:textSize="@dimen/textsize_one_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_multi_second_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="        根据《国家外汇管理局关于进一步完善个人结售汇业务管理的通知》（汇发[2009]56号）等相关规定，您办理的个人外汇业务，涉嫌出借本人额度协助他人规避额度及真实性管理，若再次出现上述行为，将被外汇管理局列入“关注名单”管理。"
                        android:textSize="@dimen/textsize_one_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/textview_common_multi_second_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="        特此提示"
                        android:textSize="@dimen/textsize_one_two" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            style="@style/textview_common_left_three"
                            android:text="确认人:"
                            android:textSize="@dimen/textsize_one_two"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/custname"
                            style="@style/textview_common_right_two"
                            android:text="葫芦娃"
                            android:textSize="@dimen/textsize_one_two" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" 
                        android:visibility="gone">

                        <TextView
                            style="@style/textview_common_left_three"
                            android:text="确认日期:"
                            android:textSize="@dimen/textsize_one_two"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/autotime"
                            style="@style/textview_common_right_two"
                            android:text=""
                            android:textSize="@dimen/textsize_one_two" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
            style="@style/textview_common_multi_second_two"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="      请仔细阅读并理解以上内容"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_one_two" 
          />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dialogbtn_marginTop"
        android:layout_marginRight="@dimen/fill_margin_right_fordialog"
        android:layout_marginTop="3dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <CheckBox
                android:id="@+id/checkboxone"
                style="@style/check_box_style"
                android:layout_width="@dimen/btn_connect_height"
                android:layout_height="@dimen/btn_connect_height"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/checktext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:paddingLeft="@dimen/finc_details_star_width"
                android:text="本人已仔细阅读并理解以上内容，完全同意和接受确认书内容"
                android:textSize="@dimen/textsize_default" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_acc_many"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_row_margin"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/reminder_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/reminder_message"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/btnNext"
                style="@style/bottombtn"
                android:text="@string/sbremit_confirm" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="    "
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>