<?xml version="1.0" encoding="utf-8"?>
<!-- 我要转账   手机号转账三级菜单-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_for_click_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_2dimen_generate_trans"
            style="@style/common_click_first_item_style"
            android:gravity="center" >

            <TextView
                style="@style/textview_common_right"
                android:gravity="left"
                android:text="@string/mobile_trans" />

            <ImageView
                style="@style/rightbtn_jiantou"
                android:background="@drawable/right_arrow"
                android:focusable="false" />
        </LinearLayout>

        <ImageView style="@style/divider_imag_style"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_2dimen_scan_trans"
            style="@style/common_click_last_item_style"
            android:gravity="center"
            android:visibility="visible" >

            <TextView
                style="@style/textview_common_right"
                android:text="@string/tran_result_query" />

            <ImageView
                style="@style/rightbtn_jiantou"
                android:background="@drawable/right_arrow"
                android:focusable="false" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/textview_common"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_menu"
        android:layout_marginTop="@dimen/common_row_margin"
        android:paddingLeft="@dimen/common_row_margin"
        android:paddingRight="@dimen/common_row_margin"
        android:text="@string/tran_mobile_third_menu_add_bottom"
        android:textColor="@color/gray" />

</RelativeLayout>