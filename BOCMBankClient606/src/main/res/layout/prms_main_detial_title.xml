<?xml version="1.0" encoding="utf-8"?><!-- 首页主题 -->
<com.chinamworld.bocmbci.widget.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_prms_title"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <RelativeLayout
        android:id="@+id/lyt_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_back"
            style="@style/titlebackbtn"
            android:background="@drawable/base_btn_left_back_black"
             />

        <Spinner
            android:id="@+id/sp_currency"
            android:background="@null"
            style="@style/titleText" />

        <RelativeLayout
            android:id="@+id/titlebar_right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:id="@+id/ib_top_right_other_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:id="@+id/btn_share"
                    style="@style/titlerightbtn_b"
                    android:layout_marginRight="@dimen/dp_five"
                    android:layout_toLeftOf="@+id/btn_QRcode"
                    android:background="@drawable/base_btn_share_black"
                    />

                <Button
                    android:id="@+id/btn_QRcode"
                    style="@style/titlerightbtn"
                    android:gravity="center"
                    android:background="@drawable/btn_rqcode"
                    />


            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>


</com.chinamworld.bocmbci.widget.MyRelativeLayout>