<?xml version="1.0" encoding="utf-8"?>
<!-- 批量注册提示协议 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/list_bottom" >

    <LinearLayout
        android:id="@+id/dept_create_layout"
        style="@style/scrollview_fill"
        android:layout_above="@+id/bottom_btn_layout" 
        android:orientation="vertical"
        android:background="@drawable/bg_for_listview_item_write">

        <LinearLayout
            style="@style/tran_detail_activity_ll"
            android:paddingLeft="@dimen/layout_padding_left_right"
            android:paddingRight="@dimen/layout_padding_left_right" >
			
            <TextView
                android:id="@+id/contract_title_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="中国银行股份有限公司手机银行服务协议"
                android:textColor="@color/gray"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:textSize="@dimen/textsize_one_six" />
            <LinearLayout 
            android:id="@+id/lytUserName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:orientation="vertical">
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_one_six"
                android:layout_marginTop="3dp"
                android:text="甲方："/>
            <TextView 
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/textsize_one_six"/>
            </LinearLayout>
            <TextView 
                
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_one_six"
                android:layout_marginTop="3dp"
                android:text="@string/register_protocol_title_two"
                />
        </LinearLayout>
            
            <TextView
                android:id="@+id/text_host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:text="@string/register_protocol_content_volumen_new"
                android:textColor="@color/black"
                android:scrollbars="none"
                android:textSize="@dimen/textsize_one_for"/>
            <TextView
                android:id="@+id/text_assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/volume_register_assist"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_one_for" 
                android:visibility="gone"/>
            <TextView 
                android:id="@+id/dept_protocol_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/volume_register_host"
                android:textSize="@dimen/textsize_one_for"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:gravity="center" >

        <Button
            android:id="@+id/btnYes"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_blue_big"
            android:text="@string/not_agree" />

        <Button
            android:id="@+id/btnNo"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_red_big"
            android:text="@string/agree" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_btn_layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:gravity="center" 
        android:visibility="gone">

        <Button
            android:id="@+id/btnYes2"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_blue_big"
            android:text="@string/not_agree" />

        <Button
            android:id="@+id/btnNo2"
            style="@style/btn_common_oneline"
            android:background="@drawable/btn_red_big"
            android:text="@string/agree" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_btn_layout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:gravity="center" 
        android:visibility="gone">

        <Button
            android:id="@+id/btnNo3"
            style="@style/bottombtn"
            android:text="@string/confirm"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>