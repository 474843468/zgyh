<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/hasCrcd_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_row_margin"
        android:background="@drawable/bg_for_click_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/crcd_consume_setup_ll"
            style="@style/common_click_first_item_style"
            android:gravity="center" >

            <TextView
                style="@style/textview_common"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mycrcd_virtual_myxunicard" />

            <ImageView
                style="@style/rightbtn_jiantou"
                android:background="@drawable/right_arrow" />
        </LinearLayout>

        <ImageView style="@style/divider_imag_style" />

        <LinearLayout
            android:id="@+id/crcd_billservice_setup_ll"
            style="@style/common_click_last_item_style"
            android:gravity="center" >

            <TextView
                style="@style/textview_common"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mycrcd_virtual_shenqing" />

            <ImageView
                style="@style/rightbtn_jiantou"
                android:background="@drawable/right_arrow" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/textview_common"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hasCrcd_layout"
        android:layout_marginTop="@dimen/common_row_margin"
        android:paddingLeft="@dimen/common_row_margin"
        android:paddingRight="@dimen/common_row_margin"
        android:text="@string/crcd_virtual_menu_add_bottom"
        android:textColor="@color/gray" />

</RelativeLayout>