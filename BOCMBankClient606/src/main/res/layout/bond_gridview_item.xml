<?xml version="1.0" encoding="utf-8"?>
<!-- 债券持仓item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/prms_accbalance_mid_height"
    android:background="@drawable/prms_img_card_mid"
    android:paddingLeft="@dimen/common_listview_item_paddingLR" >

    <LinearLayout
        android:id="@+id/tv_sell"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dip"
        android:paddingRight="@dimen/common_listview_item__half_grqy_Height"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/common_listview_item_paddingLR" >

        <TextView
            style="@style/textview_common"
            android:layout_width="@dimen/prms_accbalance_sellicon_height"
            android:layout_height="@dimen/prms_accbalance_sellicon_height"
            android:background="@drawable/prms_img_maichu"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prms_sale"
            android:textColor="@color/gray"
            android:textSize="9sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/tv_sell"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_bond_name"
                style="@style/textview_common"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bottom_margin_top"
                android:textSize="@dimen/textsize_one_six"
                android:layout_weight="2.0"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:textColor="@color/fonts_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginLeft="4dip"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_shiji_price"
                    style="@style/textview_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/tv_key_price"
                    style="@style/textview_common"
                    android:layout_marginTop="4dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>