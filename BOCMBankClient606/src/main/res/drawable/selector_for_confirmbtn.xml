<?xml version="1.0" encoding="utf-8"?>  
<!-- 确定按钮的背景框 带点击效果 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
  
    <item android:state_pressed="true"><!-- 按下状态 -->  
        <shape>  
            <solid android:color="#FFAC00"/><!-- 填充颜色 -->
            
            <corners android:radius="4dp" />  <!-- 边角弧度 -->
        </shape>  
    </item>  
    <item>  
        <shape>  
            <solid android:color="#D44100"/>
            <corners android:radius="4dp" />  
        </shape>  
    </item>  
</selector>  