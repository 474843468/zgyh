<?xml version="1.0" encoding="utf-8"?>  
<!-- 关闭按钮的背景框 带点击效果 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
  
    <item android:state_pressed="true">  <!-- 按下状态 -->
        <shape>  
            <solid android:color="#FA7F07"/><!-- 填充颜色 -->
            <corners android:radius="4dp" /><!-- 边角弧度 -->
        </shape>  
    </item>  
    <item>  
        <shape>  <!-- 默认状态 -->
            <solid android:color="#894015"/><!-- 填充颜色 -->
            <corners android:radius="4dp" /><!-- 边角 -->
        </shape>  
    </item>  
</selector>  