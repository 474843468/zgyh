<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/share_size_five"/> <!-- 设置圆角 -->
            <solid android:color="@color/share_button_press_color" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="@dimen/share_size_five"/>
            <solid android:color="@color/share_button_press_color"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/share_size_five"/>
            <solid android:color="@color/share_button_press_color"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/share_size_five"/>
            <solid android:color="@color/share_button_normal_color"/>
        </shape>
    </item>
</selector>



